<%args>
	$site_id
	$tourn
</%args>
<%init>

	my $site = Tab::Site->retrieve($site_id);

	foreach my $round ($site->rounds) { 
		$round->site("");
		$round->update;
	}

	Tab::RoomGroupRoom->set_sql( delete_rgr => " 
		delete room_group_room.* 
		from room_group_room, room_group, room
		where room.site = ? 
		and room.id = room_group_room.room
		and room_group_room.room_group = room_group.id
		and room_group.tourn = ? ");

	Tab::RoomGroupRoom->sql_delete_rgr($site->id, $tourn->id)->execute;

	foreach my $ts (Tab::TournSite->retrieve( tourn => $tourn->id, site => $site->id)) { 
		$ts->delete if $ts;
	}

	my $msg = "Site ".$site->name." removed from your tournament.";

	$m->redirect("/setup/rooms/manage_sites.mhtml?msg=$msg");

</%init>

<%args>
	$tourn
	$site_id => undef
	$from_id => undef
	$err => undef
	$add => undef
</%args>
<%init> 

	my $site = Tab::Site->retrieve($site_id);
	my $switch;

	my @rooms = $site->rooms if $site;

	foreach my $room (@rooms) {

		my $building = $room->name;
		$building =~ s/\d+//g;
		my $room_name = $room->name;
		$room_name =~ s/\D//g;

		Tab::debuglog("Room ".$room->name." is building $building and name $room_name");

	}

	@rooms = map  { $_->[0] } sort { $a->[1] <=> $b->[1] } map  { [$_, $_->name=~/(\d+)/] } @rooms;
	@rooms = map  { $_->[0] } sort { $a->[1] cmp $b->[1] } map  { [$_, $_->name=~/(\D+)/] } @rooms;

</%init>

	<& sidebar.mas, tourn => $tourn, mysite => $site &>

	<script>

        function switchme(roomid,state){

            $("#"+roomid).iphoneSwitch(
                state,
                function() { $.post("/setup/rooms/active_switch.mhtml",{ room_id: roomid }); },
                function() { $.post("/setup/rooms/active_switch.mhtml",{ room_id: roomid, inactive:  "1" }); }
            );
        };	

	</script>

	<div class="left huge">

%		if ($site_id) { 
	
		<h2>Rooms at <% $site->name %></h2>

		<& tabbar.mas, site_id => $site_id, add => $add &>

		<& /funclib/tablesorter.mas, table => "sortme" &>

%		if (@rooms && not defined $add) { 
			<form action="site_rooms_save.mhtml" method="post">
			<input type="hidden" name="site_id" value="<% $site->id %>">
			<table width="100%" cellpadding="4" cellspacing="1" id="sortme">
		
				<thead>

				<tr class="yellowrow">

					<th class="smaller">
						Name
					</th>

					<th class="smaller">
						Quality
					</th>

					<th class="smaller">
						Capacity
					</th>

					<th class="smaller">
						Notes
					</th>

					<th class="smaller">
						Active
					</th>

				</tr>

				</thead>
				<tbody>

% 				foreach my $room (@rooms) {

					<tr>
	
						<td align="center">
							<input type="text" name="<% $room->id %>_name" value="<% $room->name %>" size="20">
						</td>

						<td align="center">
							<span class="hidden"><% $room->quality %></span>
							<input type="text" name="<% $room->id %>_quality" value="<% ($room->quality) ? $room->quality : ""%>" size="3">
						</td>

						<td align="center">
							<span class="hidden"><% $room->capacity %></span>
							<input type="text" name="<% $room->id %>_capacity" value="<% ($room->capacity) ? $room->capacity : "" %>" size="3">
						</td>

						<td align="center">
							<input type="text" name="<% $room->id %>_notes" value="<% $room->notes %>" size="20">
						</td>

	                    <td >
							<span class="hidden">
								<% $room->inactive ? "1" : "2" %>
							</span>
    	                    <script type="text/javascript"> 
        	                    $(function() { switchme(<% $room->id %>,"<% ($room->inactive) ? "off" : "on" %>"); });
        	                </script>

            	            <div class="phoneswitch" id="<% $room->id %>"></div>
                	    </td>

					</tr>
	
%				}

				</tbody>

				<tr class="liblrow">
					<td colspan="6" align="right">
						<input type="submit" value="   Save Room Changes   ">
					</td>
				</tr>

			</table>

			</form>

%		} else { 

			<form action="site_rooms_add.mhtml" method="post">
			<input type="hidden" name="site_id" value="<% $site->id %>">

			<table width="100%" cellpadding="4" cellspacing="1" id="sortme">

				<thead>
				<tr class="yellowrow">

					<th class="smaller">
						Name
					</th>

					<th class="smaller">
						Quality
					</th>

					<th class="smaller">
						Capacity
					</th>

					<th class="smaller">
						Notes
					</th>


				</tr>
				</thead>
				<tbody>

%				undef($switch);

%				foreach my $room (1 .. 10) { 

					<tr>

						<td align="center">
							<input type="text" name="new_<% $room %>_name" size="20">
						</td>

						<td align="center">
							<input type="text" name="new_<% $room %>_quality" size="5">
						</td>

						<td align="center">
							<input type="text" name="new_<% $room %>_capacity" size="5">
						</td>

						<td align="center">
							<input type="text" name="new_<% $room %>_notes" size="20">
						</td>

					</tr>

%				}

				</tbody>

				<tr class="liblrow">
					<td colspan="6" align="right">
						<input type="submit" value="   Save New Rooms ">
					</td>
				</tr>
	
				</table>
			</form>
%		}

%	} else { 

			<h2>Rooms for <% $tourn->name %></h2>
%	}

	</div>

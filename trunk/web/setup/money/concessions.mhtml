<%args>
	$tourn
	$session
	$account
</%args>
<%init>

	my @items = sort {$a->name cmp $b->name} $tourn->items;
	my $switch;
	my $tz = $tourn->circuit->timezone;

</%init>

    <& sidebar.mas, chosen => "concessions", tourn => $tourn &>

	<div id="leftbignb">

		<h2><% ($tourn->method->concession_name) ? $tourn->method->concession_name : "Concessions" %></h2>

		<table cellpadding="6" cellspacing="1" border="0" width="100%">

			<tr class="liblrow">

				<th>
					Name
				</th>

				<th>
					Price
				</th>
				
				<th colspan="2">
					<form action="concessions_save.mhtml" method="post">
					Order Deadline
				</th>
			</tr>
	
% 			foreach my $item (@items) { 
	
				<tr <% ($switch % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
	
					<td>
						<input type="text" name="<% $item->id %>_name" size="25" value="<% $item->name %>">
					</td>
	
					<td>
						<input type="text" name="<% $item->id %>_price" size="5" value="<% $item->price %>">
					</td>

		            <& /funclib/datepicker.mas, id => $item->id."_date", max => $tourn->start &>
	
%					my $deadline = $item->deadline->set_time_zone($tourn->circuit->timezone) if $item->deadline;
	
				    <td class="left" colspan="2" width="35%">

	                    <input type="text" name="<% $item->id %>_date" id="<% $item->id %>_date" size="8" value="<% ($deadline) ? Tab::pickerdate($deadline) : "" %>">

						at 

	                    <& /funclib/timepicker.mas, name => $item->id."_time", dt => $tourn->reg_start->set_time_zone($tz) &>

					</td>

				</tr>

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

					<th colspan="3">
						<input type="text" name="<% $item->id %>_description" size="55" value="<% $item->description %>">
					</td>

					<td align="center" width="10%">
						<a class="whiteblock" href="concessions_rm.mhtml?item_id=<% $item->id %>">Delete</a> 
					</td>
				</tr>

				<tr>

					<td colspan="4">
						<hr />
					</td>

				</tr>
%			}


			<tr class="liblrow">

				<td colspan="4" align="right">
					<input type="submit" value=" Save Concessions Changes ">
					</form>
				</td>

			</tr>


		</table>

	</div>



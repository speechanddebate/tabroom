<%args>
	$account
	$tourn
	$err => undef
</%args>
<%perl>

	my $fine = $tourn->setting("fine_deadline");
	$fine->set_time_zone($tourn->tz);

	my $switch;
	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;
	my $symbol = $tourn->setting('currency');

</%perl>

    <& sidebar.mas, chosen => "fines", tourn => $tourn  &>

	<div class="left huge">
	
		<h2>Fines for <% $tourn->name %> </h2>


		<table cellpadding="5" cellspacing="1" width="100%">

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td valign="top" width="40%">
					<form action="fines_save.mhtml" method="post">
					Fine for drops after <% Tab::nicedt($fine) %>
				</td>

				<td valign="top" width="10%" align="right">
					 <% $symbol %>
					<input type="text" name="drop_fine" value="<% $tourn->setting("drop_fine") %>" size="5">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td valign="top" width="40%">
					Fine for adds after <% Tab::nicedt($fine) %>
				</td>

				<td valign="top" width="10%" align="right">
					<% $symbol %>
					<input type="text" name="add_fine" value="<% $tourn->setting("add_fine") %>" size="5">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td valign="top" width="40%">
					Fine per round for no-show judges in prelim rounds:
				</td>

				<td valign="top" width="10%" align="right">
					<% $symbol %>
					<input type="text" name="noshow_judge_fine" value="<% $tourn->setting("noshow_judge_fine") %>" size="5">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td valign="top" width="40%">
					Fine per round for no-show judges in elim rounds:
				</td>

				<td valign="top" width="10%" align="right">
					<% $symbol %>
					<input type="text" name="noshow_judge_fine_elim" value="<% $tourn->setting("noshow_judge_fine_elim") %>" size="5">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td valign="top" width="40%">
					Notify school coaches when judges incur fines:
				</td>

				<td valign="top" width="10%" align="right">
					<% $symbol %>
					<input type="checkbox" name="noshow_notify_coaches" value="1" <% $tourn->setting("noshow_notify_coaches") ? 'checked="checked"' : "" %>>
				</td>

			</tr>

			<tr class="liblrow">

				<td colspan="2" align="right">
					<input type="submit" value="  Save Fines  ">
					</form>
				</td>

			</tr>

		</table>

		<hr />
		
		<p>To change the date after which nuisance fines apply, go to: <a href="/setup/date/date.mhtml">Setup -> Dates & Deadlines</a>

	</div>


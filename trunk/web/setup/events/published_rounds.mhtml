<%args>
	$tourn
</%args>
<%init>

	my $switch;

</%init>

	<h2>


	</h2>

	<table cellpadding="5" cellspacing="1" width="100%">

		<tr class="lirdrow">
			<th>
				Event
			</th>

			<th>
				<form action="published_rounds_save.mhtml" method="post">
				Publish Schematics
			</th>

			<th>
				Publish List of Kids
			</th>

		</tr>


%		foreach my $event (sort {$a->name cmp $b->name} $m->comp("/funclib/tourn_events.mas", tourn => $tourn)) { 

			<tr class="liblrow">

				<th colspan="3">
					<% $event->name %>
				</th>

			</tr>

%			foreach my $round (sort {$a->name <=> $b->name} $event->rounds) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<td>
						<% ($round->label) ? $round->label : $round->name %>
					</td>

					<td class="align">
	                    <input type="checkbox" name="<% $round->id %>" value="1" <% ($round->published) ? "checked" : "" %>>
					</td>

					<td class="align">
	                    <input type="checkbox" name="list_<% $round->id %>" value="1" <% ($round->listed) ? "checked" : "" %>>
					</td>

				</tr>

%			}

%		}

		<tr class="lirdrow">

			<td colspan="3" class="rightalign">
				<input type="submit" value=" Save Changes ">
				</form>
			</td>
		</tr>

	</table>


<%args>
	$tourn => undef
</%args>
<%init>

	my $err;
    my $switch;

</%init>


	<div class="main">
	
		<h2>Qualifying Bids</h2>

		<& tabbar.mas, tourn => $tourn, whoami => "bids" &>

			<table cellpadding="5" cellspacing="1" width="100%">

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
	
    				<td valign="top" width="40%">
						Give bids to this percentage of the top entries:
					</td>
					
					<td valign="top" width="10%" align="left">
						<form action="bids_save.mhtml" method="post">
						<input type="text" name="bid_percent" value="<% $tourn->setting("bid_percent") %>" size="5">%
				    </td>
				</tr>

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
					
					<td valign="top" width="40%">
						Give bids to entries tied on ranks with anyone also getting a bid:
					</td>
					
					<td valign="top" width="10%" align="left">
						<input type="checkbox" name="bid_round_to_rank"  value="1"
						<% $tourn->setting("bid_round_to_rank")  ? "checked" : "" %> >
					</td>

				</tr>

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> > 
				
					<td valign="top" width="40%">
						Give bids to anyone with a rank total equal to or less than:
					</td>
					
					<td valign="top" width="10%" align="left">
						<input type="text" name="bid_min_cume" value="<% $tourn->setting("bid_min_cume") %>" size="5">
					</td>
					
				</tr> 
				
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
					
					<td valign="top" width="40%">
						Give bids to students breaking to:
					</td>
					
					<td valign="top" width="10%" align="left">
						<select name="bid_min_round_type">
							<option value="none" <% ( $tourn->setting("bid_min_round_type") eq "none") ? "selected"  : "" %>>None</option>
							<option value="elim" <% ( $tourn->setting("bid_min_round_type") eq "elim") ? "selected"  : "" %>>Elims</option>
							<option value="final" <% ( $tourn->setting("bid_min_round_type") eq "final") ? "selected" : "" %>>Finals</option>
						</select>
					</td>
					
				</tr> 
				
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> > 
				
					<td valign="top" width="40%">
						Give at least this many bids in each event:
					</td>

					<td valign="top" width="10%" align="left">
						<input type="text" name="bid_min_number" value="<% $tourn->setting("bid_min_number") %>" size="5">
					</td>
				</tr> 
				
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
					<td align="right" colspan="4">
						<input  name="from" type="submit" value="   Save Bids Settings   ">
						</form>
					</td>
				</tr> 
				
			</table>

	</div>

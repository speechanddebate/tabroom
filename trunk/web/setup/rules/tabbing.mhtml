<%args>
	$circuit
	$tourn
</%args>
<%init>

    my $method = $tourn->method if $tourn->method;

	my $err;

    unless ($method && $method->id) {
		$err = "You must set up registration rules first";
        $m->redirect("registration.mhtml?err=$err");
    }

    my $switch;

</%init>

    <& sidebar.mas, circuit => $circuit, chosen => "tabbing" &>

		<div class="left huge">

			<h2>Tabulation Settings</h2>

			<table cellpadding="5" cellspacing="1" width="100%">

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
								
					<td>
						<form action="tabbing_save.mhtml" method="post">
						Ballot Audit Method:
					</td>
			
					<td align="left">
			
						<select name="audit_method"  value="1">

							<option value="twice" <% ($method) ? ($method->audit_method eq "twice") ? "selected" : "" : "" %>>
								Enter Ballots Twice
							</option>
			
							<option value="visual" <% ($method) ? ($method->audit_method eq "visual") ? "selected" : "" : "" %>>
								Check Ballots Visually
							</option>
			
							<option value="none" <% ($method) ? ($method->audit_method eq "none") ? "selected" : "" : "" %>>
								I Live For Danger: No check
							</option>
			
						</select>
			
					</td>
			
				</tr>

			</table>

			<table cellpadding="5" cellspacing="1" width="100%">
			
				<tr>
					<td colspan="3">
						<h4>Printout Settings</h4>
					</td>
				</tr>
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
				
					<td>
						Show school codes on master ballots & schematics:
					</td>
			
					<td align="left">
						<input 	type="checkbox" name="schemat_school_code"  value="1"
						<% ($method) ? ($method->schemat_school_code == 1) ? "checked" : "" : "" %> >
					</td>
				</tr>
			
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						Designate students on speech schematics with:
					</td>
			
					<td align="left">
						<select name="schemat_display">
						<option value="codes" 
							<% ($method) ? ($method->schemat_display eq "codes") ? "selected" : "" : "" %>>
							Speaker Codes
						</option>
			
						<option value="last_names" 
							<% ($method) ? ($method->schemat_display eq "last_names") ? "selected" : "" : "" %>>
							Last Names
						</option>
			
						<option value="full_names" 
							<% ($method) ? ($method->schemat_display eq "full_names") ? "selected" : "" : "" %>>
							Full Names
						</option>


					</select>
					</td>
				</tr>
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						Designate students on master ballots with:
					</td>
			
					<td align="left">
				
						<select name="master_printouts">
			
							<option value="titles" 
								<% ($method) ? ($method->master_printouts eq "titles") ? "selected" : "" : "" %>>
								Titles
							</option>
			
							<option value="names" 
								<% ($method) ? ($method->master_printouts eq "names") ? "selected" : "" : "" %>>
								Names
							</option>

							<option value="name_schcode" 
								<% ($method) ? ($method->master_printouts eq "name_schcode") ? "selected" : "" : "" %>>
								Name & School Code
							</option>
			
			
							<option value="first" 
								<% ($method) ? ($method->master_printouts eq "first") ? "selected" : "" : "" %>>
								First Names
							</option>
			
						</select>
					</td>
				<tr>
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
				
					<td>
						Honorable mentions (tied with breaking students)
					</td>
			
					<td align="left">
						<input type="checkbox" name="honorable_mentions"  value="1"
						<% ($method) ? ($method->honorable_mentions == 1) ? "checked" : "" : "" %> >
					</td>
				</tr>
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						List top novices on results & awards
					</td>
			
					<td align="left">
						<select name="novices"  value="1">
			
							<option value="none" <% ($method) ? ($method->novices eq "none") ? "selected" : "" : "" %>>
								None
							</option>
			
							<option value="top" <% ($method) ? ($method->novices eq "top") ? "selected" : "" : "" %>>
								Top Overall
							</option>
			
							<option value="noelim" <% ($method) ? ($method->novices eq "noelim") ? "selected" : "" : "" %>>
								Top Nonadvacing
							</option>
			
						</select>
					</td>
			
				</tr>
			
			
			
				<tr>
					<td colspan="4">
						<h4>Speech Tabulation</h4>
					</td>
				</tr>
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						Students who no-show cannot break:
					</td>
			
					<td align="left">
						<input type="checkbox" name="noshows_never_break"  value="1"
						<% ($method) ? ($method->noshows_never_break > 0) ? "checked" : "" : "" %> >
					</td>
			
				</tr>
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						<label for="drop_best_rank">
						Drop the best rank in a prelim round:
						</label>
					</td>
			
					<td align="left">
						<input type="checkbox" name="drop_best_rank"  value="1"
						<% ($method) ? ($method->drop_best_rank == 1) ? "checked" : "" : "" %> >
					</td>
				</tr>
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						Drop the worst rank in a prelim round:
					</td>
			
					<td align="left">
						<input type="checkbox" name="drop_worst_rank"  value="1"
						<% ($method) ? ($method->drop_worst_rank == 1) ? "checked" : "" : "" %> >
					</td>
			
				</tr>
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						Drop the best rank in each elim round:
					</td>
			
					<td align="left">
						<input type="checkbox" name="drop_best_elim"  value="1"
						<% ($method) ? ($method->drop_best_elim == 1) ? "checked" : "" : "" %> >
					</td>
			
				</tr>
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						Drop the worst rank in each elim round:
					</td>
			
					<td align="left">
						<input type="checkbox" name="drop_worst_elim"  value="1"
						<% ($method) ? ($method->drop_worst_elim == 1) ? "checked" : "" : "" %> >
					</td>
			
				</tr>

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						Drop the best rank in the final round:
					</td>
			
					<td align="left">
						<input type="checkbox" name="drop_best_final"  value="1"
						<% ($method) ? ($method->drop_best_final == 1) ? "checked" : "" : "" %> >
					</td>
				</tr>
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						Drop worst rank in the final round:
					</td>
			
					<td align="left">
						<input type="checkbox" name="drop_worst_final"  value="1"
						<% ($method) ? ($method->drop_worst_final == 1) ? "checked" : "" : "" %> >
					</td>
				</tr>
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						Truncate ranks to smallest panel size:
					</td>
			
					<td align="left">
						<input type="checkbox" name="truncate_to_smallest"  value="1"
						<% ($method) ? ($method->truncate_to_smallest == 1) ? "checked" : "" : "" %> >
					</td>
			
				</tr>
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						Truncate all ranks to (0 for no truncation):
					</td>
			
					<td align="left">
						<input type="text" name="truncate_ranks_to" 
						value="<% ($method) ? $method->truncate_ranks_to : "" %>" size="3">
					</td>
			
				</tr>
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
					<td>
						MFL Time violation penalty (+1 rank):
					</td>
			
					<td align="left">
						<input type="checkbox" name="mfl_time_violation"  value="1"
						<% ($method) ? ($method->mfl_time_violation == 1) ? "checked" : "" : "" %> >
					</td>
			
				</tr>

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
				
					<td>
						MFL finals (Tie advances both, 3+ way tie is broken)
					</td>
			
					<td align="left">
						<input type="checkbox" name="mfl_flex_finals"  value="1"
						<% ($method) ? ($method->mfl_flex_finals == 1) ? "checked" : "" : "" %> >
					</td>
				</tr>
			
			    <tr>
			        <td colspan="4" align="right">
			            <input class="blue" name="from" type="submit" value="   Save Settings   ">
			            </form>
			        </td>
			    </tr>
			
			</table>

	</div>

<%args>
	$account
	$tourn
	$err => undef
</%args>
<%init>

	my $switch;

</%init>

	<& sidebar.mas, tourn => $tourn, chosen => "registration" &>

	<div class="left huge">
	
		<h2>Registration Settings</h2>

		<table cellpadding="7" cellspacing="1" width="95%" cellspacing="0" border="0">

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

				<td  >
					<form action="registration_save.mhtml" method="post">
					<input type="hidden" name="tourn_id" value="<% $tourn->id %>">
					<label for="hidden">
					Hide this tournament from view (Test tournament)
					</label>
				</td>
				
				<td valign="top" width="10%" align="left">
					<input type="checkbox" id="hidden" name="hidden"  value="1"
					<% ($tourn->hidden == 1 ) ? "checked" : "" %> >
				</td>

			</tr>
		
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td  >
					<label for="require_adult_contact">
						Require adult contact information before registration
					</label>
				</td>
				
				<td valign="top" width="10%" align="left">
					<input type="checkbox" id="require_adult_contact" name="require_adult_contact"  value="1"
					<% ($tourn->setting("require_adult_contact") == 1 ) ? "checked" : "" %> >
				</td>
		
			</tr>
		
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			
				<td valign="top">
					<label for="track_reg_changes">
						Log registration changes
					</label>
				</td>
				
				<td valign="top" align="left">
					<input type="checkbox" id="track_reg_changes" name="track_reg_changes"  value="1"
					<% ($tourn->setting("track_reg_changes") == 1 ) ? "checked" : "" %> >
				</td>
		
			</tr>
		
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td valign="top">
					<label for="publish_schools">
						Publish list of registered schools
					</label>
				</td>
		
				<td valign="top" align="left">
					<input type="checkbox" id="publish_schools" name="publish_schools"  value="1"
					<% ($tourn->setting("publish_schools") == 1 ) ? "checked" : "" %> >
				</td>
			</tr>
		
			<tr>
				<td colspan="4">
					<h4>Codes</h4>
				</td>
			</tr>
		
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td valign="top">
					<label for="hide_codes">
						Hide Codes from Registrants
					</label>
				</td>
		
				<td valign="top" align="left">
					<input id="hide_codes" type="checkbox" name="hide_codes"  value="1"
					<% ($tourn->setting("hide_codes") == 1 ) ? "checked" : "" %> >
				</td>
			</tr>
		
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td valign="top">
					<label for="incremental_school_codes">
						Use incremental school codes
					</label>
				</td>
				
				<td valign="top" align="left">
					<input type="checkbox" id="incremental_school_codes" name="incremental_school_codes"  value="1"
					<% ($tourn->setting("incremental_school_codes") == 1 ) ? "checked" : "" %> >
				</td>
		
			</tr>
		
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td valign="top">
					<label for="first_school_code">
					School codes start with (eg, 1, 100, A, AA):
					</label>
				</td>
		
				<td valign="top" align="left">
					<input type="text" id="first_school_code" name="first_school_code" size="5" 
						value="<% $tourn->setting("first_school_code") %>">
				</td>
		
			</tr>
		
			<tr>
				<td colspan="4">
					<h4>Tournaments with Qualifications</h4>
				</td>
			</tr>
		
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td valign="top" >
					Require # of Qualifying Tournaments:
				</td>
				
				<td valign="top" align="left">
					<input type="text" id="ask_quals" name="ask_quals" size="5" value="<% $tourn->setting("ask_quals") %>">
				</td>
		
			</tr>
		
			<tr>
				<td colspan="4">
					<h4>Judges</h4>
				</td>
			</tr>
		
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td valign="top" >
					<label for="judge_cells">
						Ask for judge cell numbers
					</label>
				</td>
				
				<td valign="top" align="left">
					<input type="checkbox" id="judge_cells" name="judge_cells"  value="1"
						<% ($tourn->setting("judge_cells") == 1 ) ? "checked" : "" %> >
				</td>
			
			</tr>
		
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td valign="top" >
					<label for="track_first_year">
						Track first-year judges
					</label>
				</td>
				
				<td valign="top" align="left">
					<input type="checkbox" id="track_first_year" name="track_first_year"  value="1"
					<% ($tourn->setting("track_first_year") == 1 ) ? "checked" : "" %> >
				</td>
		
			</tr>
		
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td valign="top" >
					<label for="publish_paradigms">
						Publish Judge Paradigms
					</label>
				</td>
		
				<td valign="top" align="left">
					<input type="checkbox" id="publish_paradigms" name="publish_paradigms"  value="1"
					<% ($tourn->setting("publish_paradigms") == 1 ) ? "checked" : "" %> >
				</td>
		
			</tr>
		
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
		
				<td valign="top" >
					<label for="ask_experience">
						Ask for Judges' Past Tournament Experience
					</label>
				</td>

				<td valign="top" align="left">
					<input type="checkbox" id="ask_experience" name="ask_experience"  value="1"
					<% ($tourn->setting("ask_experience") == 1 ) ? "checked" : "" %> >
				</td>
		
			</tr>

			<tr class="liblrow">
				<td colspan="2" align="right">
					<input type="submit" value=" Save Registration Rules ">
					</form>
				</td>
			</tr>

		</table>

	</div>
		

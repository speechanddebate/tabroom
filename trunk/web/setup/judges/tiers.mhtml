<%args>	
	$tourn
	$group_id
</%args>
<%init>

	my $group = Tab::JudgeGroup->retrieve($group_id) if $group_id; 
	my $switch;

</%init>

	<& menubar.mas, group_id => $group_id, tourn => $tourn, page => "tiers" &>

	<div class="left huge">

		<h3>Coach rating scale for <% $group->abbr %></h3>

		<p>If you want to use cumulative prefs (Fewer 3s permit more 2s, etc) you must use numbers for MPJ tier names</p>

			<table cellpadding="6" cellspacing="1" width="100%">

				<tr class="yellowrow">

					<th width="50px;">
						<form action="tier_coach_save.mhtml" method="post">
						<input type="hidden" name="group_id" value="<% $group->id %>">
					</th>

					<th class="smaller">
						Name
					</th>

					<th class="smaller">
						Description
					</th>

					<th>
					</th>

				</tr>
			
%				foreach my $tier (sort {$a->name cmp $b->name} $group->rating_tiers( type => "coach") ) { 
			
					<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

						<th>
						</th>
		
						<td align="center">
							<input type="text" name="<% $tier->id %>_name" size="3" value="<% $tier->name %>">
						</td>

						<td>
							<input type="text" name="<% $tier->id %>_description" size="50" value="<% $tier->description %>">
						</td>

						<td align="center">
							<a class="dkred block" href="tier_rm.mhtml?tier_id=<% $tier->id %>">
								Delete
							</a>
						</td>

					</tr>

%				}

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<th class="smaller">
						New:
					</th>

					<td align="center">
						<input type="text" name="new_name" size="3" value="">
					</td>

					<td>
						<input type="text" name="new_description" size="50" value="">
					</td>

					<th>
					</th>

				</tr>

				<tr class="liblrow">

					<td colspan="4" align="right">
						<input type="submit" value="  Save Coach Ratings " class="small">
						</form>
					</td>

				</tr>

			</table>

		<h3>Community/MPJ rating scale for <% $group->abbr %></h3>

			<table cellpadding="5" cellspacing="1" width="100%">

				<tr class="yellowrow">

					<th class="smaller">
					</th>

					<th class="smaller">
						Name
					</th>

					<th class="smaller">
						Minimum
					</th>

					<th class="smaller">
						Maximum
					</th>

					<th class="smaller">
						Strike
					</th>

					<th class="smaller">
						Conflict
					</th>

					<th>
						<form action="tier_mpj_save.mhtml" method="post">
						<input type="hidden" name="group_id" value="<% $group->id %>">
					</th>

				</tr>

%				foreach my $tier (sort {$a->name cmp $b->name} $group->rating_tiers(type => "mpj")) { 
			
					<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

						<td>
						</td>
		
						<td align="center">
							<input type="text" name="<% $tier->id %>_name" size="3" value="<% $tier->name %>">
						</td>

						<td align="center">
							<input type="text" name="<% $tier->id %>_min" maxlength="2" value="<% $tier->min %>" size="2" onKeyUp="return autoTab(this, 2, event);">%
						</td>

						<td align="center">
							<input type="text" name="<% $tier->id %>_max" maxlength="2" value="<% $tier->max %>" size="2" onKeyUp="return autoTab(this, 2, event);">%
						</td>

						<td align="center">
							<input type="checkbox" name="<% $tier->id %>_strike" value="1"  <% ($tier->strike) ? 'checked' : '' %> >
						</td>

						<td align="center">
							<input type="checkbox" name="<% $tier->id %>_conflict" value="1"  <% ($tier->conflict) ? 'checked' : '' %> >
						</td>

						<td align="center" class="smaller">
							<a class="dkred block" href="tier_rm.mhtml?tier_id=<% $tier->id %>">Delete</a>
						</td>

					</tr>

%				}

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<th class="smaller" width="50px;">
						New:
					</th>

					<td align="center">
						<input type="number" name="new_name" size="3" value="" min="1" max="99">
					</td>

					<td align="center">
						<input type="text" maxlength="3" name="new_min" size="2" onKeyUp="return autoTab(this, 2, event);">%
					</td>

					<td align="center">
						<input type="text" maxlength="3" name="new_max" size="2" onKeyUp="return autoTab(this, 2, event);">%
					</td>
	
					<td align="center">
						<input type="checkbox" name="new_strike" value="1">
					</td>

					<td align="center">
						<input type="checkbox" name="new_conflict" value="1">
					</td>

					<th>
					</th>

				</tr>

				<tr class="liblrow">
					<td colspan="8" align="right">
						<input type="submit" class="small" value="Save MPJ Ratings">
						</form>
					</td>
				</tr>

			</table>

	</div>


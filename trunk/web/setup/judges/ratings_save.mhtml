<%args>
	$league
	$tourn
	$group_id
	$tz
	$obligation_before_strikes => 0
	$coach_ratings => undef
	$conflicts => undef
	$comp_strikes => undef
	$comp_ratings => undef
	$cumulate_mjp => undef
	$school_strikes => undef
	$school_ratings => undef
	$deadline => undef
	$deadlinetime => undef
	$strike_start => undef
	$strike_start_time => undef
	$strike_end => undef
	$strike_end_time => undef
</%args>
<%init>

	my $group = Tab::JudgeGroup->retrieve($group_id);

	my $judge_deadline = $tourn->judge_deadline;

    my $deadlinedt = Tab::dtme($deadline,$deadlinetime) if $deadline;

    my $strike_startdt = Tab::dtme($strike_start,$strike_start_time) if $strike_start;
    my $strike_enddt = Tab::dtme($strike_end,$strike_end_time) if $strike_end;

	$deadlinedt->set_time_zone($tz) if $deadlinedt;
	$strike_startdt->set_time_zone($tz) if $strike_startdt;
	$strike_enddt->set_time_zone($tz) if $strike_enddt;

	$judge_deadline = $deadlinedt if $deadlinedt && $deadlinedt < $judge_deadline;

	$judge_deadline->set_time_zone($tz);

	my $err;

	#Throw an error if the deadline is after the overall tournament deadline

	if ($deadlinedt && $deadlinedt > $tourn->judge_deadline) { 

		$err = "You have set a judge deadline for this group AFTER the overall tournament deadline.  It must be before to be meaningful.";
		$m->redirect("/setup/judges/ratings.mhtml?group_id=$group_id&err=$err");

	}

	if ($judge_deadline && $strike_startdt < $judge_deadline) { 

		$err = "You cannot open strikes before the judge deadline, else chaos would surely ensue";
		$m->redirect("/setup/judges/ratings.mhtml?group_id=$group_id&err=$err");
	}

	#Throw an error if the date is bad & there are strikes
	if ( ($comp_strikes || $school_strikes) && (not defined $strike_startdt || not defined $strike_enddt) ) { 

		$err = "You cannot permit strikes or ratings without also setting dates for them to open and close.  Try again.";
		$m->redirect("/setup/judges/ratings.mhtml?group_id=$group_id&err=$err");

	}

	if ($comp_strikes && $school_strikes) {
		
		$err = "You've offered both school-wide strikes and individual strikes.
		It's fine, I guess, but a bit weird.  Make sure you meant it";

	}

	if ( ($comp_strikes || $school_strikes)  && ( $school_ratings || $comp_ratings ) ) { 

		$err = "You're offering strikes and ratings both.  This is OK if you're
		doing community ratings, but for MJP it's not; strikes are part of MJP.
		Be warned."

	}

	$group->obligation_before_strikes($obligation_before_strikes);

	$group->coach_ratings($coach_ratings);
	$group->conflicts($conflicts);

	$group->school_ratings($school_ratings);
	$group->school_strikes($school_strikes);

	$group->comp_ratings($comp_ratings);
	$group->cumulate_mjp($cumulate_mjp);
	$group->comp_strikes($comp_strikes);

	$group->deadline($deadlinedt);
	$group->strike_reg_opens($strike_startdt);
	$group->strike_reg_closes($strike_enddt);

	$group->update;

	my $msg = "Group ".$group->name." ratings settings have been updated";

	$m->redirect("$Tab::url_prefix/setup/judges/ratings.mhtml?group_id=$group_id&msg=$msg&err=$err");

</%init>


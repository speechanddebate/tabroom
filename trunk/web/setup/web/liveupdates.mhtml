<%args>
	$tourn
	$account
	$session
</%args>

%	my $switch;


	<div class="left huge">

		<table cellpadding="6" cellspacing="1" width="100%">

			<tr>
				<td colspan="3">
					<h2>Events using Live Updates</h2>
				</td>
			</tr>

%			foreach my $event (sort {$a->name cmp $b->name} $m->comp("/funclib/tourn_events.mas", tourn => $tourn)(live_updates => 1)) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

					<td>
						<% $event->name %>
					</td>

					<td>
						<% ucfirst($event->type) %>
					</td>

					<td class="center">
						<a class="whiteblock" href="live_flip.mhtml?event_id=<% $event->id %>">Disable Live Updates</a>
					</td>

				</tr>

%			}

			<tr>
				<td colspan="3">
					<h2>Events without Live Updates</h2>
				</td>
			</tr>

%			foreach my $event (sort {$a->name cmp $b->name} $m->comp("/funclib/tourn_events.mas", tourn => $tourn)(live_updates => 0)) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

					<td>
						<% $event->name %>
					</td>

					<td>
						<% ucfirst($event->type) %>
					</td>

					<td class="center">
						<a class="whiteblock" href="live_flip.mhtml?event_id=<% $event->id %>">Enable Live Updates</a>
					</td>

				</tr>

%			}


		</table>

	</div>

	<& sidebar.mas, tourn => $tourn, news_type => "fieldcontrol" &>

	<br style="clear: both;">


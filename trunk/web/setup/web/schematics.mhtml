<%args>	
	$circuit
	$tourn
	$session
	$err => undef
</%args>

%	my $switch;

	<div class="main">
		
		<h2>Post Schematics</h3>

		<table cellpadding="4" cellspacing="0" width="100%">

			<form action="schematics_save.mhtml" method="post">
			<input type="hidden" name="tourn_id" value="<% $tourn->id %>">

%			foreach my $event ($m->comp("/funclib/tourn_events.mas", tourn => $tourn)) { 

%				next if $event->type eq "debate";
%				my $num_rounds = 0;

				<tr class="<% ($switch % 2) ? "oddrow" : "evenrow" %>">

					<th class="smaller">
						<% $event->abbr %>
					</th>

					<td class="smaller">

%						foreach my $round (sort {$a->timeslot->start->epoch <=> $b->timeslot->start->epoch} $event->rounds) { 

%							next if $round->type eq "elim" || $round->type eq "final";

							<label for="<% $round->id %>">
							<span class="fifth hover nowrap">
								<input type="checkbox" name="<% $round->id %>" value="1" id="<% $round->id %>" <% ($round->published) ? "checked" : "" %>>
								<% $round->realname %>
							</span>
							</label>

%						}

					</td>

				</tr>

%				my @elims = $event->rounds(type => "elim");
%				push (@elims, $event->rounds(type => "final"));

%				if (@elims) { 
					
					<tr class="<% ($switch % 2) ? "oddrow" : "evenrow" %>">

					<td></td>

					<td class="smaller">

%						foreach my $round (sort {$a->timeslot->start->epoch <=> $b->timeslot->start->epoch} @elims) { 

							<label for="<% $round->id %>">
							<span class="fifth hover nowrap">
								<input type="checkbox" name="<% $round->id %>" value="1" id="<% $round->id %>" <% ($round->published) ? "checked" : "" %>>
								<% $round->realname %>
							</span>
							</label>
%						}

					</td>
				
					</tr>
% 				} 

%				$switch++;

% 			}

			<tr class="liblrow">

				<td align="left" class="smaller">
					<a class="blue block" href="publish_prelims_save.mhtml">
						Publish All Prelims
					</a>
				</td>

				<td colspan="140" align="right">
					<input  type="submit" value="   Save    ">
					</form>
				</td>
			</tr>

		</table>

	</div>

    <& menu.mas, tourn => $tourn, webpage_type => "schematiccontrol" &>

	<div style="clear: both;">

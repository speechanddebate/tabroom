<%args>	
	$circuit
	$tourn
	$session
	$err => undef
</%args>

%	my $switch;

	<div class="main">

%		undef $switch;

		<h3>Publish Lists of Clearing Students</h3>

		<form action="clearing_rounds_save.mhtml" method="post">

%		foreach my $event ($m->comp("/funclib/tourn_events.mas", tourn => $tourn)) { 

			<div class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

				<span class="sixth">
					<% $event->abbr %>
				</span>

				<span class="fivesixths smallish">

%					foreach my $round (sort {$a->timeslot->start->epoch <=> $b->timeslot->start->epoch} $event->rounds) { 
%						next if $round->type ne "elim" && $round->type ne "final";

						<label for="l_<% $round->id %>">
							<span class="fifth hover nowrap">
								<input type="checkbox" name="<% $round->id %>" value="1" id="l_<% $round->id %>" <% ($round->listed) ? "checked" : "" %>>
								<% $round->realname %>
							</span>
						</label>

%					}

				</span>

			</div>

% 		}

		<div class="liblrow rightalign">
			<input  type="submit" value="   Save   "></td>
			</form>
		</div>

	</div>

    <& sidebar.mas, tourn => $tourn, webpage_type => "clearingcontrol" &>
	
	<div style="clear: both;">

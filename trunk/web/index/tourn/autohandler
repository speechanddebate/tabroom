<%args>
	$account
	$session
	$tourn_id => undef
	$webname => undef
</%args>
<%init>

    unless ( ($tourn_id || $webname) || ($tourn_id != int($tourn_id)) ) { 
		$m->print("<br /><br /><h3>Error: You have not selected a tournament</h3>");
		$m->abort; 
	}

	my $tourn = Tab::Tourn->retrieve($tourn_id);

</%init>


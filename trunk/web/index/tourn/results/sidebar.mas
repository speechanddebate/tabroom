<%args>
	$tourn_id
	$event_id     => undef
	$round_id     => undef
	$result_id    => undef
	$whoami       => undef
</%args>
<%init>

	my $tourn =  Tab::Tourn->retrieve($tourn_id);
	my $tz = $tourn->tz;

	my $event = Tab::Event->retrieve($event_id) if $event_id;

	unless ($event) { 
		my @events = $tourn->events;
		$event = shift @events;
	}

</%init>


%					foreach my $event ($tourn->events) { 
						<option value="<% $event->id %>" <% $event->id == $event_id ? "selected" : "" %>>
							<% $event->name %>
						</option>
%					}
				</select>

				<input type="submit" value="Go" class="thin">

			</div>

			</form>

		</div>


%				foreach my $judge (@judges) { 
					<div class="nowrap padless">
						<a class="white" href="/index/tourn/postings/judge.mhtml?judge_id=<% $judge->id %>&tourn_id=<% $tourn->id %>">
							<% $judge->last %>, <% $judge->first %>
						</a>
					</div>
%				}
			</td>

			<td class="smallish">

%				foreach my $judge (@judges) { 

					<div class="nowrap padless">

						<a class="white">


%								next unless $score->ballot;
%								next unless $score->ballot->entry;
								<% $score->value == 1 && $aff && $score->ballot->entry->id == $aff->id ? "AFF" : "" %>
								<% $score->value == 1 && $neg && $score->ballot->entry->id == $neg->id ? "NEG" : "" %>
%							}
%						}

						</a>

					</div>

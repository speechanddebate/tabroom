<%args>
	$account => undef
	$tourn_id
	$entry_id => undef
</%args>
<%init>

	my $entry = Tab::Entry->retrieve($entry_id);
	my $tourn = Tab::Tourn->retrieve($tourn_id);

	unless ($entry && $entry->id) { 
		$m->print("That competitor does not seem to exist.  Try again");
		$m->abort();
	}

	my $event = $entry->event;

	unless ($event->setting('live_updates')) { 
		$m->print("That event is not eligible for live updates.  Quit messing around");
		$m->abort();
	}

	if ($account) { 
		$m->redirect("entry_follow.mhtml?entry_id=".$entry_id."&tourn_id=".$tourn_id);
	}

</%init>

    <& menu.mas, tourn => $tourn, event => $event &>

	    <div class="main">

			<h4>Follow <% $entry->name %> from <% $entry->school->short_name %> in <% $entry->event->abbr %></h4>

			<table cellpadding="5" cellspacing="1" width="95%" align="center">

				<tr class="evenrow">

					<td>
						<form action="entry_follow.mhtml" method="post">
						<input type="hidden" name="entry_id" value="<% $entry->id %>">
						<input type="hidden" name="tourn_id" value="<% $tourn_id %>">
						Cell Phone number (incl. area code):
					</td>

					<td>
						<input type="tel" size="15" name="phone">
					</td>
	
				</tr>

				<tr class="oddrow">

					<td>
						Cell Phone Provider*
					</td>

					<td>
						<select name="domain">
							<& /funclib/cell_domains.mas &>
						</select>
					</td>
	
				</tr>

				<tr class="evenrow">

					<td>
						Email Address:
					</td>

					<td>
						<input type="email" size="20" name="email">
					</td>

				</tr>

				<tr class="liblrow">

					<td colspan="2" align="right">

						<input type="submit" value=" Save Live Updates ">
						</form>
					</td>
				</tr>

			</table>

			<p class="explain">

				* Please note text messaging only works for cell providers with 
				an email gateway.  Services like Google Voice that do not
				provide an email gateway cannot get text updates, alas.  As a
				Google Voice user, this annoys me too.   If you think your
				provider supports email to SMS and is missing from the list,
				email details to help@tabroom.com.

			</p>

		</div>


%			}


%   		if ($m->comp("/funclib/tourn_published_rounds.mas", tourn => $tourn) || Tab::File->search( tourn => $tourn->id, posting => 1) || $m->comp('/funclib/listed_rounds.mas', tourn => $tourn)) {

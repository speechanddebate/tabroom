		<span class="threequarters">
			<h2>
				<% $tourn->name %> 
			</h2>
		</span>

		<span class="quarter top rightalign">
			<h4>
				<% $tourn->location %>  
			</h4>
		</span>

		<br style="clear: both;">

        <& ../tourn_header.mas, tourn => $tourn, account => $account &>


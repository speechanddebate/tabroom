<%args>
	$round_id
	$account
</%args>
<%init>
	
	my $round = Tab::Round->retrieve($round_id);

	my $switch;

	unless ($round->listed || $account->site_admin) { 
		$m->print("<p class=\"err\">This round has not been published.  Quit messing around</p>");
		$m->abort;
	}

</%init>

	<h2>
		Students Competing in <% $round->event->name %> <% ($round->label) ? $round->label : "Round ".$round->name %>
	</h2>

	<h4>
		Round scheduled for <% &Tab::nicedt($round->timeslot->start->set_time_zone($round->event->tournament->circuit->timezone)) %>
	</h4>

	<table cellpadding="5" cellspacing="1" width="100%">

% 		foreach my $comp (sort {$a->code <=> $b->code} $round->comps) { 
	    
			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<th>
					<% $comp->code %>
				</th>

				<td>
					<% $comp->team_name %>
				</td>

			</tr>

%		}

	</table>

<%args>
	$round_id => undef
	$account => undef
</%args>
<%init>

	my $key = $round_id;
	return if $m->cache_self( key => $key, expires_in => '2m' );

	$m->abort unless $round_id;
	
	my $round = Tab::Round->retrieve($round_id);

	unless ($round) { 
		$m->print("No round entered, try again");
		$m->abort;
	}

	my $tourn = $round->event->tourn if $round;

	my $switch;

	unless ($round->listed || ($account && $account->site_admin) ) { 
		$m->print("<p class=\"err\">This round has not been published.  Quit messing around</p>");
		$m->abort;
	}

</%init>

	<& menu.mas, tourn_id => $tourn->id, event_id => $round->event->id, round_id => $round_id &>

	<div class="main">

        <h2>
            <% $tourn->name %>: <% $tourn->location %>  
        </h2>

        <& ../tourn_header.mas, tourn => $tourn, account => $account &>


		<h3>
			Students Competing In <% $round->event->name %> <% ($round->label) ? $round->label : "Round ".$round->name %>
		</h3>

		<h4>
			Round scheduled for <% &Tab::nicedt($round->timeslot->start->set_time_zone($tourn->tz)) %>
		</h4>

	<table cellpadding="5" cellspacing="1" width="100%">


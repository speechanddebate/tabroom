<%args>
    $account
    $n_to_show => undef
    $tourn_id => undef
    $start_date => undef
</%args>
<%init>

    my $tourn = Tab::Tourn->retrieve($tourn_id) if $tourn_id; #security thing to crash page if tourn_id isn't valid
    
    my %judge_time = $m->comp("/funclib/judge_decision_time.mas", circuit_id => 43, tourn_id => $tourn_id, start_date => $start_date );
    unless ($account->site_admin == 1) { 
	my $msg = "Site limited to admins";
	$m->redirect("/index/results/index.mhtml?msg=$msg");
    }

    $n_to_show=5 unless $n_to_show;
    $n_to_show=0 if $tourn_id;
    $start_date = '2014-07-01' unless $start_date;
    my $start=$start_date;
</%init>

<div class="main">
<h4>Judge Decision Times</h4> 

<& "/funclib/tablesorter.mas", table => "judge_times" &>

<table class="narrow" id="judge_times">
    <thead>
    <th>Judge</th>
    <th>Rounds</th>
    <th>Avg decision time (minutes)</th>
    </thead>
    
    <tbody>
%    foreach my $key (sort { $judge_time{$b}->{'avg'} <=> $judge_time{$a}->{'avg'} } keys %judge_time) {
%       if ( $judge_time{$key}{'rds'} >= $n_to_show ) {
            <tr>
                <td>
                    <a href="judge_decision_time_detail.mhtml?person_id=<% $judge_time{$key}{'person_id'} %>">
                        <% $judge_time{$key}{'name'} %>
                    </a>
                </td>
                <td><% $judge_time{$key}{'rds'} %></td>
                <td><% $judge_time{$key}{'avg'} %></td>
            </tr>
%       }
%    }
    </tbody>

</table>
</div>

<div class="menu">
<div class="sidenote">
<form action="judge_decision_times.mhtml" method="post" class="warning">
    <input type="hidden" value="<% $tourn_id %>" name="tourn_id">
    Start date (YYYY-MM-DD):<input type="text" name="start_date" id="start_date" size="8" value="<% $start_date %>">
    Minimum rounds:<input type="text" name="n_to_show" size="10" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" class="martop notfirst" value="<% $n_to_show %>">
    <input type="submit" class="martop padmore wrap" value="Submit">
</form>
</div>
</div>

</%args> 
<%init> 

	my @events = sort {$a->name cmp $b->name} $m->comp("/funclib/tourn_events.mas", tourn => $tourn); 

	my $event = Tab::Event->retrieve($event_id);

	unless ($event) { 
		my $err = "You have tried to view a nonexistent event.  Please try again";
		$m->redirect("/results/printouts.mhtml?err=$err");
	}

	my @students = $event->students_only;

	my %students_by_code = ();

	my %round_label = ();
	my %round_type = ();

	foreach my $round ($event->rounds) { 

		$round_label{$round->id} = "Prelim" if $round->type eq "prelim"; 	
		$round_label{$round->id} = $round->label if $round->type ne "prelim"; 	

		$round_type{$round->id} = $round->type;
	}

	foreach my $student (@students) {

		$students_by_code{$student->entrycode} = $student;

	}

	my %partners_by_code = ();

	if ($event->team == 2) { 

		my @partners = $event->partners;

		foreach my $partner (@partners) {
			$partners_by_code{$partner->entrycode} = $partner;
		}

	}

	my @entries_in_order; 

	if ($event && $basis && $basis) { 

		@entries_in_order = $m->comp("order_entries.mas", 
						tourn => $tourn, 
						event => $event, 
						breaks_only => 1,
						basis => $basis);

	}

	if (@entries_in_order && $event->bids) {

		@entries_in_order = $m->comp("award_bids.mas",
							tourn => $tourn,
							basis => $basis,
							event => $event,
							ordered_entries => \@entries_in_order);
	}

	my %ties_by_entry = ();

	foreach my $entry (@entries_in_order) { 

		my @ties = Tab::Entry->search_ties($entry->id);

		@{$ties_by_entry{$entry->id}} = @ties;

	}

	my @non_advancing;

	if ($basis ne "prelim") { 

		@non_advancing = $m->comp("order_entries.mas", 
							tourn => $tourn, 
							event => $event, 
							nonadv => "1",
							basis => "prelim");
	}

	if (@non_advancing && $event->bids) {

		@non_advancing = $m->comp("award_bids.mas",
							tourn => $tourn,
							basis => $basis,
							event => $event,
							ordered_entries => \@non_advancing);
	}

	my @bidded = Tab::Entry->search( event => $event->id, bid => 1);

	my %bids = ();

	foreach my $bid (@bidded) {
		$bids{$bid->id}++;
	}

</%init> 


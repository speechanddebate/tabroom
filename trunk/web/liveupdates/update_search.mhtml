<%args>
	$tourn_id => undef
	$cell => undef
	$email => undef
</%args>
<%init>

	$cell =~ s/\D//g if $cell;

	unless ($cell || $email) { 
		my $err = "Please enter a cell phone number or an email address, or both, to continue";
		$m->redirect("/liveupdates/index.mhtml?tourn_id=$tourn_id&err=$err");
	}

	my $now = DateTime->now;

	my @follow_comps = Tab::FollowComp->search( email => $email) if $email;
	push (@follow_comps, Tab::FollowComp->search( cell => $cell)) if $cell;

	my @follow_judges = Tab::FollowJudge->search( email => $email) if $email;
	push (@follow_judges, Tab::FollowJudge->search( cell => $cell)) if $cell;

	unless (@follow_comps || @follow_judges) { 

		my $err = "There is no record of the cell number ".$cell." in the database. <br />" if $cell;
		$err .= "There is no record of the email address ".$email." in the database. <br />" if $email;
		$err .= "Please try again";
		$m->redirect("/liveupdates/index.mhtml?tourn_id=$tourn_id&err=$err");
	}

	my %seen = ();
	@follow_comps = grep { ! $seen{$_->id} ++ } @follow_comps;

	%seen = ();
	@follow_judges = grep { ! $seen{$_->id} ++ } @follow_judges;

	@follow_comps = sort {$b->comp->event->tournament->start->epoch <=> $a->comp->event->tournament->start->epoch} @follow_comps;
	@follow_judges = sort {$b->comp->event->tournament->start->epoch <=> $a->comp->event->tournament->start->epoch} @follow_judges;

</%init>


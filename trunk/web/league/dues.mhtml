<%args>
	$circuit
	$account
	$err => undef
</%args>
<%init>

	my $now = DateTime->now(time_zone => $circuit->timezone);

	my @cms;

	foreach my $membership ($circuit->memberships) {
		next unless $membership->dues;
		push (@cms, $membership->chapter_memberships(full_member => 1));
	}

	@cms = sort {$a->chapter->name cmp $b->chapter->name} @cms;

	my $switch;

</%init>

	<h2><% $circuit->short_name %> Circuit Dues</h2>

	<h4>Treasurer:</h4>

	<table width="100%" cellpadding="3" cellspacing="1">
	
		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

			<td>
				<% ($circuit->dues_to) ? $circuit->dues_to->first." ".$circuit->dues_to->last : "None" %>
			</td>

			<td class="center">	
				<input type="text" name="email" size="25" value="<% ($circuit->dues_to) ? $circuit->dues_to->email : "Enter email" %>">
			</td>

			<td class="right">
				<input type="submit" class="grey" value=" Set ">
			</td>
		</tr>

		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

			<td colspan="3" class="explain" style="padding-top: 10px;">
				The treasurer's mailing address listed in his/her Tabroom.com
				account will appear on dues invoices; make sure it is correct.
				To check or change address, the Treasurer should log in and
				click Edit Profile at the top right of the screen

			</td>

		</tr>

		<tr>
			<td colspan="3">
				<h4>Send Invoices</h4>
			</td>
		</tr>

		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

			<td>
				Email invoice:
			</td>

			<td align="center">

				<form action="dues_email.mhtml" method="post">

				<select name="chapter_id"> 

% 					foreach my $cm (@cms) {

						<option value="<%$cm->chapter->id%>"><%substr($cm->chapter->name,0,25) %></option>

% 					}

				</select>

			</td>

			<td align="right">
				<input class="grey" type="submit" value="   Send One  ">
				</form>
			</td>

		</tr>

		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

			<td colspan="2">
				Send invoices to all unpaid chapters:
			</td>

			<td align="right">
				<form action="dues_invoice_unpaid.mhtml" method="post">
				<input class="grey" type="submit" value="   Send All   ">
				</form>
			</td>
		</tr>

		<tr>
			<td colspan="4" style="padding-top: 15px;">	
				<form action="dues_message.mhtml" method="post">
				<h4>Message printed on all invoices (email or print)</h4>
			</td>
		</tr>

		<tr>
			<td colspan="4" align="center">
				<textarea name="message" rows="10" cols="50"><% $circuit->invoice_message %></textarea>
			</td>
		</tr>

		<tr class="liblrow">
			<td colspan="4" class="right">
				<input  type="submit" value="    Save Message   ">
				</form>
			</td>
		</tr>

	</table>


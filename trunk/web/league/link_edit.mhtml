<%args> 
	$link_id => undef
	$league
</%args>
<%init>

	my $link = Tab::Link->retrieve($link_id) if $link_id;
	my $switch;

</%init>

	<table cellpadding="0" cellspacing="0" width="100%">
		
		<tr>

			<td width="100%">
				<h2><% ($link) ? $link->name : "Create Article Category" %></h2>
			</td>

			<td>
				<form action="website.mhtml" method="post">
				<input type="hidden" name="link_id" value="<% $link_id %>">
				<input type="submit" class="grey" value=" Return to Website ">
				</form>
			</td>

		</tr>

	</table>

	<table cellpadding="3" width="100%">

		<tr <% ($switch++ % 2) ?   "class=\"oddrow\"" : "class=\"evenrow\"" %>>

			<td width="25%">
				<form action="link_save.mhtml" method="post"> 
				<input type="hidden" name="link_id" value="<% $link_id %>">
				Category name:
			</td>

			<td class="explain">
				Be sure to use short category names, as long names will
				distort the look of your site.
			</td>

			<td class="center">
				<input type="text" name="name" value="<% ($link) ? $link->name : "" %>" size="15">
			</td>

		</tr>

		<tr <% ($switch++ % 2) ?   "class=\"oddrow\"" : "class=\"evenrow\"" %>>

			<td>
				Display order: 
			</td>

			<td class="explain">
				This numerical value determines the order of the categories on
				your site.
			</td>

			<td class="center">
				<input type="text" name="display_order" value="<% ($link) ? $link->display_order : "" %>" size="15">
			</td>

		</tr>

		<tr>

			<td colspan="3">
				<h4>Text of category home page:</h4>
			</td>

		</tr>

		<tr>
			<td class="center" colspan="3">
				<textarea name="blurb" rows="20" cols="55"><% ($link) ? $link->blurb : "" %></textarea>
			</td>

		</tr>

		<tr class="liblrow">
			<td colspan="3" class="right">
				<input class="blue" type="submit" value="    Save Website Category   ">
				</form>
			</td>
		</tr>

		<tr class="liblrow">
			<td colspan="3" class="right">
				<form action="link_articles.mhtml" method="post">
				<input type="hidden" name="link_id" value="<% $link_id %>">
				<input type="submit" class="grey" value="   View Category's Stories   ">
				</form>
			</td>
		</tr>

	</table>


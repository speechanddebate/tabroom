<%args> 
	$account
	$circuit
	$tourn_id
	$certain => undef
</%args> 
<%init>

my $tourn = Tab::Tournament->retrieve($tourn_id);

if ($certain eq "I am certain" ) { 
	my $err;
	$err = "Tournament ". $tourn->name." has been completely deleted.";
	system "/bin/mkdir -p $Tab::file_root/files/".$circuit->id."/deleted/tournaments";
	system "/bin/mv -f $Tab::file_root/files/".$circuit->id."/tournaments/".$tourn->id." $Tab::file_root/files/".$circuit->id."/deleted/tournaments/";
	$tourn->delete;

	$m->redirect("$Tab::url_prefix/circuit/tournaments.mhtml?err=$err");
}

</%init>

<&  "/funclib/warning.mas", account => $account &>

<h3></h3>
<p></p>
<br><br>
<br><br>
<center>
<P><B>You are about to permanently delete tourn <% $tourn->name %>.
<p>This cannot be undone.  You can only get it back
by re-entering all the information over again.  You will lose any
rounds, ballots, results, competitors, anything!  
</p>

<p>Don't say I didn't warn you.</b></p>

% if ($certain) {

<p><font color="red">You did not type "I am certain", exactly like that.  Try
again</font></p>

% }

<br><br>
<p>To proceed, type "I am certain" in the box below:</p>
<br><br>
<form action="tourn_rm.mhtml" method="post">
<input type="hidden" value="<% $tourn_id %>" name="tourn_id">
<p align="center">
<input type="text" name="certain" size="20"></p>
<p align="center">
<input class="blue" type="submit" value="Delete Tournament <% $tourn->name %>"></p>
</center>
</form>

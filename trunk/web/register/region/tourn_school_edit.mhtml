<%args>
	$tourn
	$region
	$account
	$missing => undef
	$school_id => undef
	$chapter_id => undef
</%args>
<%init>

	my $switch;

	my $tz = $account->tz;
	$tz = "UTC" unless $tz;
	my $now = DateTime->now->set_time_zone($tz);

	my $school;

	if ($chapter_id) { 

		my $chapter = Tab::Chapter->retrieve($chapter_id);

		unless ($chapter) { 
			$m->print("That school was not found.  Hit back and try again");
			$m->abort;
		}

		$school = Tab::School->search({ chapter => $chapter->id, tourn => $tourn->id })->first;

		$school = Tab::School->create({
			tourn => $tourn->id,
			chapter => $chapter->id,
			name => $chapter->name,
			region => $region->id,
			entered_on => $now,
			contact => $account->id
		}) unless $school;

	} else { 

		$school = Tab::School->retrieve($school_id);

	}

	unless ($school) { 
		$m->print("School was not found.  Hit back and try again");
		$m->abort;
	}

</%init>


		<& menubar.mas, tourn => $tourn, region => $region, whoami => "schools" &>

		<div class="full padless">
			<span class="threequarter padless">
				<h4>Edit <% $school->short_name %>'s details</h4>
			</span>
			<span class="quarter rightalign">
				<p class="explain required"> denotes required field</p>
			</span>
		</div>

		<form action="tourn_school_save.mhtml" method="post">

		<input type="hidden" name="region_id" value="<% $region->id %>">
		<input type="hidden" name="tourn_id" value="<% $tourn->id %>">
		<input type="hidden" name="school_id" value="<% $school->id %>">
		
		<div class="full <% $missing =~ /school_name/ ? "lirdrow" : $switch++ % 2 ? "oddrow" : "evenrow" %>">
			<span class="required smallish third rightalign">
				School Name:
			</span>

			<span class="half">
				<input type="text" name="name" value="<% $school->name %>" size="35">
			</span>
		</div>

		<div class="full <% $missing =~ /contact_name/ ? "lirdrow" : $switch++ % 2 ? "oddrow" : "evenrow" %>">
			<span class="required smallish third rightalign">
				Name of contact at Nationals
			</span>

			<span class="half">
				<input type="text" name="contact_name" value="<% $school->contact_name %>" size="35">
			</span>
		</div>

		<div class="full <% $missing =~ /coaches/ ? "lirdrow" : $switch++ % 2 ? "oddrow" : "evenrow" %>">
			<span class="required smallish third rightalign wrap">
				Name of coaches (for the program book)
			</span>

			<span class="half">
				<input type="text" name="coaches" value="<% $school->chapter->coaches %>" size="35">
			</span>
		</div>

%		if ($missing =~ /invalid_email/) { 

			<div class="full redrow">
				<span class="smallish third rightalign">
					Enter a valid contact email
				</span>

				<span class="half">
					<input type="email" name="contact_email" value="" size="35">
				</span>
			</div>

%		} else { 

			<div class="full <% $missing =~ /contact_email/ ? "lirdrow" : $switch++ % 2 ? "oddrow" : "evenrow" %>">
				<span class="smallish third rightalign">
					Contact email
				</span>

				<span class="half">
					<input type="email" name="contact_email" value="<% $school->contact_email %>" size="35">
				</span>
			</div>

%		} 

%		if ($missing =~ /invalid_number/) { 

			<div class="full redrow">
				<span class="smallish third rightalign">
					Please enter a 10 digit valid phone number:
				</span>

				<span class="half">
					<input type="tel" name="contact_number" value="<% Tab::phoneme($school->contact_number) %>" size="35">
				</span>
			</div>

%		} else { 

			<div class="full <% $missing =~ /contact_number/ ? "lirdrow" : $switch++ % 2 ? "oddrow" : "evenrow" %>">
				<span class="smallish third rightalign">
					Contact phone number
				</span>

				<span class="half">
					<input type="tel" name="contact_number" value="<% $school->contact_number %>" size="35">
				</span>
			</div>

%		} 

		<div class="full <% $missing =~ /hotel/ ? "lirdrow" : $switch++ % 2 ? "oddrow" : "evenrow" %>">

			<span class="required smallish third rightalign">
				School's hotel
			</span>

			<span class="half">
				<select name="hotel_id" class="fixedbig">
%					foreach my $hotel ($tourn->hotels) { 
						<option value="<% $hotel->id %>">	
							<% $hotel->name %> <% $hotel->multiple > 1 ? "(Entry fee surcharge of ".$hotel->multiple."X applies)" : "" %>
						</option>
%					}
				</select>
			</span>

		</div>

		<div class="full liblrow rightalign">
			<input type="submit" value="Save School">
			</form>
		</div>

	</div>

	<div class="menu">

		<div class="sidenote">

			<h4>Drop School</h4>

%			my $warn = "This will drop all entries and judges from ".$school->short_name."  Please be sure before hitting OK.  OK?";

			<a class="yellow full" href="tourn_school_drop.mhtml?school_id=<% $school->id %>&region_id=<% $region->id %>&tourn_id=<% $tourn->id %>" <& "/funclib/confirm.mas", warn => $warn &>>
				Utterly Drop <% $school->short_name %>
			</a>

		</div>

	</div>


<%args>
	$tourn
	$account
	$session
</%args>
<%init>

	my $switch;
	my $ok;
	$ok++ if $account->site_admin;

</%init>

	<& "menu.mas", tourn => $tourn, whoami => 'import_csv', ok => $ok &>

	<div class="left huge">

		<h2>Import Spreadsheet Files</h2>

		<form enctype="multipart/form-data" onsubmit="return uploadThis()" name="entries" action="import_csv_entries.mhtml" method="post">
		<div class="evenrow">

			<span class="half">
				<span class="third">
					Entries:
				</span>
				<span class="twothird">
					<div class="uploader">
						<input type="file" name="entries" style="opacity: 0;" onchange="uploaderName()" id="upload">
						<span id="filename" class="filename" style="-webkit-user-select: none;">No file selected</span>
						<span class="action" style="-webkit-user-select: none;">Choose File</span>
					</div>
				</span>
			</span>

			<span class="half">
				<span class="twothird">
					<select name="event_id" class="fixedmed">
%						foreach my $event ($tourn->events) { 				
							<option value="<% $event->id %>">
								<% $event->name %>
							</option>
%						}
					</select>
				</span>

				<span class="third nospace rightalign">
					<input type="submit" value="Upload" class="thin">
				</span>

			</span>

		</div>
		
		</form>

		<form enctype="multipart/form-data" onsubmit="return uploadThis()" name="judges" action="import_csv_judges.mhtml" method="post">

		<div class="oddrow">

			<span class="half">
				<span class="third">
					Judges:
				</span>
				<span class="twothird">
					<div class="uploader">
						<input type="file" name="judges" style="opacity: 0;" onchange="uploaderName()" id="upload">
						<span id="filename" class="filename" style="-webkit-user-select: none;">No file selected</span>
						<span class="action" style="-webkit-user-select: none;">Choose File</span>
					</div>
				</span>
			</span>

			<span class="half">

				<span class="twothird">
					<select name="group_id" class="fixedmed">
%						foreach my $group ($tourn->groups) { 				
							<option value="<% $group->id %>">
								<% $group->name %>
							</option>
%						}
					</select>
				</span>

				<span class="third nospace rightalign">
					<input type="submit" value="Upload" class="thin">
				</span>
			</span>

		</div>
		</form>


		<h4>Upload Templates</h4>

		<div class="evenrow centeralign">

			<span class="half martop">
				<a class="dkblue"  href="import_csv_template.mhtml">
					Download Entries template
				</a>
			</span>

			<span class="half martop">
				<a class="dkblue"  href="import_csv_template.mhtml?judge=y">
					Download Judges template
				</a>
			</span>

		</div>

		<h4 class="martop">Boston Debate League</h4>

		<form enctype="multipart/form-data" onsubmit="return uploadThis()" name="judges" action="import_csv_judges_bdl.mhtml" method="post">
		<div class="evenrow">

			<span class="half">

				<span class="third">
					Judges:
				</span>

				<span class="twothird">
					<div class="uploader">
						<input type="file" name="judges" style="opacity: 0;" onchange="uploaderName()" id="upload">
						<span id="filename" class="filename" style="-webkit-user-select: none;">No file selected</span>
						<span class="action" style="-webkit-user-select: none;">Choose File</span>
					</div>
				</span>

			</span>

			<span class="half">

				<span class="twothird">
					<select name="group_id" class="fixedmed">
%						foreach my $group ($tourn->groups) { 				
							<option value="<% $group->id %>">
								<% $group->name %>
							</option>
%						}
					</select>
				</span>

				<span class="third nospace rightalign">
					<input type="submit" value="Upload" class="thin">
				</span>
			</span>

		</div>
		</form>

		<div class="oddrow block centeralign">

			<br />

			<a class="dkblue"  href="import_csv_template.mhtml?bdl=yup">
				Download BDL Judges template
			</a>

			<br />
			<br />

		</div>

	</div>



<%args>
	$tourn
	$account
	$session
</%args>
<%init>

	my $switch;
	my $ok;
	$ok++ if $account->site_admin;

</%init>

	<& "sidebar.mas", tourn => $tourn, whoami => 'import_text', ok => $ok &>

	<div class="left huge">

		<h2>Import Spreadsheet Files</h2>

		<form enctype="multipart/form-data" onsubmit="return uploadThis()" name="entries" action="import_csv_entries.mhtml" method="post">
		<div class="plainnohover block">

			<span class="smallishspan">
				Entries:
			</span>

			<span class="half inline smallish">
				<input name="entries" type="file" class="button">
			</span>

			<span class="medbiggerspan smallish" style="width: 200px;">
				<select name="event_id" class="fixedmed">
%					foreach my $event ($tourn->events) { 				
						<option value="<% $event->id %>">
							<% $event->name %>
						</option>
%					}
				</select>
			</span>

			<span class="schemat" style="text-align: right; margin-left: 15px;">
				<input type="submit" value="Upload" class="thin">
			</span>

		</div>
		
		</form>

		<form enctype="multipart/form-data" onsubmit="return uploadThis()" name="judges" action="import_csv_judges.mhtml" method="post">
		<div class="greynohover block">

			<span class="smallishspan">
				Judges:
			</span>

			<span class="half inline smallish">
				<input name="judges" type="file" class="button">
			</span>

			<span class="medbiggerspan smallish" style="width: 200px;">
				<select name="group_id" class="fixedmed">
%					foreach my $group ($tourn->groups) { 				
						<option value="<% $group->id %>">
							<% $group->name %>
						</option>
%					}
				</select>
			</span>

			<span class="schemat" style="text-align: right; margin-left: 15px;">
				<input type="submit" value="Upload" class="thin">
			</span>

		</div>
		</form>

		<br />
		<br />

		<h4>Upload Templates</h4>

		<div class="evenrow centeralign block">

			<a class="dkblue centeralign inline medbigspan smallish"  href="import_csv_template.mhtml">
				Download Entries template
			</a>

			<a class="dkblue centeralign inline medbigspan smallish"  href="import_csv_template.mhtml?judge=y">
				Download Judges template
			</a>

		</div>

		<h4 class="martop">Boston Debate League</h4>

		<form enctype="multipart/form-data" onsubmit="return uploadThis()" name="judges" action="import_csv_judges_bdl.mhtml" method="post">
		<div class="greynohover block">

			<span class="smallishspan">
				Judges:
			</span>

			<span class="half inline smallish">
				<input name="judges" type="file" class="button">
			</span>

			<span class="medbiggerspan smallish" style="width: 200px;">
				<select name="group_id" class="fixedmed">
%					foreach my $group ($tourn->groups) { 				
						<option value="<% $group->id %>">
							<% $group->name %>
						</option>
%					}
				</select>
			</span>

			<span class="schemat" style="text-align: right; margin-left: 15px;">
				<input type="submit" value="Upload" class="thin">
			</span>

		</div>
		</form>

		<div class="centeralign block martop">

			<a class="dkblue centeralign inline medbigspan smallish"  href="import_csv_template.mhtml?bdl=yup">
				Download BDL Judges template
			</a>

		</div>

	</div>



<%args> 
	$tourn
	$code
</%args>
<%init>

	my @comps = Tab::Comp->search( code => $code, tournament => $tourn->id );

	my $switch;

</%init>

	<center>

	<table cellpadding="6" cellspacing="1" width="75%">


%	foreach my $comp (@comps) { 

		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
		<td align="center">
			<form action="entry/edit.mhtml" method="post">
			<input type="hidden" name="comp_id" value="<% $comp->id %>">
			<input type="submit"  value="  Choose  ">
			</form>
		</td>

		<td align="center">
		<% $comp->code %></td>

		<td align="center">
		<% $comp->event->name %></td>

		<td align="center">

%		foreach my $member ($comp->members) { 
			<% $member->first." ".$member->last %>
%		}

		</td>
	</tr>

%	}

</table>




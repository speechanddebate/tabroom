<%args>
	$tourn
	$account
	$name
	$judge_id
</%args>
<%init> 

	my $judge = Tab::Judge->retrieve($judge_id);

	my $search_name =$name."%";
	my @entries = $m->comp('/funclib/student_entries.mas', name => $search_name, tourn => $tourn);

	my $switch;

</%init>

%   unless ($judge->hired) {
		<& "/register/menubar.mas", school => $judge->school, whoami => "judges", tourn => $tourn &>
%   } else {
		<div class="left huge">
%	}

	<h4>Multiple entries named <% $name %></h4>


		<table cellpadding="5" width="100%">

			<tr class="yellowrow">

				<th class="smaller">
					Event
				</th>

				<th class="smaller">
					Code
				</th>

				<th class="smaller">
					Name
				</th>

				<th class="smaller">
					School
				</th>

				<th class="smaller">
						
				</th>

			</tr>

			<form action="strike_save.mhtml" method="post">
			<input type="hidden" name="judge_id" value="<% $judge_id %>">
			<input type="hidden" name="type" value="student">
			<input type="hidden" name="search_name" value="<% $search_name %>">

% 			foreach my $entry (@entries) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>> 

					<td>
						<% $entry->event->abbr %>
					</td>
				
					<td>
						<% $m->comp("/funclib/entry_code.mas", entry => $entry, full => 1) %>
					</td>

					<td>
						<% $m->comp("/funclib/entry_name.mas", entry => $entry, full => 1) %>
					</td>

					<td>
						<% $entry->school->short_name %>
					</td>
					
					<td>
						<input type="checkbox" name="<% $entry->id %>" id="<% $entry->id %>" value="1" checked>
						<label for="<% $entry->id %>">
							Conflict?
						</label>
					</td>

				</tr>

% 			} 

			<tr class="liblrow">

				<td colspan="5" align="right">
					<input type="submit" value="  Save Student Strikes  ">
					</form>
				</td>

			</tr>

		</table>

	</div>

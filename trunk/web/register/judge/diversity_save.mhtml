<%args>
	$group_id
</%args>
<%init>


	my $group = Tab::JudgeGroup->retrieve($group_id);

	foreach my $judge ($group->judges) { 

		$judge->setting("diverse", $ARGS{$judge->id});
		$judge->update;

	}

	my $msg = "Saved judge ratings";
	$m->redirect("diversity.mhtml?msg=$msg&group_id=$group_id");


</%init>

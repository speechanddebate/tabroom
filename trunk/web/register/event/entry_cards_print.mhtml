<%args>
	$event_id
	$tourn
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id);
	my $ncfl++ if $tourn->setting('ncfl');

	use POSIX;

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;
    my $now = DateTime->now->set_time_zone($tz);

	my $name = $event->name;
	$name =~ s/[\W_]//g;

    my $filename = "Event-EntryCards-".$name;
    my $filepath = $Tab::file_root."/tmp/";
    my $garbage = `rm -f $filepath"."$filename.*`;

    $m->comp("/funclib/printout.mas", tourn => $tourn, filename => $filename, head => 1, no_header => 1);

    $m->comp("/register/region/event_entry_cards.mas", filename => $filename, event => $event, tourn => $tourn) unless $ncfl;
    $m->comp("/register/region/diocese_entry_cards.mas", filename => $filename, event => $event, tourn => $tourn) if $ncfl;

    $m->comp("/funclib/printout.mas", tourn => $tourn, filename => $filename, tail => 1 );

</%init>

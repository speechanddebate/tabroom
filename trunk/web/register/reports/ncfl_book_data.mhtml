<%args>
	$tourn
	$session
</%args>
<%init>

    my $now = DateTime->now;    
    $now->set_time_zone($tourn->tz);
    my $name = $tourn->name;
    $name =~ s/[\W_]//g;

    my $filename = "BookData-$name-".$session->id;
	my $filepath = $Tab::file_root."/tmp/".$filename;
	my $garbage = `rm -f $filepath.*`;

	open (CSVOUT, ">$filepath.csv");

	foreach my $diocese (sort {$a->name cmp $b->name} $m->comp("/funclib/tourn_regions.mas", tourn => $tourn))  {

		print CSVOUT "Archdiocese of " if $diocese->arch;
		print CSVOUT "Diocese of " unless $diocese->arch;
		print CSVOUT $diocese->name."\n";

		print CSVOUT "Director,\"";
		my $directorship =  Tab::Permission->search( tag => "region", region => $diocese->id)->first;
		my $director = $directorship->account;
		print CSVOUT $director->first." ".$director->last."\"\n\n";

		my @schools = sort {$a->name cmp $b->name} Tab::School->search( region => $diocese->id, tourn => $tourn->id);

		foreach my $school (@schools) { 
			print CSVOUT 'School,"'.$school->name.'","'.$school->chapter->coaches."\"\n";
		}
		
		print CSVOUT "\n";

		foreach my $event (sort {$a->name cmp $b->name} $tourn->events) {

			my @entries = $m->comp("/funclib/region_entries.mas", region => $diocese, event => $event);
			next unless @entries;

			print CSVOUT $event->name.',';

			foreach my $entry (@entries) { 

				my $name;

				foreach my $student ($entry->students) { 
					$name .= " & " if $name;
					$name .= $student->first." ".$student->last;
				}

				print CSVOUT ',"'.$name.'"';

			}

			print CSVOUT "\n";
		}

		print CSVOUT "\n";
		print CSVOUT "\n";

	}

	close CSVOUT;

	$m->redirect("$Tab::url_prefix/tmp/$filename.csv");

</%init>

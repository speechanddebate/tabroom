<%args>
	$tourn
</%args>

	<& "menu.mas", tourn => $tourn, whoami => "deadbeats" &>

	<div class="main">

		<h2>Schools with non-zero monetary balances</h2>

		<table cellpadding="2" cellspacing="1" width="100%">

%			foreach my $school (sort {$a->name cmp $b->name} $tourn->schools) {

%				my ($total, $feline_ref) = $m->comp("/funclib/school_fees.mas", school_id => $school->id, all => 1);
%				next if $total == -0;

				<tr class="row">
					
					<td>
						<a class="white" href="/register/school/edit.mhtml?school_id=<% $school->id %>">
						<% $school->name %>
						</a>
					</td>
				
					<td>
						<% ($total < 0) ? "IS OWED" : "OWES" %>
					</td> 
				
					<td class="rightalign">
						<a class="white" href="/register/school/invoice.mhtml?school_id=<% $school->id %>">
						<% $total %>
						</a>
					</td>
					
				</tr>

%			} # end of foreach school

		</table>

	</div>



<%args>
	$tourn
	$session
	$judges     => undef
	$entries    => undef
	$no_invoice => undef
</%args>
<%init>

    my $name = $tourn->name;
    $name =~ s/[\W_]//g;

    my $filename = "SchoolContacts-".$name."-".$session->id;
    my $filepath = $Tab::file_root."tmp/".$filename;
    `rm -f $filepath.*`;

    $m->comp("/funclib/printout.mas", tourn => $tourn, filename => $filename, head => 1 );

    my $now = DateTime->now;    
    $now->set_time_zone($tourn->tz);

	my @schools = sort { $a->name cmp $b->name } $tourn->schools;

	open (TEXOUT, ">>$filepath.tex");

	foreach my $school (@schools) { 

		print TEXOUT "\\bigskip\n";
		print TEXOUT "\\begin{tabular}{p{.60in}p{2.90in}p{.75in}p{2in}} \n  ";
		print TEXOUT "{\\bf School:} & ";
		print TEXOUT &Tab::texify($school->code) if $tourn->setting("school_codes") ne "none";
		print TEXOUT " ". &Tab::texify($school->name);
		print TEXOUT " (".&Tab::texify($school->chapter->country."/".$school->chapter->state).")";
		print TEXOUT " & ";
		print TEXOUT "{\\bf Tournament:} & ".&Tab::texify(substr($tourn->name,0,30))." \\\\ \n ";
		print TEXOUT "{\\bf Circuits:} & ".&Tab::texify($m->comp("/funclib/tourn_circuits.mas", tourn => $tourn, print_abbr => 1))." & ";
		print TEXOUT "{\\bf Printed:} & ". &Tab::nicedt($now);
		print TEXOUT " \\\\* \n";
		print TEXOUT "\\end{tabular}\n";
		print TEXOUT "\\newline\n";
		close TEXOUT;

		$m->comp("/register/school/print/assignments.mas", school_id => $school->id, filename => $filename, judges => $judges, entries => $entries);

		unless ($judges || $entries) { 

		    $m->comp("/register/school/print/housing.mas", school_id => $school->id, filename => $filename) if $tourn->setting("housing");

			unless ($no_invoice) { 

				open (TEXOUT, ">>$filepath.tex");
				print TEXOUT "\\newpage\n";
				close TEXOUT;

				$m->comp("/register/school/print/combined.mas", school_id => $school->id,  filename => $filename);
			}

		}

		open (TEXOUT, ">>$filepath.tex");
		print TEXOUT "\\newpage\n";

	}

	close TEXOUT;

    $m->comp("/funclib/printout.mas", tourn => $tourn, filename => $filename, tail => 1 );

</%init>


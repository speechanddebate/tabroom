<%args>
	$tourn
	$session
	$account
	$school_id        => undef
	$skip_concessions => undef
	$skip_payments    => undef
	$skip_entries     => undef
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id) if $school_id; 
	$m->abort unless $school;

	my $name = $school->name;
	$name  =~ s/[\W_]//g;
	my $filename = "Invoice-".$name."-".$session->id;

	$m->comp("/funclib/printout.mas", tourn => $tourn, filename => $filename, head => 1);

	$m->comp("/register/school/print/invoice.mas", school => $school, filename => $filename, head => 1, 
		skip_concessions => $skip_concessions,
		skip_payments => $skip_payments,
		skip_entry_fees => $skip_entries,
	);

	$m->comp("/funclib/printout.mas", tourn => $tourn, filename => $filename, tail => 1);

</%init>

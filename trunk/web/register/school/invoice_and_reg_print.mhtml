<%args>
	$name => "RECEIPT";
	$school_id
	$session
	$tourn
	$account
	$debug => undef
</%args>
<%init>

	my $now = DateTime->now;

	my $school = Tab::School->retrieve($school_id);

	my $school_name = $school->name;
	$school_name =~ s/[\W_]//g;

    my $filename = "Registration-and-Invoice-".$school_name."-".$session->id;
    my $filepath = $Tab::file_root."/tmp/".$filename;

    my $garbage = `rm -f $filepath.*`;

    $name =~ tr/[a-z]/[A-Z]/;

    $m->comp("/funclib/printout.mas", tourn => $tourn, filename => $filename, head => 1);

	open (TEXOUT, ">>$filepath.tex");
    print TEXOUT "\\begin{tabular}{p{.75in}p{2.25in}p{.75in}p{2.25in}} \n  ";

    print TEXOUT "{\\bf Circuits:} & ".&Tab::texify($m->comp("/funclib/tourn_circuits.mas", tourn => $tourn, print_abbr => 1))." & ";
    print TEXOUT "{\\bf Tournament:} & ".&Tab::texify(substr($tourn->name,0,30))." \\\\ \n ";

	my $school_code = "(".&Tab::texify($school->code).")" if $tourn->setting("school_codes") && $school->code;
    print TEXOUT "{\\bf School:} & $school_code ". &Tab::texify($school->name)." ";
    print TEXOUT &Tab::texify($school->chapter->country);
    print TEXOUT &Tab::texify("/".$school->chapter->state) if $school->chapter->state;
    print TEXOUT " & ";
    print TEXOUT "{\\bf Printed:} & ". &Tab::nicedt($now);
    print TEXOUT " \\\\ \n";
    print TEXOUT "\\end{tabular}\n";
    print TEXOUT "\\medskip\n";
	print TEXOUT "\\newline\n";
    close TEXOUT;

    $m->comp("/register/school/print/registration.mas", school_id => $school->id, filename => $filename);

    $m->comp("/register/school/print/housing.mas", school_id => $school->id, filename => $filename) if $tourn->setting("housing");

	open (TEXOUT, ">>$filepath.tex");
	print TEXOUT "\n \\newpage\n";
	close TEXOUT;

	$m->comp("/register/school/print/invoice.mas", school => $school, filename => $filename, name => $name);

	$m->comp("/funclib/printout.mas", tourn => $tourn, filename => $filename, tail => 1 );

</%init>

<div id="content">

<p><% $filename %></p>

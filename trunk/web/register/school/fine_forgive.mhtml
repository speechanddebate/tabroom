<%args>
	$tourn
	$account
	$fine_id
	$show_deleted => undef
	$undo         => undef
</%args>
<%init>

	my $fine = Tab::SchoolFine->retrieve($fine_id) if $fine_id; 

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;
	my $now = DateTime->now->set_time_zone($tz);

	unless ($fine) { 
		$m->print("That fine does not exist.  Did you delete it already?  Hit back and try again");
		$m->abort();
	}

	my $school = $fine->school;
	my $msg;

	if ($undo) { 
		$fine->deleted("");
		$fine->deleted_by($account->id);
		$fine->deleted_at($now);
		$msg = "Fine or payment restored to invoice";
	} else { 
		$fine->deleted(1);
		$fine->deleted_by($account->id);
		$fine->deleted_at($now);
		$msg = "Fine or payment marked as deleted";
	}

	$fine->update;

	$m->redirect("/register/school/invoice.mhtml?school_id=".$school->id."&show_deleted=$show_deleted&msg=$msg");

</%init>

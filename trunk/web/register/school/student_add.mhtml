<%args>
	$tourn
	$account
	$school_id => undef;
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id) if $school_id;
	my $chapter = $school->chapter;

	my $tz = $account->tz if $account;
	$tz = "UTC" unless $tz;

	my $now = DateTime->now(time_zone => $tz);
	$now->subtract( days => 1 );

	my $switch;

    my $demo;
    foreach my $circuit ($tourn->circuits) { 
        next if $demo;
        $demo++ if $circuit->setting("demographics");
    }   

</%init>

	<div class="main">

		<h2>Add a student:</h2>

		<table cellpadding="5" cellspacing="1" width="100%" >

			<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
				
				<td class="rightalign">
					<form action="student_save.mhtml" method="post">
					<input type="hidden" name="school_id" value="<% $school->id %>">
					First Name
				</td>
				
				<td>
					<input type="text" name="first" size="20" value="">
				</td>

			</tr> 
			
			<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
			
				<td class="rightalign">
					Last Name
				</td>
				
				<td>
					<input type="text" name="last" size="20" value="">
				</td>

			</tr> 
			
			<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
			
				<td class="rightalign">
					Novice
				</td>
				
				<td>
					<input type="checkbox" name="novice" value="1" >
				</td> 

			</tr> 
			
            <tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
			
				<td class="rightalign">
					Phonetic
				</th>
				
				<td>
					<input type="text" name="phonetic">
				</td>
				
			</tr> 
			
            <tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

				<td class="rightalign">
					Graduation Year
				</th> 
				
				<td>
					<input type="text" name="grad_year">
				</td> 
				
			</tr> 
			
            <tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
			
				<td class="rightalign">
					Gender
				</th>
				
				<td>
					<input type="radio" name="gender" id="F" value="F">
						<label for="F">Female</label>
					<input type="radio" name="gender" id="M" value="M">
						<label for="M">Male</label>
					<input type="radio" name="gender" id="O" value="O">
						<label for="O">Other</label>
				</td>
			</tr> 

%			if ($demo) { 

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td class="rightalign">
						Student ID
					</td>

					<td>
						<input type="text" name="school_sid" size="30">
					</td>
				</tr>

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td class="rightalign">
						Date of Birth
					</td>

					<& /funclib/datepicker.mas, id => "birthdate" &>

					<td>
						<input type="text" name="birthdate" id="birthdate" size="10">
					</td>
				</tr>

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td class="rightalign">
						Ethnic Background
					</td>

					<td>
						<select name="race" class="fixedmed">
							<option value="">
								Choose one
							</option>
							<option value="white">
								White, non-Hispanic/Latino
							</option>
							<option value="black">
								Black, non-Hispanic/Latino
							</option>
							<option value="latino">
								Hispanic/Latino
							</option>
							<option value="amerindian">
								American Indian/Native Alaskan
							</option>
							<option value="asian">
								Asian
							</option>
							<option value="pacific">
								Native Hawaiian/Pacific Islander
							</option>
							<option value="dual">
								More than one race
							</option>
							<option value="other">
								Other
							</option>

						</select>
					</td>
				</tr>
%			}

            <tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

                <td class="rightalign">
                    Diet Notes
                </td>

                <td>
                    <input type="text" name="diet" size="30">
                </td>
            </tr>
			
			<tr class="liblrow">

				<td align="right" colspan="2">
					<input  type="submit" value="Save Student">
					</form>
				</td>

			</tr>

		</table>

	</div>

	<& menu.mas, tourn => $tourn, school => $school &>



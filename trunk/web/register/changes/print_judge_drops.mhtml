<%args>
	$tourn
	$session
	$only_group => undef
</%args>
<%init>

	my $name = $tourn->name;
	$name =~ s/[\W_]//g;

	my $filename = "JudgeDrops-".$name."-".$session->id;
	my $filepath = $Tab::file_root."/tmp/".$filename;
	my $garbage = `rm -f $filename.*`;

	$m->comp("/funclib/printout.mas", tourn => $tourn, filename => $filename, head => 1 );

	my $tabular = "\\begin{tabular}{p{.5in}p{1.75in}p{2.5in}p{1.5in}p{1.75in}p{2in}}\n";

	open (TEXOUT, ">>$filepath.tex");

	print TEXOUT "{\\LARGE ".&Tab::texify($tourn->name)." Judge Drops List }\n";
	print TEXOUT "\\medskip\n";
	print TEXOUT "\\newline\n";

	print TEXOUT $tabular;
	print TEXOUT "\\rowcolor[rgb]{1,.95,.66}\[5.5pt\]\[5.5pt\]\n";
	print TEXOUT "Group & ";
	print TEXOUT "Code & ";
	print TEXOUT "Judge & ";
	print TEXOUT "School";
	print TEXOUT "\\\\ \n";
	print TEXOUT "\\end{tabular}\n";
	print TEXOUT "\\newline\n";

	my $switch; 

	foreach my $group (sort {$a->abbr cmp $b->abbr} $tourn->groups) { 

		my @judges = sort {$a->last cmp $b->last} $group->judges( dropped => 1 );
		next unless @judges;

		foreach my $judge (@judges) { 

			print TEXOUT $tabular;
			print TEXOUT "\\rowcolor[rgb]{.90,.90,.90}\n" unless ($switch++ % 2);;

			print TEXOUT &Tab::texify($judge->judge_group->abbr)." & ";
			print TEXOUT &Tab::texify($judge->code) unless $judge->judge_group->setting("no_codes");
			print TEXOUT " & ";
			print TEXOUT &Tab::texify($judge->first." ".$judge->last)." & ";
			print TEXOUT &Tab::texify($judge->school->short_name) if $judge->school;
			print TEXOUT &Tab::texify("Hired") unless $judge->school;
			print TEXOUT "\\\\ \n";
			print TEXOUT "\\end{tabular}\n";
			print TEXOUT "\\newline \n";
		
		}
	
	}

	close TEXOUT;

	$m->comp("/funclib/printout.mas", tourn => $tourn, filename => $filename, tail => 1 );

</%init>

<div id="content">

<p><% $filename %></p>

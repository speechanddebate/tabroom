<%args>
	$account
	$tourn
	$err => undef
	$certain => undef
</%args>
<%init>

	if ($certain eq "I am certain") { 

		my @moves = Tab::Change->search(  tournament => $tourn->id, 
											type => "move" );

		foreach my $move (@moves) { 
			$move->delete();
		}

		my $err = "Judge move records removed";
		$m->redirect("$Tab::url_prefix/register/drops_and_adds.mhtml?err=$err");

	}

</%init>

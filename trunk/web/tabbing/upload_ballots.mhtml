<%args>
	$tourn
	$event_id => undef
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id) if $event_id;

	my $switch;


</%init>

	<div id="leftbig"> 

%		if ($event) { 

			<h2>Upload ballot packets for <% $event->abbr %></h2>

			<table cellpadding="5" cellspacing="1" width="100%">

				<tr class="liblrow">

					<td>
						Label for files:
					</td>

					<td colspan="2">
						<form enctype="multipart/form-data" action="upload_save.mhtml" method="post">
						<input type="hidden" name="event_id" value="<% $event->id %>">
						<input type="text" name="label" size="30">
					</td>

				</tr>

%				foreach my $school (sort {$a->name cmp $b->name} $event->schools) { 

					<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

						<td>
							<a href="uploads_view.mhtml?school_id=<% $school->id %>">
								<% $school->name %>
							</a>
						</td>

						<td>
							<% scalar Tab::File->search( school => $school->id, event => $event->id ) %> 
						</td>

						<td>
							<input name="<% $school->id %>" type="file" class="button">
						</td>

					</tr>

%				}

				<tr class="lirdrow"> 

					<td class="right" colspan="3">
						<input type="submit" value="   Save Ballot Uploads   "> 
						</form>
					</td>

				</tr>

			</table>

%		}

	</div>

	<div id="rightsmall">

		<h4>Choose event:</h4>

%		foreach my $menu_event ( sort {$a->name cmp $b->name} $tourn->events) { 

			<a class="<% ($menu_event->id == $event_id) ? "dkblue block" : "blue block" %>" href="upload_ballots.mhtml?event_id=<% $menu_event->id %>">
				<% $menu_event->name %>
			</a>

%		}

	</div>

	<br style="clear:both"/>

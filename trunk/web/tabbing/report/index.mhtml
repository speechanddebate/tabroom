			<form action="sweep_schools.mhtml" method="post">

			<span class="fifth">
				Sweepstakes
			</span>

			<span class="third">
				<select name="sweep_set_id" class="fixedmed">
%					foreach my $set (sort {$a->name cmp $b->name} $tourn->sweep_sets) {
						<option value="<% $set->id %>">
							<% $set->name %>
						</option>
%					}
				</select>
			</span>

			<span class="third rightalign">
				<input type="submit" class="thin"  name="what" value="View">
			</span>

			<span class="eighth rightalign">
				<input type="submit" class="thin"  name="what" value="Print">
			</span>

			</form>

		</div>

		<br style="clear: both;">

		<h4>
			By Entry
		</h4>

		<div class="full <% ($switch++ % 2) ?"odd" :"even" %> padmore">

			<form action="sweep_students.mhtml" method="post">

			<span class="fifth">
				Sweepstakes
			</span>

			<span class="third">
				<select name="sweep_set_id" class="fixedmed">
%					foreach my $set (sort {$a->name cmp $b->name} $tourn->sweep_sets) {
						<option value="<% $set->id %>">
							<% $set->name %>
						</option>
%					}
				</select>
			</span>

			<span class="third rightalign">
				<input type="submit" class="thin" name="what"  value="View">
			</span>

			<span class="eighth rightalign">
				<input type="submit" class="thin" name="what"  value="Print">
			</span>

			</form>

		</div>

		<div class="<% ($switch++ % 2) ?"odd" :"even" %> full padmore">

			<form action="ndca/points.mhtml" method="post">

			<span class="fifth">
				NDCA Points
			</span>

			<span class="third">
				<select name="event_id" class="fixedmed">
%					foreach my $event (sort {$a->name cmp $b->name} $tourn->events) {
%						next if $event->type eq"speech";
%						next if $event->type eq"congress";
%						next if $event->type eq"wudc";
%						next if $event->type eq"roundrobin";
						<option value="<% $event->id %>">
							<% $event->name %>
						</option>
%					}
				</select>
			</span>

			<span class="third nospace">

				<label for="cx">
					<span class="half hover padtop padbottom">
						<input type="radio" name="type" value="cx" id="cx" checked="checked">Policy &nbsp;
					</span>
				</label>

				<label for="ld">
					<span class="half hover padtop padbottom">
						<input type="radio" name="type" value="ld" id="ld">LD
					</span>
				</label>
			</span>

			<span class="eighth rightalign">
				<input type="submit" class="thin"  value="Print">
			</span>

			</form>

		</div>

		<br style="clear: both;">
%		}

%		if ($tourn->setting('ncfl') && not defined $no_setup) {

			<h4>
				By Diocese
			</h4>

			<div class="<% ($switch++ % 2) ?"odd" :"even" %> full padmore">

				<span class="fifth">
					Diocesan Sweepstakes
				</span>

				<span class="fifth">
				</span>

				<span class="third rightalign">
					<form action="/tabbing/report/ncfl/show_diocesan_sweeps.mhtml" method="post">
					<input type="submit" class="thin"  name="what" value="View">
					</form>
				</span>

				<span class="eighth rightalign">
					<form action="/tabbing/report/ncfl/print_diocesan_sweeps.mhtml" method="post">
					<input type="submit" class="thin"  name="what" value="Print">
					</form>
				</span>

			</div>

%		}

	</div>

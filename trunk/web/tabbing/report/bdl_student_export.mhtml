<%args>
	$tourn
	$session
</%args>
<%init>

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;
    my $now = DateTime->now(time_zone => $tz);    

	my $circuit = $tourn->circuits->first;

	my $name = $circuit->name;
	$name =~ s/[\W_]//g;

    my $filename = "NAUDL-StudentsUpload-$name-".$session->id;
    my $filepath = $Tab::file_root."tmp/".$filename;
    `rm -f $filepath.*`; 
    
    open (CSVOUT, ">>$filepath.csv");
	print CSVOUT "circuitname,teamid,teamlevel,teamname,globalcompid,compname,firstname,lastname,studentschoolid,birthdate,graduationyear,gender,ethnicity\n";

	my @students = $m->comp("/funclib/circuit_students.mas", circuit => $circuit, tourn => $tourn);

	my $circuit_name = $circuit->name;

	foreach my $student (@students) { 
	
		my $birthday_dt = $student->birthdate; 
		my $birthstring = $birthday_dt.".00Z" if $birthday_dt;

		my $race = "White, non-Hispanic/Latino" if $student->race eq "white";
		$race = "Black, non-Hispanic/Latino" if $student->race eq "black";
		$race = "Hispanic/Latino" if $student->race eq "latino";
		$race = "American Indian/Native Alaskan" if $student->race eq "amerindian";
		$race = "Asian" if $student->race eq "asian";
		$race = "Native Hawaiian or other Pacific Islander" if $student->race eq "pacific";
		$race = "Two or more races" if $student->race eq "dual";
		$race = "Other" if $student->race eq "other";

		print CSVOUT '"'.$circuit_name.'","TR'.$student->code.'","'.$student->event.'","'.$student->chapter.'","TR'.$student->id.'","'.$student->first.' '.$student->last.'","'.$student->first.'","'.$student->last.'","'.$student->region.'","'.$birthstring.'","'.$student->grad_year.'","'.$student->gender.'","'.$race.'","'.$student.'"'."\r\n";

	}

	close CSVOUT;

	$m->redirect("$Tab::url_prefix/tmp/$filename.csv");

</%init>

<%args>
	$tourn
	$account
</%args>
<%init>

	my ($points_ref, $regionref, $counted_ref) = $m->comp("/tabbing/report/ncfl/diocese_sweeps.mas", tourn => $tourn);

	my @regions = sort {${$points_ref}{$b->id} <=> ${$points_ref}{$a->id}} @{$regionref};

</%init>
	
	<& /tabbing/report/menu.mas, whoami => "ncfl", tourn => $tourn, account => $account &>

	<div class="main">

		<h2><% $tourn->name %> Diocesan Sweepstakes</h2>

		<& "/funclib/tablesorter.mas", table => "sweeps" &>

		<table cellpadding="3" cellspacing="1" id="sweeps">

			<thead>

				<tr class="yellowrow">

					<th class="smallish">
						Code
					</th>

					<th class="smallish">
						Diocese
					</th>

					<th class="smallish">
						<% $tourn->start->year %> Points
					</th>

					<th class="smallish">
						Previous Cooke Points
					</th>

					<th class="smallish">
						Total Cooke Points
					</th>

				</tr>

			</thead>

			<tbody>

%				foreach my $region (@regions) { 

					<tr>

						<td class="smallish">
							<% $region->code %>
						</td>

						<td class="smallish">
							<% $region->name %>
						</td>

						<td class="smallish">
							<span title="<% ${$counted_ref}{$region->id} %>">
							<% ${$points_ref}{$region->id} %>
							</span>
						</td>

						<td class="smallish">
							<% $region->cooke_pts %>
						</td>

						<td class="smallish">
							<% ${$points_ref}{$region->id} + $region->cooke_pts %>
						</td>

					</tr>

%				}

			</tbody>


		</table>

	</div>

<%args>
	$tourn
	$panel_id
	$session
	$all => undef
</%args>
<%init>

	my $panel = Tab::Panel->retrieve($panel_id);

	my @scores = $m->comp("/funclib/panel_scores.mas", panel => $panel);

	my $winner;

	foreach my $score (@scores) { 
		$winner = $score->ballot->id if $score->value == 1 && $score->tag eq "ballot";
	}

</%init>

	<& sidebar.mas, tourn => $tourn, timeslot => $panel->round->timeslot, session => $session, panel => $panel, flight => 1, all => $all &>

	<div class="left huge"> 

		<div class="nopad">

			<span class="padmore half" style="font-size: 125%; font-weight: bold;">
				<a class="white inline" href="/panel/schemat/panel_view.mhtml?from=closeout&panel_id=<% $panel->id %>">
					Closeout
				</a>
			</span>

			<span class="inline plain half">
				<a class="evenrow block centeralign nowrap" href="/panel/schemat/show.mhtml?from=closeout&round_id=<% $panel->round->id %>">
					<% $panel->round->event->abbr %>
					<% ($panel->round->label) ? $panel->round->label : "Rnd ".$panel->round->name %>
				</a>
			</span>

			<span class="inline plain half">
				<a class="evenrow block centeralign" href="/panel/schemat/panel_view.mhtml?from=closeout&panel_id=<% $panel->id %>">
					<% "Panel ". $panel->letter ." in ".$panel->room->name %>  
				</a>
			</span>
		</div>

		<form action="closeout_save.mhtml" method="post">
		<input type="hidden" name="panel_id" value="<% $panel->id %>">
		<input type="hidden" name="all" value="<% $all %>">

		<table width="100%" cellpadding="4" cellspacing="1">

			<tr class="yellowrow">

				<th class="centeralign">
					Seed
				</th>

				<th class="centeralign">
					Team
				</th>

				<th class="centeralign">
					Advances
				</th>

			</tr>

%			my $switch;

%			foreach my $ballot (sort {$a->side <=> $b->side} $panel->ballots) {

%				my $entry = $ballot->entry;

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<th class="centeralign">
						<% $m->comp("/funclib/entry_seed.mas", entry => $entry) %>
					</th>

					<th>
						<% $entry->code %>
					</th>

					<td class="centeralign">
						<input type="radio" name="advances" value="<% $ballot->id %>"  <% $winner == $ballot->id ? 'checked="checked"' : "" %>>
					</td>

				</tr>

%			} 

			<tr class="liblrow submit">
				<td colspan="3" class="rightalign" style="padding-right: 10px;">
					<input type="submit"  value="   Save Results	 " tabindex="20">
					</form>
				</td>
			</tr>

		</table>

	</div>

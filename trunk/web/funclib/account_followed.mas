<%args>
	$person
</%args>
<%init>


	Tab::Person->set_sql(by_follower => "
		select distinct person.* 
			from person, follow_person
			where follow_person.follower = ?
			and follow_person.person = person.id
			order by person.last
	");

	return Tab::Person->search_by_follower($person->id);

</%init>

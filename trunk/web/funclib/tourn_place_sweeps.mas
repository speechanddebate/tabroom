<%args>
	$tourn
</%args>
<%init> 

	my %place_settings = ();

	Tab::Setting->set_sql( sweep_places => "
		select setting.* 
		from setting
		where setting.tourn = ? 
		and setting.type = \"tourn\"
		and setting.tag like \"sweep_place_%\" ");

	foreach my $place (Tab::Setting->search_sweep_places($tourn->id)) {
		my $tag = $place->tag;
		$tag =~ s/sweep_place_//g;
		$place_settings{$tag} = $place;
	}

	return (%place_settings);

</%init>

<%args>
	$diocese
	$tourn
	$filename
	$filepath
	$group => undef
	$school => undef
	$newpage => undef
</%args>
<%init>

	use POSIX;

	my $hide_codes = $tourn->setting("hide_codes");

	my @entries = sort { $a->code <=> $b->code } $m->comp("/funclib/region_entries.mas", region => $diocese, tourn => $tourn);
	@entries = sort { $a->code <=> $b->code } Tab::Entry->search( school => $school->id ) if $school;
	@entries = sort { $a->code <=> $b->code } $m->comp("/funclib/region_entries.mas", region => $diocese, tourn => $tourn, group => $group) if $group;
	@entries = sort {$a->event->name cmp $b->event->name} @entries;

	return unless @entries;

    open (TEXOUT, ">>$filepath"."$filename.tex");
	print TEXOUT "\\newline\n";

	my $current_event;
	print TEXOUT "\\normalsize\n";

	if ($group) { 
		print TEXOUT "{\\bf Entry in ".$group->name."}\n";
	} elsif ($school) { 
		print TEXOUT "{\\bf Entry }\n";
	} else { 
		print TEXOUT "{\\bf Entry in ".$tourn->name."}\n";
	} 

	print TEXOUT "\\small\n";
	print TEXOUT "\\medskip\n";
	print TEXOUT "\\newline\n";

	my $tabular = "\\begin{tabular}{p{.35in}p{1.5in}p{1.5in}p{2.75in}}\n";
	$tabular = "\\begin{tabular}{p{1.5in}p{1.5in}p{3.25in}}\n" if $hide_codes;

	my $switch = 1;

	foreach my $entry (@entries) { 

		print TEXOUT $tabular;
		print TEXOUT "\\rowcolor[rgb]{.84,.89,.94}\[5.5pt\]\[5.5pt\]\n"  if ($switch++ % 2);

		print TEXOUT $entry->code." & " unless $hide_codes;
		print TEXOUT &Tab::texify($entry->event->name)." & ";
		print TEXOUT &Tab::texify($entry->school->short_name)." & ";

		my $notfirst;

		foreach my $student ($entry->students) {
			print TEXOUT ", " if $notfirst;
			print TEXOUT &Tab::texify($student->first." ".$student->last);
			$notfirst++;
		}

		print TEXOUT "\n \\end{tabular}\n";
		print TEXOUT "\\newline\n";

	}

	print TEXOUT "\\newpage\n" if $newpage;

	close TEXOUT;

</%init>

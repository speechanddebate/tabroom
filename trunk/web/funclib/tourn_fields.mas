<%args>
	$tourn
</%args>
<%perl>

	Tab::Event->set_sql( by_fields => "
       	select distinct event.* 
       	from event, judge_group, setting
       	where event.judge_group = judge_group.id
       	and judge_group.tourn = ? 
		and event.id = setting.event
		and setting.tag = \"field_report\"
		and setting.type = \"event\"
       	order by event.name");

    return Tab::Event->search_by_fields($tourn->id);

</%perl>


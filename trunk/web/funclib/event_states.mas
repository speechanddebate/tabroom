<%args>
	$event
</%args>
<%init>

    Tab::School->set_sql(state_count => "
        select count(distinct chapter.state)
        from chapter, school, entry
        where entry.event = ? 
        and entry.school = school.id
        and school.chapter = chapter.id
    ");

    return Tab::School->sql_state_count->select_val($event->id);

</%init>

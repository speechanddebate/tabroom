<%args>
	$tourn
</%args>
<%init> 

	my %cume_settings = ();

	Tab::Setting->set_sql( sweep_cume => "
		select setting.* 
		from setting
		where setting.tourn = ? 
		and setting.type = \"type\"
		and setting.tag like \"sweep_cume_%\" ");

	foreach my $cume (Tab::Setting->search_sweep_cume($tourn->id)) { 
		my $tag = $cume->tag;
		$tag =~ s/sweep_cume_//g;
		$cume_settings{$tag} = $cume;
	}

	return (%cume_settings);

</%init>

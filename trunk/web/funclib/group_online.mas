<%args>
	$group
</%args>
<%init>

	Tab::Event->set_sql( online_ballots => "
		select distinct event.* 
		from event, setting
		where event.judge_group = ? 
		and event.id = setting.event
		and setting.tag = \"online_ballots\"
		and setting.type = \"event\"
		and setting.value = 1
	");

	return Tab::Event->search_online_ballots($group->id);


</%init>

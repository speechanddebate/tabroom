<%args>
	$entry
	$full => undef
</%args>
<%init>

	return $entry->name if $entry->name;

	my $full_name;
	my $last_name;

	my $count;

	foreach my $student ($m->comp("/funclib/entry_students.mas", entry => $entry)) { 

		$full_name .= " and " if $count;
		$last_name .= " & " if $count;
		$full_name .= $student->first." ".$student->last;
		$last_name .= $student->last;

		$count++;

	}

    return $full_name if $full;
	return $full_name if $count == 1;
	return $last_name;


</%init>

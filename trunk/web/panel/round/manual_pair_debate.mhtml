	sub hasconflict {

		my ($team1, $team2, %precluded_ref) = @_;	
		
		my $returnvalue = 0;

		if ($precluded_ref{$team1}{$team2} == 1) { $returnvalue = 1; }

		if ($precluded_ref{$team2}{$team1} == 1) { $returnvalue = 1; }
		
		return $returnvalue;

	}

#	Declare the variables to mark the number of teams in the bracket


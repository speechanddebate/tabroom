<%args>
	$account
	$tourn
	$event_id 
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id);

	my $switch;
	my $ok;
	my $not_ok;

	my @rounds = $event->rounds( type => "prelim");

</%init>


	<div class="left huge">

		<h4>Speaker order thing for <% $event->name %></h4>

		<& /funclib/tablesorter.mas, table => "sortable" &>
	
		<table id="sortable">

			<thead>
		
			<tr class="yellowrow"> 
				
				<th class="centeralign  smallish">
					Code
				</th>

%				foreach my $round (@rounds) {
					<th class="smallish">
						<% $round->realname %>
					</th>
%				}
		
				<th class="smallish">
					Status
				</th>
				
				<th class="smallish">
					Early
				</th>
				
				<th class="smallish">
					Mid
				</th>
				
				<th class="smallish">
					Late
				</th> 
				
			</tr>

			</thead>

			<tbody>

%			my @ballots = $m->comp('/funclib/event_ballots.mas', event => $event);

%			my %panel_round = map {$_->id => $_->round->id} $m->comp('/funclib/event_panels.mas', event => $event);
%			my %speaker_order = map { $_->entry->id."-".$panel_round{$_->panel->id} => $_->speakerorder} $m->comp('/funclib/event_ballots.mas', event => $event);

%			my $total_ok;
%			my $total_not_ok;

%			foreach my $entry ($event->entries( dropped => 0)) { 

%				my $early;
%				my $mid;
%				my $late;

				<tr>

					<td class="centeralign smallish">
						<a class="dkgreen block" href="/register/entry/edit.mhtml?entry_id=<% $entry->id %>">
							<% $entry->code %>
						</a>
					</td>

%					foreach my $round (@rounds) { 	

%						$early++ if $speaker_order{$entry->id."-".$round->id} < 3;
%						$mid++ if $speaker_order{$entry->id."-".$round->id} > 2 && $speaker_order{$entry->id."-".$round->id} < 6;
%						$late++ if $speaker_order{$entry->id."-".$round->id} > 5;

						<td class="centeralign">
							<% $speaker_order{$entry->id."-".$round->id} %>
						</td>
%					}

%					my $ok++ if $early && $mid && $late;
%					$total_ok++ if $ok;
%					$total_not_ok++ unless $ok;

					<td class="centeralign <% $ok ? "" : "dkred" %>" > 
						<% $ok ? "OK" : "NOT OK" %>	
					</td>

					<td class="centeralign">
						<% $early %>
					</td>

					<td class="centeralign">
						<% $mid %>
					</td>

					<td class="centeralign">
						<% $late %>
					</td> 
					
				</tr>

%			}

			</tbody>

		</table>

	</div>

	<div class="right small">


		<div class="sidenote">

			<h4>Stats</h4>

			<div class="evenrow block">
				<span class="smallspan">OK</span>
				<span class="smallspan"><% $total_ok %></span>
			</div>

			<div class="lirdrow block">
				<span class="smallspan">Not OK</span>
				<span class="smallspan"><% $total_not_ok %></span>
			</div>

			<h4>Do Something</h4>

			<a class="blue block" href="speaker_order_improve.mhtml?event_id=<% $event->id %>">
				Improve Ordering
			</a>

		</div>
	
	</div>

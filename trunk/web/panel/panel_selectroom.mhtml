<%args>
	$panel_id
	$tourn
	$account
	$backto => undef
</%args>
<%init>

	my $panel = Tab::Panel->retrieve($panel_id);

	unless ($panel) {

		my $err = "You did not supply a valid panel.  Go back and try again";
		$m->redirect("/panel/rooms_master.mhtml?err=$err");

	}

	my $already_room = $panel->room;

	my $already_id;

	$already_id = $already_room->id	if ($already_room);

	my $event = $panel->event;
	my $round = $panel->round;

	my $switch;

</%init> 

	<div id="rightsmall">

		<a class="blue block" href="schemat_show.mhtml?round_id=<% $round->id %>">Return to Schematic</a>
		<a class="blue block" href="panel_view.mhtml?panel_id=<% $panel->id %>">Return to Section</a>

		<hr>

		<a href="rooms_master.mhtml?site_id=<% $round->site->id %>" class="blue block">View Rooms Master</a>
		<a href="rooms_print.mhtml?site_id=<% $round->site->id %>" class="blue block">Print Rooms Master</a>

		<hr>

		<table cellpadding="5" cellspacing="1" width="100%">

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td>
					Current:
				</td>

				<td>
					<% $panel->room->name %>
				</td>
			</tr>

%			if (scalar $tourn->sites > 1) { 
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<td>
						Site:
					</td>
			
					<td class="smaller">
						<% $round->site->name %>
					</td>

				</tr>
%			}

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<td>
						Judges:
					</td>

					<td class="smaller">
%						foreach my $judge ($panel->judges) { 
							<% $judge->code %> <% $judge->first %> <% $judge->last %> <br />
%						}
					</td>

				</tr>

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<td>
						Students
					</td>

					<td class="smaller">
%						foreach my $comp ($panel->comps) { 
							<% $comp->code %> <% $comp->team_name %> 
							<% ($comp->ada) ? "ADA" : "" %>
							<br />
%						}
					</td>

		</table>

	</div>

	<div class="left huge">

		<h2>Room for <% $event->abbr %> <% $round->name %> Section <% $panel->letter %></h2>

		<table cellpadding="6" cellspacing="1" width="100%">

			<tr>
				
				<td valign="top">
					Available rooms:
				</td>

				<td>
					<form action="panel_saveroom.mas" method="post">
					<input type="hidden" name="panel_id" value="<% $panel->id %>">
					<input type="hidden" name="backto" value="<% $backto %>">

					<select name="room_id" size="20">

% 						foreach my $cr ($round->rooms) { 

%							next if $cr->inactive;

							<option value="<% $cr->id %>" <% ($cr->id == $already_id) ? 'selected' : '' %> >
								<% ($cr->reserved_to($round->event)) ? "(In Pool)" : "" %>
								<% ($cr->quality) ? $cr->quality : "" %>
								<% $cr->name %>
							</option>

% 						}

					</select>

				</td> 

			</tr>

			<tr class="liblrow">
				<td align="right" colspan="2">
					<input class="blue" type="submit" value="Save Room">
				</td>

			</tr>
			
	
		<table>

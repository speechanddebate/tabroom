<%args>
	$tourn
	$rpool_id => undef
	$all      => undef
</%args>
<%init>

	my $msg;

	if ($all) { 

		foreach my $rpool ($tourn->rpools) { 
			$rpool->delete;
		}

		$msg = "All room pools deleted";

	} elsif ($rpool_id) { 

		my $rpool = Tab::RPool->retrieve($rpool_id);
		$msg = "Pool ".$rpool->name." deleted";
		$rpool->delete;

	}

	$m->redirect("edit_rpools.mhtml?msg=$msg");

</%init>


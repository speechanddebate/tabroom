<%args>
	$tourn
	$round_id => undef
	$confirm  => undef
	$message  => undef
	$motion   => undef
</%args>
<%init>

	my $round = Tab::Round->retrieve($round_id) if $round_id;
	$m->abort unless $round;
	my $event = $round->event;

	my $tz = $tourn->tz;
	$tz ="UTC" unless $tz;

	if ($confirm) { 

		unless ($round) { 
			my $msg ="Pick a round plz";
			$m->redirect("/register/index.mhtml?msg=$msg");
		}

		my $preset = 1 unless $m->comp('/funclib/round_entries.mas', round => $round);

		if ( $event->type eq "speech" ) { 
			$m->comp("blast_speech.mas", round => $round, message => $message);
		}

		if ( $event->type eq "congress" ) { 
			$m->comp("blast_congress.mas", round => $round);
		}

		if ( $event->type eq "wudc" ) { 
			$m->comp("blast_wudc.mas", round => $round, message => $message, incl_motion => $motion);
		}

		if ( $event->type eq "debate" || $event->type eq"policy" || $event->type eq"ld" || $event->type eq"pf") { 
			$m->comp("blast_debate.mas", round => $round, message => $message);
		}

		my $now = DateTime->now( time_zone => $tz);

		$round->blasted($now);
		$round->update;

		my $msg ="Email and text notices sent for ".$round->realname;
		$m->redirect("show.mhtml?round_id=".$round->id."&msg=$msg");

	}


</%init>

	<div class="main">

		<h2>Blast Pairing</h2>

		<p>
			Send individualized email and text assignments to all the entries
			and judges in <% $round->realname %> of <% $round->event->name %>.
		</p>

		<form action="blast.mhtml">
		<input type="hidden" name="round_id" value="<% $round->id %>">

		<div class="even truefull padtop padbottom">
			<span class="half">
				Include a message to recipients.  Limit 50 characters:
			</span>
			<span class="half">
				<input type="text" name="message" maxlength="50" size="50" value="<% $round->note ? $round->note :"" %>">
			</span>
		</div>

%		if ($round->event->type eq"wudc") { 
			<div class="odd full hover">
			
				<label for"include">
					<span class="half hover">
						<span class="quarter">
							Include Motion:
						</span>

						<span class="half">
							<input type="checkbox" class="largecheck" name="motion" id="include" value="1">
						</span>
					</span>
				</label>

				<span class="half smaller">
					<% $round->motion %>
				</span>

			</div>
%		}


		<div class="liblrow rightalign">
			<input type="submit" name="confirm" value="Send email/text blast" placeholder="Max 50 characters">
			</form>
		</div>
		
		<h2 class="martop">Blast Message Only</h2>

		<p>
			Send a short message/announcement only to entries 
			and judges in <% $round->realname %> of <% $round->event->name %>.
		</p>

		<form action="blast_message.mhtml">
		<input type="hidden" name="round_id" value="<% $round->id %>">

		<div class="even truefull padtop padbottom">
			<span class="half">
				Message to recipients.  Limit 150 characters:
			</span>
			<span class="half">
				<input type="text" name="message" maxlength="150" size="50" value="<% $round->note ? $round->note :"" %>">
			</span>
		</div>

		<div class="odd truefull">
			<span class="third rightalign">
				Send to:
			</span>
			<span class="twothird nospace">
				<label for="all">
					<span class="third fullheight nospace hover">
						<input type="radio" name="sendto" id="all" value="all"> All
					</span>
				</label>
				<label for="entries">
					<span class="third fullheight nospace hover">
						<input type="radio" name="sendto" id="entries" value="entries"> Entries Only*
					</span>
				</label>
				<label for="judges">
					<span class="third fullheight nospace hover">
						<input type="radio" name="sendto" id="judges" value="judges"> Judges Only*
					</span>
				</label>
			</span>
		</div>

		<div class="odd truefull explain rightalign">
			*Note these messages are NOT PRIVATE.  Messages will go to anyone
			who "follows" an entry or judge. 
		</div>

		<div class="even truefull martop">
			<span class="third">
				In
			</span>
			<span class="twothird nospace smallish">
				<label for="allround">
					<span class="quarter fullheight nospace hover">
						<input type="radio" name="panels" id="allround" value="all"> All Rounds
					</span>
				</label>
				<label for="unstarted">
					<span class="quarter fullheight nospace hover">
						<input type="radio" name="panels" id="unstarted" value="unstarted"> Unstarted
					</span>
				</label>
				<label for="unentered">
					<span class="quarter fullheight nospace hover">
						<input type="radio" name="panels" id="unentered" value="unentered"> Unentered
					</span>
				</label>
				<label for="unconfirmed">
					<span class="quarter fullheight nospace hover">
						<input type="radio" name="panels" id="unconfirmed" value="unconfirmed"> Unconfirmed
					</span>
				</label>
			</span>
		</div>

		<div class="liblrow rightalign">
			<input type="submit" name="confirm" value="Send message">
			</form>
		</div>

		</form>

	</div>

%    my $start = $round->start_time;
%    $start = $round->timeslot->start unless $start;
%    $start->set_time_zone($tz);

	<div class="menu">

		<div class="sidenote">

			<h4>Share & Enjoy</h4>

            <div class="even full">
                Start time: <% Tab::nicetime($start)."".Tab::tzname($tz) %>
            </div>

			<a class="full blue" href="show.mhtml?round_id=<% $round->id %>">
				Return to Pairing
			</a>

			<a class="full blue" href="/panel/report/schematic.mhtml?round_id=<% $round->id %>&event_id=<% $round->event->id %>">	
				Print Pairing
			</a>

		</div>

		<div class="sidenote">

			<h4>Stats & Data</h4>

%			if ($event->type eq"wudc") {
				<span class="third block">
					Motion
				</span>
				<span class="twothird block">
					<% $round->motion ?"Entered" :"Not Entered" %>
				</span>
%			}

			<div class="even full">
				<span class="quarter">
					Paired:
				</span>

				<span class="threequarter">
					<% $round->created ? &Tab::nicedt($round->created->set_time_zone($tourn->tz)) :"Not recorded" %>
				</span>
			</div>

			<div class="odd full">
				<span class="quarter">
					Finished: 
				</span>
				<span class="threequarter">
					<% $round->completed ? &Tab::nicedt($round->completed->set_time_zone($tourn->tz)) :"Not recorded" %>
				</span>
			</div>

			<div class="even full">
				<span class="quarter">
					Blasted:
				</span>
				<span class="threequarter">
					<% $round->blasted ? &Tab::nicedt($round->blasted->set_time_zone($tourn->tz)) :"Not yet blasted" %>
				</span>
			</div>

		</div>

	</div>


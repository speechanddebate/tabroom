											$rating = $rating_by_judge{$judge->id} if $rating_by_judge{$judge->id};
											$rating = "x" unless $rating;
										}
									}

									if ($bracket && $current_prefs) {
										if ($prefs eq "ordinals") { 
											foreach ( length($rating) .. 10) {

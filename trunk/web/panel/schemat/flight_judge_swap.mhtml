										$rating .= "-";

										if (${$negref}{$judge->id}) { 
											$rating .= ${$negref}{$judge->id};
										} else { 
											$rating .= "x";
										}

										$bracket = $others{$judge->id}{"bracket"};
										$current_prefs = $others{$judge->id}{"prefs"};

									}  else { 

										if ($tab_ratings) { 
											$rating = $judge->tab_rating;
											$rating = "x" unless $rating;

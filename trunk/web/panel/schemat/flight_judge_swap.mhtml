							<optgroup class="key" label="<% $label %>"></optgroup>
<%perl>

								foreach my $judge (@busy_judges) { 

									next if $used{$judge->id}++;

									my $rating;
									my $bracket;
									my $current_prefs;

									if ($prefs) { 

										if (${$affref}{$judge->id}) { 
											$rating = ${$affref}{$judge->id};

<%args>
	$rpool_id  => undef
	$round_id => undef
</%args>
<%init>

	my $existing = Tab::RPoolRound->search( round => $round_id, rpool => $rpool_id )->first;

	if ($round_id && $rpool_id) { 

		unless ($existing) { 
			Tab::RPoolRound->create({
				round      => $round_id,
				rpool => $rpool_id
			});
		}

	}

	my $rpool = Tab::RPool->retrieve($rpool_id);
	my $msg = "Round will now draw from room pool ".$rpool->name;

	$m->redirect("show.mhtml?round_id=$round_id&settings=1&msg=$msg");


</%init>

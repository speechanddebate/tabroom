<%args>
	$jpool_id
	$round_id
</%args>
<%init>
	
	my $round = Tab::Round->retrieve($round_id);
	$round->jpool("");
	$round->update;

	my $msg = $round->realname." will now draw from all judges, not just this jpool";
	$m->redirect("jpool.mhtml?jpool_id=$jpool_id&group_id=".$round->event->judge_group->id."&msg=$msg");


</%init>

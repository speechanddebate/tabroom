<%args>
	$tourn
	$account
	$group_id => undef
</%args>
<%init>

	my $group = Tab::JudgeGroup->retrieve($group_id) if $group_id;

</%init>

	<& menu.mas, tourn => $tourn, group => $group, whoami => "index" &>

	<div class="left huge">

		<h2>Judges & Pools <% $group ? "in ".$group->abbr : "" %></h2>

%		if ($group) { 

			<table cellpadding="4" cellspacing="1">

				<tr class="yellowrow">
					<th colspan="4" class="smallish">
						Vital Statistics:
					</th>
				</tr>

				<tr class="evenrow">
					<td>
						Events/Divisions
					</td>

					<td>
						<% scalar $group->events %>
					</td>

					<td>
						Panels/Rooms
					</td>

					<td>
						<% scalar $m->comp("/funclib/group_panels.mas", group => $group) %>
					</td>
				</tr>

				<tr class="evenrow">

					<td>
						Max judges needed at one time
					</td>

					<td>
						<% $m->comp("/funclib/group_max_judges.mas", group => $group) %>
					</td>

					<td>
						Timeslots
					</td>

					<td>
						<% scalar $m->comp("/funclib/group_timeslots.mas", group => $group) %>
					</td>

				</tr>

			</table>

			<br />

			<table cellpadding="4" cellspacing="1">

				<tr class="yellowrow">
					<th colspan="2" class="smallish">
						Repanel judge assignments:
					</th>
				</tr>


				<tr style="padding-top: 25px;" class="oddrow">

					<td class="rightalign">
						<label for="clear">
						Erase existing assignments:
						</label>
					</td>
					
					<td class="centeralign">
						<form action="group_judges.mhtml">
						<input type="hidden" name="group_id" value="<% $group->id %>">
						<input type="checkbox" id="clear" name="clear" value="1" checked="checked">
					</td>

				</tr>

				<tr style="padding-top: 25px;" class="evenrow">

					<td class="rightalign">
						Minimum judges per panel*
					</td>
					
					<td class="centeralign">
						<input type="number" min="1" max="99" size="5" name="panelsize" value="1">
					</td>

				</tr>

				<tr class="liblrow">
					<td colspan="2" class="rightalign">
						<input type="submit" value=" Reassign Judges ">
						</form>
					</td>
				</tr>


			</table>

			<p class="explain">* You can set numbers of judges for each event if you click on "event setup" on the right."</p>

%		}

	</div>




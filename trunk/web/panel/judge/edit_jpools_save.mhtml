<%args>
	$tourn
	$account
	$group_id      => undef
</%args>
<%init>

	my $group = Tab::JudgeGroup->retrieve($group_id);

	foreach my $jpool ($group->jpools) { 

		$jpool->name($ARGS{"name_".$jpool->id});
		$jpool->publish($ARGS{"publish_".$jpool->id});
		$jpool->standby($ARGS{"standby_".$jpool->id});
		$jpool->standby_timeslot($ARGS{"standby_timeslot_".$jpool->id});
		$jpool->site($ARGS{"site_".$jpool->id});
		$jpool->update;
	}


	my $msg = "Pool settings saved";
	$m->redirect("edit_jpools.mhtml?group_id=".$group->id."&msg=$msg");

</%init>

<%args>
	$judge_id => undef
	$pool_id => undef
	$value => undef
</%args>
<%init>

	my $existing = Tab::PoolJudge->search( judge => $judge_id, pool => $pool_id )->first;
	my $judge = Tab::Judge->retrieve($judge_id);

	if ($value) { 

		unless ($existing) { 

			Tab::PoolJudge->create({
				judge => $judge_id,
				pool => $pool_id
			});
		}

	} else { 

		$existing->delete if $existing;

	}

</%init>


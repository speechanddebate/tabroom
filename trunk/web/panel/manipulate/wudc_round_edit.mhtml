<%args>
	$tourn
	$entry_id => undef
	$round_id => undef
</%args>
<%init>

	my $round = Tab::Round->retrieve($round_id);
	my $entry = Tab::Entry->retrieve($entry_id);

	my $school_id = $entry->school->id if $entry && $entry->school;

	my @panels = sort {$b->bracket <=> $a->bracket} $round->panels;

	my @hits = $m->comp("/funclib/entry_hits.mas", entry => $entry, not_in => $round);

	my %entries_hit = map { $_->id => 1 } @hits;

	foreach my $hit (@hits) { 
		undef $hit;
	}

	my %panel_size;
	my %panel_same_hits;
	my %panel_school_hits;
	my %panel_judge_hits;
	my %panel_score;

	my $ncfl ++ if $tourn->setting("ncfl");
	
	Tab::Panel->set_sql( size => "
		select count(distinct entry.id)
		from entry, ballot
		where entry.id = ballot.entry
		and entry.dropped = 0
		and entry.dq = 0
		and entry.unconfirmed = 0
		and ballot.panel = ? 
	");

	Tab::Panel->set_sql( same_hits => "
		select count(distinct p2e2.entry)
			from ballot p2e1, ballot p2e2
			where p2e1.entry = ? 
			and p2e2.entry != p2e1.entry
			and p2e2.panel = p2e1.panel
			and p2e2.entry in 
			 	(select ballot.entry 
					from ballot where ballot.panel = ?)
	");

	if ($ncfl) { 

		Tab::Panel->set_sql( same_school_hits => "
			select count(distinct entry.id) 
				from entry, ballot, school
				where ballot.entry = entry.id
				and entry.school = school.id
				and entry.dropped = 0
				and entry.dq = 0
				and entry.unconfirmed = 0
				and school.region = ? 
				and ballot.panel = ?
			");  #my head hurts.

		$school_id = $entry->school->region->id;

	} else { 

		Tab::Panel->set_sql( same_school_hits => "
			select count(distinct entry.id) 
				from entry, ballot
				where ballot.entry = entry.id
				and entry.school = ? 
				and entry.dropped = 0
				and entry.dq = 0
				and entry.unconfirmed = 0
				and ballot.panel = ?
		");  #my head hurts.

	} 

</%init>

	<div class="small right">

		<div class="sidenote">

			<h4>Navigation</h4>

				<a class="blue block nowrap" href="/panel/schemat/show.mhtml?round_id=<% $round->id %>&show=yes">
					<% $round->realname %> <% $round->event->abbr %> Schemat
				</a>

				<a class="blue block nowrap" href="/register/entry/edit.mhtml?entry_id=<% $entry->id %>">
					<% $entry->code %> <% $entry->name %> info
				</a>

		</div>

		<div class="sidenote">

			<h4>Entry Details</h4>

				<div class="evenrow block">
					<span class="smallspan">
						Code
					</span>
					<span class="huntwofive">
						<% $entry->code %>
					</span>
				</div>

				<div class="oddrow block">
					<span class="smallspan">
						Name
					</span>
					<span class="huntwofive">
						<% $entry->name %>
					</span>
				</div>

				<div class="evenrow block">
					<span class="smallspan">
						School
					</span>
					<span class="huntwofive">
						<% $entry->school->short_name %>
					</span>
				</div>

%				if ($tourn->setting("ncfl")) { 

					<div class="oddrow block">
						<span class="smallspan">
							Diocese
						</span>
						<span class="hundo">
							<% $entry->school->region->name %>
						</span>
					</div>
%				}

		</div>

		<div class="sidenote">

%			my ($none_ref, $bye_ref) = $m->comp("/funclib/round_byes.mas", round => $round);

			<h4>Byes</h4>

%			foreach my $bye (@{$bye_ref}) { 

				<a class="<% $bye->id == $entry_id ? "dk" : "" %>blue block" href="wudc_round_edit.mhtml?round_id=<% $round->id %>&entry_id=<% $bye->id %>">
					Assign <% $bye->code %> into round
				</a>

%			}

			<a class="ltyellow block" href="wudc_bye.mhtml?round_id=<% $round->id %>&entry_id=<% $entry->id %>">
				Give <% $entry->code %> a bye
			</a>

%			if (@{$none_ref}) { 

				<h4>Not Assigned</h4>

%				foreach my $none (@{$none_ref}) { 

					<a class="nowrap <% $none->id == $entry_id ? "dk" : "" %>blue block" href="wudc_round_edit.mhtml?round_id=<% $round->id %>&entry_id=<% $none->id %>">
						Assign <% $none->code %>
					</a>
%				}

%			}

			<h4>Add More Rooms</h4>

			<div class="liblrow block padless">
				<form action="create_panels.mhtml" method="post">
				<input type="hidden" name="round_id" value="<% $round->id %>">
				<input type="hidden" name="entry_id" value="<% $entry_id %>">

				<span class="smallish smallerspan padless">
					Number
				</span>

				<span class="eighty padless">
					<input class="notfirst thin" type="number" size="3" min="0" max="999" name="number">
				</span>

				<span class="smallerspan padless">
					<input type="submit" value="Go" class="notfirst thin">
					</form>
				</span>
			</div>

		</div>

	</div>

	<div class="left huge">

		<& /funclib/tablesorter.mas, table => "sortme" &>

		<h2>Move competitor <% $entry->school->code %> <% $entry->code %> </h2>

			<p>
				Click on an entry or blank position to swap in <% $entry->code %>.  Numbers below entry codes designate speaker positions from all rounds.
			</p>

			<table cellpadding="4" cellspacing="1" id="sortme">

				<thead>

					<tr class="yellowrow">

						<th class="smallish">
							Room
						</th>

						<th class="smallish">
							Judges
						</th>

						<th class="smallish">
							OG (1)
						</th>

						<th class="smallish">
							OO (2)
						</th>

						<th class="smallish">
							CG (3)
						</th>

						<th class="smallish">
							CO (4)
						</th>

						<th class="smallish">
							Rank
						</th>

					</tr>

				</thead>

				<tbody>

%					foreach my $panel (@panels) { 

%						next if $panel->bye;
%						my $mine;

						<tr>

							<td class="smallish">
								<a class="white" href="/panel/schemat/panel_view.mhtml?panel_id=<% $panel->id %>">
								<% $panel->room && $panel->room->name ? $panel->room->name : " None" %>
								</a>
							</td>

							<td class="smallish">
%								foreach my $judge ($m->comp("/funclib/panel_judges.mas", panel => $panel)) { 
									<span class="padno hundo nowrap block <% $panel_judge_hits{$panel->id} ? "strike" : "white" %>">
										<a class="white padno" href="/register/judge/edit.mhtml?judge_id=<% $judge->id %>">
											<% $judge->school ? $judge->school->code : "HIRE" %>
											<% $judge->first." ".$judge->last %>
										</a>
									</span>
%								}
							</td>

%							undef $entry;

%							my %entries;

%							foreach my $other ($m->comp("/funclib/panel_entries.mas", panel => $panel)) { 
%								$entries{$other->speaks} = $other;
%							}

%							foreach my $position ( 1 .. 4 ) { 

%								my $other = $entries{$position};

								<td class="smallish <% $other ? "" : "dkblue centeralign padno marno " %> 
											        <% $other && $other->id == $entry_id ? "dkgreennohover" : $other && $other->school->id == $school_id ? "red" : "" %>
													<% $other && $entries_hit{$other->id} ? "ltyellow" : "" %>">

%									unless ($other && $entry_id == $other->id) { 
										<a class="block padno marno" href="wudc_swap.mhtml?entry_id=<% $entry_id %>&panel_id=<% $panel->id %>&position=<% $position %>">
%									}

%									if ($other && $entry_id == $other->id) { 
										<span class="padno">
%									} else { 
										<span class="white padno">
%									}

%										if ($other) {
											<% $other ? $other->school->code." ".$other->code : "" %>
%										} else { 
												EMPTY
%										} 
										</span>

										<div class="block padno smaller">
%											if ($other) {
												<% $m->comp("/funclib/entry_orders.mas", entry => $other) %>
%											} 
										</div>

									</a>
								</td>
%							}

							</td>

							<td class="smallish centeralign">
								<% $panel->bracket %>
							</td>

						</tr>

%					}

				</tbody>

			</table>

	</div>



	

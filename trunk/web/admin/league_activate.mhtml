<%args>
	$circuit_id
</%args>
<%init>

	my $circuit = Tab::Circuit->retrieve($circuit_id);

	if ($circuit->active) {

		$circuit->active("0");

	} else {

		$circuit->active("1"); 

	}

	$circuit->update;

	my $msg = $circuit->short_name." has been marked ";
	$msg .= ($circuit->active) ? "active" : "inactive";

	$m->redirect("/admin/circuits.mhtml?msg=$msg");


</%init>

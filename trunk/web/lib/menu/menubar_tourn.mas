<%args>
	$session
</%args>
<%init>

	unless ($session && $session->account) { 
		my $msg = "You no longer have an active login session.  Please log in again";
		$m->redirect("$Tab::url_prefix/index/index.mhtml?msg=$msg");
	}

	my $account = $session->account;
	my $tourn   = $session->tourn;

	my $tourn_access = Tab::TournAdmin->search( account => $account->id, tourn => $tourn->id )->first;
	my $no_setup++ if $tourn_access && $tourn_access->no_setup;
	my $entry_only++ if $tourn_access && $tourn_access->entry_only;

	undef $no_setup if $account->site_admin;

	my $now = DateTime->now;

	return if $entry_only;

</%init>


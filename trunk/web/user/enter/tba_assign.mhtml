<%args>
	$entry_id
	$school_id
</%args>
<%init>

	my $entry = Tab::Entry->retrieve($entry_id);

	$m->abort unless $entry;

	my $event = $entry->event;
	my $tourn = $event->tourn;
	my $school = Tab::School->retrieve($school_id);

	my $max = $event->setting("max_entry");
	my $min = $event->setting("min_entry");

	my $code_style = $event->setting("code_style");

	my $switch;

</%init>

	<div class="left huge">

		<h2>Choose competitor(s) for a TBA Slot</h2>

		<form action="tba_assign_save.mhtml" method="post">
		<input type="hidden" name="entry_id" value="<% $entry->id %>">
		<input type="hidden" name="school_id" value="<% $school->id %>">

		<table cellpadding="5" cellspacing="1" width="100%">

%			foreach my $count (1 .. $max) { 

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td class="<% $count > $min ? "" : "required" %>">
						<% $count %>
					</td>

					<td class="bigger rightalign">

						<select name="student_<% $count %>" class="fixed chosen" data-placeholder="Select competitor...">

							<option value="">NONE</option>

%							foreach my $student ($m->comp("/funclib/students_evententer.mas", event => $event, school => $school )) {
								<option value="<% $student->id %>"> <% $student->first." ".$student->last %>
								</option>
%							}

						</select>

					</td>

				</tr>

%				$count++;

%			}

			<tr class="liblrow">

				<td colspan="2" class="rightalign">
					<input type="submit" value=" Save Competitor Names ">
					</form>
				</td>

			</tr>

		</table>

		<p class="required">
			 = Required
		</p>

	</div>

	<div class="right small">
	
		<div class="sidenote">

			<h4>Entry</h4>

			<p class="evenrow block">
				<% $entry->name %>
			</p>

			<p class="evenrow block">
				<% $entry->code %>
			</p>

			<p class="evenrow block">
				<% $event->name %>
			</p>

%			if ($entry->waitlist) { 
				<p class="yellow block">
					On Waitlist
				</p>
%			}

			<h4><% $event->abbr %></h4>

			<h4><% $event->abbr %></h4>

			<a class="blue block" href="students.mhtml?school_id=<% $school_id %>&event_id=<% $event->id %>">
				Return to Entry
			</a>
		</div>

	</div>


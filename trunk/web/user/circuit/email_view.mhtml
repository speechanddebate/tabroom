<%args>
	$circuit
	$account
	$email_id
</%args>
<%init>

	my $email = Tab::Email->retrieve($email_id);

	my $year = $email->sent_on->year;
	$year-- if $email->sent_on->month < 7;

	use Text::Wrap
    $Text::Wrap::columns = 70;

	my $switch;

</%init>

	<& menu.mas, circuit => $circuit, whoami => "email", year => $year &>

	<div class="main">

		<h2>Email to membership:</h2>

		<table cellpadding="7"> 

		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			<th>
				Subject:
			</th>

			<td>
				<% $email->subject %>
			</td>
		</tr>

		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			<th>
				Sender:
			</th>

			<td>
				<% $email->sender->first." ".$email->sender->last %>
			</td>
		</tr>
		
		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			<th>
				Sent to:
			</th>

			<td>
				<% $email->sent_to ? $email->sent_to : "Everyone" %>
			</td>
		</tr>
		
		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >
			<th>
				Sent on:
			</th>

%			my $tz = $email->tourn->tz if $email->tourn;
%			$tz = "UTC" unless $tz;
%			my $sent = $email->sent_on;

			<td>
				<% Tab::nicedt($sent->set_time_zone($tz)) %>
				(<% $sent->time_zone->short_name_for_datetime($sent) %>)
			</td>

		</tr>
		
		<tr>
			<th colspan="2">
				<h4>Text of message:</h4>
			</th>
		</tr>

		<tr>
			<td colspan="2" style="border: 4px double #adadad;">
				<% $email->content %>
			</td>
		</tr>
	</table>

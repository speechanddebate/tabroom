<%args>
	$circuit_id => undef
	$name       => undef
	$admin      => undef
	$code       => undef
</%args>
<%init>

	my $circuit = Tab::Circuit->retrieve($circuit_id);

	if ($name) { 

		my $region = Tab::Region->create({
			name      => $name,
			code      => $code,
			circuit   => $circuit_id,
		});

		my $msg .= " Region ".$name." created";

		if ($admin) { 

			my $login = Tab::Login->search( username => $admin)->first;

			if ($login) { 

				Tab::Permission->create({
					account => $login->person->id,
					region  => $region->id,
					tag     => "region"
				});

			} else { 

				$msg .= " <br />WARNING:  No account with username $admin found.";

			}

		}

		$m->redirect("regions.mhtml?circuit_id=$circuit_id&msg=$msg");

	} else { 

		my $err = "You did not specify a name for that circuit.  Please try again";
		$m->redirect("regions.mhtml?circuit_id=$circuit_id&err=$err");
	}


</%init>


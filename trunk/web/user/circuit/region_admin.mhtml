<%args>
	$region_id
	$circuit_id
</%args>
<%init>

	my $circuit = Tab::Circuit->retrieve($circuit_id);
	my $region = Tab::Region->retrieve($region_id);

	my $switch;

</%init>

	<& menu.mas, circuit => $circuit, whoami => "regions" &>

	<div class="main">

		<div class="full">

			<span class="threequarter nowrap nospace">
				<h4>Access to <% $region->name %> (<% $circuit->abbr %>)</h4>
			</span>

			<span class="quarter rightalign right">
				<a href="regions.mhtml?region_id=<% $region->id %>&circuit_id=<% $circuit->id %>" class="dkblue block centeralign">
					Return to regions
				</a>
			</span>

		</div>


%		foreach my $admin ($region->admins) { 

			<div class="<% ($switch++ % 2) ? "odd" : "even" %> nospace">

				<span class="twofifth">
					<% $admin->first." ".$admin->last %>
				</span>

				<span class="twofifth">
					<% $admin->email %>
				</span>

				<span class="fifth">
					<a class="dkred padmuchmore" href="region_admin_rm.mhtml?region_id=<% $region->id %>&circuit_id=<% $circuit->id %>&admin_id=<% $admin->id %>">
						Delete Access
					</a>
				</span>

			</div>

%		} 

		<form action="region_admin_add.mhtml" method="post">

			<input type="hidden" name="region_id" value="<% $region->id %>">
			<input type="hidden" name="circuit_id" value="<% $circuit->id %>">

			<div class="liblrow martopmore padless">

				<span class="half">
					Add admin (must have a tabroom account):
				</span>

				<span class="twofifth">
					<input type="email" size="30" name="email" placeholder="Enter email address of account">
				</span>

				<span class="eighth rightalign">
					<input type="submit" value="Add">
				</span>

			</div>

		</form>

	</div>


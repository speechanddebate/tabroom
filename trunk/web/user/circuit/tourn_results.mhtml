						<% scalar(@entries) %>/
%						my @results; if ( scalar(@result_set) > 0) { @results = Tab::Result->search( result_set=> $result_set[0]->id); }
						<% scalar(@results) %>
			
					</td>
					
					<td class="smallish centeralign">

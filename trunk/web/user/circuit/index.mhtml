<%args> 
	$account
	$circuit_id => undef
</%args>
<%init> 

	my $circuit = Tab::Circuit->retrieve($circuit_id) if $circuit_id;
	$m->abort unless $circuit;

	my $switch;

	my $tz = $circuit->tz if $circuit;
	$tz = "UTC" unless $tz;

</%init>

	<& menu.mas, circuit => $circuit, whoami => "edit" &>

	<div class="main">
					
		<h2>
			<% $circuit->name  %>
		</h2>

		<h4>Settings & Name</h4>
	
			<table cellpadding="5" width="100%" cellspacing="0">

			<tr class="<% ($switch++ % 2) ? "odd" : "even" %>">

				<td>
					Full Name:
				</td>
			
				<td class="rightalign" colspan="2">
					<form action="circuit_save.mhtml" method="post"> 
					<input type="hidden" name="circuit_id" value="<% $circuit_id %>">
					<input type="text" size="25" name="name" value="<% ($circuit) ? $circuit->name : "" %>">
				</td>

			</tr>

			<tr class="<% ($switch++ % 2) ? "odd" : "even" %>">
				<td>
					Abbreviation
				</td>

				<td class="rightalign" colspan="2">
					<input type="text" size="25" name="abbr" value="<% ($circuit) ? $circuit->abbr : "" %>">
				</td>
			</tr>
			
			<tr class="<% ($switch++ % 2) ? "odd" : "even" %>">

				<td>
					State/Prov
				</td>

				<td class="rightalign" colspan="2">
					<select name="state" class="fixedmed chosen">
						<option value="">None</option>
						<& /funclib/state_select.mas, state => $circuit ? $circuit->state : "" &>
					</select>
				</td>
			</tr>

			<tr class="<% ($switch++ % 2) ? "odd" : "even" %>">

				<td>
					Country
				</td>

				<td class="rightalign" colspan="2">
					<select name="country" class="fixedmed chosen">
						<option value="">None</option>
						<& /funclib/country_select.mas, country => $circuit ? $circuit->country : "" &>
					</select>
				</td>
			</tr>
			
			<tr class="<% ($switch++ % 2) ? "odd" : "even" %>">
				<td>
					Website
				</td>
				<td class="rightalign" colspan="2">
					<input type="text" size="25" name="url" value="<% ($circuit) ? $circuit->setting('url') : "" %>">
				</td>
			</tr>
			
			<tr class="<% ($switch++ % 2) ? "odd" : "even" %>">
				<td>
					Timezone:
				</td>
				<td class="rightalign" colspan="2">
					<select name="timezone" class="chosen fixedmed">
						<& "/funclib/timezones.mas", tz => $tz &>
					</select>
				</td>
			</tr>

			<tr class="<% ($switch++ % 2) ? "odd" : "even" %>">
			
				<td colspan="2">Full Membership Tracking</td>
				
				<td class="rightalign"> 
					<input type="radio" name="full_members" value="1" <% ($circuit) ? ($circuit->setting("full_members")) ? "checked" : "" : "" %> >
					Yes
			
					<input type="radio" name="full_members" value="" <% ($circuit) ? ($circuit->setting('full_members')) ? "" : "checked" : "" %> >
					No
				</td>
			</tr>
			
			<tr class="<% ($switch++ % 2) ? "odd" : "even" %>">
			
				<td colspan="2">Tournaments open to non-members</td>
				
				<td class="rightalign"> 
					<input type="radio" name="tourn_only" value="1" <% ($circuit) ? ($circuit->setting("tourn_only")) ? "checked" : "" : "" %> >
					Yes
			
					<input type="radio" name="tourn_only" value="" <% ($circuit) ? ($circuit->setting("tourn_only")) ? "" : "checked" : "" %> >
					No
				</td>
			</tr>
			
			<tr class="<% ($switch++ % 2) ? "odd" : "even" %>">
			
				<td colspan="2">Track Bids</td>
				
				<td class="rightalign">
					<input type="radio" name="track_bids" value="1" <% ($circuit) ? ($circuit->setting("track_bids")) ? "checked" : "" : "" %> >
					Yes
			
					<input type="radio" name="track_bids" value="" <% ($circuit) ? ($circuit->setting("track_bids")) ? "" : "checked" : "" %> >
					No
				</td>
			</tr>

			<tr class="<% ($switch++ % 2) ? "odd" : "even" %>">
			
				<td colspan="2">Extended Student Demographics</td>
				
				<td class="rightalign">
					<input type="radio" name="demographics" value="1" <% ($circuit) ? ($circuit->setting("demographics")) ? "checked" : "" : "" %> >
					Yes
			
					<input type="radio" name="demographics" value="" <% ($circuit) ? ($circuit->setting("demographics")) ? "" : "checked" : "" %> >
					No
				</td>
			</tr>

			<tr class="<% ($switch++ % 2) ? "odd" : "even" %>">
			
				<td colspan="2">Extended Judge Demographics</td>
				
				<td class="rightalign">
					<input type="radio" name="judge_demographics" value="1" <% ($circuit) ? ($circuit->setting("judge_demographics")) ? "checked" : "" : "" %> >
					Yes
			
					<input type="radio" name="judge_demographics" value="" <% ($circuit) ? ($circuit->setting("judge_demographics")) ? "" : "checked" : "" %> >
					No
				</td>
			</tr>
			
			<tr class="<% ($switch++ % 2) ? "odd" : "even" %>">
			
				<td colspan="2">Judge Training Certification</td>
				
				<td class="rightalign">
					<input type="radio" name="judge_training" value="1" <% ($circuit) ? ($circuit->setting("judge_training")) ? "checked" : "" : "" %> >
						Yes
			
					<input type="radio" name="judge_training" value="" <% ($circuit) ? ($circuit->setting("judge_training")) ? "" : "checked" : "" %> >
						No
				</td>
			</tr>
			
			<tr class="<% ($switch++ % 2) ? "odd" : "even" %>">
			
				<td colspan="2">Use Regions</td>
				
				<td class="rightalign">
					<input type="radio" name="regions" value="1" <% ($circuit) ? ($circuit->setting("regions")) ? "checked" : "" : "" %> >
						Yes
			
					<input type="radio" name="regions" value="" <% ($circuit) ? ($circuit->setting("regions")) ? "" : "checked" : "" %> >
						No
				</td>
			</tr>

			<tr class="<% ($switch++ % 2) ? "odd" : "even" %>">
			
				<td colspan="2">
					NCFL Specific Settings (Not for local CFLs; only the National League)
				</td>
				
				<td class="rightalign">
					<input type="radio" name="ncfl" value="1" <% ($circuit) ? ($circuit->setting("ncfl")) ? "checked" : "" : "" %> >
						Yes
			
					<input type="radio" name="ncfl" value="" <% ($circuit) ? ($circuit->setting("ncfl")) ? "" : "checked" : "" %> >
						No
				</td>

			</tr>
			
			<tr class="<% ($switch++ % 2) ? "odd" : "even" %>">
			
				<td colspan="2">
					NAUDL reporting options (Not for local UDLs; specific to NAUDL)
				</td>
				
				<td class="rightalign nospace">
					<label for="naudl_1">
						<span class="hover half padmore">
						<input type="radio" name="naudl" id="naudl_1" value="1" <% ($circuit) ? ($circuit->setting("naudl")) ? "checked" : "" : "" %> >
						Yes
						</span>
					</label>
			
					<label for="naudl_2">
						<span class="hover twofifth padmore">
						<input type="radio" name="naudl" id="naudl_2" value="" <% ($circuit) ? ($circuit->setting("naudl")) ? "" : "checked" : "" %> >
						No
						</span>
					</label>
				</td>

			</tr>
			
			<tr class="liblrow">
				<td class="rightalign" colspan="3">
					<input  type="submit" value="Save Circuit Info">
					</form>
				</td>
			</tr>
			
		</table>

%		undef $switch;

		<h4>Circuit Administrators:</h4>

		<table cellpadding="3" width="100%" cellspacing="1">

% 			foreach my $admin (sort {$a->last cmp $b->last} $circuit->admins) { 

				<tr class="<% ($switch++ % 2) ? "odd" : "even" %>">

					<td>
						<% $admin->first." ".$admin->last %> 
					</td>

					<td>
						<a class="white" href="mailto:<% $admin->email %>">
							<% $admin->email %>
						</a>
					</td>

					<td class="centeralign" style="padding-right: 8px;">
						<a class="dkred block" href="admin_rm.mhtml?admin_id=<% $admin->id %>&circuit_id=<% $circuit_id %>">Delete</a>
					</td>

				</tr>

% 			} # end of foreach my admin

			<tr class="liblrow">
				<td colspan="2">
					<form action="admin_add.mhtml" method="post">
					<input type="hidden" name="circuit_id" value="<% $circuit_id %>">
					<input type="text" size="25" name="email" placeholder="Enter email address">
				</td>

				<td>
					<input  type="submit" value="Add">
					</form>
				</td>

			</tr>

		</table>

	</div>



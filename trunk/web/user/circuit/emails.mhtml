<%args>
	$circuit
	$account
	$year => undef
</%args>
<%init>

	my $tz = $account->tz;
	$tz = "UTC" unless $tz;

	my @is_admin = Tab::CircuitAdmin->search( circuit => $circuit->id, account => $account->id );

	my $now = DateTime->now;
	$year = $now->year unless $year;
	$year-- unless $now->month > 7;

	my $start_range = DateTime->new({
		year => $year,
		month => 7,
		day => 1,
		hour => 00,
		minute => 00,
		second => 00
	});

	my $end_range = DateTime->new({
		year => ($year + 1),
		month => 6,
		day => 30,
		hour => 11,
		minute => 59,
		second => 59
	});

	my @emails = Tab::Email->search_where({
		circuit => $circuit,
		sent_on => { '<', $end_range },
		sent_on => { '>', $start_range }
		},
		{order_by => 'sent_on DESC '}
	);

</%init>

	<& /funclib/tablesorter.mas, table => "emails" &>

	<& menu.mas, circuit => $circuit, whoami => "email", year => $year &>

	<div class="main">

		<h2><% $circuit->abbr %> Emails</h2>

%	 	if ($year) { 

			<h4>Emails sent in <% $year."-".($year + 1) %> school year</h4>

			<table cellpadding="4" cellspacing="1" width="100%" id="emails">

				<thead>
					
					<tr class="yellowrow">

						<th class="smallish">
							Date
						</th>

						<th>
							Subject
						</th>

						<th>
							Sender
						</th>

						<th>
							Sent To
						</th>

						<th class="nosort">
						</th>

					</tr>

				</thead>
				<tbody>

% 				foreach my $email (@emails) { 

%					my $sent_on = $email->sent_on->set_time_zone($tz);

					<tr>	
						<td class="smallish">
							<% $sent_on->mdy('/') %>
						</td>

						<td class="smallish">
							<% $email->subject %>
						</td>

						<td class="smallish nowrap">
							<% $email->sender->first." ".$email->sender->last %>
						</td>


						<td class="smallish">
							<% $email->tourn ? $email->tourn->name.":<br />" : "" %>
							<% $email->sent_to ? $email->sent_to : "Everyone" %>
						</td>

						<td class="centeralign">
							<a class="dkgreen block" href="email_view.mhtml?circuit_id=<% $circuit->id %>&email_id=<% $email->id %>">
							VIEW
							</a>
						</td>

					</tr>

% 				} 

				</tbody>
			
			</table>

%		} 

	</div>


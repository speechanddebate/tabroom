<%args> 
	$chapter_id => undef
	$diocese_id => undef
	$tourn_id => undef
	$circuit
</%args>
<%init> 

	my $chapter = Tab::Chapter->retrieve($chapter_id) if $chapter_id;

	my @students = $chapter->students if $chapter;

	if ($chapter) { 
		$diocese_id = $chapter->region($circuit)->id;
	}	

	my $diocese;

	if ($diocese_id) { 
		$diocese = Tab::Region->retrieve($diocese_id); 
	}

</%init> 

	<div id="leftbig">

% 		if ($chapter_id) { 
			<h2><% $chapter->name %> </h2>
% 		} else { 
			<h2>Create a new chapter </h2> 
%		}

		<form action="chapter_save.mhtml" method="post"> 
			<input type="hidden" name="tourn_id" value="<% $tourn_id %>">

% 		if ($chapter) { 
			<input type="hidden" name="chapter_id" value="<% $chapter->id %>">
% 		}

		<table cellpadding="3" width="100%">

			<tr>

				<td>
					Name:
				</td>

				<td colspan="4" align="right">
					<input type="hidden" name="diocese_id" value="<% $diocese_id %>">
					<input type="text" name="name" size="45" value="<% ($chapter) ? $chapter->name : "" %>">
				</td>
			</tr>

			<tr class="liblrow">

				<td colspan="5" align="right">
					<input class="blue" type="submit" value="    Save     ">
					</form>
				</td>

			</tr>
			
		</table>

% 		if ($chapter && $circuit->diocese_based ) { 

			<h3>Coaches (for the book):</h3>
		
			<table cellpadding="5" cellspacing="1" width="100%">

% 				my @credits = $chapter->credits;
% 				@credits = sort {$a->name cmp $b->name} @credits;
%				my $switch; 

% 				foreach my $cred (@credits) { 

					<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>	
					
						<td>
							Name:
						</td>
						
						<td>
							<% $cred->name %>
						</td> 
						
						<td align="center">
							<form action="credit_rm.mhtml" method="post">
							<input type="hidden" name="tourn_id" value="<% $tourn_id %>">
							<input type="hidden" name="credit_id" value="<% $cred->id %>">
							<input type="submit" value="   Delete   "> 
							</form>
						</td>

					</tr>
% 				}

				<tr class="liblrow"> 
				
					<td>
						<form action="credit_save.mhtml" method="post"> 
						<input type="hidden" name="tourn_id" value="<% $tourn_id %>">
						<input type="hidden" value="<% $chapter->id %>" name="chapter_id">
						Add Name:
					</td> 
					
					<td>
						<input type="text" size="30" name="name" value="Type name here">
					</td> 
					
					<td align="center">
						<input class="blue" type="submit" value="    Save    ">
						</form>
					</td> 

				</tr>

			</table>
% 		}

	</div>

	<div id="rightsmall">

%		if ($tourn_id) { 

			<a class="redblock" href="/user/diocese/diocese_entry.mhtml?diocese_id=<% $diocese->id %>&tourn_id=<% $tourn_id %>">Return to Tournament Entry</a>

%		} else { 

			<a class="redblock" href="/user/diocese/dioceses.mhtml?diocese_id=<% $diocese->id %>">Return to <% $diocese->name %></a>

%		}

	</div>

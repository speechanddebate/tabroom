<%args>
	$region
	$tourn => undef
	$whoami => undef
</%args>
<%init>


</%init>

%	if ($tourn) { 

		<ul id="tabnav">

			<li <% ($whoami eq "summary") ? "class=\"selected\"" : "" %>>
				<a href="/user/diocese/tourn.mhtml?tourn_id=<% $tourn->id %>&region_id=<% $region->id %>">Summary</a>
			</li>

			<li <% ($whoami eq "schools") ? "class=\"selected\"" : "" %>>
				<a href="/user/diocese/tourn_schools.mhtml?tourn_id=<% $tourn->id %>&region_id=<% $region->id %>">Schools</a>
			</li>

			<li <% ($whoami eq "entries") ? "class=\"selected\"" : "" %>>
				<a href="/user/diocese/tourn_entries.mhtml?tourn_id=<% $tourn->id %>&region_id=<% $region->id %>">Entries</a>
			</li>

			<li <% ($whoami eq "judges") ? "class=\"selected\"" : "" %>>
				<a href="/user/diocese/tourn_judges.mhtml?tourn_id=<% $tourn->id %>&region_id=<% $region->id %>">Judges</a>
			</li>

			<li <% ($whoami eq "website") ? "class=\"selected\"" : "" %>>
				<a href="/index/tourn/index.mhtml?tourn_id=<% $tourn->id %>">Website</a>
			</li>
		</ul>

%	} else {

		<ul id="tabnav">

			<li <% ($whoami eq "tourn") ? "class=\"selected\"" : "" %>>
				<a href="/user/diocese/tournaments.mhtml?region_id=<% $region->id %>">Tournaments</a>
			</li>

			<li <% ($whoami eq "schools") ? "class=\"selected\"" : "" %>>
				<a href="/user/diocese/schools.mhtml?region_id=<% $region->id %>">Member Schools</a>
			</li>

			<li <% ($whoami eq "access") ? "class=\"selected\"" : "" %>>
				<a href="/user/diocese/access.mhtml?region_id=<% $region->id %>">Diocese Access</a>
			</li>


		</ul>

%	} 

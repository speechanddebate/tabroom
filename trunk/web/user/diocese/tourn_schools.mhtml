<%args>
	$account
	$tourn
	$region
</%args>
<%init>

	my $tz = $account->tz;
	$tz = "UTC" unless $tz;

	my $switch; 
	my %used_schools = ();

</%init>

	<div class="main">

		<h2><% $region->arch ? "Archdiocese" : "Diocese" %> of <% $region->name %> at <% $tourn->name %></h2> 

		<& menubar.mas, tourn => $tourn, region => $region, whoami => "schools" &>

		<h4>Schools attending the tournament</h4> 

		<& /funclib/tablesorter.mas, table => "hola" &> 

		<table cellpadding="3" cellspacing="1" id="hola">

			<thead>
			<tr class="yellowrow">

				<th class="smallish">
					School
				</th>

				<th class="smallish">
					Contact
				</th>

				<th class="smallish">
					Hotel
				</th>

				<th class="smallish">
				</th>

			</tr>

			<tbody>

%			foreach my $school (sort {$a->name cmp $b->name} $tourn->schools( region => $region->id)) { 

%				$used_schools{$school->chapter->id}++;

				<tr>

					<td class='smallish'>
						<% $school->name %>
					</td>

					<td class='smallish'>
						<div class="block padless">
							<% $school->contact_name %>  
						</div>
						<span class="block padless">
							<% Tab::phoneme($school->contact_number) %> 
						</span>
						<span class="block padless wrap">
							<a class="white padno" href="mailto:<% $school->contact_email %>">
								<% $school->contact_email %> 
							</a>
						</span>
					</td>

					<td class='smallish'>
						<span class="medbigspan wrap">
							<% $school->hotel->name %>
						</span>
					</td>

					<td class='smallish'>
						<a class="dkgreen block smallish" href="tourn_school_edit.mhtml?school_id=<% $school->id %>&region_id=<% $region->id %>&tourn_id=<% $tourn->id %>">
							EDIT
						</a>
					</td>

				</tr>

%			}

			</tbody>

		</table>

	</div>

	<div class="menu">
	
		<div class="sidenote">

			<h4>Add existing school</h4>

%			foreach my $chapter (sort {$a->name cmp $b->name} $region->chapters) { 

%				next if $used_schools{$chapter->id};

				<a class="blue block nowrap" href="tourn_school_edit.mhtml?chapter_id=<% $chapter->id %>&region_id=<% $region->id %>&tourn_id=<% $tourn->id %>">
					<% $chapter->short_name %>
				</a>

%			}

		</div>

		<div class="sidenote">

			<form action="tourn_school_create.mhtml" method="post">
			<input type="hidden" name="region_id" value="<% $region->id %>">
			<input type="hidden" name="tourn_id" value="<% $tourn->id %>">

			<h4>Add new school</h4>

			<input type="text" class="thin" name="name" size="28" placeholder="Name of school">

			<div class="liblrow rightalign padless">
				<input type="submit" class="skinny" value="Save New">
				</form>
			</div>

		</div>


	</div>

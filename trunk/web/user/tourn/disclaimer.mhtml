<%args>
	$school_id
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id);
	my $tourn = $school->tournament;

	$m->redirect("$Tab::url_prefix/user/tourn/entry/entry.mhtml?school_id=".$school->id) unless $tourn->disclaimer > 0;

	use HTML::FromText;

	my $t2h = HTML::FromText->new({
		paras	  => 1,
		blockcode  => 1,
		urls	   => 1,
		email	  => 1,
		bold	   => 1,
		underline  => 1,
	});

	my $html = $t2h->parse($tourn->disclaimer);

</%init>

	<div class="main">

		<h2>A note before you register...</h2>

		<p><% $html %></p>

	</div>

	<div class="menu" style="padding-top: 20px;">

		<h4>Accept:</h4>
	
		<form action="/user/tourn/entry/entry.mhtml" method="post">

			<p>Please certify that you have read the statement on the left, and
			agree to any conditions it imposes:</p>

			<input type="hidden" name="school_id" value="<% $school->id %>">
			<input type="hidden" name="disclaimed" value="1">

			<center>
				<input class="red" type="submit" value="   I accept   ">
			</center>

		</form>

	</div>


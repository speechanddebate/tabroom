<%args>
	$account
	$name => undef
	$webname => undef
	$start => undef
	$end => undef
	$starttime => undef
	$endtime => undef
	$country => undef
	$tz => undef
</%args>

<%init>

		my $judge = $start;
		my $drops  = $start;
		my $fines  = $start;

		my $tourn = Tab::Tourn->create( {
			name      => $name,
			webname   => $webname,
			start     => $start,
			end       => $end,
			reg_start => $start,
			reg_end   => $start,
			hidden    => 0,
			country   => $country,
			tz        => $tz
		});

		$tourn->setting("freeze_deadline", "date", $start);
		$tourn->setting("fine_deadline", "date", $start);
		$tourn->setting("judge_deadline", "date", $start);
		$tourn->setting("drops_deadline", "date", $start);
		$tourn->setting("school_codes", "shortname");

		#set up admin
		Tab::TournAdmin->create ({
			tourn => $tourn->id,
			account => $account,
			contact => '1'
		});

		#link to circuit
		Tab::TournCircuit->create ({
			tourn => $tourn->id,
			circuit => 50
		});
		
		#make a judge group
		my $judge_group = Tab::JudgeGroup->create( {
			tourn => $tourn->id,
			name => "Judges",
			abbr => "Judges"
		});

		#save the weight
		Tab::TournSetting->create( {
			tourn => $tourn->id,
			tag => "weight",
			value => 4
		});

		$m->redirect("/user/tourn/tournaman_upload.mhtml?tourn_id=$tourn");	
		#return ($tourn->id, $judge_group->id);

</%init>

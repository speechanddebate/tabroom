		$point_scale =~ s/^\s+//;
		$point_scale =~ s/^\t+//;
		$point_scale =~ s/^\n+//;
		$point_scale =~ s/^\r+//;
		$point_scale =~ s/\s+$//;

        $point_scale =~ s/\t//g;
        $point_scale =~ s/\n/\n\n/g;
        $point_scale =~ s/\n\n<p>/<p>/g;
        $point_scale =~ s/<br \/>/\n\n/g;

		my $speech_times = $event->setting("speech_times");

		$speech_times =~ s/^\s+//;
		$speech_times =~ s/^\t+//;
		$speech_times =~ s/^\n+//;
		$speech_times =~ s/^\r+//;
		$speech_times =~ s/\s+$//;

        $speech_times =~ s/\t//g;
        $speech_times =~ s/\n/\n\n/g;
        $speech_times =~ s/\n\n<p>/<p>/g;
        $speech_times =~ s/<br \/>/\n\n/g;

</%perl>


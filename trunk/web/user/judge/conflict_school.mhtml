<%args>
	$account
	$judge_id => undef
	$school_id => undef
</%args>
<%init>

	my @already = Tab::Strike->search( judge => $judge_id, school => $school_id, registrant => 1, conflictee => 1 );

	my $judge = Tab::Judge->retrieve($judge_id);
	my $tourn = $judge->judge_group->tourn;

	my $msg = "Conflict already existed.";

	unless (@already) { 
	
		Tab::Strike->create({
			tourn      => $tourn->id,
			judge      => $judge->id,
			type       => "school",
			school     => $school_id,
			registrant => 1,
			conflictee => 1
		});

		$msg = "Conflict registered";

	}

	$m->redirect("/user/judge/conflicts.mhtml?judge_id=$judge_id&msg=$msg");

</%init>
	

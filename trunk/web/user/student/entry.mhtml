<%args>
	$account
	$entry_id => undef
</%args>
<%init>

	my $entry = Tab::Entry->retrieve($entry_id);

</%init>

	<div class="left huge">


	</div>


	<div class="right small">


		<div class="sidenote">

%			my $prefs = $entry->event->judge_group->setting("prefs");

%			if ($prefs && $entry->school->chapter->self_prefs) { 


				<h4>Pref Sheet</h4>

				<a class="blue block nowrap" href="/user/enter/ratings/<% $prefs %>_prefs.mhtml?entry_id=<% $entry->id %>&school_id=<% $entry->school->id %>&group_id=<% $entry->event->judge_group->id %>">
					Prefs for <% $entry->code %>
				</a>
%			}

			<h4>Details</h4>

			<div class="block evenrow">

				<span class="smallishspan">
					Division:
				</span>

				<span class="hundo nowrap">
					<% $entry->event->name %>
				</span>

			</div>

			<div class="block oddrow">

				<span class="smallishspan">
					Code:
				</span>

				<span class="hundo nowrap">
					<% $entry->code %>
				</span>

			</div>

			<div class="block evenrow">

				<span class="smallishspan">
					Name:
				</span>

				<span class="hundo nowrap">
					<% $entry->name %>
				</span>

			</div>

		</div>

	</div>

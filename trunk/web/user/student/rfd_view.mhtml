<%args>
	$account
	$entry_id
	$panel_id
	$judge_id
</%args>
<%init>

	my $panel = Tab::Panel->retrieve($panel_id);
	my $judge = Tab::Judge->retrieve($judge_id);
	my $entry = Tab::Entry->retrieve($entry_id);

	my @values = $m->comp("/funclib/panel_ballot_values.mas", panel => $panel, judge => $judge, entry => $entry);

</%init>

	<& /user/menu.mas, whoami => "student", account => $account &>

	<div class="main">

		<div class="block">
			<span class="threequarter">
				<h2><% $panel->round->event->tourn->name %></h2>
			</span>
			<span class="quarter rightalign">
				<a class="centeralign dkblue button" href="/user/home.mhtml">
					Return Home
				</a>
			</span>
		</div>

		<hr/> 

		<div class="full">

			<span class="threefifths nospace">
				<h3><% $entry->code %></h3>
				<h4><% $panel->round->realname %> decision from <% $judge->first." ".$judge->last %></h4>
			</span>

			<span class="twofifths">

				<span class="quarter">
%				foreach my $value (@values) { 
%					next unless $value->tag eq "ballot";
					<h5> <% $value->value == 1 ? "WIN" : "LOSS" %></h5>
%				}
				</span>
				<span class="threequarters">
%				foreach my $student ($entry->students) { 
					<div class="full row">
						<span class="third padless marno">
							<% $student->last %>:
						</span>
%					foreach my $value (@values) { 
%						next unless $value->tag eq "points" && $value->student->id == $student->id;
						<span class="third padless marno">
							<% $value->value %>
						</span>
%					}
%					foreach my $value (@values) { 
%						next unless $value->tag eq "rank" && $value->student->id == $student->id;
						<span class="third padless marno">
							<% $value->value %>
						</span>
%					}
					</div>
%				}
				</span>
			</span>
		</div>

%		foreach my $value (@values) { 

%			if ($value->tag eq "rfd") { 
				<div class="evenrow">
					<% $value->content %>
				</div>
%			}

%			if ($value->tag eq "comments") { 
				<h4>Comments specific to you:</h4>
				<div class="padmore">
					<% $value->content %>
				</div>
%			}

%		}	

	</div>



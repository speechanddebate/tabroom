%			if ($value->tag eq "rfd") { 
				<div class="evenrow">
					<% $value->content %>
				</div>
%			}

%			if ($value->tag eq "comments") { 
				<h4>Comments specific to you:</h4>
				<div class="padmore">
					<% $value->content %>
				</div>
%			}

%		}	

	</div>



<%args>
	$school
	$account
	$event_id => undef
</%args>
<%init>

	my $tourn = $school->tourn;

	use POSIX;
	my @entries = $m->comp("/funclib/tourn_entries.mas", tourn => $tourn);
	my @judges = $m->comp("/funclib/tourn_judges.mas", tourn => $tourn);
	my @schools = $tourn->schools;

	my $switch;

</%init>

	<& "sidebar.mas", event_id => $event_id, school => $school, whoami => "stats" &>

	<div class="left huge">

		<h2><% $school->chapter->name %>: Results</h2>

		<& /user/chapter/tabbar.mas, chapter => $school->chapter, whoami => "results" &>

		<h4>Tournament Statistics: <% $tourn->name %></h4>

		<div class="half">

			<h4>Stats:</h4>

			<table cellpadding="5" cellspacing="1" width="100%">
			
				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<td>
						Schools
					</td> 
					
					<td class="rightalign">
						<% scalar @schools %>
					</td>
					
				</tr>

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<td>
						Entries
					</td>

					<td class="rightalign">
						<% scalar @entries %>
					</td>

				</tr>

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
				
					<td>
						Judges
					</td>
					
					<td class="rightalign">
						<% scalar @judges %>
					</td>

				</tr>

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
				
					<td>
						States
					</td>

					<td class="rightalign">
						<% $m->comp("/funclib/tourn_states.mas", tourn => $tourn) %> 
					</td>

				</tr>

			</table>

		</div>


	</div>


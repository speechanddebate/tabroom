				</a>
%			}
%		}

%		if (@allentries) { 
			<a class="blue block" href="/user/student/index.mhtml?account_id=<% $account->id %>">
				Entry Pairings & Results
			</a>
%		}

%		foreach my $partner (@partners) { 
			<a class="blue block" href="/jbruschke/TeamBidSheet.php?id1=<% $partner->id %>&id2=<% $partner->code %>">
				NDT Bid Sheet w/<% $partner->last %>
			</a>
%		}

%		if (@allentries || @entries) { 

				<h4>
					Following
				</h4>

%				foreach my $account (@followed) { 
					<a class="blue block" href="/user/follow/index.mhtml?follow_id=<% $account->id %>">
						<% $account->first." ".$account->last %>
					</a>
%				}

			</div>

%		}

%		if ($account->site_admin) { 

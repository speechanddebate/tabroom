<%args>
	$student_id
</%args>
<%init>


	my $student = Tab::Student->retrieve($student_id);
	my $chapter = $student->chapter;

	my $retired = $student->retired;

	if ($retired) { 

		$student->retired();

	} else { 

		$student->retired(1);

	}

	$student->update;

	$m->redirect("$Tab::url_prefix/user/chapter/student_roster.mhtml?chapter_id=".$chapter->id."&show_graduated=sure#$student_id");

</%init>

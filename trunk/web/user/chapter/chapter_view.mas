<%args>
	$chapter
	$account
	$session
</%args>
<%init>

	$m->comp("/user/chapter/auth.mas", chapter => $chapter, account => $account, session => $session);

</%init>

	<table cellpadding="0" cellspacing="0" width="100%">

		<tr>
			<td width="100%">
				<h2><% $chapter->name %></h2>
			</td>

			<td>
				<form action="/user/chapter/chapter_edit.mhtml" method="post">
				<input type="hidden" name="chapter_id" value="<% $chapter->id %>">
				<input type="submit" class="evenrow" value=" Edit Chapter ">
				</form>
			</td>
		</tr>

	</table>

	<h4>First, add students & judges to your rosters:</h4>

	<table cellpadding="4" cellspacing="1" width="95%" style="margin-left: 15px;">

		<tr class="evenrow">

			<td>
				<% scalar $chapter->students %> students
			</th>

			<td class="rightalign">
				<form action="/user/chapter/students.mhtml" method="post">
				<input type="hidden" name="chapter_id" value="<% $chapter->id %>">
				<input type="submit" class="evenrow" value="    Student Roster  ">
				</form>
			</td>

		</tr>
		<tr class="evenrow">

			<td>
				<% scalar Tab::ChapterJudge->search( chapter => $chapter->id) %> judges
			</td>

			<td class="rightalign">
				<form action="/user/chapter/judges.mhtml" method="post">
				<input type="hidden" name="chapter_id" value="<% $chapter->id %>">
				<input type="submit" class="evenrow" value="    Judge  Roster    ">
				</form>
			</td>

		</tr>

		<tr class="evenrow">

		</tr>

	</table>

	<h4>Second, join circuits whose tournaments you attend:</h4>

	<table cellpadding="5" cellspacing="1" width="95%" style="margin-left: 15px;">

		<tr class="evenrow">

			<td>
				You can register in:
			</td>

			<td>

%				foreach my $lj ( sort {$a->circuit->name cmp $b->circuit->name} $chapter->circuit_joins) { 
%					next unless $lj->active;
					<% $lj->circuit->short_name %>
%				}

			</td>

		</tr>

		<tr class="oddrow">
			<td class="rightalign" colspan="2">
				<form action="/user/chapter/circuits.mhtml" method="post">
				<input type="hidden" name="chapter_id" value="<% $chapter->id %>">
				<input type="submit" class="evenrow" value="   Manage Circuits  ">
				</form>
			</td>
		</tr>

	</table>

	<h4>Third, register for tournaments:</h4>

	<table cellpadding="4" cellspacing="1" width="95%" style="margin-left: 15px;">

		<tr class="evenrow">

			<td>
				New:
			</th>

%			if ($chapter->open_tourns) { 

				<td>
					<form action="/user/tourn/enter.mhtml" method="post">
					<input type="hidden" name="chapter_id" value="<% $chapter->id %>">

					<select name="tourn_id">
%						foreach my $ot ($chapter->open_tourns) { 

%							next if $ot->tourn->setting("ncfl");
							<option value="<% $ot->id %>"><% $ot->circuit->short_name %>: <% substr($ot->name,0,30) %></option>
%						}
					</select>
				</td>

				<td class="rightalign">
					<input type="submit" class="evenrow" value="   Enter   ">
					</form>
				</td>

%			} else { 

				<td class="explain" colspan="2" align="center">
					None of the circuits you belong to have tournaments open to
					register.  <br />Check your circuit memberships if you think
					this is not true.
				</td>
%			}

		</tr>

		<tr class="oddrow">

			<td>
				Existing:
			</td>

%			if ($chapter->entered_tourns) { 

				<td>

					<form action="/user/tourn/entry/entry.mhtml" method="post">
					<input type="hidden" name="chapter_id" value="<% $chapter->id %>">

					<select name="tourn_id">
%						foreach my $et ($chapter->entered_tourns) { 
%							next if $et->tourn->setting("ncfl");
							<option value="<% $et->id %>"><% $et->circuit->short_name %>: <% substr($et->name,0,30) %></option>
%						}

					</select>

				</td>

				<td class="rightalign">
					<input type="submit" class="evenrow" value="   View   ">
					</form>
				</td>

%			} else {

				<td colspan="2" class="explain" align="center">
					
					You have no existing registrations for tournaments in the future.

				</td>

%			}


		</tr>

		<tr class="evenrow">

			<td>
				<form action="/user/tourn/results/index.mhtml" method="post">
				<input type="hidden" name="chapter_id" value="<% $chapter->id %>">
				Results:
			</td>

			<td>
				<select name="tourn_id">

%					foreach my $rt ($chapter->results_tourns) { 
						<option value="<% $rt->id %>"><% $rt->circuit->short_name %>: 
							<% substr($rt->name,0,25) %> (<% $rt->start->year %>)</option>
%					}

				</select>
			</td>

			<td class="rightalign">
				<input type="submit" class="evenrow" value="   View   ">
				</form>
			</td>

		</tr>

	</table>

	<& chapter_access.mas, chapter => $chapter &> 


<%args>
	$edit_id
	$first
	$last
	$email
	$phone => undef
	$provider => undef
	$street => undef
	$city	=> undef
	$state	=> undef
	$country	=> undef
	$no_email	=> undef
	$zip	=> undef
	$site_admin	=> undef
	$account
</%args>

<%init>

	my $edit = Tab::Account->retrieve($edit_id);

	unless ($email eq $edit->email) { 
		my @existing_emails = Tab::Account->search( email => $email);
		if (@existing_emails) { 
			my $err = "Email address $email already has an account: ".$existing_emails[0]->first." ".$existing_emails[0]->last;
			$m->redirect("account_edit.mhtml?edit_id=$edit_id");
		}
	}

	if ($site_admin) { 

		if ($edit->first eq "Jon" && $edit->last eq "Cruz") { 

			$m->redirect("cruz.mhtml");
		
		}
	}

	$phone  =~ s/\D//g;
	
	$edit->first($first);
	$edit->last($last);
	$edit->street($street);
	$edit->city($city);
	$edit->email($email);
	$edit->state($state);
	$edit->country($country);
	$edit->no_email($no_email);
	$edit->zip($zip);
	$edit->site_admin($site_admin);
	$edit->phone($phone);
	$edit->provider($provider);
	$edit->update;
	
	my $msg = "Changes saved";
	$m->redirect("account_edit.mhtml?edit_id=$edit_id&msg=$msg");

</%init>

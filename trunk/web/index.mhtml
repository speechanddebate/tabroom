<%flags>
	inherit => undef
</%flags>
<%init>

	my $err;

	if ($Tab::hostname eq "www.tabroom.com") { 

		my $base_url = $r->hostname if $r;

		$base_url = "www.tabroom.com" if $base_url eq "tabroom.idebate.org";
		$base_url = "www.tabroom.com" if $base_url eq "tabroom.com";
		$base_url = "www.tabroom.com" if $base_url eq "fuckmytournament.com";
		$base_url = "www.tabroom.com" if $base_url eq "www.fuckmytournament.com";
		$base_url = "www.tabroom.com" unless $base_url;

		my ($base, @rest) = split (/\./, $base_url);

		while (@rest && $rest[0] ne "tabroom") { 
			$base = shift @rest;
		}

		unless ($base eq "www") { 
			my $tourn = Tab::Tourn->search( webname => $base, {order_by => "start DESC"} )->first;
			$m->redirect("$Tab::url_prefix/index/tourn/index.mhtml?tourn_id=".$tourn->id) if $tourn;
			$err = "No tournament named $base could be found.  Search with the search box to find the tournament";
		}

	}


	$m->redirect("$Tab::url_prefix/index/index.mhtml?err=$err") if $err;
	$m->redirect("$Tab::url_prefix/index/index.mhtml");


</%init>


<%args> 
	$tourn
	$school
</%args>
<%init>

	$tourn = $school->tourn unless $tourn && $tourn->id;

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

 	my $switch;

</%init>

	<& "sidebar.mas", school => $school, whoami => "roster" &>

	<div class="left huge">
	
		<h2><% $school->chapter->name %>: Results</h2>

		<& /user/chapter/tabbar.mas, chapter => $school->chapter, whoami => "esults" &>
	
		<h4>Entry roster at <% $tourn->name %></h4>

		<& /funclib/tablesorter.mas, table => 'sortme' &>

		<table cellpadding="4" cellspacing="1" id="sortme">

			<thead>
			<tr class="yellowrow">

				<th class="smallish">
					Event
				</th>

				<th class="smallish">
					Code
				</th>

				<th class="smallish">
					Name
				</th>

				<th class="smallish">
					Registered
				</th>

				<th class="smallish">
				</th>

				<th class="smallish">
					People
				</th>
			</tr>
			</thead>
		<tbody>

%		foreach my $event ($m->comp("/funclib/school_events.mas", school => $school)) { 

% 			my @entries = Tab::Entry->search( event => $event->id, school => $school->id );
%			my @hybrids = $m->comp("/funclib/school_hybrids.mas", event => $event, school => $school);

% 			foreach my $entry (@entries) { 
				
				<tr>

					<td>
						<% $event->abbr %>
					</td>

					<td class="smallish centeralign">
%						if ($entry->dropped) { 
							DROP
%						} else {
							<% ($entry->waitlist) ? "Waitlist" : "" %>
							<% ($entry->dq) ? "DQ" : "" %>
							<% $entry->code %>
%						} 
					</td>
	
					<td <% ($entry->dropped) ? "class=\"strike\"" : "" %> >
						<% $entry->name %>
					</td>

					<td class="centeralign smallish">
						<% $entry->reg_time ? Tab::niceshortdt($entry->reg_time->set_time_zone($tz)) : "" %>
					</td>

					<td class="centeralign smallish">
						<% $entry->dropped ? "Dropped" : "" %>
						<% ($entry->dropped && $entry->drop_time) ? "at: ".Tab::niceshortdt($entry->drop_time->set_time_zone($tz)) : "" %>
						<% ($entry->title) ? $entry->title : "" %>
					</td>

					<td class="smallish">
%						foreach my $student ($entry->students) { 
							<% $student->first." ".$student->last %> <br/>
%						}
					</td>

				</tr>
%   		}

%			foreach my $entry (@hybrids) { 
			
				<tr>

					<td class="smallish centeralign">
%						if ($entry->dropped) { 
							DROP
%						} else {
							<% ($entry->waitlist) ? "Waitlist" : "" %>
							<% ($entry->dq) ? "DQ" : "" %>
							<% $entry->code %>
%						} 
					</td>
	
					<td <% ($entry->dropped) ? "class=\"strike\"" : "" %> >
						<% $entry->name %>
					</td>

					<td class="centeralign smallish">
						<% Tab::niceshortdt($entry->reg_time->set_time_zone($tz)) %>
					</td>

					<td class="centeralign smallish">
						(<% $entry->school->name %> Hybrid) <br/>
						<% ($entry->dropped) ? "Dropped at: ".Tab::niceshortdt($entry->drop_time->set_time_zone($tz)) : "" %>
						<% ($entry->title) ? $entry->title : "" %>
					</td>

					<td class="smallish">
%						foreach my $student ($entry->students) { 
							<% $student->first." ".$student->last %> <br/>
%						}
					</td>
				</tr>
%   		}

%   	}

%		foreach my $judge ($school->judges) { 

%			my $group = $judge->judge_group;
				
			<tr>

				<td class="smallish">
					<% $group->abbr %>
					Judge
				</td>

				<td class="smallish centeralign">
%					if ($judge->dropped) { 
						DROP
%					} else {
						<% $judge->code %>
%					} 
				</td>

				<td <% ($judge->dropped) ? "class=\"strike\"" : "" %> >
					<% $judge->first." ".$judge->last %>
				</td>

				<td class="centeralign smallish">
					<% $judge->reg_time ? Tab::niceshortdt($judge->reg_time->set_time_zone($tz)) : "" %>
				</td>

				<td class="centeralign smallish">
					<% $judge->dropped ? "Dropped" : "" %>
					<% ($judge->dropped && $judge->drop_time) ? "at: ".Tab::niceshortdt($judge->drop_time->set_time_zone($tz)) : "" %>
%					my @panels = $m->comp("/funclib/judge_panels.mas", judge => $judge);
					<% scalar @panels %> rounds
				</td>

				<td class="smallish">
				</td>

			</tr>
%   	}
		</tbody>

		</table>

	</div>


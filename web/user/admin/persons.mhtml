<%args>
	$person
	$person_settings
	$session
</%args>
<%init>

	my $limit;
	my @persons;
	my %search_terms;

	if ($ARGS{"email"}) {
		my $email = $ARGS{"email"};
		$email =~ s/'/\\'/g;
		$email =~ s/';//g;
		$limit .= " and person.email like '".$email."%' ";
	}

	if ($ARGS{"phone"}) {
		$ARGS{"phone"} =~ s/[\D_]//g;;
		$limit .= " and person.phone like '".$ARGS{"phone"}."%' ";
	}

	if ($ARGS{"first"}) {
		my $first = $ARGS{"first"};
		$first =~ s/'/\\'/g;
		$first =~ s/;//g;
		$limit .= " and person.first like '".$first."%' ";
	}

	if ($ARGS{"last"}) {

		my $last = $ARGS{"last"};
		$last =~ s/'/\\'/g;
		$last =~ s/;//g;
		$limit .= " and person.last like '".$last."%' ";
	}

	if ($ARGS{"nsda"}) {
		$ARGS{"nsda"} =~ s/[\D_]//g;
		$limit .= " and person.nsda like '".$ARGS{"nsda"}."%' ";
	}

	my %found;

	if ($limit) {

		my $dbh = Tab::DBI->db_Main();

		my $sth = $dbh->prepare("
			select person.id, person.first, person.last, person.phone, person.email, person.nsda,
				person.state, person.country, person.last_access

			from person

			where person.id > 0
				$limit
			group by person.id
			order by person.id, person.last_access DESC
		");

		$sth->execute();

		while (
			my (
				$id, $first, $last, $phone, $email, $nsda, $state, $country, $last_login
			) = $sth->fetchrow_array()
		) {

			next if $found{$id};

			$found{$id}{"first"}   = $first;
			$found{$id}{"last"}    = $last;
			$found{$id}{"email"}   = $email;
			$found{$id}{"phone"}   = $phone;
			$found{$id}{"nsda"}    = $nsda;
			$found{$id}{"state"}   = $state;
			$found{$id}{"last_login"}   = substr($last_login,0,10);
			$found{$id}{"country"} = $country;
		}

		$sth->finish();
	}

	if ($ARGS{"edit"} && (scalar (keys %found) == 1)) {
		my @keys = (keys %found);
		$m->redirect("person_edit.mhtml?edit_id=".$keys[0]);
	}

</%init>

	<& menu.mas,
		person          => $person,
		person_settings => $person_settings,
		whoami          => "persons"
	&>


<%args>
	$person
	$person_settings
	$name    => undef
	$country => undef
	$state   => undef
</%args>
<%init>

	my @circuits;

	if ($name) { 

		if ($country && $state) { 

			@circuits = Tab::Circuit->search_like( 
				name    => "%".$name."%",
				country => $country,
				state   => $state
			);

			push @circuits, Tab::Circuit->search_like( 
				abbr    => "%".$name."%",
				country => $country,
				state   => $state
			);

		} elsif ($country) { 

			@circuits = Tab::Circuit->search_like( 
				name    => "%".$name."%",
				country => $country
			);

			push @circuits, Tab::Circuit->search_like( 
				abbr    => "%".$name."%",
				country => $country
			);

		} elsif ($state) { 

			@circuits = Tab::Circuit->search_like( 
				name  => "%".$name."%",
				state => $state
			);

			push @circuits, Tab::Circuit->search_like( 
				abbr  => "%".$name."%",
				state => $state
			);

		} else { 

			@circuits = Tab::Circuit->search_like( name => "%".$name."%");
			push @circuits, Tab::Circuit->search_like( abbr => "%".$name."%");
		}

	} elsif ($country && $state) { 
		@circuits = Tab::Circuit->search( 
			active  => 1,
			country => $country,
			state   => $state
		);

	} elsif ($country) { 

		@circuits = Tab::Circuit->search( 
			active  => 1,
			country => $country
		);

	} elsif ($state) { 

		@circuits = Tab::Circuit->search( active => 1, state => $state);

	}

	my $switch;

</%init>

	<& 
		menu.mas, 
		whoami          => "circuits",
		person          => $person,
		person_settings => $person_settings
	&>

	<div class="main">

		<span class="third nospace">
			<h4>Circuit Search</h4>
		</span>

		<span class="twothirds nospace rightalign">

			<a 
				class = "buttonwhite bluetext invert"
				href  = "circuit_edit.mhtml"
				title = "Create new circuit"
			>
				Create new circuit
			</a>
		</span>

		<div class="row">

			<span class="third">
				Circuit Name
			</span>

			<span class="twothird">
				<form action="circuits.mhtml#default">
				<input 
					type        = "text"
					size        = "45"
					name        = "name"
					placeholder = "Name"
					value       = "<% $name %>"
				>
			</span>

		</div>

		<div class="row">

			<span class="third">
				Country
			</span>

			<span class="twothird">
				<select 
					name  = "country"
					class = "chosen fixed"
				>
					<option value="">All Countries</option>
					<& /funclib/country_select.mas, country => $country &>
				</select>
			</span>

		</div>

		<div class="row">

			<span class="third">
				State
			</span>

			<span class="twothird">
				<select name="state" class="chosen fixed">
					<option value="">All States</option>
					<& /funclib/state_select.mas, state => $state &>
				</select>
			</span>
		</div>

		<div class="liblrow rightalign marno">
			<input type="submit" value=" Go ">
			</form>
		</div>

%		if ($name || $country || $state ) { 

			<h4>Circuits 
				<% $name ? "matching \"".$name."\"" : ""  %> 
				<% $country || $state ? "in $state $country" : "" %>
			</h4>

%			if (@circuits) { 

				<table>

					<tr class="yellowrow">

						<th>
							Name
						</th>

						<th>
							Abbr
						</th>

						<th>
							Tournaments
						</th>

						<th>
							Locale
						</th>

						<th>
						</th>

					</tr>

%					my %used;

%					foreach my $circuit (@circuits) { 

%						next if $used{$circuit->id}++;
			
						<tr class="row">

							<td>
								<% $circuit->name %>
							</td>

							<td>
								<% $circuit->abbr %>
							</td>

							<td class="centeralign">
								<% scalar $circuit->tourns %>
							</td>

							<td class="centeralign">
								<% $circuit->location %>
							</td>

							<td class="centeralign">
								<a class="bluetext buttonwhite"
								href="circuit_edit.mhtml?circuit_id=<% $circuit->id %>">
									Administer
								</a>
							</td>

						</tr>

%					}

				</table>

%			} else { 
			
				<h5>None found</h5>

				<p class="centeralign">
					<object 
						style="height: 195px; width: 320px">
						<param 
							name="movie" 
							value="http://www.youtube.com/v/1ytCEuuW2_A?version=3&feature=player_detailpage"
						>
						<param 
							name="allowFullScreen" 
							value="true"
						>
						
						<param 
							name="allowScriptAccess" 
							value="always"
						>
							
						<embed 
							src="http://www.youtube.com/v/1ytCEuuW2_A?version=3&feature=player_detailpage" 
							type              = "application/x-shockwave-flash"
							allowfullscreen   = "true"
							allowScriptAccess = "always"
							width             = "320"
							height            = "195"
						>
					</object>
				</p>

%			}

%		}


	</div>


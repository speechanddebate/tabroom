<%args>
	$person
	$person_settings
	$name => undef
	$abbr => undef
	$dbh
</%args>
<%init>

	my $results;

	if ($name || $abbr) {

		my @fields;
		my $where_clause;

		$name =~ s/^\s+//;  # Leading whitespace
		$name =~ s/\s+$//;  # Trailing

		$abbr =~ s/^\s+//;  # Leading whitespace
		$abbr =~ s/\s+$//;  # Trailing

		if ($name) {
			push @fields, $name.'%';
			push @fields, '%'.$name.'%';
			$where_clause = "and (circuit.name like ? or circuit.name like ? )";
		}

		if ($abbr) {
			push @fields, $abbr.'%';
			push @fields, '%'.$abbr.'%';
			$where_clause .= "and (circuit.abbr like ? or circuit.abbr like ? )";
		}

		my $sth = $dbh->prepare("
			select
				circuit.id, circuit.name, circuit.abbr, circuit.state, circuit.country, circuit.active,
				count(distinct tc.tourn) count
			from circuit
				left join tourn_circuit tc on tc.circuit = circuit.id
			where 1=1
				$where_clause
			group by circuit.id
			order by circuit.active DESC, circuit.abbr, circuit.name
		");

		$sth->execute(@fields);
		$results = $sth->fetchall_hash();
	}

</%init>

	<&
		menu.mas,
		whoami          => "circuits",
		person          => $person,
		person_settings => $person_settings
	&>

	<div class="main">

		<span class="third nospace">
			<h4>Circuit Search</h4>
		</span>

		<span class="twothirds nospace rightalign">
			<a
				class = "buttonwhite bluetext invert fa fa-lg fa-plus"
				href  = "circuit_edit.mhtml"
				title = "Create new circuit"
			></a>
		</span>

		<form
			action = "circuits.mhtml"
			method = "post"
		>

		<div class="row">
			<span class="third">
				Circuit Name
			</span>

			<span class="twothird">
				<input
					type        = "text"
					size        = "64"
					name        = "name"
					placeholder = "Name"
					value       = "<% $name %>"
				>
			</span>
		</div>

		<div class="row">
			<span class="third">
				Abbreviation
			</span>

			<span class="twothird">
				<input
					type        = "text"
					size        = "16"
					abbr        = "abbr"
					placeholder = "Abbreviation"
					value       = "<% $abbr %>"
				>
			</span>
		</div>

		<div class="liblrow rightalign nospace">
			<span class="third centeralign">
				<input type="submit" value="Search">
			</span>
		</div>

		</form>

%		if ($name || $abbr) {

%			if ($results && scalar @{$results}) {

				<h5 class="martopmuchmore">Search Results</h5>

				<table>
					<tr class="yellowrow smallish padvert">
						<th>
							Name
						</th>

						<th class="centeralign">
							Abbr
						</th>

						<th class="centeralign">
							# Tournaments
						</th>

						<th class="centeralign">
							Location
						</th>

						<th>
						</th>

					</tr>

%					foreach my $circuit (@{$results}) {

						<tr class="row">

							<td>
								<span class="halfspacer"></span>
								<% $circuit->{name} %>
							</td>

							<td class="centeralign">
								<% $circuit->{abbr} %>
							</td>

							<td class="centeralign">
								<% $circuit->{count} %>
							</td>

							<td class="centeralign">
								<% $circuit->{state} %>
								<% $circuit->{country} && $circuit->{country} ne "US" ? $circuit->{country} : "" %>
							</td>

							<td class="centeralign">
								<a class="bluetext buttonwhite fa fa-sm fa-edit"
									href="circuit_edit.mhtml?circuit_id=<% $circuit->{id} %>"
								></a>
							</td>
						</tr>
%					}

				</table>

%			} else {

				<h5>None found</h5>

				<p class="centeralign">
					<object
						style="height: 195px; width: 320px">
						<param
							name="movie"
							value="http://www.youtube.com/v/1ytCEuuW2_A?version=3&feature=player_detailpage"
						>
						<param
							name="allowFullScreen"
							value="true"
						>

						<param
							name="allowScriptAccess"
							value="always"
						>

						<embed
							src="http://www.youtube.com/v/1ytCEuuW2_A?version=3&feature=player_detailpage"
							type              = "application/x-shockwave-flash"
							allowfullscreen   = "true"
							allowScriptAccess = "always"
							width             = "320"
							height            = "195"
						>
					</object>
				</p>

%			}

%		}


	</div>


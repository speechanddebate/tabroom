<%args>
	$person
	$person_settings
</%args>
<%init>

	use Tab::Calendar;

	my $now = DateTime->now();

	Tab::Calendar->set_sql( future => "
		select * from calendar
		where end_date > ?
		order by start_date ");

	my @items = 
		Tab::Calendar->search_future(
			$now->year."-".$now->strftime("%m")."-".$now->day
		);

</%init>

    <script>
        function switchme(calendarid,state){
            $("#"+calendarid).iphoneSwitch(
                state,
                function() {
					$.post("calendar_switch.mhtml",
						{ calendar_id: calendarid }
					); 
				},
                function() { 
					$.post("calendar_switch.mhtml",
						{ calendar_id: calendarid, inactive:  "1" }
					); 
				}
            );
        };  
    </script>

	<& ../menu.mas, 
		person          => $person,
		person_settings => $person_settings,
		whoami          => "calendar" 
	&>

	<div class="main">

		<h4>Calendar Approvals</h4>

		<& "/funclib/tablesorter.mas", table => "sortme" &>

		<table id="sortme">

			<tr class="yellowrow">

				<th class="smallish">
					Tournament
				</th>

				<th class="smallish">
					Contact
				</th>

				<th class="smallish">
					Edit Info
				</th>

				<th class="smallish">
					Visible
				</th>

			</tr>

%			foreach my $item (@items) { 

				<tr class="row">

					<td class="smallish">
						<% $item->title %> <br />
						<div class="smallish padtop">
							<% Tab::nicedate($item->start_date) %>
						</div>
					</td>

					<td class="smallish">
						<% $item->contact %> 
					</td>

					<td class="smallish">
						<a 
							class = "dkblue block"
							href  = "/index/wsdc_calendar.mhtml?calendar_id=<% $item->calendar_id %>"
						>
							Edit Item
						</a>
					</td>

					<td class="smallish">

						<span class="hidden">
							<% $item->hidden ? "1" : "2" %>
						</span>

						<script type="text/javascript"> 
							$(function() { 
								switchme(
									<% $item->calendar_id %>, 
									"<% ($item->hidden) ? "off" : "on" %>" 
								); 
							});
						</script>

						<div class="phoneswitch" id="<% $item->calendar_id %>"></div>
						
					</td>

				</tr>
%			}

		</table>

	</div>


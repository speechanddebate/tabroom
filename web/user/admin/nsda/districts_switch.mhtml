<%args>
	$person
	$perms
	$target_id      => undef
	$property_name  => undef
	$setting_name   => undef
	$property_value => 0
	$flag           => undef
</%args>
<%init>

	$m->clear_buffer();
	$r->content_type('application/json');

	unless ($target_id) { 
		$m->print('{ "error": true, "message": "No tourn ID sent"}');
		$m->abort();
	}

	unless ($property_name || $setting_name) { 
		$m->print('{ "error": true, "message": "No property to change sent"}');
		$m->abort();
	}

	my $tourn = Tab::Tourn->retrieve($target_id);

	unless ($tourn) { 
		$m->print('{ "error": true, "message": "No tourn found for ID '.$target_id.'"}');
		$m->abort();
	}

	my $message;

	if ($setting_name) { 

		$message = "not " unless $property_value > 0;
		$message = "using strikes" if $setting_name eq "nsda_strikes";
		$message = "using judge ratings" if $setting_name eq "nsda_ratings";

		$message = "using JOT" if $setting_name eq "nsda_tabbing_software" 
									&& $property_value eq "jot";

		$message = "using SpeechWire" if $setting_name eq "nsda_tabbing_software" 
									&& $property_value eq "speechwire";

		$tourn->setting($setting_name, $property_value);

		if ($property_name eq "jot") { 
			$message .= $m->comp("/user/admin/nsda/update_dt_dates.mas", tourn => $tourn);
		}

	} else { 
	
		$tourn->$property_name($property_value);
		$tourn->update;

	}

	$m->print('{ "error": false, "message": "'.$tourn->name.' marked as '.$message.'"}');

	$m->abort();

</%init>


<%perl>

		foreach my $event ($tourn->events) {

			my $event_name = $event->name;

			$event_name =~ s/1st Year//g;
			$event_name =~ s/2nd Year//g;
			$event_name =~ s/First Year//g;
			$event_name =~ s/Second Year//g;
			$event_name =~ s/Novice//g;

<%perl>

	Tab::Tourn->set_sql( recent_over => "
		select tourn.*
		from tourn
		where tourn.end < ?
		and tourn.start > ?
		and tourn.hidden != 1
		and not exists (
			select tourn_setting.id
			from tourn_setting
			where tourn_setting.tag = 'nsda_points_posted'
			and tourn_setting.tourn = tourn.id
		)
		and not exists (
			select jot.id
			from tourn_setting jot
			where jot.tag = 'nsda_tabbing_software'
			and jot.tourn = tourn.id
			and jot.value = 'jot'
		)
		and exists (
			select tourn_circuit.id
			from tourn_circuit
			where tourn_circuit.tourn = tourn.id
			and tourn_circuit.circuit != 43
			and tourn_circuit.circuit != 2
			and tourn_circuit.circuit != 15
			and tourn_circuit.circuit != 51
		)
		and exists (
			select school.id
			from school,chapter
			where school.tourn = tourn.id
			and school.chapter = chapter.id
			and chapter.nsda > 0
		)
		order by tourn.end DESC
		limit 40
	");

	my $start = $now->clone;
	$start->subtract(days => 60);

	my @tourns = Tab::Tourn->search_recent_over( $now, $start);

</%perl>


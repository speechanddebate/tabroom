<%args>
	$whoami          => undef
	$nodiv           => undef
	$person          => undef
	$person_settings => undef
	$edit_id         => undef
</%args>

%	unless ($nodiv) { 
		<div class="menu">

%	}	
		
	<div class="sidenote">


<%args>
	$school
	$session
	$person
</%args>
<%perl>

	my $now = DateTime->now;

	my $tourn = $school->tourn;
	my %tourn_settings = $tourn->all_settings;

	my $switch;

	my $tz = $tourn->tz if $tourn;
	$tz = "UTC" unless $tz;

</%perl>

	<& "concessions_menu.mas", school => $school, person => $person &>

	<div class="main">

	    <& "tabbar.mas", 
			school => $school, 
			whoami => "concessions" 
		&>

		<h4>Order <% 
			$tourn_settings{"concession_name"}
			? $tourn_settings{"concession_name"}
			: "Concessions" 
		%> </h4>

		<form 
			action="concessions_save.mhtml" 
			method="post"
		>

		<input 
			type  = "hidden"
			name  = "school_id"
			value = "<% $school->id %>"
		>

		<table>

			<tr class="ltyellow">

				<th>
					Name
				</th>

				<th>
					Order Deadline
				</th>

				<th>
					Price
				</th>

				<th>
					Available
				</th>

				<th>
				</th>

			</tr>

<%perl>
			foreach my $concession (sort {$a->name cmp $b->name} $tourn->concessions) { 
							
			my $deadline = $concession->deadline->set_time_zone($tz);

				my $total_order = 
					$m->comp(
						"/funclib/concession_stats.mas", 
							total => 1, 
							concession => $concession
					);

</%perl>
				<tr class="lightrow">

					<td class="smallish">
						<span class="full">
							<% $concession->name %>
						</span>
					</td>

					<td class="smallish nospace">
						<span class="half marno padless centeralign">
							<% Tab::nicedate($deadline) %>
						</span>
						<span class="twofifths marno padless">
							<% Tab::nicetime($deadline) %>
							<% Tab::tzname($tz) %>
						</span>
					</td>

					<td class="smallish rightalign">
<%perl>
						if ($concession->price > 0) { 

							$tourn_settings{"currency"} 
								? $m->print($tourn_settings{"currency"})
								: $m->print('&#36;');

							$m->print(sprintf ("%.2f", $concession->price));
						} else { 
							$m->print("FREE");
						}
</%perl>
					</td>

					<td class="smallish centeralign">
%						if ($concession->cap) { 
							<% $concession->cap - $total_order %> left
%						} else { 
							No limit
%						}
					</td>

					<td class="centeralign">
%						if ( (not defined $concession->deadline) || $concession->deadline > $now) { 

							<a 
								class="buttonwhite greentext hover"
								href="concession_order.mhtml?concession_id=<% $concession->id %>&school_id=<% $school->id %>"
							>Order Now</a>

%						}

					</td>

				</tr>

%			} 

		</table>

	</div>


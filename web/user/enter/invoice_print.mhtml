<%args>
	$session
	$person
	$school_id
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id);
	my $tourn = $school->tourn;
	my %tourn_settings = $tourn->all_settings();

	my $school_name = $school->name;
	my $tourn_name = $tourn->name;

	$school_name =~ s/[^\w]//g;
	$tourn_name =~ s/[^\w]//g;

	my $filename = "Invoice-".$school_name."-".$tourn_name."-".$session->id;
	my $filepath = $Tab::file_root."/tmp/".$filename;

	$tourn_settings{'tmoney_url'} = $Tab::tmoney_url;
	if ($tourn_settings{"tmoney_staging"}) {
		$tourn_settings{'tmoney_url'} = $Tab::tmoney_staging_url;
	}

	$m->comp("/funclib/printout.mas",
		tourn    => $tourn,
		filename => $filename,
		head     => 1);

	$m->comp("/register/school/print/invoice.mas",
		school           => $school,
		tourn            => $tourn,
		tourn_settings   => \%tourn_settings,
		skip_concessions => $ARGS{"skip_concessions"},
		skip_entry       => $ARGS{"skip_entries"},
		skip_payments    => $ARGS{"skip_payments"},
		filename         => $filename
	);

	$m->comp("/funclib/printout.mas",
		tourn    => $tourn,
		filename => $filename,
		tail     => 1
	);

</%init>


<%args>
	$person
	$school
	$school_settings
	$tourn
	$tourn_settings
</%args>
<%init>

	use POSIX;

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

    my $now = DateTime->now(
		time_zone => $tz
	);

	my $no_signups++ if $now > $tourn->reg_end;

	my @unapproved = $school->entries(
		unconfirmed => 1
	);

	my @rejected = $school->entries(
		unconfirmed => 2
	);

	my @approved = $school->entries(
		unconfirmed => 0
	);

</%init>

	<div class="full nospace">

		<span class="half padno">
			<h4 class="padno">Pending</h4>
		</span>

%		unless ($no_signups) { 

		<span 
			class = "rightalign martopmore half"
			id    = "signup_list_buttonarea"
		>

%			my $warning = "This will register ALL signed up competitors to this tournament.  Are you sure?";

			<a
				class         = "bluetext buttonwhite thin marrightlots"
				value         = "1"
				id            = "<% $school->id %>"
				target_id     = "<% $school->id %>"
				property_name = "register_all"
				on_success    = "refresh"
				onClick       = "postConfirm('<% $warning %>', this, 'signup_all.mhtml');"
			>ACCEPT ALL</a>
		</span>

%		} else { 

			<span 
				class = "rightalign martopmore half"
				id    = "signup_list_buttonarea"
			>
			</span>
%		}

	</div>

	<& "/funclib/tablesorter.mas",
		table => "signup_list"
	&>

	<table id="signup_list">

		<thead>
			<tr class="smallish ltyellow">

				<th>
					Event
				</th>

				<th>
					Competitors
				</th>

				<th>	
					Signed up by
				</th>

				<th>
					Signed up on
				</th>

				<th>
					Transfer Entry Slot
				</th>

				<th>
					Accept
				</th>

				<th>
					Reject
				</th>
			</tr>

		</thead>

		<tbody id="signups">

%			foreach my $entry (@unapproved) { 

				<tr id="<% $entry->id %>">

					<td>
						<% $entry->event->abbr %>
					</td>

					<td class="nospace padleft">

%						foreach my $student ($entry->students) { 
							<div class="padless marno smallish">
								<% $student->first." ".$student->last %>
							</div>
%						}

					</td>

<%perl>

					my $signup_by_id = $entry->setting("signup_by");

					my $signup_by = Tab::Person->retrieve($signup_by_id) 
						if $signup_by_id;

</%perl>
					<td id="<% $entry->id %>_signup_by" class="smallish nospace">
						<a href="mailto:<% $signup_by->email %>" class="plain">
							<% $signup_by ?  $signup_by->first." ".$signup_by->last : "" %>
						</a>
					</td>

					<td id="<% $entry->id %>_signup_at" class="smallish">
						<% $entry->created_at->month %>/<% $entry->created_at->day %>

						<% Tab::nicetime($entry->created_at) %>
					</td>

					<td id="<% $entry->id %>_status"
						class="centeralign padmore">

						<span class="limit marright nospace">

							<select 
								name  = "transfer_<% $entry->id %>"
								id    = "transfer_<% $entry->id %>"
								class = "fixedsmall"
							>

							<option value="">-</option>
<%perl>
							foreach my $transfer (@approved) { 

								next unless $transfer->event->id == $entry->event->id;
</%perl>
								<option 
									value="<% $transfer->id %>"
								><% $transfer->code %></option>
%							}
							</select>

						</span>

						<span class="halflimit centeralign nospace">

							<a
								class         = "bluetext buttonwhite fa fa-sm fa-exchange"
								value         = "1"
								id            = "<% $entry->id %>"
								target_id     = "<% $entry->id %>"
								setting_name  = "signup_active"
								property_name = "transfer"
								new_parent    = "approved"
								other_value   = "transfer_<% $entry->id %>"
								onClick       = "postSwitch( this, 'signup_switch.mhtml');"
							></a>

						</span>

					</td>

					<td 
						id="<% $entry->id %>_checkbox"
						class="centeralign nospace"
					>
%						unless ($no_signups) { 
						<a
							class         = "bluetext buttonwhite fa fa-sm fa-check"
							value         = "1"
							id            = "<% $entry->id %>"
							target_id     = "<% $entry->id %>"
							setting_name  = "signup_active"
							property_name = "register"
							new_parent    = "approved"
							onClick       = "postSwitch( this, 'signup_switch.mhtml');"
						></a>
%						}
					</td>

					<td 
						id="<% $entry->id %>_rejectbox"
						class="centeralign nospace"
					>
						<a
							class         = "redtext buttonwhite fa fa-sm fa-times"
							value         = "1"
							id            = "<% $entry->id %>"
							target_id     = "<% $entry->id %>"
							setting_name  = "signup_active"
							property_name = "reject"
							new_parent    = "rejected"
							onClick       = "postSwitch( this, 'signup_switch.mhtml');"
						></a>
					</td>

				</tr>

%			}

		</tbody>


	</table>

	<div class="full nospace martop">

		<span class="half">
			<h4>Accepted</h4>
		</span>

		<span 
			id    = "approved_list_buttonarea"
			class = "half rightalign"
		>
		</span>

	</div>

	<& "/funclib/tablesorter.mas", 
		table     => "approved_list",
		nobuttons => 1
	&>


	<table id="approved_list">

		<thead>

			<tr class="smallish ltyellow">

				<th>
					Event
				</th>

				<th>
					Competitors
				</th>

				<th>	
					Registered By
				</th>

				<th>
					Registered On
				</th>

				<th>
					Status
				</th>

			</tr>

		</thead>

		<tbody id="approved">

%			foreach my $entry (@approved) { 

				<tr id="<% $entry->id %>">

					<td>
						<% $entry->event->abbr %>
					</td>

					<td class="nospace padleft">

%						if ($entry->tba) { 
							<div class="padless marno">
								TBA
							</div>
%						} else {
%							foreach my $student ($entry->students) { 
								<div class="padless marno smallish">
									<% $student->first." ".$student->last %>
								</div>
%							}
%						}

					</td>

<%perl>

					my $registered_by_id = $entry->setting("registered_by");

					my $registered_by = Tab::Person->retrieve($registered_by_id) 
						if $registered_by_id;

</%perl>

					<td>
						<% $registered_by 
							?  $registered_by->first." ".$registered_by->last 
							: ""
						%>
					</td>

					<td>
						<% Tab::pickerdate($entry->created_at) %>
						<% Tab::nicetime($entry->created_at) %>
					</td>

					<td class="centeralign">
%						if ($entry->dropped) { 
							<span class="semibold inline nospace redtext">DROPPED</span>
%						} elsif ($entry->waitlist) { 
							<span class="semibold inline nospace orangetext">WAITLIST</span>
%						} else { 
							<span class="semibold inline nospace greentext">REGISTERED</span>
%						}
					</td>

				</tr>

%			}

		</tbody>


	</table>

	<div class="full nospace martop">

		<span class="half">
			<h4>Rejected</h4>
		</span>

		<span 
			id    = "rejected_list_buttonarea"
			class = "half rightalign"
		>
		</span>

	</div>

	<& "/funclib/tablesorter.mas", 
		table     => "rejected_list",
		nobuttons => 1
	&>


	<table id="rejected_list">

		<thead>

			<tr class="smallish ltyellow">

				<th>
					Event
				</th>

				<th>
					Competitors
				</th>

				<th>
					Signed up by
				</th>

				<th>
					Signed up on
				</th>

				<th>	
					Rejected By
				</th>

				<th>
					Undo
				</th>

			</tr>

		</thead>

		<tbody id="rejected">

%			foreach my $entry (@rejected) { 

				<tr id="<% $entry->id %>">

					<td>
						<% $entry->event->abbr %>
					</td>

					<td class="nospace padleft">
%						foreach my $student ($entry->students) { 
							<div class="padless marno smallish">
								<% $student->first." ".$student->last %>
							</div>
%						}
					</td>

<%perl>

					my $signup_by_id = $entry->setting("signup_by");

					my $signup_by = Tab::Person->retrieve($signup_by_id);

					my $registered_by_id = $entry->setting("registered_by");

					my $registered_by = Tab::Person->retrieve($registered_by_id) 
						if $registered_by_id;

</%perl>

					<td>
						<% $signup_by 
							?  $signup_by->first." ".$signup_by->last 
							: ""
						%>
					</td>

					<td>
						<% Tab::pickerdate($entry->created_at) %>
						<% Tab::nicetime($entry->created_at) %>
					</td>

					<td>
						<% $registered_by 
							?  $registered_by->first." ".$registered_by->last 
							: ""
						%>
					</td>

					<td class="centeralign">
%						unless ($no_signups) { 
						<a
							class         = "orangetext buttonwhite fa fa-sm fa-arrow-up"
							value         = "1"
							id            = "<% $entry->id %>"
							target_id     = "<% $entry->id %>"
							setting_name  = "signup_active"
							property_name = "unreject"
							on_success    = "refresh"
							onClick       = "postSwitch( this, 'signup_switch.mhtml');"
						></a>
%						}
					</td>

				</tr>

%			}

		</tbody>


	</table>


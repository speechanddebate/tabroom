<%args>
	$entry_id
	$school_id
</%args>
<%init>

	my $entry = Tab::Entry->retrieve($entry_id);

	$m->abort unless $entry;

	my $event = $entry->event;
	my $tourn = $event->tourn;
	my $school = Tab::School->retrieve($school_id);

	my $max = $event->setting("max_entry");
	my $min = $event->setting("min_entry");

	my $code_style = $event->setting("code_style");

	my $switch;

</%init>

	<div class="left huge">

		<h2>Entry Details</h2>

		<form action="details_save.mhtml" method="post">
		<input type="hidden" name="entry_id" value="<% $entry->id %>">
		<input type="hidden" name="school_id" value="<% $school->id %>">

		<table cellpadding="5" cellspacing="1" width="100%">

			<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

				<td class="<% $code_style eq "registrant" ? "required" : "" %>">
					Entry Name
				</td>

				<td class="padmuchmore">

%					if ($code_style eq "register" || $max > 2) { 
						<input type="text" size="30" name="name" value="<% $entry->name %>" maxlength="30">
%					} else { 
						<% $entry->name %>
%					}
				</td>

			</tr>

			<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

				<td class="<% ($code_style eq "registrant" || $code_style eq "initials") ? "required" : "" %>">
					Entry Schemat Code
				</td>

				<td class="padmuchmore">
%					if ($code_style eq "initials" || $code_style eq "register") { 
						<input type="text" size="30" name="code" value="<% $entry->code %>" maxlength="12">
%					} else { 
						<% $entry->code %>
%					}
				</td>

			</tr>

			<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

				<td>
					<label for="ada">
						ADA/Accessible Rooms Needed
					</label>
				</td>

				<td>
					<input type="checkbox" id="ada" name="ada" value="1" <% $entry->ada ? "checked" : "" %>>
				</td>

			</tr>

%			if ($event->setting("ask_for_titles")) {
			
				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td class="required">
						Piece title (or ISBN):
					</td>

					<td class="rightalign">
						<input type="text" name="title" value="<% $entry->title %>" size="75">
					</td>

				</tr>

%			}

%			foreach my $qual ($tourn->setting("ask_quals")) { 

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td class="required">
						Qualifier <% $qual %>
					</td>

					<td>
						<input type="text" name="qual_<% $qual %>" value="<% $entry->title %>" size="25">
					</td>

				</tr>

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td>
						Qualifier <% $qual %> points/placement:
					</td>

					<td class="rightalign">
						<input type="text" name="qualpts_<% $qual %>" value="<% $entry->title %>" size="25">
					</td>

				</tr>

%			}
	
%			my @students = $entry->students;

%			foreach my $count (1 .. $max) { 

%				my $student = shift @students if @students;

%				my $hybrid = Tab::School->search( chapter => $student->chapter->id, tourn => $tourn->id )->first
%					if $student && $student->chapter->id != $school->chapter->id;

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td class="<% $count > $min ? "" : "required" %>">
						Student <% $count %>
						<% $hybrid ? "(".$hybrid->name.")" : "" %>
					</td>

					<td class="bigger">
						<select name="student_<% $count %>" class="fixedmed">

%							if ($student) { 
								<option value="<% $student->id %>">
									<% $student->first." ".$student->last %>
								</option>
%							}

							<option value="">NONE</option>

%							if ($hybrid) { 
%								foreach my $student ($m->comp("/funclib/students_evententer.mas", event => $event, school => $hybrid )) {
									<option value="<% $student->id %>">
										<% $student->first." ".$student->last %>
									</option>
%								}
%							} else { 
%								foreach my $student ($m->comp("/funclib/students_evententer.mas", event => $event, school => $school )) {
									<option value="<% $student->id %>">
										<% $student->first." ".$student->last %>
									</option>
%								}
%							}
						</select>

					</td>

				</tr>

%				$count++;

%			}

		</table>

	
		<hr />

		<table cellpadding="5" cellspacing="1" width="100%">
			
			<tr class="liblrow">

				<td align="right">
					<input type="submit" value=" Save Entry Details ">
					</form>
				</td>

			</tr>

		</table>

		<p class="required">
			 = Required field
		</p>

	</div>

	<div class="right small">
	
		<div class="sidenote">

			<h4>Entry</h4>

			<p class="grey block">
				<% $entry->name %>
			</p>

			<p class="grey block">
				<% $entry->code %>
			</p>

			<p class="grey block">
				<% $event->name %>
			</p>

%			if ($entry->waitlist) { 
				<p class="yellow block">
					On Waitlist
				</p>
%			}


			<h4><% $event->abbr %></h4>

			<a class="blue block" href="students.mhtml?school_id=<% $school_id %>&event_id=<% $event->id %>">
				Return to Entry
			</a>
		</div>

	</div>


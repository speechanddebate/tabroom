<%args>
	$entry_id
	$school_id
	$from => undef
</%args>
<%init>

	my $entry = Tab::Entry->retrieve($entry_id);

	$m->abort unless $entry;

	my $event = $entry->event;
	my $tourn = $event->tourn;
	my $school = Tab::School->retrieve($school_id);

	my $max = $event->setting("max_entry");
	my $min = $event->setting("min_entry");

	my $code_style = $event->setting("code_style");

	my @clear_students = $m->comp("/funclib/students_evententer.mas", 
		event  => $event,
		school => $school
	);

	my @students = $entry->students;

</%init>

	<div class="main">

		<h2><% $tourn->name %></h2>
		
		<& menu.mas, school => $school, whoami => "students" &>

		<h4>Entry Details</h4>

		<form action="details_save.mhtml" method="post">
		<input type="hidden" name="entry_id" value="<% $entry->id %>">
		<input type="hidden" name="school_id" value="<% $school->id %>">
		<input type="hidden" name="from" value="<% $from %>">


		<div class="row borderbottom">

			<span 
				class="half 
					<% ($code_style eq "register" || $code_style eq "initials") ? "required" : "" %>">
					Entry Code
			</span>

			<span class="half">
%				if ($code_style eq "initials" 
%					|| $code_style eq "register" 
%					|| $code_style eq "full_initials") {

					<input type="text" size="30" name="code" value="<% $entry->code %>">

%				} else { 

					<span class="padmore">
						<% $entry->code %>
					</span>

%				}
			</span>
		</div>


%			foreach my $count (1 .. $max) { 

%				my $student = shift @students if @students;

%				my $hybrid = Tab::School->search( 
%					chapter => $student->chapter->id, 
%					tourn => $tourn->id )->first
%	
%					if $student && $student->chapter &&  $student->chapter->id != $school->chapter->id;

				<div class="row">

					<span class="<% $count > $min ? "" : "required" %> half">
						Student <% $max > 1 ? $count : "" %>
						<% $hybrid ? "(".$hybrid->name.")" : "" %>
					</span>

					<span class="half">

						<select name="student_<% $count %>" class="fixedmed">

%							if ($student) { 
								<option value="<% $student->id %>"
									> <% $student->first." ".$student->last %> </option>
%							}

							<option value="">NONE</option>

%							if ($hybrid) { 
%								foreach my $student ($m->comp("/funclib/students_evententer.mas", event => $event, school => $hybrid )) {
									<option value="<% $student->id %>"
										> <% $student->first." ".$student->last %> </option>
%								}
%							} else { 

%								foreach my $student (@clear_students) { 
									<option value="<% $student->id %>"
										><% $student->first." ".$student->last %></option>
%								}
%							}

						</select>

					</span>

				</div>

%				$count++;

%			}


%			if ($event->setting("apda")) { 

				<div class="row">

					<span class="half">
						Prelim Seeding
					</span>

					<span class="half martop">
						<select name="seed" class="fixedsmall">
							<option value="">None</option>

							<option value="half" <% $entry && $entry->setting("registered_seed") eq "half" ? "selected" : "" %>>Half</option>

							<option value="full" <% $entry && $entry->setting("registered_seed") eq "full" ? "selected" : "" %>>Full</option>

							<option value="free" <% $entry && $entry->setting("registered_seed") eq "free" ? "selected" : "" %>>Free</option>

						</select>
					</span>

				</div>

%			}

			<label for="ada">
				<div class="row hover">

					<span class="half">
						ADA/Accessible Rooms Needed
					</span>

					<span class="half">
						<input 
							type  = "checkbox"
							class = "largecheck"
							id    = "ada"
							name  = "ada"
							value = "1" <% $entry->ada ? "checked" : "" %>>
					</span>

				</div>
			</label>

%			if ($event->setting("ask_for_titles")) {
			
				<div class="row">

					<span class="required half">
						Piece title (or ISBN):
					</span>

					<span class="half">
						<input 
							type="text" 
							name="title" 
							value="<% $entry->setting("title") %>" 
							size="40">
					</span>

				</div>

				<div class="row">

					<span class="required half">
						Piece author
					</span>

					<span class="half">
						<input 
							type="text" 
							name="author" 
							value="<% $entry->setting("author") %>" 
							size="40">
					</span>

				</div>

%			}

%		my $quals = $event->setting('ask_quals'); 
%		my $required = $quals;
%		$quals = 15 if $event->setting("more_quals");

%		if ($quals) { 

			<span class="pagehalf nospace">
				<h4>Qualifiers</h4>
			</span>

			<span class="pagehalf rightalign nospace">
				<h5><% $required %> Required</h5>
			</span>

%			if ($event->setting("at_larges")) { 

				<label for="at_large">
					<div class="row hover">

						<span class="half">
							At-large applicant? 
						</span>

						<span class"half">
							<input 
								id    = "at_large"
								type  = "checkbox"
								class = "largecheck"
								name  = "atlarge"
								value = "1"
								<% $entry && $entry->setting("atlarge") ? 'checked="checked"' : "" %>
							>
						</span>

					</div>
				</label>
				
%			}

			<div class="yellowrow martop strong smallish centeralign">

				<span class="third">
					Qualifier
				</span>

				<span class="third">
					Tournament
				</span>

				<span class="third">
					Finish/Points
				</span>

			</div>

%			my @qualifiers = $entry->qualifiers;

%			foreach my $tick (1 .. $quals) { 

%				my $qual = shift @qualifiers if @qualifiers;

				<div class="row">

					<span class="third <% $tick > $required ? "" : "required" %>">
						Qualifier <% $tick %>
					</span>

					<span class="third">
						<input 
							type="text" 
							name="qual_<% $tick %>" 
							value="<% $qual ? $qual->name : "" %>" 
							size="32"
						>
					</span>

					<span class="third">
						<input 
							type="text" 
							name="qualpts_<% $tick %>" 
							value="<% $qual ? $qual->result : "" %>"
							size="32"
						>
					</span>

				</div>

%			}

%		}

			
		<div class="libl rightalign">
			<input type="submit" value=" Save Entry Details ">
			</form>
		</div>

		<p class="required">
			 = Required field
		</p>

	</div>

	<div class="menu">
	
		<div class="sidenote">

			<h4>Entry</h4>

			<p class="row full">
				<% $entry->name %>
			</p>

			<p class="row full">
				<% $entry->code %>
			</p>

			<p class="row full">
				<% $event->name %>
			</p>

%			if ($entry->waitlist) { 
				<p class="yellow full">
					On Waitlist
				</p>
%			}

			<h4><% $event->abbr %></h4>

			<a 
				class="blue full"
				href="students.mhtml?school_id=<% $school_id %>&event_id=<% $event->id %>">
				Return to <% $event->abbr %> Entry
			</a>
		</div>

	</div>


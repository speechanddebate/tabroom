<%args>
	$person
	$school
	$disclaimed => undef
</%args>
<%init>

	use POSIX;

	$school->disclaimed($person->id) if $disclaimed;
	$school->update;

	my $tourn = $school->tourn;
	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

    my $now = DateTime->now(time_zone => $tz);

	my $adult++ if ( $school->setting("contact_number") 
					&& $school->setting("contact_name") 
					&& $school->setting("contact_email"));

	$adult++ unless $tourn->setting("require_adult_contact");

</%init>

	<div class="main">

		<h2>
			<% $tourn->name %>
		</h2>

%		if ($adult) { 
			<& menu.mas, school => $school, whoami => "tourn" &>
%		}


%		if ($tourn->setting("ask_regions")) { 

			<h3>Region</h3>

			<form action="region_save.mhtml" method="post">
			<input type="hidden" name="school_id" value="<% $school->id %>">

			<div class="row">
				<span class="half">
					Your Region/District:
				</span>

				<span class="third">
					<select name="region_id" class="fixedmed">

						<option value="">Please choose one:</option>

%						foreach my $region ($tourn->regions) { 
							<option 
								value="<% $region->id %>" 
								<% $region->id == $school->region ? 'selected="selected"' : "" %>
							><% $region->name %></option>
%						}
					</select>
				</span>

				<span class="sixth">
					<input type="submit" value="Save" class="thin">
					</form>
				</span>

			</div>
			
%		}

%		unless ($adult) { 

			<h4>This tournament requires an adult contact</h4>

			<p>
				Before you can register further, you must supply the name and phone
				number for the responsible adult who is attending the tournament.
			</p>
%		}

		<h4>Adult Contact Information:</h4>

		<form action="contact_save.mhtml" method="post">
		<input type="hidden" name="school_id" value="<% $school->id %>">
		<input type="hidden" name="tourn_id" value="<% $tourn->id %>">

		<div class="row">

			<span class="half">
				Adult contact attending the tournament:
			</span>
		
			<span class="half">
				<input 
					size  = "24"
					type  = "text"
					name  = "contact_name"
					value = "<% $school->setting("contact_name") %>"
				>
			</span>

		</div>
			
		<div class="row">

			<span class="half">
				That contact's cell number:
			</span>
		
			<span class="half">
				<input 
					size  = "24"
					type  = "text"
					name  = "contact_number"
					value = "<% $school->setting("contact_number")  %>"
				>
			</span>

		</div>

		<div class="row">

			<span class="half">
				That contact's email
			</span>
			
			<span class="half">
				<input 
					size  = "24"
					type  = "text"
					name  = "contact_email"
					value = "<% $school->setting("contact_email")  %>"
				>
			</span>

		</div>

%		if ($tourn->setting("per_person_fee")) { 

%			my $bodies = $m->comp("/funclib/school_bodies.mas", school => $school);

%			if ($school->setting("individuals") < $bodies) { 
%				$school->setting("individuals", $bodies);
%			}
			
			<div class="row">

				<span class="half">
					# of individuals in your party
				</span>
			
				<span class="half">
					<input 
						size  = "5"
						type  = "number"
						min   = 0
						max   = 9999
						name  = "individuals"
						value = "<% $school->setting("individuals") %>"
					>
				</span>

			</div>

%		}

%		if ($tourn->setting("school_codes") eq "registrant") { 

			<div class="row">

				<span class="half">
					Your School Code*
				</span>
		
				<span class="half">
					<input 
						size      = "10"
						type      = "text"
						name      = "school_code"
						value     = "<% ($school->code) ? $school->code : "" %>"
						maxlength = "6">
				</span>

			</div>
%		}

%		if ($tourn->setting("refund_information")) { 

			<div class="row">

				<span class="half">
					Make refund checks payable to:
				</span>

				<span class="half">
					<input 
						type  = "text"
						name  = "refund_payable"
						size  = "34"
						value = "<% $school->setting('refund_payable') %>"
					>
				</span>

			</div>

			<div class="row">

				<span class="half">
					Address to send refund checks
				</span>

				<span class="half">
					<textarea 
						name="refund_address" 
						cols="32" 
						rows="4"
					><% $school->setting("refund_address") %></textarea>
				</span>

			</div>
%		}

		<div class="liblrow rightalign">
			<input  type="submit" value="Save Contact Info">
			</form>
		</div>

%		if ($adult) { 

			<div class="padno block martop">
				<span class="twothird padno martop">
					<h4>Deadlines:</h4>
				</span>

				<span class="third right padno">
					<p class="explain rightalign">All times are <% Tab::tzname($tz) %></p>
				</span>
			</div>

			<table>

				<tr class="row">

					<td class="smaller">
						You must add entries by
					</td>

					<td class="smaller">
						<% ($tourn->reg_end) ? Tab::nicedt($tourn->reg_end->set_time_zone($tz)) : "Not Set" %>
					</td>

				</tr>

				<tr class="row">

					<td class="smaller">
						Your registration fees/obligations are frozen on
					</td>

					<td class="smaller">
%						my $freeze_deadline = $tourn->setting("freeze_deadline");
%						$freeze_deadline = $tourn->reg_end unless $freeze_deadline;
						<% ($freeze_deadline && $freeze_deadline->year) ? Tab::nicedt($freeze_deadline->set_time_zone($tz)) : "Not Set" %>
					</td>

				</tr>

				<tr class="row">
				
					<td class="smaller">
						You can drop entries or change names yourself online until
					</td>
				
					<td class="smaller">
%						my $drop_deadline = $tourn->setting("drop_deadline");
						<% ($drop_deadline) ? Tab::nicedt($drop_deadline->set_time_zone($tz)) : "Not Set" %>
					</td>

				</tr>

				<tr class="row">
			
					<td class="smaller">
						Judge entries and changes are due by
					</td>

					<td class="smaller">
%						my $judge_deadline = $tourn->setting("judge_deadline");
						<% ($judge_deadline) ? Tab::nicedt($judge_deadline->set_time_zone($tz)) : "Not Set" %>
					</td>

				</tr>

				<tr class="row">
		
					<td class="smaller">
						Nuisance fines in addition to reg fees for changes start at
					</td>

					<td class="smaller">
%						my $fine_deadline = $tourn->setting("fine_deadline");
						<% ($fine_deadline) ? Tab::nicedt($fine_deadline->set_time_zone($tz)) : "Not Set" %>
					</td>
				
				</tr>
			
				<tr>
					<td colspan="2">
						<h3></h3>
					</td>
				</tr>
		
%				foreach my $category ($tourn->categories) {
		
%					if ($category->setting("deadline")) { 
		
						<tr class="row">
		
							<td class="smaller">	
								<% $category->name %> judges are due by:
							</td>
		
							<td class="smaller">
								<% &Tab::nicedt($category->setting("deadline")->set_time_zone($tourn->tz)) %>
							</td>
		
						</tr>
		
%					}

%					if ($category->setting("strike_start")) { 
		
						<tr class="row">
		
							<td class="smaller">	
								<% $category->name %> strikes/ratings open:
							</td>
		
							<td class="smaller">
								<% &Tab::nicedt($category->setting("strike_start")->set_time_zone($tourn->tz)) %>
							</td>
		
						</tr>
		
%					}

%					my $strike_end = $category->setting("strike_end");

%					if ($strike_end) { 
		
						<tr class="row">
		
							<td class="smaller">	
								<% $category->name %> strikes/ratings due by:
							</td>
		
							<td class="smaller">
								<% &Tab::nicedt($strike_end->set_time_zone($tourn->tz)) %>
							</td>

						</tr>

%					}


%				}

				<tr>
					<td colspan="2">
						<h3></h3>
					</td>
				</tr>

%				foreach my $concession ($tourn->concessions) {

%					next unless $concession->deadline;

					<tr class="row">

						<td class="smaller">	
							<% $concession->name %> orders are due by:
						</td>

						<td class="smaller">
							<% &Tab::nicedt($concession->deadline->set_time_zone($tourn->tz)) %>
						</td>

					</tr>
%				}
		
			</table>

%		}

	</div>

	<div class="menu">
	
		<div class="sidenote">

%		if ($adult) { 

			<h4>Printouts</h4>

			<a href="entry_print.mhtml?school_id=<% $school->id %>" class="blue full">
				Print Registration
			</a>

			<a href="invoice_print.mhtml?school_id=<% $school->id %>" class="blue full">
				Print Tournament Invoice
			</a>

			<a href="export_csv.mhtml?school_id=<% $school->id %>" class="blue full">
				Export registration spreadsheet
			</a>
			
			<hr />

%		}

%		unless ( $now > $tourn->setting("freeze_deadline") ) { 

%			my $warn = "This will drop your entire entry, including any spots
%			on waitlists.  Be very sure!";

			<a 
				href="drop_school.mhtml?school_id=<% $school->id %>" 
				class="dkred block"
				<& "/funclib/confirm.mas", warn => $warn &>  
			>
				DROP ENTIRE ENTRY
			</a>

%		}

		</div>

		<div class="sidenote">

			<h4>Live updates</h4>

%			my @followers = Tab::Follower->search( school => $school->id, type => 'school' );

%			if (@followers) { 
				<p 
					class="explain smaller padless">
					The following <% scalar @followers %> users receive emailed
					pairings for the school in one message:

				</p>
%			}

%			foreach my $follower (@followers) { 
				<a 
					class="blue full" 
					href="school_unfollow.mhtml?follower_id=<% $follower->id %>&school_id=<% $school->id %>">

					<% $follower->follower->first." ".$follower->follower->last %>
				</a>
%			}

			<h6>Get all your schools' texts:</h6>

				<form action="school_follow.mhtml" method="post">
				<input type="hidden" name="school_id" value="<% $school->id %>">
				<input type="hidden" name="tourn_id" value="<% $tourn->id %>">
			
				<div class="evenrow">
				
					<span class="threequarter nospace">
						<input 
							type        = "text"
							class       = "thin"
							name        = "email"
							size        = "20"
							placeholder = "Email of Tabroom user">
					</span>

					<span class="nospace quarter">
						<input 
							type  = "submit"
							value = "Go"
							class = "thin">
					</span>

				</div>

				</form>

			</form>

		</div>

	</div>


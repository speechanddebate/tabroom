<%args>
	$entry_id
	$student_id
</%args>
<%perl>
	
	my $entry = Tab::Entry->retrieve($entry_id);
	my $school = $entry->school;
	my $student = Tab::Student->retrieve($student_id);

	my $chapter = $school->chapter;
	my $event = $entry->event;

	my $tourn = $event->tournament;
	
    my @clean_students = $m->comp("/funclib/students_evententer.mas",
									event   => $entry->event,
									circuit => $tourn->circuit,
									tourn   => $event->tournament,
									chapter => $chapter);

    my @hrs = Tab::Housing->search( tournament => $tourn->id, student => $student->id) if $tourn->method->housing;

    @clean_students = sort {ucfirst($a->last) cmp ucfirst($b->last)} @clean_students;
	
</%perl>

	<div class="left huge">

		<h2>Switch <% $entry->event->abbr %> slot from <% $student->first." ".$student->last %></h2>

		<table width="100%" cellpadding="7" cellspacing="1">
	
			<tr>
				<td colspan="3">
					<p>Select a student to switch into this entry.  This change will not
					the affect the waitlist position or entry status of the entry.</p>
				</td>
			</tr>
	
			<tr>
				<td colspan="3"><hr></td>
			</tr>

			<tr class="liblrow">

				<th class="smaller">
					Select Replacement
				</th>

%				if (@hrs) { 

					<th class="smaller">
						Transfer housing too?
					</th>
%				}

				<td>
				</td>

			</tr>

			<tr class="evenrow">

				<td>
					<form action="nameswitch_save.mhtml" method="post">
					<input type="hidden" name="entry_id" value="<% $entry->id %>">
					<input type="hidden" name="student_id" value="<% $student->id %>">
					<input type="hidden" name="school_id" value="<% $school->id %>">

					<select name="switch_student_id">
		
%						foreach my $cs (@clean_students) { 
							<option value="<% $cs->id %>">
								<% $cs->last.", ".$cs->first %>
							</option>
%						}
	
					</select>
				</td>

%				if (@hrs) { 
				
					<td>
						<input type="checkbox" name="housing" value="1" checked>
					</td>

%				}

				<td class="centeralign">
					<input  type="submit" value="Switch">
					</form>
				</td>
	
			</tr>

		</table>

	</div>

	<div class="right small">

		<a class="blue block" href="/user/chapter/student_roster.mhtml?chapter_id=<% $chapter->id %>">
			Edit your student roster
		</a>

		<hr />

		<a class="red block" href="/user/tourn/entry/students.mhtml?school_id=<% $school->id %>&event_id=<% $event->id %>">
			Return to <% $event->name %>
		</a>

	</div>



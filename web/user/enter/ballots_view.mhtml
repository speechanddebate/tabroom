<%args>
	$tourn
	$school
</%args>
<%init>

	$tourn = $school->tournament unless $tourn;
	my $circuit = $tourn->circuit if $tourn;
	my @files = $school->files;
	my $switch;

</%init>

	<h2><% $school->name %> at the <% $tourn->name %></h2>

	<& menubar.mas, school => $school, whoami => "ballots" &>

	<div class="left huge">

	<h3>Ballots for <% $school->name %></h3>

		<table cellspacing="1" cellpadding="5" width="100%">

%			foreach my $file (@files) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
					
					<td>
						<% $file->event->abbr %>
					</td>

					<td>
						<% &Tab::niceshortdt($file->uploaded->set_time_zone($tourn->tz)) %>
					</td>

					<td>
						<a href="<% $Tab::url_prefix%>/files/<% $circuit->id %>/tournaments/<% $tourn->id."/ballots/".$school->id."/".$file->id."/".$file->name %>">
							<% ($file->label) ? $file->label : $file->name %>
						</a>
					</td>

				</tr>

%			}

		</table>

		</div>

		<div class="right small">

%		if ($tourn->id == 733) { 

			<a href="/files/flyers/NDFBackFlyer.pdf">
				<img src="/files/flyers/NDFLogo.jpg" alt="National Debate Forum">
			</a>

			<a class="blue block" href="/files/flyers/NDFBackFlyer.pdf">
				Download National Debate Forum's Flyer
			</a>

			<hr />

			<a class="red block" href="/files/flyers/capflyer1.pdf">
				Download the Capitol Debate Flyer
			</a>


%		}

		</div>



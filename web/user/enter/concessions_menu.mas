<%args>
	$school
	$person
</%args>
<%init>

	my $tourn = $school->tourn;
	my %tourn_settings = $tourn->all_settings;

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my $now = DateTime->now(time_zone => $tz);

</%init>

	<div class="menu">

%		my @purchases = $school->purchases;

%		if (@purchases) {

			<div class="sidenote">

				<h4>Your Orders:</h4>

%				my $counter = 1;

%				foreach my $purchase (@purchases) { 

%					my @options = $purchase->options;
%					my $concession = $purchase->concession;
%					my $deadline = $concession->deadline->set_time_zone($tz);

					<div class="lightrow">

						<div class="full padless marno">

							<p class="biggish nospace">
								<% $counter++ %>.
								<% $purchase->concession->name %>
<%perl>
							if (@options) { 

								$m->print('(');

								my $notfirst;

								foreach my $option (@options) { 
									$m->print(",") if $notfirst++;
									$m->print($option->name);
								}

								$m->print(')');

							}
</%perl>
							</p>
						</div>

						<div class="full padless marno">

							<span class="quarter rightalign nospace bigger semibold">
								<% $purchase->quantity %>
							</span>

							<span class="half rightalign bigger semibold">
<%perl>
							$tourn_settings{"currency"} 
								? $m->print($tourn_settings{"currency"})
								: $m->print('&#36;');

							$m->print(sprintf("%.2f", $purchase->quantity * $concession->price));

</%perl>
							</span>

							<span class="quarter rightalign">

%							if ( (not defined $concession->deadline) || $concession->deadline > $now) { 

%								my $warn = "This will totally delete your purchase of ".$concession->name;

								<a 
									<& "/funclib/confirm.mas", warn => $warn  &>
									class="buttonwhite redtext fa fa-lg fa-times-circle hover padless"
									href="purchase_delete.mhtml?purchase_id=<% $purchase->id %>&school_id=<% $school->id %>"
								>
								</a>

%							}
							</span>

						</div>

					</div>

%				}

				</table>

			</div>
%		}

	</div>

<%args>
	$entry_id
	$school_id
</%args>
<%init>

	my $entry = Tab::Entry->retrieve($entry_id);

	$m->abort unless $entry;

	my $event = $entry->event;
	my $tourn = $event->tourn;
	my $school = Tab::School->retrieve($school_id);

	my $max = $event->setting("max_entry") || 1;
	my $min = $event->setting("min_entry") || 1;

	my $code_style = $event->code_style;

	my $switch;

	my @students = $m->comp("/funclib/students_evententer.mas",
		event  => $event,
		school => $school
	);

</%init>

	<div class="main">

		<h4>Choose competitor(s) for TBA Slot in <% $event->abbr %></h4>

		<form
			action = "tba_assign_save.mhtml"
			method = "post"
		>

		<input
			type  = "hidden"
			name  = "entry_id"
			value = "<% $entry->id %>"
		>

		<input
			type  = "hidden"
			name  = "school_id"
			value = "<% $school->id %>"
		>

%		foreach my $count (1 .. $max) {

			<div class="row padmore">

				<span class="third <% $count > $min ? "" : "required" %> strong">
					Person <% $count %>
				</span>

				<span class="twothirds">

					<select
						name             = "student_<% $count++ %>"
						data-placeholder = "Select competitor..."
					>
						<option value="">NONE</option>

%						foreach my $student (@students) {
							<option
								value="<% $student->id %>"
							><% $student->first." ".$student->middle." ".$student->last %></option>
%						}
					</select>
				</span>
			</div>

%		}

		<div class="liblrow rightalign">
			<span class="third centeralign">
				<input type="submit" value=" Save Competitor Names ">
			</span>
		</div>
		</form>

		<p class="semibold redtext">
			* Required
		</p>

	</div>

	<div class="menu">

		<div class="sidenote">

			<h4><% $event->abbr %></h4>

			<div class="row full">
				<% $event->name %>
			</div>

%			if ($entry->waitlist) {
				<p class="yellow block">
					On Waitlist
				</p>
%			}

			<a
				class = "blue martop full"
				href  = "students.mhtml?school_id=<% $school_id %>&event_id=<% $event->id %>"
			>
				Return to Entry
			</a>
		</div>

	</div>


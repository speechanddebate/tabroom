<%args>
	$person
	$school
	$judge_id  => undef
	$school_id => undef
</%args>
<%init>

	my @already = Tab::Strike->search(
		judge      => $judge_id,
		school     => $school_id,
		registrant => 1,
		conflictee => 1
	);

	my $judge = Tab::Judge->retrieve($judge_id);

	my $msg = "Conflict already existed or was invalid.";

	if ($judge->school->id == $school->id) {

		unless (@already) {

			my $school = Tab::School->retrieve($school_id);

			if ($school && $school->tourn->id == $school->tourn->id) {

				Tab::Strike->create({
					tourn      => $school->tourn->id,
					judge      => $judge->id,
					type       => "school",
					school     => $school->id,
					registrant => 1,
					conflictee => 1
				});

				$msg = "Conflict registered against ".$school->name." from ".$school->state;
			}
		}
	}

	$m->redirect("judge_conflicts.mhtml?school_id=".$school->id."&judge_id=$judge_id&msg=$msg");

</%init>

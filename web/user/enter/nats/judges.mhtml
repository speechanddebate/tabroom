	<script>

		function totalOwed () {

			var needed = parseInt($('#needed').text()) || 0;
			var provided = parseInt($('#provided').text()) || 0;
			var hired = parseInt($('#hired').text()) || 0;

			if (hired < 0) {
				hired = 0;
			}

			var owed = parseInt(needed - provided - hired);
			var amtOwed = 0;

			$(".hirestill").each(function() {
				amtOwed += parseInt($(this).text()) || 0;
			});

			if (owed < amtOwed) {
				owed = amtOwed;
			}

			if (owed < 0) {
				owed = 0;
			}

			$("#owed").text(owed);

			if (owed > 0) {
				$(`#totalCheck`).removeClass('greentext');
				$(`#totalCheck`).removeClass('fa-check');
				$(`#totalCheck`).addClass('redtext');
				$(`#totalCheck`).addClass('fa-times');
				$(`#totalCheck`).attr('title', 'You have not met this requirement');
			} else {
				$(`#totalCheck`).addClass('greentext');
				$(`#totalCheck`).addClass('fa-check');
				$(`#totalCheck`).removeClass('redtext');
				$(`#totalCheck`).removeClass('fa-times');
				$(`#totalCheck`).attr('title', 'You have met this requirement!');
			}
		}

		function countHires() {

			let noHires = 0;
			let maxRounds = parseInt($("#needed").text()) || 0;
			let minimum = parseInt($('#minimum').text()) || 0;

			if ($(`#minimum_met`).text()) {
				minimum = 0;
			}
			const provided = parseInt($('#provided').text()) || 0;

			$(".nohires").each(function() {
				noHires += parseInt($(this).text()) || 0;
			});

			console.log(`Minimum is ${minimum}, provided is ${provided}, maxRounds is ${maxRounds}, no hires is ${noHires}`);

			let maxBuyout = 0;

			if (minimum > maxBuyout) {
				maxBuyout = minimum;
			}
			if (noHires > maxBuyout) {
				maxBuyout = noHires;
			}
			if (provided > maxBuyout) {
				maxBuyout = provided;
			}

			if (minimum > 0 && noHires >= minimum) {
				$('#noBuyoutRow').addClass('hidden');
			} else {
				$('#noBuyoutRow').removeClass('hidden');
			}

			maxRounds -= maxBuyout;
			if (maxRounds < 0) {
				maxRounds = 0;
			}

			$("#hire").text(maxRounds);

			if (maxRounds == 0) {
				$('.buyouts').addClass('hidden');
			} else {
				$('.buyouts').removeClass('hidden');
			}

			return maxRounds;
		}

		$(document).ready(function() {
			countHires();
			totalOwed();
		});

		function postHires(categoryID) {

			var hireNumber = $("#hires").val();
			var maxRounds = countHires();

			if (hireNumber > maxRounds) {
				hireNumber = maxRounds;
				$("#hires").val(hireNumber);
				alertify.notify("You can only buy out "+maxRounds+" days", "warning");
			}

			$.ajax({

				type : 'POST',
				url  : "judge_hires.mhtml",
				data : {
					school_id   : "<% $school->id %>",
					category_id : categoryID,
					hires       : hireNumber,
					max         : maxRounds,
				},

				success : function(data) {
					if (data.message) {
						alertify.notify(data.message, "custom");
						$("#hired").text(data.reply || 0);
						totalOwed();
					} else if (data.error) {
						alertify.error(data.message);
					} else {
						console.log(data);
						alertify.warning("An error condition was tripped.");
					}
				},
				error : function(data) {
					console.log(data);
					alertify.warning("An error condition was tripped.");
				},
			});
		}

	</script>


<%args>
	$person
	$student_id => undef
	$tourn_id   => undef
	$dbh
	$now
</%args>
<%init>

	my $tourn = Tab::Tourn->retrieve($tourn_id);
	my $student = Tab::Student->retrieve($student_id);

	$m->abort unless $tourn;
	$m->abort unless $student;

	my @entries = $m->comp(
		"/funclib/student_entries.mas",
		student  => $student,
		tourn    => $tourn,
		competed => "yah"
	);

</%init>

	<& "/user/menu.mas",
		whoami => "student",
		person => $person
	&>

	<div class="main">

		<span class="threequarters nospace">
			<h4><% $student->first." ".$student->middle." ".$student->last %></h4>
		</span>

		<span class="quarter nospace rightalign right">
			<a
				class="buttonwhite greentext fa fa-lg fa-home"
				href="/user/student/index.mhtml#history"
			></a>
		</span>

%		foreach my $entry (@entries) {
			<& "show_entry.mas",
				dbh     => $dbh,
				now     => $now,
				entry   => $entry,
				student => $student,
				person  => $person
			&>
%		}
	</div>


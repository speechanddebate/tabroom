<%args> 
	$circuit_id
	$person
	$year => undef
</%args>
<%init>

	my $err;
	my $tz = $person->tz;
	$tz = "UTC" unless $tz;

	my $now = DateTime->now(time_zone => $tz);
	my $foo++ unless $year;

	$year = $now->year unless $year;

	if ($now->month > 6 && $foo)  {
		$year++;
	}

	my $begin = DateTime->new( 
		year  => $year - 1,
		month => 7,
		day   => 01 );

	my $stop = DateTime->new(
		year  => $year,
		month => 6,
		day   => 30 );

	my $circuit=Tab::Circuit->retrieve($circuit_id) if $circuit_id;
	my @all_tourns = $circuit->tourns if $circuit;

	my @tourns;

	foreach my $at (@all_tourns) { 
		push (@tourns, $at) if ($at->start > $begin && $at->end < $stop);
	}

	@tourns = sort {$a->start <=> $b->start } @tourns;

	$m->redirect("/index/index.mhtml?err=No circuit found") unless $circuit;

</%init>

	<& menu.mas, whoami => "places", circuit => $circuit, year => $year  &>

	<div class="main">

		<& /funclib/tablesorter.mas, table => "sortable" &>

		<h2>The <% $circuit->abbr." ".$year." season "%></h2>

		<p>	
			This page allows you to see which events have had final places
			calculated and create them for those that haven't.  Final Places
			are used in the RPI and WUDC rankings.  All other edits must be
			done manually.
		</p>

		<table id="sortable">

			<thead>

			<tr class="yellowrow">

				<th class="smallish">
					Tournament	
				</th>
	
				<th class="smallish">
					Event
				</th>

				<th class="smallish centeralign">
					Result <br />Sets	
				</th>

				<th class="smallish">
					Entries/Values
				</th>

				<th colspan="3" class="nosort"></th>

			</tr>

			</thead>

			<tbody>

%			foreach my $tourn (@tourns) { 
%				my @events = Tab::Event->search( tourn=> $tourn->id);

%				foreach my $event (@events) {

				<tr>

% 					my $start = $tourn->start;
% 					my $end = $tourn->end;
%					$start->set_time_zone($tz);
%					$end->set_time_zone($tz);

					<td class="smallish">
						<div class="padless marno">
							<% $tourn->name %>
						</div>
						<div class="padless marno">
							<% Tab::niceshortdate($start) %>
							<% ($start->day != $end->day) ? " - ".Tab::niceshortdate($end) : "" %>
						</div>
					</td>
	
					</td>

					<td class="smallish">
						<% $event->name %>
					</td>
		
					<td class="smallish centeralign">
%						my @result_set=Tab::ResultSet->search( tourn => $tourn->id, event => $event->id, label => 'Final Places' );
						<% scalar(@result_set) %>						
					</td>

					<td class="smallish centeralign">
%						my @entries=Tab::Entry->search( event => $event->id, dropped => 0, waitlist => 0,  );
%						my @results; if ( scalar(@result_set) > 0) { @results = Tab::Result->search( result_set=> $result_set[0]->id); }
						<% scalar(@entries)."/".scalar(@results) %>
					</td>
					
					<td class=" centeralign">
						<a class="dkblue button" href="/tabbing/publish/generate_results.mhtml?event_id=<% $event->id %>&set_tourn_id=<% $tourn %>&result_type=final&circuit_id=<% $circuit_id %>">Generate Final Places</a>
					</td>
				</tr>
%				}	
%			}

		</table>

		<hr />

		<form action="tourns.mhtml" method="post">
		<input type="hidden" name="circuit_id" size="5" value="<% $circuit->id %>"> 

		<div class="liblrow">

			<span class="third">
				View School Year ending:
			</span>
				
			<span class="third">
				<input type="text" name="year" size="5" value="<% $year %>"> 
			</span>

			<span class="third">
				<input  type="submit" value=" Show Schedule ">
			</span>

		</div>
	
	</div>

<%args>
	$quiz_id
	$person
	$person_settings
	$from => undef
</%args>
<%init>

	my $quiz = eval {
		return Tab::Quiz->retrieve($quiz_id);
	};

	unless ($quiz) {
		$m->comp("/funclib/abort.mas", message => "No valid quiz ID sent");
	}

	my $person_quiz = $person->answers(quiz => $quiz->id)->first;

	my $answers = eval {
		return JSON::decode_json($person_quiz->answers);
	};

</%init>

	<& menu.mas,
		person          => $person,
		person_settings => $person_settings,
		whoami          => "certifications"
	&>

	<div class="main">

		<div class="full centeralign bordertop martopmore">

			<span class="nineteen leftalign odd ltborderbottom nospace">

				<form
					action = "quiz_save.mhtml"
					method = "post"
				>

					<input
						type  = "hidden"
						name  = "quiz_id"
						value = "<% $quiz %>"
					>

					<input
						type  = "hidden"
						name  = "from"
						value = "<% $from %>"
					>

					<input
						type  = "hidden"
						name  = "saveme"
						value = "1"
					>

					<&
						"/funclib/questionnaire.mas",
						person => $person,
						quiz   => $quiz
					&>

					<div class="row flexrow">

						<span class="quarter">
						</span>

						<span class="half semibold bluetext rightalign padvert italic marvertmore">
							Do not show answers/badge on your Tabroom paradigm
						</span>

						<span class="quarter yellowhover padleft">
							<label for="hidden">
								<input
									id    = "hidden"
									type  = "checkbox"
									name  = "hidden"
									value = "1"
									<% $person_quiz && $person_quiz->hidden ? "checked" : "" %>
								>
							</label>
						</span>
					</div>

					<div class="libl marno rightalign">
						<span class="third centeralign padvert">
							<input
								type  = "submit"
								value = "Save Answers"
							>
						</span>
					</div>
				</form>
			</span>
		</div>
	</div>


						<span class="hover half">
							<input type="radio" name="winner_side" value="2" id="2" <% $ARGS{"winner_side"} == 2 ? "checked" : "" %>>
								<% $neg_string %>
						</span>
					</label>

				</span>

			</div>

%			if ($points && $no_lpw < 1) { 
				<div class="yellowrow">

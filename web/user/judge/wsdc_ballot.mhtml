%								}
							</select>
						</td>

%						if ($ranks) { 
							<td class="centeralign"> 
%								unless ($position == 4) { 
									<input tabindex=<% $index++  %> type="number" step="1" size="5" name="<% $position."_".$ballot->id %>_ranks" min="1" max="6" _
											value="<% $ARGS{$position."_".$ballot->id."_ranks"} %>">
%								}
							</td>
%						}

%						if ($points) { 

%							my $multiplier = 1;
%							$multiplier = .5 if $position == 4;

							<td class="centeralign">
								<input class="marless <% $ballot->id %> <%$position."_".$ballot->id%>" type="number" step="<% $step %>" name="<% $position."_".$ballot->id %>_content" size="5" min="<% $min_content_points * $multiplier %>" max="<% $max_content_points * $multiplier %>" value="<% $ARGS{$position."_".$ballot->id."_content"} %>" tabindex=<% $index++ %>
								onchange="total_points(this, <% $ballot->id %>, <% $position %>)">
							</td>

							<td class="centeralign">
								<input class="marless <% $ballot->id %> <%$position."_".$ballot->id%>" type="number" step="<% $step %>" name="<% $position."_".$ballot->id %>_style" size="5" min="<% $min_style_points * $multiplier %>" max="<% $max_style_points * $multiplier %>" value="<% $ARGS{$position."_".$ballot->id."_style"} %>" tabindex=<% $index++ %> 
								onchange="total_points(this, <% $ballot->id %>, <% $position %>)">
							</td>

							<td class="centeralign">
								<input class="marless <% $ballot->id %> <%$position."_".$ballot->id%>" type="number" step="<% $step %>" name="<% $position."_".$ballot->id %>_strategy" size="5" min="<% $min_strategy_points * $multiplier %>" max="<% $max_strategy_points * $multiplier %>" value="<% $ARGS{$position."_".$ballot->id."_strategy"} %>" tabindex=<% $index++ %> 
								onchange="total_points(this, <% $ballot->id %>, <% $position %>)">
							</td>

%						} 

						<td class="centeralign">
							<input type="number" id="<% $position."_".$ballot->id %>" name="<% $position."_".$ballot->id %>" size="5" value="" disabled>
						</td>

					</tr>

%				}

				<tr class="row">

					<td colspan="12" class="rightalign nospace">

						<span class="stronger bigger threequarters rightalign">
							Team Total:
						</span>

						<span class="quarter centeralign">
							<input type="number" id="<% $ballot->id %>_total" name="<% $ballot->id %>_total" size="5" value="" disabled>
						</span>

					</td>

				</tr>


			</table>

%		}

%		if ($wins) { 

			<div class="yellowrow fullpage">

				<span class="third">
					Win goes to:

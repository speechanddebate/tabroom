	sub random_points {

		my ($min, $max, $step) = @_;

		my $mult = 1/$step;

		return unless $max > 0;

		my $points;

		while ($points < $min) {
			$points = int(rand($max * $mult)) / $mult;
		}

		return $points;
	}


<%args>
	$person
	$tourn_id
	$dbh
	$now
</%args>
<%init>

	my $tourn = Tab::Tourn->retrieve($tourn_id);

    unless ($tourn) {
        $m->comp("/funclib/abort.mas", message => "No valid tourn ID sent");
    }

	my $history_sth = $dbh->prepare("

		select
			judge.id, judge.first, judge.last, judge.code,
			judge.obligation, judge.hired,
			category.id categoryId, category.name category_name, category.abbr category_abbr,
			school.id schoolId, school.name school_name,
			no_codes.value no_codes,
			tourn.name tourn_name,
			tourn.start tourn_start,
			COUNT(distinct ballot.panel) as ballot_count,
			COUNT(distinct panel.round) as round_count

		from (judge, category, tourn)

			left join school on judge.school = school.id
			left join category_setting no_codes
				on no_codes.category = category.id
				and no_codes.tag = 'no_codes'

			left join ballot on ballot.judge = judge.id
			left join panel on ballot.panel = panel.id

		where 1=1
			and judge.person = ?
			and judge.category = category.id
			and category.tourn = tourn.id
			and tourn.id = ?
			and tourn.end < NOW()

		group by judge.id
	");

	$history_sth->execute($person->id, $tourn->id);

	my $judges = $history_sth->fetchall_hash();

</%init>

	<& menu.mas, person => $person, whoami => "judge_history" &>

	<div class="main">

%		foreach my $judge (@{$judges}) {

			<div class='full flexrow'>
				<span class='fourfifths'>
					<h4 class="nospace"><% $judge->{tourn_name} %></h4>`
				</span>
				<span class='fifth rightalign'>
					<h5><% substr($judge->{tourn_start}, 0, 4) %></h5>`
				</span>
			</div>

			<div class="flexrow padleft padtop ltbluebordertop">
				<span class="quarter padleft semibold">
					Judging For
				</span>
				<span class="quarter">
					<% $judge->{school_name} || "Volunteer/Hire" %>
				</span>
			</div>

%			if ($judge->{code} &! $judge->{no_codes}) {
				<div class="flexrow padleft">
					<span class="quarter padleft semibold">
						Judge Code
					</span>
					<span class="quarter">
						<% $judge->{code} %>
					</span>
				</div>
%			}

			<div class="flexrow padleft">
				<span class="quarter padleft semibold">
					Division
				</span>
				<span class="quarter">
					<% $judge->{category_name} %>
					(<% $judge->{category_abbr} %>)
				</span>
			</div>

%			if ($judge->{obligation} || $judge->{hired}) {
				<div class="flexrow padleft">
					<span class="quarter padleft semibold">
						Rounds
					</span>
					<span class="quarter">
						<% $judge->{obligation} ? $judge->{obligation}." for school " : "" %>
						<% $judge->{hired} ? $judge->{hired}." hired " : "" %>
					</span>
				</div>
%			}

			<div class="flexrow padleft ltblueborderbottom padbottommore marbottom">
				<span class="quarter padleft semibold">
					Rounds judged
				</span>
				<span class="quarter">
					<% $judge->{round_count} %>
					<% $judge->{round_count} != $judge->{ballot_count} ? "(".$judge->{ballot_count}." flights)" : "" %>
				</span>
			</div>

<%perl>

			my $obj = Tab::Judge->retrieve($judge->{id});

			my @upcoming =  $m->comp("/funclib/judge_panels.mas",
				judge     => $obj,
				published => 1
			);

			if (@upcoming) {
</%perl>

				<span class='threequarters nospace'>
					<h4>Assigned Rounds</h4>
				</span>

				<span
					id    = "judgetourn_buttonarea"
					class = 'rightalign quarters nospace'
				></span>

				<& /funclib/tablesorter.mas, table => "judgetourn" &>

				<table id="judgetourn">

					<thead>

					<tr class="yellowrow">

						<th class="smaller">
							Round
						</th>

						<th class="smaller">
							Room
						</th>

						<th class="smaller">
							Starts
						</th>

						<th class="smaller">
							Entries
						</th>

						<th class="smaller">
						</th>

					</tr>

					</thead>

					<tbody>

%					foreach my $panel (sort {$a->name <=> $b->name} @upcoming) {

<%perl>
						my $round = $panel->round;
						next unless $round;

						my $event = $round->event;
						next unless $event;

						my @entries = sort {
							$a->side <=> $b->side
						} $m->comp('/funclib/panel_entries.mas', panel => $panel);

						my @ballots = $panel->ballots;

						my $chair;
						foreach my $ballot (@ballots) {
							$chair++ if $ballot->chair && $ballot->judge->id == $obj->id;
						}

						my $aff_string = $event->setting("aff_label");
						my $neg_string = $event->setting("neg_label");
						$aff_string = "Aff" unless $aff_string;
						$neg_string = "Neg" unless $neg_string;

</%perl>
						<tr>

							<td class="smallish">
								<a
									class="white"
									href="/index/tourn/postings/round.mhtml?tourn_id=<% $tourn->id %>&round_id=<% $round->id %>"
								>
									<% $event->abbr %> <% $round->realname %>
								</a>

%								if ($round->flighted > 1) {
									<a class="white"
										href="/index/tourn/postings/round.mhtml?tourn_id=<% $tourn->id %>&round_id=<% $round->id %>"
									>
										Flight <% $panel->flight %>
									</a>
%								}

							</td>

							<td class="smallish">
								<% $panel->room ? $panel->room->name : "No Room Listed" %>
							</td>

							<td class="smallish">
								<% Tab::nicetime($round->timeslot->start->set_time_zone($tourn->tz)) %>
							</td>

							<td class="smallish">
%								foreach my $entry (@entries) {

									<div>
										<span class="quarter">
%											if ($event->type eq "wudc") {
												<% $entry->speaks == 1 ? "1G" : "" %>
												<% $entry->speaks == 2 ? "1O" : "" %>
												<% $entry->speaks == 3 ? "2G" : "" %>
												<% $entry->speaks == 4 ? "2O" : "" %>
%											} else {
												<% $entry->side ? $entry->side == 1 ? $aff_string : $neg_string : "" %>
%											}
										</span>

										<span class="threequarter nowrap">
%											if ($event->type eq "wudc" || $event->type eq "speech") {
												<% $entry->code %>
%											} else {
												<% $entry->name %>
%											}
										</span>
									</div>
%								}

							</td>

						</tr>

%					}

				</table>
%			}

%			my @done =  $m->comp("/funclib/judge_panels.mas", judge => $obj, post_primary => 1);

%			if (@done) {

				<& /funclib/tablesorter.mas, table => "judgehistory" &>

				<div class="full flexrow">
					<span class="twothirds">
						<h5>Entered Results</h5>
					</span>

					<span
						class="third rightalign"
						id="judgehistory_buttonarea"
					>
					</span>
				</div>

				<table id="judgehistory">

					<thead>
						<tr class="yellowrow">
							<th class="smaller">
								Rnd
							</th>

							<th class="smaller">
								Entry
							</th>

							<th class="smaller">
								Results
							</th>

							<th class="smaller">
								Speakers (Debate)
							</th>
						</tr>
					</thead>

				<tbody>

<%perl>
				my %used;

				foreach my $done (sort {$a->id cmp $b->id} @done) {

					next unless $done->round;
					next unless $done->round->event;

					my $event = $done->round->event;

					my @entries = $m->comp(
						'/funclib/panel_entries.mas',
						panel => $done);

					my @scores = $m->comp(
						'/funclib/panel_scores.mas',
						panel => $done,
						judge => $obj
					);

					@scores = $m->comp(
						'/funclib/panel_scores.mas',
						panel => $done
					) if $event->type eq "wudc";

					my %scores_by_recipient =();

					foreach my $score (@scores) {
						push @{$scores_by_recipient{$score->student->id}}, $score
							if $score->student
							&& $score->student->id;
					}
</%perl>
					<tr>

						<td
							class     = "smallish"
							data-text = "<% $event->abbr %> <% $done->round->name %>"
						>
							<span class="half semibold">
								<% $event->abbr %>
							</span>
							<span class="half">
								<% $done->round->realname %>
								<% $done->round->flighted > 1 ? "Flight ".$done->flight : "" %>
							</span>
						</td>

						<td class="smallish nowrap">

%							foreach my $entry (@entries) {

								<div class="full nospace padvertless flexrow">
									<span class="quarter nospace padleft">
%										if ($event->type eq "wudc") {
											<% $entry->speaks == 1 ? "1G" : "" %>
											<% $entry->speaks == 2 ? "1O" : "" %>
											<% $entry->speaks == 3 ? "2G" : "" %>
											<% $entry->speaks == 4 ? "2O" : "" %>
%										} elsif ($entry->side) {
											<% $entry->side ? $entry->side == 1 ? "Aff" : "Neg" : "" %>
%										} elsif ($entry->speaks) {
											<% Lingua::EN::Numbers::Ordinate::ordinate($entry->speaks) %>
%										}
									</span>

									<span class="threequarter nospace nowrap padleft">
%										if ($event->type eq "wudc") {
											<% $entry->code %>
%										} else {
											<% $entry->code %>
%										}
									</span>
								</div>
%							}
						</td>

						<td class="smallish nowrap">

%							foreach my $entry (@entries) {
								<div class="full nospace padvertless flexrow">
<%perl>
									foreach my $score (@scores) {

										next if $score->student > 0;
										next unless $score->ballot->entry->id == $entry->id;

										if ($entry->event->type eq "wudc") {
</%perl>
											<span class="third flexgrow nospace padleft">
												<% $score->tag eq "rank" ? 4 - $score->value : "" %> pts
											</span>
%										} else {
											<span class="third flexgrow nospace padleft">
												<% $score->tag eq "winloss" ? $score->value ? "W" : "L" : "" %>
												<% $score->tag eq "rank" ? $score->value : "" %>
												<% $score->tag eq "point" ? $score->value : "" %>
											</span>
%										}
%									}
								</div>
%							}
						</td>

						<td class="smallish nowrap">

%							foreach my $entry (@entries) {

								<div>

<%perl>
								foreach my $student ($entry->students) {

									my @scores = @{$scores_by_recipient{$student->id}}
										if $student->id
										&& $scores_by_recipient{$student->id};

									if (@scores) {
</%perl>

										<span class="twothird nowrap">
											<% $student->last %>:
										</span>

										<span class="third">
%											my $notfirst;
%											foreach my $score (@scores) {
												<% $notfirst++ ? "-" : "" %>
												<% $score->tag eq "winloss" ? $score->value ? "W" : "L" : "" %>
												<% $score->tag eq "rank" ? $score->value : "" %>
												<% $score->tag eq "point" ? $score->value : "" %>
%											}
										</span>

<%perl>
									} elsif (
										$done->round->event->type ne "speech"
										&& ($done->round->type eq "elim"
											|| $done->round->type eq "final"
											|| $done->round->type eq "runoff"
										)
									) {

										unless ($used{$done->id}++) {

											my ($winner, $side, $result) =
												$m->comp("/funclib/panel_winner.mas",
													panel => $done
											);
</%perl>

											<% $winner
												? $winner->code
												: ""
											%> (<% $winner ? $winner->name : "" %>) wins <% $result %>

%										}
%									}
%								}

								</div>

%							}

						</td>

					</tr>

%				}

				</table>
%			}

%		}

	</div>


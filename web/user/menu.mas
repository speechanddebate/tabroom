							class=" <% ($ARGS{$key} == $cid )? "dk" : "" %>blue full flexrow"
							href="/user/chapter/tournaments.mhtml?<% $key %>_id=<% $cid %>"
						>
%							if ($menus{$key}{$cid}{"extra"}) {

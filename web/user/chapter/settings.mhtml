<%args>
	$chapter_id
	$person
	$person_settings
	$session
	$naudl_err => undef
</%args>
<%init>

	my $chapter = Tab::Chapter->retrieve($chapter_id);

	$m->comp("/user/chapter/auth.mas",
		chapter => $chapter,
		person  => $person,
		session => $session
	);

	$m->abort unless $chapter;

	my @regions = $m->comp(
		"/funclib/chapter_regions.mas",
		chapter => $chapter
	);

	my %region_yes = map {$_->id => 1} @regions;
	my %chapter_settings = $chapter->all_settings;

</%init>

    <script type="text/javascript">

		$( document ).ready(function() {
			muricaOrCommies();
			dataShow();
			showNaudl();
			return;
		});

		function showNaudl() {

			if ($("#naudl").prop("checked")) {
				$("#naudl_league").removeClass("hidden");
			} else {
				$("#naudl_league").addClass("hidden");
			}
			zebraRows();
			return;
		}

		function dataShow() {

			var value = $("#level").val();

			$(".elementary").addClass("hidden");
			$(".middle").addClass("hidden");
			$(".highschool").addClass("hidden");
			$(".university").addClass("hidden");

			$("."+value).removeClass("hidden");

			return;

		}

		function muricaOrCommies() {

			var country = $("#country").val();

			$('.state').addClass('hidden');
			$('.statename').addClass('hidden');
			$('.zip').addClass('hidden');
			$('.postal').addClass('hidden');
			$('.US').addClass('hidden');

			if (country === "US") {
				$('.state').removeClass('hidden');
				$('.zip').removeClass('hidden');
				$('.US').removeClass('hidden');
			} else {
				$('.postal').removeClass('hidden');
			}

			if (
				country === "CA"
				|| country === "AU"
				|| country === "GB"
				|| country === "DE"
			){
				$('.state').removeClass('hidden');
			}

			$('.'+country).removeClass('hidden');

		}

    </script>


	<& "/user/menu.mas",
		chapter         => $chapter,
		person          => $person,
		person_settings => $person_settings,
	&>

	<div class="main">

		<h3><% $chapter->name %></h3>

		<& tabbar.mas,
			chapter => $chapter,
			person  => $person,
			session => $session,
			whoami  => "settings"
		&>

		<h4>Institution Settings</h4>

%		unless ($chapter->level) {
			<div class="dkred padmuchmore marleft marright centeralign marbottommore">
				<h6>
					Please select your institution's level before continuing
				</h6>
			</div>
%		}

		<form
			action = "save.mhtml"
			method = "post"
		>

		<input
			type  = "hidden"
			name  = "chapter_id"
			value = "<% $chapter->id %>"
		>

		<span class="pagehalf">
			<div class="row flexrow">
				<span class="third padleft padright">
					Shorthand Name
				</span>

				<span class="twothirds padleft padrights padleft">
					<input
						type  = "text"
						name  = "chapter_name"
						value = "<% $chapter->name %>">
				</span>
			</div>

			<div class="row flexrow">
				<span class="third padleft padright">
					Formal Name
				</span>

				<span class="twothirds padleft padright">
%					if ($chapter->nsda) {

%						unless ($chapter->formal) {
%							$chapter = $m->comp("/funclib/nsda/chapter_sync.mas", chapter => $chapter, short => 1);
%						}

						<span
							class = "semibold yellowhover full"
							style = "padding-top: 10px; padding-bottom: 10px;"
							title = "Can be changed in your NSDA Membership"
						><% $chapter->formal %></span>

%					} else {
						<input
							type  = "text"
							name  = "formal"
							<% $chapter->nsda ? "disabled" : "" %>
							value = "<% $chapter->formal %>"
						>
%					}
				</span>
			</div>

			<div class="row flexrow">
				<span class="third padleft padright">
					Level
				</span>

				<span class="twothirds padleft padright <% $chapter->level ? "" : "dkred" %> ">
					<select
						name     = "level"
						id       = "level"
						onChange = "dataShow()"
						class    = "fixedmed">

						<option value = ""></option>

						<option <% $chapter->level eq "university" ? "selected" : "" %>
							value="university">College/University</option>

						<option <% $chapter->level eq "highschool" ? "selected" : "" %>
							value="highschool">High School/Secondary</option>

						<option <% $chapter->level eq "middle" ? "selected" : "" %>
							value="middle">Middle/Junior High</option>

						<option <% $chapter->level eq "elementary" ? "selected" : "" %>
							value="elementary">Elementary</option>

						<option <% $chapter->level eq "homeschool" ? "selected" : "" %>
							value="homeschool">Home School</option>

						<option <% $chapter->level eq "independent" ? "selected" : "" %>
							value="independent">Independent</option>

						<option <% $chapter->level eq "private" ? "selected" : "" %>
							value="private">Club/Private Org</option>

					</select>
				</span>

			</div>

			<div class="row flexrow">
				<span class="third padleft padright">
					Street Address
				</span>

				<span class="twothirds padleft padright">
					<input
						type  = "text"
						name  = "street"
						value = "<% $chapter->street %>"
					>
				</span>
			</div>

			<div class="row flexrow">
				<span class="third padleft padright">
					City
				</span>

				<span class="twothirds padleft padright">
					<input
						type  = "text"
						name  = "city"
						value = "<% $chapter->city %>"
					>
				</span>
			</div>

			<div class="row state flexrow">

				<span class="third padleft padright">
					<span class="statename US AU DE">
						State
					</span>
					<span class="statename GB">
						Home Country
					</span>
					<span class="statename CA">
						Province
					</span>
				</span>

				<span class="twothirds padleft padright">
					<select name="state" class="fixedmed chosen">
						<& "/funclib/state_select.mas", state => $chapter->state &>
					</select>
				</span>

			</div>

			<div class="row flexrow">

				<span class="third padleft padright">
					Country
				</span>

				<span class="twothirds padleft padright">
					<select
						id="country"
						name="country"
						onChange="muricaOrCommies()"
						class="fixedmed chosen">
						<& /funclib/country_select.mas, country => $chapter->country &>
					</select>
				</span>

			</div>

			<div class="row zip hidden flexrow">

				<span class="third padleft padright">
					ZIP
				</span>

				<span class="twothirds padleft padright">
					<input
						type  = "text"
						name  = "zip"
						value = "<% sprintf("%05d", $chapter->zip) %>"
					>
				</span>

			</div>

			<div class="row postal hidden">

				<span class="third padleft padright">
					Postal
				</span>

				<span class="twothirds padleft padright">
					<input
						type  = "text"
						name  = "postal"
						value = "<% $chapter->postal %>">
				</span>

			</div>

		</span>

		<span class="pagehalf">

			<div class="row flexrow">

				<span class="third padleft padright">
					Coach names
				</span>

				<span class="twothirds padleft padright">
					<input
						type  = "text"
						name  = "coaches"
						value = "<% $chapter_settings{"coaches"} %>">
				</span>

			</div>

			<label for="self_prefs">
				<div class="row hover">
					<span class="threequarters">
						Entries may enter their own prefs
					</span>

					<span class="quarter centeralign">
						<input
							type  = "checkbox"
							id    = "self_prefs"
							name  = "self_prefs"
							value = "1"
							<% $chapter_settings{"self_prefs"} ? 'checked="checked"' : "" %>
						>
					</span>
				</div>
			</label>

			<label for="coach_ballot_review">
				<div class="row hover">
					<span class="threequarters">
						Hide ballots without coach approval
					</span>

					<span class="quarter centeralign">
						<input
							type  = "checkbox"
							id    = "coach_ballot_review"
							name  = "coach_ballot_review"
							value = "1"
							<% $chapter_settings{"coach_ballot_review"} ? 'checked="checked"' : "" %>
						>
					</span>
				</div>
			</label>

%			if ($person->site_admin || $session->su) {

				<div class="row highschool university middle">

					<span class="fourfifths highschool middle">
						NSDA School ID
					</span>

					<span class="fourfifths university">
						Pi Kappa Delta ID
					</span>

					<span class="fifth">
						<input
							type  = "text"
							class = "thin"
							name  = "nsda"
							value = "<% $chapter->nsda %>">
					</span>

				</div>

%			} elsif ( $chapter->nsda ) {

				<div class="row highschool university middle">

					<span class="fourfifths middle">
						NSDA School ID
					</span>

					<span class="fourfifths highschool">
						NSDA School ID
					</span>

					<span class="fourfifths university">
						Pi Kappa Delta ID
					</span>

					<span class="fifth">
						<input
							type  = "text"
							class = "thin"
							value = "<% $chapter->nsda %>"
						>
					</span>

				</div>
%			}

			<div class="row highschool US">

				<span class="fourfifths">
					Nat'l Center for Education Statistics ID
				</span>

				<span class="fifth">
					<input
						type  = "text"
						name  = "nces"
						class = "thin"
						value = "<% $chapter_settings{"nces"} %>">
				</span>

			</div>

			<div class="row highschool US">

				<span class="fourfifth">
					College Board (CEEB) Number:
				</span>

				<span class="fifth">
					<input
						type  = "text"
						class = "thin"
						name  = "ceeb"
						value = "<% $chapter_settings{"ceeb"} %>"
					>
				</span>

			</div>

			<div class="row hover highschool middle elementary US">
				<label for="naudl">
					<span class="threequarters">
						NAUDL Affiliated School
					</span>

					<span class="quarter centeralign">
						<input
							type    = "checkbox"
							id      = "naudl"
							name    = "naudl"
							class   = "padmore"
							onclick = "showNaudl()"
							value   = "1"
							<% $chapter_settings{"naudl"} ? 'checked="checked"' : "" %>>
					</span>
				</label>
			</div>

			<div
				id    = "naudl_league"
				class = "row <% $naudl_err ? "dkred" : "" %>"
			>
				<span class="third padleft padright">
					NAUDL League
				</span>

				<span class="twothirds padleft padright centeralign">

					<select
						name  = "naudl_league"
						class = "fixedmed"
					>

						<option value="">Please Choose One</option>

%						foreach my $ns (Tab::CircuitSetting->search( tag => "naudl")) {

%							foreach my $region ($ns->circuit->regions) {
								<option
									value="<% $region->id %>"
									<% $region_yes{$region->id} ? 'selected="selected"' : "" %>
								><% $region->name %> </option>
%							}

%						}

					</select>
				</span>
			</div>

			<div class="row university">
				<span class="fourfifth">
					IPEDS ID:
				</span>

				<span class="fifth">
					<input
						type  = "text"
						class = "thin"
						name  = "ipeds"
						value = "<% $chapter_settings{"ipeds"} %>"
					>
				</span>
			</div>
		</span>

		<div class="pagefull libl rightalign padvert marno">
			<span class="third padleft padright centeralign nospace">
				<input type="submit" value="Save Chapter Details ">
			</span>
		</div>

		</form>

	</div>



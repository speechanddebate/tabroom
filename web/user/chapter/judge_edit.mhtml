<%args>
	$person
	$chapter_id       => undef;
	$chapter_judge_id => undef
	$newbie           => undef
</%args>
<%init>

	my $chapter_judge = Tab::ChapterJudge->retrieve($chapter_judge_id) if $chapter_judge_id;

	my $cj_person;

	if ($chapter_judge && $chapter_judge->person) {
		$cj_person = $chapter_judge->person;
	}

	my $chapter = Tab::Chapter->retrieve($chapter_id) if $chapter_id;

	$chapter = $chapter_judge->chapter if $chapter_judge && not defined $chapter;

	unless ($chapter) {
		my $msg = "You have no defined school or chapter.  Please select one at right before continuing";
		$m->redirect("/user/home.mhtml?msg=$msg");
	}

</%init>

	<div class="main">

		<h2><% $chapter->name %> Judge Roster</h2>

		<& tabbar.mas,
			chapter => $chapter,
			person  => $person,
			whoami  => "judges"
		&>

%		if ($chapter_judge) {
			<h4>Edit <% $chapter_judge->first." ".$chapter_judge->last %></h4>
% 		} else {
			<h4>Create new Judge</h4>
% 		}

%		if ($newbie) {

			<p>You now should add the judge names for your team into your
			judging roster by adding their information below.</p>

			<p>You only have to add each judge once for their entire
			forensics career; you can then look up a record of how
			many times a given judge has judged, where, in what divisions
			and so on.</p>

			<p>Begin by adding the first judge below.</p>

			<hr />
%		}

%		unless ($chapter_judge && $cj_person && $cj_person->id) {

			<table>

				<tr class="row">

					<td>
						<form action="judge_search.mhtml" method="post">

						<input
							type  = "hidden"
							name  = "chapter_id"
							value = "<% $chapter->id %>"
						>

						<input
							type  = "hidden"
							name  = "chapter_judge_id"
							value = "<% $chapter_judge_id %>"
						>

						<% ($chapter_judge)
							? "Link ".$chapter_judge->first." ".$chapter_judge->last." to "
							: "Find judge w/"
						%> an tabroom.com account:
					</td>

					<td>
						<input
							type        = "email"
							name        = "email"
							size        = "32"
							placeholder = "Search by email address"
						>
					</td>

					<td>
						<input
							type  = "submit"
							class = "thin"
							value = "Search"
						>
						</form>
					</td>
				</tr>

			</table>

			<h4><% ($chapter_judge) ? "Edit Details" : "Or, Create a new judge (without Tabroom.com account)" %></h4>

%		}


		<table>

%			if ($cj_person) {

				<tr class="row">

					<td class="rightalign semibold bluetext">
						<span class="fa fa-lg fa-check greentext inline"></span>
						Linked to Tabroom account
						<br />
						belonging to <% $cj_person->first %>
						<% $cj_person->last %>
					</td>

					<td>
						<span class="fourfifths padless marno">
							<div class="full nospace padvertless">
								Email:
								<span class="halfspacer"></span>
								<a
									class = "padmore semibold bluetext link-underline hover padvert"
									href  = "mailto:<% $cj_person->email %>"
								>
									<% $cj_person->email %>
								</a>
							</div>

							<div class="full nospace">
								<span class="half nospace">
									Phone:
									<span class="halfspacer"></span>
									<% $cj_person->phone ? Tab::phoneme($cj_person->phone) : "" %>
								</span>
								<span
									class="quarter bigger redtext"
									title="User's account is set NOT to get emails or blasts"
								>
									<% $cj_person->no_email ? "NO EMAILS SET" : "" %>
								</span>
								<span
									class="quarter bigger redtext"
									title="User has not specified a cell provider and will get no text blasts"
								>
									<% $cj_person->provider ? "" : "NO BLASTS" %>
								</span>
							</div>
						</span>

						<span class="fifth centeralign padless marno">
							<a
								class="buttonwhite redtext hover invert"
								href="judge_unlink.mhtml?chapter_judge_id=<% $chapter_judge->id %>"
							>
								Unlink
							</a>
						</span>
					</td>

				</tr>
%			}

			<tr class="row">
				<td class="rightalign">
					First
				</td>

				<td>
					<form action="judge_save.mhtml" method="post">

					<input
						type  = "hidden"
						name  = "chapter_judge_id"
						value = "<% ($chapter_judge) ? $chapter_judge->id : "" %>"
					>

					<input
						type  = "hidden"
						name  = "chapter_id"
						value = "<% $chapter->id %>"
					>

					<input
						type  = "text"
						name  = "first"
						size  = "32"
						value = "<% ($chapter_judge) ? $chapter_judge->first : "" %>"
					>
				</td>
			</tr>

			<tr class="row">
				<td class="rightalign">
					Middle
				</td>

				<td>
					<input
						type  = "text"
						size  = "32"
						name  = "middle"
						value = "<% ($chapter_judge) ? $chapter_judge->middle : "" %>"
					>
				</td>
			</tr>

			<tr class="row">
				<td class="rightalign">
					Last
				</td>

				<td>
					<input
						type  = "text"
						name  = "last"
						size  = "32"
						value = "<% ($chapter_judge) ? $chapter_judge->last : ""%>"
					>
				</td>
			</tr>

%			if ($cj_person) {


%			} else {

				<tr class="row">
					<td class="rightalign">
						Phone:
					</td>

					<td>
						<input
							type  = "text"
							name  = "phone"
							size  = "32"
							value = "<% $chapter_judge &&  $chapter_judge->phone
								? Tab::phoneme($chapter_judge->phone)
								: ""
							%>"
						>
					</td>
				</tr>

				<tr class="row">
					<td class="rightalign">
						Email:
					</td>

					<td>
						<input
							type  = "text"
							name  = "email"
							size  = "32"
							value = "<% $chapter_judge &&  $chapter_judge->email
										? $chapter_judge->email
										:  ""
							%>"
						>
					</td>
				</tr>
%			}

			<tr class="row">
				<td class="rightalign">
					Gender:
				</td>

				<td class="nospace">
					<label for="female">
						<span class="sixth hover padmore">
							<input type="radio" name="gender" value="F"  id="female"
								<% ($chapter_judge) ? ($chapter_judge->gender eq "F" ) ? "checked" : "" : "" %>> F
						</span>
					</label>
					<label for="male">
						<span class="sixth hover padmore">
							<input type="radio" name="gender" value="M" id="male"
								<% ($chapter_judge) ? ($chapter_judge->gender eq "M") ? "checked" : "" : "" %>> M
						</span>
					</label>
					<label for="nonbinary">
						<span class="fifth hover padmore">
							<input type="radio" name="gender" value="NB"  id="nonbinary"
								<% ($chapter_judge) ? ($chapter_judge->gender eq "NB" ) ? "checked" : "" : "" %>> Non Binary
						</span>
					</label>
					<label for="other">
						<span class="fifth hover padmore">
							<input type="radio" name="gender" value="O" id="other"
								<% ($chapter_judge)
									? ($chapter_judge->gender eq "O" )
										? "checked"
										: ""
									: ""
								%>> Other
						</span>
					</label>
					<label for="noanswer">
						<span class="fifth hover padmore">
							<input type="radio" name="gender" value="X" id="noanswer"
								<% ($chapter_judge) ? ($chapter_judge->gender eq "X" ) ? "checked" : "" : "" %>> No Answer
						</span>
					</label>
				</td>
			</tr>

			<tr class="row">
				<td class="rightalign">
					Notes
				</td>

				<td>
					<span class="twothird padless marno">
						<input
							type  = "text"
							size  = "64"
							name  = "notes"
							value = "<% ($chapter_judge) ? $chapter_judge->notes : "" %>"
						>
					</span>
					<span class="smallish third rightalign padless marno">
%						if ($chapter_judge && $chapter_judge->notes) {
							last edited <% Tab::shortdate($chapter_judge->notes_timestamp) %>
%						}
					</span>
				</td>

			</tr>

			<tr class="row">
				<td class="rightalign">
					Dietary
				</td>

				<td>
					<input
						type="text"
						size="64"
						name="diet"
						value="<% ($chapter_judge) ? $chapter_judge->diet : "" %>"
					>
				</td>
			</tr>

		</table>

		<div class="liblrow rightalign">
			<span class="centeralign third">
				<input
					type  = "submit"
					name  = "twitch"
					value = "Save Judge"
				>
			</span>
		</div>

		</form>

	</div>

	<div class="menu">

		<div class="sidenote">

			<h4>Judges</h4>

			<a class = "yellow block"
				href = "judge_edit.mhtml?chapter_id=<% $chapter->id %>"
			>
				Add a new judge
			</a>

			<a class = "yellow block"
				href = "judges.mhtml?chapter_id=<% $chapter->id %>"
			>
				Return to Judge Roster
			</a>

		</div>

<%perl>

		if ($chapter_judge) {

			if ($cj_person && $cj_person->nsda) {

				$m->comp("/funclib/nsda/member_sync.mas",
					chapter_judge => $chapter_judge
				);

				my %person_settings = $cj_person->all_settings();

				if ($person_settings{'nsda_paid'}) {

</%perl>
					<div class="sidenote">

						<h4>NSDA Membership</h4>

						<div class="row padvertless">
							<span class="third semibold bluetext">
								Member ID
							</span>

							<span class="twothirds">
								#<% $cj_person->nsda %>
							</span>
						</div>


						<div class="row padvertless">
							<span class="third semibold bluetext">
								Points
							</span>

							<span class="twothirds">
								<% commify($person_settings{"nsda_points"}) %>
							</span>
						</div>

						<div class="row padvertless">
							<span class="third semibold bluetext">
								Degree
							</span>

							<span class="twothirds">
								<% $person_settings{"nsda_degree"} %>
							</span>
						</div>
					</div>
%				}
%			}

			<div class="sidenote">

				<h4>Recent Judging </h4>
<%perl>

				my @recents = Tab::Judge->search_where(
						{ chapter_judge => $chapter_judge->id,
						  id  => { '!=', "0"}  	},
						{ order_by => "id DESC",
						  limit_dialect => 'LimitOffset',
						  limit => 10 }
					);

				foreach my $judge (@recents) {
					next unless $judge->category;
					next unless $judge->category->tourn;
</%perl>
					<a class="blue nowrap block">
						<% $judge->category->abbr %> at <% $judge->category->tourn->name %>
					</a>
%				}

			</div>
%		}

		<& /user/menu.mas, chapter => $chapter, person => $person, nodiv => 1 &>

	</div>

<%perl>
	sub commify {
		my $text = reverse $_[0];
		$text =~ s/(\d\d\d)(?=\d)(?!\d*\.)/$1,/g;
		return scalar reverse $text;
	}
</%perl>

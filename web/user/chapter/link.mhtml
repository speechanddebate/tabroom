<%args>
	$person
	$perms
	$target_id      => undef
	$property_name  => undef
	$flag           => undef
</%args>
<%init>

	$m->clear_buffer();
	$r->content_type('application/json');

	unless ($target_id) { 
		$m->print('{ "error": true, "message": "No competitor ID sent"}');
		$m->abort();
	}

	unless ($property_name) { 
		$m->print('{ "error": true, "message": "No property to change sent"}');
		$m->abort();
	}

	my $student = Tab::Student->retrieve($target_id);

	unless ($student) { 
		$m->print('{ "error": true, "message": "No competitor found for ID '.$target_id.'"}');
		$m->abort();
	}

	my $message;
	
	if ($property_name eq "accept" && $student->person_request > 0) { 
		$student->person($student->person_request);
		$message = "Link allowed from ".$student->first." ".$student->last." to account ".$student->person_request->email;
	}

	unless ($message) { 
		$message = "Link from ".$student->first." ".$student->last." to account ".$student->person_request->email." DENIED";
	}

	$student->person_request(0);
	$student->update();

	$m->print('{ 
		"error"   : false,
		"message" : "'.$student->first." ".$student->last.': '.$message.'"
	}');

	$m->abort();

</%init>

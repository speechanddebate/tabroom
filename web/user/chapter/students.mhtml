<%args>
	$account
	$chapter_id => undef
	$show_grads => undef
	$err => undef
	$sort_by => "last"
	$from => undef
	$tourn
</%args>
<%init>

	my $chapter;

	unless ($chapter_id) {

		my @chapters = $account->chapters;

		foreach my $chapter (@chapters) { 
			Tab::debuglog("Found ".$chapter->name." chapter ".$chapter->id);
		}

		$chapter = shift @chapters if scalar @chapters == 1;

		unless ($chapter) { 
			my $err = "You have not chosen a chapter.  Please choose at right";
			$m->redirect("/user/home.mhtml?err=$err");
		}

	} else { 
		$chapter = Tab::Chapter->retrieve($chapter_id);
	}

	my @students;
	if ($show_grads) { 
		@students = $chapter->students;
	} else {
		@students = $chapter->students( retired => 0 );
	}

	@students = sort {$a->last cmp $b->last} @students;
	@students = sort {$a->grad_year <=> $b->grad_year} @students if $sort_by eq "grad_year";
	@students = sort {$b->novice <=> $a->novice } @students if $sort_by eq "novice";
	@students = sort {$b->retired <=> $a->retired } @students if $sort_by eq "retired";

    my @student_requests = Tab::Student->search_where({ 
        chapter => $chapter->id,
        acct_request => { ">", 0 } 
    }); 

	my $message;
	my $switch; 

</%init>

	<div class="left huge">

		<h2><% $chapter->name %>: Students</h2>

		<& tabbar.mas, chapter => $chapter, whoami => "students" &> 

%		if (@student_requests) { 

			<h4>Students requesting online access</h4>

			<p>The following accounts have asked to be linked to these students.
			Only permit this if you know the account is the same person as the
			students; otherwise online balloting and other access may be given
			incorrectly</p>
			
			<& /funclib/tablesorter.mas, table => "requests" &>

			<table width="100%" id="requests" cellpadding="4" cellspacing="1">

				<thead>
				
				<tr class="yellowrow">

					<th>
						Student
					</th>

					<th>
						Requestor
					</th>

					<th colspan="2">
					</th>

				</tr>
				</thead>
				<tbody>
						
%				foreach my $request (@student_requests) { 
					
					<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">
						
						<td>
							<% $request->first." ".$request->last %>
						</td>

						<td>
							<% $request->acct_request->first %>
							<% $request->acct_request->last %>
							<a href="mailto:<% $request->acct_request->email %>">
							(<% $request->acct_request->email %>)
							</a>
						</td>

						<td class="centeralign">
							<a class="dkgreen block" href="permit.mhtml?student_id=<% $request->id %>">
								PERMIT
							</a>
						</td>

						<td class="centeralign">
							<a class="dkred block" href="deny.mhtml?student_id=<% $request->id %>">
								DENY
							</a>
						</td>

					</tr>
%				}
				
				</tbody>

			</table>
	
%		}


		<& /funclib/tablesorter.mas, table => "students" &>

		<h4>
			<% scalar @students %> Students
		</h4>

		<table width="100%" cellpadding="3" cellspacing="1" id="students">

			<thead>
			<tr class="yellowrow">

				<th class="smaller">
				</th>

				<th class="smaller">
					Last
				</th>

				<th class="smaller">
					First
				</th>

				<th class="smaller nowrap" width="60px">
					Grad
				</th>

				<th class="smaller">
					Account
				</th>

				<th class="smaller nowrap" width="60px">
					Novice
				</th>

				<th class="smaller">
					Retire
				</th>
			</tr>

			</thead>
			<tbody>

% 			foreach my $student (@students) { 

				<tr>

					<td>
						<a id="<% $student->id %>"></a>
						<a class="dkgreen smallish block" href="/user/student/index.mhtml?student_id=<% $student->id %>&from=<% $student->id %>">
							Record
						</a>
					</td>

					<td class="smallish">
						<a class="white block" href="student_edit.mhtml?student_id=<% $student->id %>&from=<% $student->id %>">
							<% $student->last %>
						</a>
					</td>

					<td class="smallish">
						<a class="white block" href="student_edit.mhtml?student_id=<% $student->id %>&from=<% $student->id %>">
							<% $student->first %>
						</a>
					</td>

					<td class="centeralign smallish">
						<% $student->grad_year %>
					</td>

					<td class="smallish">
						<a class="white block" href="mailto:<% ($student->account) ? $student->account->email : "" %>">
						<% ($student->account) ? $student->account->email : "" %>
						</a>
					</td>

					<td class="centeralign smaller">
						<a class="<% ($student->novice) ? "blue" : "yellow" %> block plain" href="student_novice.mhtml?student_id=<% $student->id %><% scalar (@students) > 20 ? "&many=#".$student->id : "" %>">
							<% ($student->novice) ? "NOVICE" : "VARSITY" %>
						</a>
					</td>

%					if ($show_grads) { 
							
						<td class="centeralign">
							<a class="<% ($student->retired) ? "dkred" : "dkgreen" %> block" href="student_retire.mhtml?student_id=<% $student->id %><% scalar (@students) > 20 ? "&many=#".$student->id : "" %>" >
								<% ($student->retired) ? "YES" : "NO" %> 
							</a>
						</td>

%					} else { 

						<td class="centeralign smaller">
							<a class="dkred block" href="student_retire.mhtml?student_id=<% $student->id %>&from=nograds">
								RETIRE
							</a>
						</td>
% 					}

				</tr>

% 			}

			</tbody>


		</table>

	</div>

	<div class="right small">

        <div class="sidenote">

			<h4>Student Roster</h4>
    
            <a class="dkgreen block" href="student_edit.mhtml?chapter_id=<% $chapter->id %>">
                Add a new student
            </a>

            <a class="blue block" href="dedupe.mhtml?chapter_id=<% $chapter->id %>">
				De-duplicate students
            </a>

            <a class="blue block" href="diets.mhtml?chapter_id=<% $chapter->id %>">
				Dietary preferences
            </a>

			<a class="blue block" href="students.mhtml?show_grads=<% ($show_grads) ? "" : "a" %>&chapter_id=<% $chapter->id %>">
				<% ($show_grads) ? "Hide Graduates" : "Show Graduates" %>
			</a>

		</div>

		<& /user/menu.mas, chapter => $chapter, account => $account, tourn => $tourn, nodiv => 1 &>

	</div>
	

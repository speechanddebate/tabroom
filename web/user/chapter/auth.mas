<%args>
	$chapter
	$person
	$session
</%args>
<%init>

	return if $person->site_admin;

	return unless $chapter && $person;

	my @access = Tab::Permission->search( 
		tag     => "chapter",
		chapter => $chapter->id,
		person  => $person->id 
	);

	return if @access;


	my $err = "You are not authorized to make changes to ".$chapter->name;
	$m->redirect("/user/home.mhtml?err=$err");

</%init>

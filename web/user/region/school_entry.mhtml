<%args>
	$person
	$school_id
	$tourn_id => undef
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id);

	my $tourn = $school->tournament;
	my $region = $school->region;

	unless ($region->director->id == $person->id) { 
		$m->print("Stop messing around.  You are not authorized to view that region");
		$m->abort;
	}

	my $switch;

	my @entries = sort {$a->code <=> $b->code} $school->entries;
	@entries = sort {$a->event->abbr cmp $b->event->abbr} @entries;

</%init>

	<& /funclib/tablesorter.mas, table => "sortme" &>

	<div class="main"> 
	
		<h2><% $tourn->name %></h2>

		<h4><% $school->name %></h4>

		<table id="sortme">

			<thead>

			<tr class="yellowrow">

				<th>
					Event
				</th>

				<th>
					Code
				</th>

				<th>
					Name
				</th>

				<th colspan="2">
					Qualifier(s)
				</th>

			</tr>
			</thead>

			<tbody>

%			foreach my $entry (@entries) { 

				<tr class="<% ($switch++ % 2) ? "odd" : "even" %>">

					<td>
						<% $entry->event->abbr %>
					</td>

					<td>
						<% $entry->code %>
					</td>

					<td class="smaller">
						<% $entry->team_name %>
					</td>

					<td class="smaller">
						<% $entry->qualifier %> <% $entry->qualexp %>
					</td>

					<td class="smaller">
						<% $entry->qual2 %> <% $entry->qual2exp %>
					</td>

				</tr>
%			}

			</tbody>

		</table>

	</div>

	<div class="menu">

		<div class="sidenote">

		<a class="yellow full" href="region.mhtml?region_id=<% $region->id %>&tourn_id=<% $tourn->id %>">
			Return to Region List
		</a>

		<h4>Other Schools</h4>

%		foreach my $school ($tourn->schools(region => $region->id)) {

			<a class="<% ($school->id == $school_id) ? "dk" : "" %>blue full" href="school_entry.mhtml?school_id=<% $school->id %>">
				<% $school->name %> 
			</a>

%		}

		</div>

	</div>

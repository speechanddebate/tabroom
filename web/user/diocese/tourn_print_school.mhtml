<%args>
	$region
	$tourn
</%args>
<%init>

    my $filename = "Diocese-Registration-".$region->name;
    my $filepath = $Tab::file_root."/tmp/";

	$filename =~ s/[\W_]//g;

	my $now = DateTime->now;

	$m->comp("/funclib/printout.mas",
		tourn    => $tourn,
		filename => $filename,
		head     => 1,
		array    => 1.6
	);

    open (TEXOUT, ">$filepath"."$filename.tex");

	my @schools = sort {$a->name cmp $b->name} Tab::School->search(
		region => $region->id,
		tourn  => $tourn->id
	);

	my $notfirst;

	foreach my $school (sort {$a->name cmp $b->name} @schools) {

		my @judges = $m->comp("/funclib/region_judges.mas",
			region => $region,
			tourn  => $tourn,
			school => $school
		);

		my @entries = $m->comp("/funclib/region_entries.mas",
			region => $region,
			tourn  => $tourn,
			school => $school
		);

		next unless (@judges || @entries);

		open (TEXOUT, ">>$filepath"."$filename.tex");
		print TEXOUT "\\newpage\n" if $notfirst;
		print TEXOUT "\\noindent\n";
		print TEXOUT "\\parbox{6.75in}{\\raggedleft\n ";
		print TEXOUT "\\LARGE ". $tourn->name."\n\n";
		print TEXOUT "\\large {\\bf The Archdiocese of ".Tab::texify($region->name)."}\n" if $region->arch;
		print TEXOUT "\\large {\\bf The Diocese of ".Tab::texify($region->name)."}\n" unless $region->arch;
		print TEXOUT "}\n";
		print TEXOUT "\\medskip\n  ";
		print TEXOUT "\\newline\n  ";
		print TEXOUT "\\Large {\\bf ".Tab::texify($school->short_name)."} \n";
		print TEXOUT "\\smallskip\n  ";
		print TEXOUT "\\newline\n  ";
		print TEXOUT "\\normalsize\n";
		print TEXOUT "\\noindent\n";
		print TEXOUT "Coaches: ".Tab::texify($school->chapter->setting("coaches"))."\n";
		print TEXOUT "\\medskip\n  ";
		close TEXOUT;

		$m->comp("/funclib/ncfl/registration_print.mas",
			diocese  => $region,
			filename => $filename,
			filepath => $filepath,
			tourn    => $tourn,
			school   => $school
		);

		$m->comp("/funclib/ncfl/judge_registration_print.mas",
			diocese  => $region,
			filename => $filename,
			filepath => $filepath,
			tourn    => $tourn,
			school   => $school
		);

		$notfirst++;

	}

    open (TEXOUT, ">>$filepath"."$filename.tex");
	print TEXOUT "\\end{document}\n";
	close TEXOUT;

	$m->comp("/funclib/printout.mas",
		tourn    => $tourn,
		filename => $filename,
		tail     => 1
	);

</%init>


<%args> 
	$region_id => undef
	$tourn_id => undef
	$person
</%args>
<%init>

	my $tourn = Tab::Tourn->retrieve($tourn_id);
	my $region = Tab::Region->retrieve($region_id);

</%init>

    <& "menu.mas", 
        region   => $region,
        tourn    => $tourn,
        whoami   => "roster"
    &>  

	<div class="main">
	
		<h2><% $region->name %>: Results</h2>

		<h4>Entry roster at <% $tourn->name %></h4>

		<& "/funclib/tablesorter.mas", table => 'sortme' &>

		<table id="sortme">

			<thead>
			<tr class="yellowrow">

				<th class="smallish">
					Event
				</th>

				<th class="smallish">
					Code
				</th>

				<th class="smallish">
					Name
				</th>

				<th class="smallish">
				</th>

				<th class="smallish">
					People
				</th>
			</tr>
			</thead>
		<tbody>

<%perl>

		my @entries = $m->comp(
			"/funclib/region_entries.mas",
				region => $region,
				tourn  => $tourn
			);

			foreach my $entry (@entries) { 
			
</%perl>
				<tr>

					<td>
						<% $entry->event->abbr %>
					</td>

					<td class="smallish centeralign">
%						if ($entry->dropped) { 
							DROP
%						} else {
							<% ($entry->waitlist) ? "Waitlist" : "" %>
							<% ($entry->dq) ? "DQ" : "" %>
							<% $entry->code %>
%						} 
					</td>
	
					<td <% ($entry->dropped) ? "class=\"strike\"" : "" %> >
						<% $entry->name %>
					</td>

					<td class="centeralign smallish">
						<% $entry->dropped ? "Dropped" : "" %>
					</td>

					<td class="smallish">
%						foreach my $student ($entry->students) { 
							<% $student->first." ".$student->last %> <br/>
%						}
					</td>

				</tr>

<%perl>
   			}

		foreach my $judge (
			$m->comp("/funclib/region_judges.mas", 
				region => $region,
				tourn  => $tourn
			)
		) { 

			my $category = $judge->category;

</%perl>
				
			<tr>

				<td class="smallish">
					<% $category->abbr %>
					Judge
				</td>

				<td class="smallish centeralign">
					<% $judge->code %>
				</td>

				<td>
					<% $judge->first." ".$judge->last %>
				</td>

				<td class="centeralign smallish">
%					my @panels = $m->comp("/funclib/judge_panels.mas", judge => $judge);
					<% scalar @panels %> rounds
				</td>

				<td class="smallish">
				</td>

			</tr>
%   	}
		</tbody>

		</table>

	</div>


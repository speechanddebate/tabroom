<%args>
	$region
	$tourn
</%args>
<%init>

    my $filename = "Diocese-Registration-".$region->name;
	$filename =~ s/[\W_]//g;

    my $filepath = $Tab::file_root."/tmp/";
    open (TEXOUT, ">$filepath"."$filename.tex");

	my $now = DateTime->now;

	$m->comp("/funclib/printout.mas",
		tourn    => $tourn,
		filename => $filename,
		head     => 1
	);

	foreach my $category (sort {$a->name cmp $b->name} $tourn->categories) {

		my $newpage++ unless $category->setting("tab_room");

		my @judges = $m->comp("/funclib/region_judges.mas",
			region   => $region,
			tourn    => $tourn,
			category => $category
		);

		my @entries = $m->comp("/funclib/region_entries.mas",
			region   => $region,
			tourn    => $tourn,
			category => $category
		);

		next unless (@judges || @entries);

		open (TEXOUT, ">>$filepath"."$filename.tex");
		print TEXOUT "\\hfill \\Huge ". $tourn->name."\n";
		print TEXOUT "\\newline\n";
		print TEXOUT "\\hfill \\LARGE {\\bf The Archdiocese of ".Tab::texify($region->name)."}\n" if $region->arch;
		print TEXOUT "\\hfill \\LARGE {\\bf The Diocese of ".Tab::texify($region->name)."}\n" unless $region->arch;
		print TEXOUT "\\medskip\n";
		print TEXOUT "\\newline\n";
		close TEXOUT;

		$m->comp("/funclib/ncfl/registration_print.mas",
			diocese  => $region,
			filename => $filename,
			filepath => $filepath,
			tourn    => $tourn,
			category => $category
		);

		$m->comp("/funclib/ncfl/judge_registration_print.mas",
			diocese  => $region,
			filename => $filename,
			filepath => $filepath,
			tourn    => $tourn,
			category => $category,
			newpage  => $newpage
		);

	}

	$m->comp("/funclib/ncfl/schools_print.mas",
		diocese_id => $region->id,
		filename   => $filename,
		filepath   => $filepath,
		tourn_id   => $tourn->id
	);

    open (TEXOUT, ">>$filepath"."$filename.tex");
	print TEXOUT "\\end{document}\n";
	close TEXOUT;

	$m->comp("/funclib/printout.mas",
		tourn    => $tourn,
		filename => $filename,
		tail     => 1
	);

</%init>


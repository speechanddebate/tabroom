<%args>
	$tourn
	$region
	$school_id
	$name => undef
	$coaches => undef
	$contact_name => undef
	$contact_email => undef
	$contact_number => undef
	$hotel_id => undef
</%args>
<%init>

	use Email::Valid;

	my $missing;
	my $school = Tab::School->retrieve($school_id);
	my $hotel = Tab::Hotel->retrieve($hotel_id) if $hotel_id;
	my $invalid = Email::Valid->address( -address => $contact_email, -mxcheck => 1 ) ? 'yes' : 'no' if $contact_email;

	$contact_number =~ s/\D//g;

	$missing .= "school_name " unless $name;
	$missing .= "coaches " unless $coaches;
	$missing .= "contact_name " unless $contact_name;
	$missing .= "contact_email " unless $contact_email;
	$missing .= "invalid_email " if $invalid eq "no";
	$missing .= "contact_number " unless $contact_number;
	$missing .= "invalid_number " unless length($contact_number) == 10;
	$missing .= "hotel " unless $contact_number;

	$school->name($name);
	$school->contact_name($contact_name);
	$school->contact_email($contact_email);
	$school->contact_number($contact_number);
	$school->hotel($hotel);
	$school->update;

	my $chapter = $school->chapter;
	$chapter->coaches($coaches);
	$chapter->update;

	if ($missing) { 	
		my $err = "You were missing required fields.  Please try again.";
		$err .= "<br /><br />That email address was not valid.  Please enter another" if $invalid eq "no";
		$err .= "<br /><br />That phone number is not valid.  Please enter a 10 digit number." unless length($contact_number) == 10;
		$m->redirect("tourn_school_edit.mhtml?region_id=".$region->id."&tourn_id=".$tourn->id."&school_id=$school_id&missing=$missing&err=$err");
	}

	my $msg = "School information saved for $name";
	$m->redirect("tourn_schools.mhtml?region_id=".$region->id."&tourn_id=".$tourn->id."&msg=$msg");

</%init>

<%args>
	$region
	$person
</%args>
<%init>

</%init>

	<& /user/menu.mas,
		person => $person,
		region => $region
	&>

	<div class="main">

		<h2><% $region->arch ? "Archdiocese" : "Diocese" %> of <% $region->name %></h2>

		<& menubar.mas,
			region => $region,
			whoami => "schools"
		&>

		<& /funclib/tablesorter.mas,
			table => "dio_schools"
		&>

		<span class="twofifths">
			<h4>Member Schools</h4>
		</span>
		<span class="twofifths rightalign">
			<a
				href="school_add.mhtml?region_id=<% $region->id %>"
				class="buttonwhite bluetext invert"
			>
				Add New School
			</a>
		</span>
		<span
			class="fifth rightalign"
			id="dio_schools_buttonarea"
		>
		</span>

		<form action="schools_save.mhtml" method="post">

		<input
			type  = "hidden"
			name  = "region_id"
			value = "<% $region->id %>"
		>

		<table id="dio_schools">

			<thead>
				<tr class="yellowrow">

					<th class="smallish">
						School Name
					</th>

					<th class="smallish">
						Coach Credits
					</th>

					<th class="smallish">
						Remove
					</th>
				</tr>
			</thead>

			<tbody>

%			foreach my $chapter (sort {$a->name cmp $b->name} $region->chapters)  {

				<tr id="<% $chapter->id %>">

					<td>
						<span class="hidden"><% $chapter->name %></span>
						<input
							type  = "text"
							class = "thin"
							size  = "48"
							name  = "name_<% $chapter->id %>"
							value = "<% $chapter->name %>">
					</td>

					<td>
						<span class="hidden"><% $chapter->setting("coaches") %></span>
						<input
							type  = "text"
							class = "thin"
							size  = "48"
							name  = "coaches_<% $chapter->id %>"
							value = "<% $chapter->setting("coaches") %>"
						>
					</td>

					<td class="centeralign">
%						my $warn = "Removing this chapter will prevent you from entering their students to NCFL Nationals.  Are you sure?";
						<a
							class         = "fa fa-sm fa-trash buttonwhite redtext"
							target_id     = <% $chapter->id %>
							property_name = <% $region->id %>
							on_success    = "destroy"
							onClick      = "postConfirm('<% $warn %>', this, 'diocese_rm.mhtml');"
						></a>

					</td>
				</tr>
%			}

			</tbody>

		</table>

		<div class="liblrow rightalign">

			<input
				type  = "submit"
				value = " Save Chapters "
				class = "thin"
			>

		</div>

	</form>

	</div>


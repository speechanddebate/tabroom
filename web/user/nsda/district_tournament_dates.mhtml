%							foreach my $event (@{$weekend_events{$weekend->id}}) { 
								<% $event %>
%							}
%						}
					</span>

				</div>



%				if ($tourn->setting("nsda_tabbing_software") eq "tabroom") { 

					<div class="row marleft marright">

						<span class="fifth">
							Host Site
						</span>

						<span class="threetenths">
							<select 
								name  = "site_<% $weekend->id %>"

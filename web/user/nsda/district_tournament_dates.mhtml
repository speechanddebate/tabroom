						name          => "ranks",
						tiebreak_set  => $final_tiebreak_set->id,
						count         => "final",
						highlow       => 0,
						highlow_count => 0,
						multiplier    => 1,
						priority      => 1
					});

					Tab::Tiebreak->create({
						name          => "ranks",
						tiebreak_set  => $final_tiebreak_set->id,
						child         => $prelim_composite_set->id,
						count         => "elim",
						truncate      => 5,
						highlow       => 0,
						highlow_count => 0,
						multiplier    => 1,
						priority      => 1
					});

					Tab::Tiebreak->create({
						name          => "ranks",
						tiebreak_set  => $final_tiebreak_set->id,
						child         => $prelim_composite_set->id,
						count         => "prelim",
						truncate      => 5,
						highlow       => 0,
						highlow_count => 0,
						multiplier    => 1,
						priority      => 1
					});

					Tab::Tiebreak->create({
						name          => "ranks",
						tiebreak_set  => $final_tiebreak_set->id,

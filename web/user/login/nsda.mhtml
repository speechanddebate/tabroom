<%args>
	$person
</%args>
<%init>

    $m->clear_buffer();
    $r->content_type('application/json');

	if ($person) {

		$m->comp("/funclib/nsda/membership.mas",
			person => $person,
			force => 1
		);

		my $msg = "Your account has been re-synced with your NSDA account";

		$m->print('{
			"error": false,
			"message": "'.$msg.'",
			"refresh": 1
		}');

	}
    $m->abort();

</%init>

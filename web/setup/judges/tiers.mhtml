<%args>	
	$tourn
	$category_id
</%args>
<%init>

	my $category = Tab::Category->retrieve($category_id) if $category_id; 

	my $prefs = $category->setting("prefs");
	$prefs = "caps" if $prefs eq "ndt";

</%init>

	<& menu.mas, category_id => $category_id, tourn => $tourn, page => "tiers" &>

	<div class="main">

		<h2>
			<% $category->name %>
		</h2>

		<& "tabbar.mas", whoami => "prefs", category => $category &>
	
		<h4>
			<% $prefs eq "tiered" || $prefs eq "caps" || $prefs eq "tiered_round" ? "Mutually Preferred Judging" : "Community Prefs" %> scale
		</h4>

		<p>If you want to use cumulative prefs (Fewer 3s permit more 2s, etc) you must use numbers for MPJ tier names</p>

			<table>

				<tr class="yellowrow">

					<th class="smaller">
					</th>

					<th class="smaller">
						Name
					</th>

					<th class="smaller">
						Minimum
					</th>

					<th class="smaller">
						Maximum
					</th>

					<th class="smaller">
						Default
					</th>

					<th class="smaller">
						Strike
					</th>

					<th class="smaller">
						Conflict
					</th>

					<th>
						<form action="tier_mpj_save.mhtml" method="post">
						<input type="hidden" name="category_id" value="<% $category->id %>">
					</th>

				</tr>

%				foreach my $tier (sort {$a->name cmp $b->name} $category->rating_tiers(type => "mpj")) { 
			
					<tr class="row smallish centeralign">

						<td>
						</td>
		
						<td>
							<input 
								type  = "text"
								name  = "<% $tier->id %>_name"
								size  = "4"
								value = "<% $tier->name %>">
						</td>

						<td>
							<input 
								type      = "text"
								name      = "<% $tier->id %>_min"
								maxlength = "2"
								value     = "<% $tier->min %>"
								size      = "3"
								onKeyUp   = "return autoTab(this, 2, event);">

								<% $prefs eq "caps" ? " Judges" : "%" %>
						</td>

						<td>
							<input 
								type      = "text"
								name      = "<% $tier->id %>_max"
								maxlength = "2"
								value     = "<% $tier->max %>"
								size      = "3"
								onKeyUp   = "return autoTab(this, 2, event);">

								<% $prefs eq "caps" ? " Judges" : "%" %>
						</td>


						<td class="nospace">
							<label for="<% $tier->id %>_start">
								<span class="hover padmore">
									<input 
										type  = "checkbox"
										name  = "<% $tier->id %>_start"
										id    = "<% $tier->id %>_start"
										value = "1" <% ($tier->start) ? 'checked' : '' %> >
								</span>
							</label>
						</td>

						<td class="nospace">
							<label for="<% $tier->id %>_strike">
								<span class="hover padmore">
									<input 
										type  = "checkbox"
										name  = "<% $tier->id %>_strike"
										id    = "<% $tier->id %>_strike"
										value = "1"
										 <% ($tier->strike) ? 'checked' : '' %> >
								</span>
							</label>
						</td>

						<td class="nospace">
							<label for="<% $tier->id %>_conflict">
								<span class="hover padmore">
									<input 
										type  = "checkbox"
										name  = "<% $tier->id %>_conflict"
										id    = "<% $tier->id %>_conflict"
										value = "1"
										 <% ($tier->conflict) ? 'checked' : '' %> >
								</span>
							</label>
						</td>

						<td class="nospace">
							<span class="hover padmore">
								<a class="redtext fa fa-2x fa-trash" href="tier_rm.mhtml?tier_id=<% $tier->id %>"></a>
							</span>
						</td>

					</tr>

%				}

				<tr class="row">

					<th class="smaller" width="50px;">
						New:
					</th>

					<td class="centeralign smallish">
						<input type="text" name="new_name" size="4" value="" min="1" max="99">
					</td>

					<td class="centeralign smallish">
						<input type="text" maxlength="3" name="new_min" size="3" onKeyUp="return autoTab(this, 2, event);"><% $prefs eq "caps" ? " Judges" : "%" %>
					</td>

					<td class="centeralign smallish">
						<input type="text" maxlength="3" name="new_max" size="3" onKeyUp="return autoTab(this, 2, event);"><% $prefs eq "caps" ? " Judges" : "%" %>
					</td>
	
					<td class="centeralign">
						<input type="checkbox" name="new_start" value="1">
					</td>

					<td class="centeralign">
						<input type="checkbox" name="new_strike" value="1">
					</td>

					<td class="centeralign">
						<input type="checkbox" name="new_conflict" value="1">
					</td>

					<th>
					</th>

				</tr>

				<tr class="liblrow">
					<td colspan="8" align="right">
						<input type="submit" class="small" value="Save MPJ Ratings">
						</form>
					</td>
				</tr>

			</table>

	</div>


<%args>
	$tourn
	$person
	$tourn_settings
</%args>
<%init> 

	my $now = DateTime->now();

	my @settings = ( 
		"require_adult_contact",
		"track_reg_changes",
		"publish_schools",
		"refund_information",
		"overall_cap",
		"hide_codes",
		"school_codes",
		"first_school_code",
		"googleplus",
		"ncfl_codes",
		"no_waitlist_double_entry",
		"regions",
		"closed_entry",
		"student_claim",
		"onsite_registration",
		"onsite_only_paid",
		"require_hotel_form",
		"nsda_members_only",
		"refund_judge_bond",
		"nsda_speech_method",
		"enable_credit"
	);

	my @date_settings = ( 
		"onsite_ends", "onsite_starts",
	);

	my @text_settings = (
		"onsite_notes"
	);

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	foreach my $setting (@date_settings) { 

		my $dt = eval { 
			return Tab::dtme($ARGS{$setting},$ARGS{$setting."_time"}, $tz);
		};

		if ($dt) { 
			$tourn->setting($setting, "date", $dt);
		} else { 
			$tourn->setting($setting, 0);
		}

	}

	foreach my $setting (@settings) { 

		if ($ARGS{$setting}) { 
			$tourn->setting($setting, $ARGS{$setting});
		} else { 
			$tourn->setting($setting, 0);
		}
	}

	$tourn->hidden($ARGS{"hidden"});
	$tourn->update();

	$m->comp("/funclib/update_calendar.mas", tourn => $tourn);

	foreach my $setting (@text_settings) {

		my $value = $m->comp(	
			"/funclib/save_editor.mas", 	
			text => $ARGS{$setting}
		);

		if ($value eq $tourn_settings->{$setting}) {

		} else { 

			$value = 0 unless $value;

			my $description;

			if ($value eq "0") { 
				$description = "Setting $setting text deleted";
				$tourn->setting($setting, $value);
			} else { 
				$description = "Setting $setting changed to $value";
				$tourn->setting($setting, "text", $value);
			}

			Tab::ChangeLog->create({ 
				type        => 'tabbing',
				tourn       => $tourn->id,
				person      => $person->id,
				description => $description,
				created     => $now
			}); 
		}
	}

	if ($ARGS{"regpack"}) { 
        my $req = Apache2::Request->new($r);
        my $upload = $req->upload("regpack");

		my @handles = $r->upload;
		my $file = $req->upload($handles[0]);
		my $filename = $file->tempname if $file;

		if ($upload) { 
			my $filename  = $upload->filename;
			$filename =~ s/[^\w.]//g;
			$filename =~ s/\s//g;
			my $filetemp = $upload->tempname;
			system $Tab::s3_cmd." put $filetemp ".$Tab::s3_bucket."/tourns/".$tourn->id."/$filename";
			$tourn->setting("registration_packet", $filename);
		}
	}

	my $msg = "Tournament settings saved";

	$m->redirect("settings.mhtml?msg=$msg");

</%init> 


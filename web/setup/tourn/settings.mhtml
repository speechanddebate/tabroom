</%init>

	<div class="menu">

%	if ($person->id < 4) {
		<div class="sidenote">
			<h4>Paypal Payments</h4>

			<form action="paypal_save.mhtml" method="post">
				<div class="full oddrow marno">
					<span class="twothirds semibold">
						Enable PayPal Payments
					</span>
					<span class="third centeralign nospace">
						<input
							type  = "checkbox"
							class = "notfirst"
							name  = "paypal_enable"
							value = 1

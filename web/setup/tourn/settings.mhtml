				<div class="row">

					<label for="ncfl">

						<span class="twofifths">
							NCFL Grand Nationals
						</span>
				
						<span class="tenth">
							<& "/funclib/bool_switch.mas", 
								tag     => "ncfl",
								value   => $tourn_settings->{"ncfl"},
								target  => $tourn,
								smaller => 1,
							&>
						</span>
					</label>


<%args>
	$tourn
	$tourn_settings
</%args>

%	my $tz = $tourn->tz;
%	$tz = "UTC" unless $tz;
%	my $symbol = $tourn_settings->{'currency'};

    <& menu.mas,
		chosen         => "schools",
        tourn_settings => $tourn_settings,
		tourn          => $tourn
	&>

	<div class="main">

		<h4>Overall Individual Fees</h4>

		<form action="student_fee_save.mhtml" method="post">

		<div class="row">

			<span class="twothirds">
				Fee for each individual competitor
			</span>

			<span class="third">
				<% $symbol ? $symbol : '$' %><input
					type  = "number"
					min   = 0
					max   = 9999
					size  = "6"
					class = "smaller"
					name  = "per_student_fee"
					value = "<% $tourn_settings->{"per_student_fee"} %>"
				>
			</span>
		</div>

		<div class="row">
			<span class="twothirds">
				<form action="student_fee_save.mhtml" method="post">
				Fee for each individual person (incl competitors, judges, asks for coaches)
			</span>

			<span class="third">
				<% $symbol ? $symbol : '$' %><input
					type  = "number"
					class = "smaller"
					min   = 0
					max   = 9999
					size  = "6"
					name  = "per_person_fee"
					value = "<% $tourn_settings->{"per_person_fee"} %>"
				>
			</span>
		</div>

		<div class="liblrow rightalign">
			<input  type="submit" value="  Save  ">
			</form>
		</div>

		<h4>Per-School Fees</h4>

			<table>
				<tr class="yellow">
					<th>
						Description
					</th>

					<th>
						Fee
					</th>

					<th>
						Applies after
					</th>

					<th>
						Applies before
					</th>

					<th>
					</th>
				</tr>
<%perl>
				my $finez;

				foreach my $fine ($tourn->tourn_fees) {

					$finez++;

					my $finestart = $fine->start;
					$finestart->set_time_zone($tz) if $finestart;

					my $fineend = $fine->end;
					$fineend->set_time_zone($tz) if $fineend;
</%perl>
					<tr class="row">

						<td>
							<% $fine->reason %>
						</td>

						<td class="centeralign">
							<% $symbol ? $symbol : '$' %><% $fine->amount %>
						</td>

						<td class="rightalign">
							<% ($finestart) ? Tab::niceshortdt($finestart) : "" %>
						</td>

						<td class="rightalign">
							<% ($fineend) ? Tab::niceshortdt($fineend) : "" %>
						</td>

						<td class="smaller centeralign">
							<a
								class="buttonwhite fa fa-lg fa-trash redtext"
								href="standing_fee_rm.mhtml?fee_id=<% $fine->id %>"
							></a>
						</td>

					</tr>

% 				}

				<tr class="liblrow">

					<td class="rightalign">
						<form action="standing_fee_save.mhtml" method="post">
						<input
							type        = "text"
							name        = "reason"
							size        = "15"
							placeholder = "Add a fee:"
						>
					</td>

					<td class="rightalign">
						<% $symbol ? $symbol : '$' %><input
							type  = "number"
							class = "smaller"
							name  = "amount"
							size  = "3"
							min   = 1
							max   = 9999
						>
					</td>

%					my $reg_start = $tourn->reg_start->set_time_zone($tz);
%					my $reg_end = $tourn->reg_end->set_time_zone($tz);

            		<& /funclib/datepicker.mas,
						id  => "startdate",
						min => $reg_start->mdy('/'),
						max => $reg_end->mdy('/')
					&>

		    		<td class="rightalign">
						<input
							type = "text"
							name = "startdate"
							id   = "startdate"
							size = "7"
						>
						    @
						<& "/funclib/timepicker.mas",
							name => "starttime",
							size => 5
						&>

					</td>

        		    <& "/funclib/datepicker.mas",
						id  => "enddate",
						min => $reg_start->mdy('/')
					&>

				    <td class="rightalign">

						<input
							type = "text"
							name = "enddate"
							id   = "enddate"
							size = "7"
						>
							@
						<& "/funclib/timepicker.mas",
							name => "endtime",
							size => 5
						&>

					</td>

					<td>
						<input
							type  = "submit"
							class = "thin"
							value = "Save"
						>
						</form>
					</td>

				</tr>

			</table>

	<h4 class='martopmore'>
		Add a one-time universal fee
	</h4>

		<p>
			This will add a fee to every school currently in your tournament.
			It is not a rolling per-school fee that gets applied to every
			school that registers; that's what's above.
		</p>

		<p>
			The only way to remove this type of fee is to go into each school
			and manually delete it.  This will be, as they say, a Royal Pain.
			So make sure you mean it when you do this.
		</p>

		<form action="levy_fine_save.mhtml" method="post">

		<div class="even">
			<span class="sixth">
				Description:
			</span>

			<span class="third">
				<input type="text" name="fine_reason" size="32">
			</span>

			<span class="third rightalign">
				Fee Amount:
			</span>

			<span class="sixth">
				<% $symbol ? $symbol : '$' %><input
					type  = "number"
					class = "smaller"
					name  = "fine_amount"
					min   = 0
					max   = 99999
				>
			</span>

		</div>

		<div class="liblrow rightalign marno">
			<span class="third centeralign">
				<input  type="submit" value="Save School Fee">
			</span>
		</div>

		</form>

	</div>

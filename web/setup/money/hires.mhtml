<%args>
	$person
	$tourn
</%args>

%	my $symbol = $tourn->setting('currency');

	<& menu.mas, chosen => "hires", tourn => $tourn  &>

	<div class="main">

		<h2>Hired Judging Fees</h2>

		<table>

			<tr class="yellowrow smallish">
	
				<th>
					Group
				</th>

				<th>
					Per hire
				</th>

				<th>
					Per uncovered entry
				</th>

				<th>
					Per missing judge
					<form action="hires_save.mhtml" method="post">
				</th>

			</tr>

%			foreach my $category (sort {$a->name cmp $b->name} $tourn->categories) { 

 				<tr class="row">

					<th class="centeralign">
						<% $category->abbr %>
					</td>

					<td align="center">
						<% $symbol %> <input type="number" name="hired_<% $category->id %>" value="<% $category->setting("hired_fee") %>" size="4" min=0 max=999>
					</td>

					<td align="center">
						<% $symbol %> <input type="number" name="uncovered_<% $category->id %>" value="<% $category->setting("uncovered_entry_fee") %>" size="4" min=0 max=999>
					</td>

					<td align="center">
						<% $symbol %> <input type="number" name="missing_<% $category->id %>" value="<% $category->setting("missing_judge_fee") %>" size="4" min=0 max=999>
					</td>

				</tr>
% 			}

			<tr class="liblrow">
				<td colspan="10" class="rightalign">
					<input  type="submit" value="Save Judge Fees">
				</td>
			</tr>

		</table>

		<h4>Availability</h4>

		<table>

			<tr class="yellowrow smallish">
	
				<th>
					Group
				</th>

				<th>
					Judges Available
				</th>

			</tr>

%			foreach my $category (sort {$a->name cmp $b->name} $tourn->categories) { 

 				<tr class="row">

					<th class="centeralign">
						<% $category->abbr %>
					</td>

					<td align="left">
						<input type="number" name="judges_<%$category->id %>" value="<% $category->setting("hired_jpool") %>" size="10">
					</td>

				</tr>
% 			}

			<tr class="liblrow">
				<td colspan="10" align="right">
					<input  type="submit" value="Save Judge Numbers">
					</form>
				</td>
			</tr>

		</table>

	</div>

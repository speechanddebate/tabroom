<%args>
	$account
	$tourn
</%args>
<%perl>

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my $switch;
	my $yeah;

</%perl>

    <& sidebar.mas, chosen => "hotel", tourn => $tourn  &>

	<div class="left huge">
	
		<h2>Hotel Blocks</h2>

		<form action="hotel_save.mhtml" method="post">
		<input type="hidden" name="tourn_id" value="<% $tourn->id %>">

%		foreach my $hotel ($tourn->hotels) { 

%			$yeah++;
				
			<div class="block evenrow smallish <% ($switch++ % 2) ? "oddrow" : "evenrow" %> ">
			
				<span class="smallishspan">
				</span>

				<span class="biggishspan">
					<input type="text" name="name_<% $hotel->id %>" size="35" value="<% $hotel->name %>">
				</span>

				<span class="oneeighty">
					Multiply fees by:
					<input type="text" name="multiple_<% $hotel->id %>" size="5" min="1" max="99" value="<% $hotel->multiple %>">
				</span>

				<span class="smallerspan">
					Delete:
				</span>

				<span class="finespan">
					<input type="checkbox" name="delete_<% $hotel->id %>" value="1">
				</span>
	
			</div>

%		}

%		if ($yeah) { 
			<div class="block liblrow rightalign">
				<input type="submit" value=" Save Hotel Info " class="thin">
			</div>
%		}

		</form>

		<br />

		<form action="hotel_add.mhtml" method="post">
		<input type="hidden" name="tourn_id" value="<% $tourn->id %>">
			
		<div class="block evenrow smallish">

			<span class="smallishspan">
				Add New:
			</span>

			<span class="biggishspan">
				<input type="text" name="name" size="35" placeholder="Name of hotel">
			</span>

			<span class="onesixty">
				Multiply fees by:
				<input type="text" name="multiple" size="5" min="1" max="99">
			</span>

			<span class="hundo rightalign">
				<input type="submit" value="Add" class="thin">
			</span>

		</div>

		</form>

	</div>


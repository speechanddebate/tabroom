<%args>
	$tourn
	$tourn_settings
	$person
	$concession_id => undef
</%args>
<%init>

	my $concession = Tab::Concession->retrieve($concession_id) if $concession_id;

	unless ($concession && $concession->tourn->id == $tourn->id) {
		my $err = "That concession does not exist in your tournament";
		$m->redirect("concessions.mhtml?err=$err");
	}

</%init>

    <& "menu.mas",
		chosen         => "concessions",
        tourn_settings => $tourn_settings,
		tourn          => $tourn
	&>

	<& "/funclib/editor.mas" &>

	<div class="main">

		<h4>Edit details for <% $concession->name %></h4>

		<form
			action = "concession_desc_save.mhtml"
			method = "post"
		>

			<input
				type="hidden"
				name="concession_id"
				value="<% $concession->id %>"
			>

			<div class="seveneighths leftalign">
				<h6 class="nospace">Description</h6>
			</div>

			<div class="nospace centeralign full odd">

				<span class="seveneighths centeralign">
					<textarea
						name = "description"
						rows = "5"
						cols = "72"
					><% $concession->description %></textarea>
				</span>

				<span class="eighth centeralign">
					<input
						type  = "submit"
						value = "Save"
					>
				</span>
			</div>

		</form>

		<h5 class="padvert">
			Option Types
		</h5>

%		foreach my $type ($concession->concession_types) {

			<div class="full nospace">

				<form
					action = "concession_type_save.mhtml"
					method = "post"
				>

				<input
					type  = "hidden"
					name  = "type_id"
					value = "<% $type->id %>"
				>

				<input
					type  = "hidden"
					name  = "concession_id"
					value = "<% $concession->id %>"
				>

				<div class="full nospace ltyellow marvertno ltbordertop ltborderleft">

					<span class="tenth semibold">
						Label
					</span>

					<span class="threetenths leftalign">
						<input
							type  = "text"
							name  = "name"
							size  = "24"
							value = "<% $type->name %>"
						>
					</span>

					<span class="tenth semibold">
						Description
					</span>

					<span class="twofifths">
						<input
							type  = "text"
							name  = "description"
							size  = "32"
							value = "<% $type->description %>"
						>
					</span>

					<span class="tenth semibold">
						<input
							type  = "submit"
							value = "Save"
							class = "thinner"
						>
					</span>

				</div>
<%perl>
				my @options = $type->concession_options;
				if (@options) {
</%perl>
					<div class="full nospace marleftmore marno">
<%perl>
				}

				my $count = 1;
				foreach my $option (@options) {
</%perl>

					<div class="row">

						<span class="twenty rightalign">
%							my $warn = "This will delete this option and ANY PURCHASES MADE.  You sure?";
							<a
								class="redtext buttonwhite fa fa-sm fa-trash"
								href="concessions_option_rm.mhtml?option_id=<% $option->id %>"
								<& "/funclib/confirm.mas", warn => $warn &>
							></a>
						</span>


						<span class="twenty semibold centeralign">
							<% $count++ %>.
						</span>

						<span class="sixth">
							<input
								type  = "text"
								name  = "<% $option->id %>_name"
								size  = "8"
								value = <% $option->name %>
							>
						</span>

						<span class="third">
							<input
								type        = "text"
								name        = "<% $option->id %>_description"
								size        = "32"
								value       = "<% $option->description %>"
								placeholder = "Option Description"
							>
						</span>

						<span class="tenth semibold greentext rightalign">
							<% scalar $option->purchases %> sold
						</span>

						<label for="<% $option->id %>_disabled">
							<span
								class="sixth nospace hover centeralign"
								title="When checked, further sales of this option are disabled"
							>
								<span class="half semibold smallish">
									<span class="spacer"></span>
									Disable
								</span>

								<span
									class="fifth marno leftalign"
								>
									<input
										type  = "checkbox"
										name  = "<% $option->id %>_disabled"
										id    = "<% $option->id %>_disabled"
										value = "1"
										<% $option->disabled ? 'checked="true"' : "" %>
									>
								</span>
							</span>
						</label>

						<span class="tenth rightalign">
							<input
								type  = 'submit'
								value = "Save"
								class = "thin marbottom"
							>
						</span>
					</div>
%				}

				</form>

				<div class="full nospace row bordertop marbottom">

					<form
						action = "concessions_option_add.mhtml"
						method = "post"
						id     = "add_<% $type->id %>"
					>

					<input
						type="hidden"
						name="concession_id"
						value="<% $concession->id %>"
					>

					<input
						type  = "hidden"
						name  = "type_id"
						value = "<% $type->id %>"
					>
						<span class="twenty rightalign">
						</span>

						<span class="twenty semibold centeralign">
							New
						</span>

						<span class="sixth">
							<input
								type        = "text"
								name        = "name"
								size        = "8"
								placeholder = "Short Code"
							>
						</span>

						<span class="third">
							<input
								type        = "text"
								name        = "description"
								size        = "32"
								placeholder = "Option Description"
							>
						</span>

						<span class="tenth semibold greentext">
						</span>

						<label for="disabled">
							<span
								class="sixth nospace hover centeralign"
								title="When checked, further sales of this option are disabled"
							>
								<span class="half semibold smallish">
									<span class="spacer"></span>
									Disable
								</span>

								<span
									class="fifth marno leftalign"
								>
									<input
										type  = "checkbox"
										name  = "disabled"
										id    = "disabled"
										value = "1"
									>
								</span>
							</span>
						</label>

						<span class="tenth rightalign">
							<a
								onClick = "document.forms['add_<% $type->id %>'].submit();"
								class   = "buttonwhite greentext invert smallish padmore"
							>Add</a>
						</span>

						<span class="hidden">
							<input
								type  = "submit"
								value = "whatever"
							>
						</span>
					</form>

%				if (@options) {
					</div>
%				}

				</div>

			</div>
%		}

		<div class="martop">

			<span class="half marno padvert">
				<h6 class="nospace semibold">
					New Option Type
				</h6>
			</span>

			<span class="half semibold redtext rightalign">
				Size, destination, color, etc
			</span>

			<div class="odd">

				<form
					action="concession_type_save.mhtml"
					method="post"
				>

				<input
					type="hidden"
					name="concession_id"
					value="<% $concession->id %>"
				>

				<div class="full nospace">
					<span class="third">

						Label

						<input
							type        = "text"
							name        = "name"
							size        = "24"
							placeholder = "e.g. Size, color, type"
						>
					</span>

					<span class="half">

						Description:
						<input
							type        = "text"
							name        = "description"
							size        = "32"
							placeholder = "Optional"
						>
					</span>

					<span class="eighth centeralign">
						<input
							type  = "submit"
							class = "thin"
							value = "Add New"
						>
					</span>
				</div>

			</form>

		</div>

	</div>


<%args>
	$person
	$perms
	$target_id 		=> undef
	$property_name  => undef
	$property_value => undef
</%args>
<%init>

	$m->clear_buffer();
	$r->content_type('application/json');

	unless ($target_id) {
		$m->print('{ "error": true, "message": "No room ID sent"}');
		$m->abort();
	}

	unless ($property_name) {
		$m->print('{ "error": true, "message": "No property to change sent"}');
		$m->abort();
	}

	my $room = Tab::Room->retrieve($target_id);

	unless ($room) {
		$m->print('{ "error": true, "message": "No room found for ID '.$target_id.'"}');
		$m->abort();
	}

	my $message;

	if ($property_name eq "ada") {

		$message = "not accessible";
		$message = "accessible" if $property_value == 1;

	} elsif ($property_name eq "inactive") {

		if ($property_value == 1) {
			$message = "active";
			$property_value = 0;
		} else {
			$message = "inactive";
			$property_value = 1;
		}

		if ($person->id == 405)  {
			$message .= ", unless I meant it the other way around; hard to tell when I'm drowning in tickets from insanely nitpicky users about inconsequential nonsense.";
		}

	} else {
		$message .= " not " if $property_value < 0;
		$message .= $property_name;
	}

	if ($property_name eq "deleted" && $property_value > 0) {
		$room->inactive(1);
	}

	$room->$property_name($property_value);
	$room->update;

	$m->print('{ "error": false, "message": "'.$room->name.' marked as '.$message.'"}');

	$m->abort();

</%init>

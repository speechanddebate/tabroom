<%args>
	$site_id
	$from_id => undef
	$tourn
	$rooms
</%args>
<%init>

	my $start = $tourn->start;
	my $end   = $tourn->end;

# Get the upload and create the file handle.

   	my $req 	= Apache2::Request->new($r);
	my $upload 	= $req->upload("rooms");
	my $io 		= $upload->io;
	my @rooms;

	# Fix line breaks

	while (<$io>) {
		s/\015\012?|\r\n?|\012|\n|\015/\n/g;
		s/\n\s?\n\s?\n\s?/\n/g;
		push @rooms, $_;  
	}
	
	my $site = Tab::Site->retrieve($site_id);
	my $count;
	my $dup_count;

	foreach my $room (@rooms) { 

		my ($room_name, $quality, $capacity, $notes) = split(/,/,$room);

		next unless ($room_name);

		my $already = Tab::Room->search( site => $site->id, name => $room_name)->first;

		chomp $quality;
		chomp $capacity;
		chomp $notes;
		chomp $room_name;

		next unless $room_name;
		
		if ($already) { 

			$already->quality($quality);
			$already->capacity($capacity);
			$already->notes($notes);
			$already->inactive(0);
			$already->update;

		} else { 

			my @existing_rooms = Tab::Room->search( 
					name => $room_name, 
					site => $site_id );

			$dup_count++ if @existing_rooms;
			next if (@existing_rooms);

			$count++;

			my $room = Tab::Room->create({ 
				name => $room_name,
				quality => $quality,
				site => $site_id,
				capacity => $capacity,
				notes => $notes,
				inactive => 0
			});
		
		}	

	}	

	my $msg = "$count rooms imported into the site.  $dup_count skipped due to duplication.";

	$m->redirect("/setup/rooms/list.mhtml?site_id=$site_id&msg=$msg");


</%init>

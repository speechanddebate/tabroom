<%args>
	$tourn
	$tourn_settings
	$site_id => undef
	$add     => undef
	$session
	$defaults
</%args>
<%init>

	unless ($site_id) {
		$site_id = $defaults->{tourns}{$tourn}{site};
	}

	my $site;

	if ($site_id) {
		$site = Tab::Site->retrieve($site_id);
	}

	unless ($site) {
		my @sites = $tourn->sites();
		if (@sites) {
			$site = shift @sites;
			$site_id = int($site);
		}
	}

	if ($site_id != $defaults->{tourns}{$tourn}{site}) {
		$defaults->{tourns}{$tourn}{site} = $site_id;
		$session->default($defaults);
	}

	my @ids;
	my $rooms;

	if ($site) {

		my $dbh = Tab::DBI->db_Main();

		my $sth = $dbh->prepare("
			select
				room.id, room.name,
				room.quality, room.notes, room.capacity,
				room.inactive, room.ada,
				room.url, room.password,
				room.judge_url, room.judge_password,
				room.api
			from room
				where room.site = ?
				and room.deleted = 0
			order by room.name
		");

		$sth->execute($site->id);
		$rooms = $sth->fetchall_hash();
	}

</%init>

	<& menu.mas,
		tourn => $tourn,
		mysite => $site
	&>

	<div class="main">

%	if ($site > 0) {

		<h2>Rooms at <% $site->name %></h2>

		<& "tabbar.mas",
			site_id => $site->id,
			add     => $add
		&>

		<& "/funclib/tablesorter.mas",
			table     => "roomlist",
			nobuttons => 1
		&>

%		if ($rooms && not defined $add) {

%			if ($site->online) {
				<p class="centeralign semibold smallish bluetext">
					Passcodes are optional.  Judge URL should be used if you want
					to send judges a different link so they become room hosts. <br />
					If Judge URLs are not entered, entry URLs will be sent to judges.
				</p>
%			}

			<form
				action = "site_rooms_save.mhtml"
				method = "post"
			>

			<input
				type  = "hidden"
				name  = "site_id"
				value = "<% $site->id %>"
			>

			<table id="roomlist">

				<thead>

				<tr class="yellowrow">

					<th class="smaller">
					</th>

					<th class="smaller">
						Name
					</th>

%					if ($site->online) {

						<th class="smaller">
							Entry URL
						</th>

						<th class="smaller">
							Entry Passcode
						</th>

						<th class="smaller">
							Judge URL
						</th>

						<th class="smaller">
							Judge Passcode
						</th>

						<th class="smaller">
							CCID
						</th>

%					} else {

						<th class="tiny">
							Quality
						</th>

						<th class="tiny">
							Capacity
						</th>

						<th class="smaller">
							Notes
						</th>

						<th
							title="The Boltizar Center for the Prevention of Lost Kids & Judges"
							class="smaller"
						>
							Map Link
						</th>

						<th class="tiny">
							Accessible
						</th>
%					}

					<th class="smaller">
						Active
					</th>

				</tr>

				</thead>
				<tbody>

%					foreach my $room (@{$rooms}) {

						<tr id="<% $room->{'id'} %>">

							<td class="centeralign">
								<a
									id             = "<% $room->{'id'} %>_delete"
									on_success     = "destroy"
									property_name  = "deleted"
									property_value = "1"
									target_id      = "<% $room->{'id'} %>"
									onClick        = "postSwitch( this, 'room_switch.mhtml');"
									class          = "fa-sm padless fa fa-trash buttonwhite redtext"
								></a>
							</td>

%							if ($site->online) {

								<td class="centeralign">
									<span class="hidden">
										<% $room->{"name"} %>
									</span>

									<input
										type  = "text"
										name  = "<% $room->{'id'} %>_name"
										value = '<% $room->{"name"} %>'
										size  = "8"
									>
								</td>

								<td class="centeralign">
									<span class="hidden"> <% $room->{"url"} ? $room->{"url"} : 0 %> </span>
									<input
										type      = "url"
										name      = "<% $room->{id} %>_url"
										value     = "<% $room->{"url"} %>"
										maxlength = "255"
										size      = "24"
										class     = "smaller"
									>
								</td>

								<td class="centeralign">
									<input
										type  = "text"
										size  = "12"
										name  = "<% $room->{id} %>_passcode"
										value = "<% $room->{"password"} %>"
									>
								</td>

								<td class="centeralign">
									<span class="hidden"> <% $room->{"judge_url"} ? $room->{"judge_url"} : 0 %> </span>
									<input
										type      = "url"
										name      = "<% $room->{id} %>_judge_url"
										value     = "<% $room->{"judge_url"} %>"
										size      = "24"
										maxlength = "255"
										class     = "smaller"
									>
								</td>

								<td class="centeralign">
									<input
										type  = "text"
										size  = "12"
										name  = "<% $room->{id} %>_judge_passcode"
										value = "<% $room->{"judge_password"} %>"
									>
								</td>

								<td class="centeralign">
									<input
										type  = "text"
										size  = "8"
										name  = "<% $room->{id} %>_api"
										value = "<% $room->{"api"} %>"
									>
								</td>

%							} else {

								<td class="centeralign">
									<span class="hidden">
										<% $room->{"name"} %>
									</span>

									<input
										type  = "text"
										name  = "<% $room->{id} %>_name"
										value = '<% $room->{"name"} %>'
										size  = "16"
									>
								</td>

								<td class="centeralign">
									<span class="hidden"><% $room->{"quality"} %></span>
									<input
										type  = "number"
										class = "smaller"
										name  = "<% $room->{id} %>_quality"
										value = "<% $room->{"quality"} ? $room->{"quality"} : ""%>"
										size  = "3"
									>
								</td>

								<td class="centeralign">
									<span class="hidden"><% $room->{"capacity"} %></span>
									<input
										type  = "number"
										class = "smaller"
										name  = "<% $room->{id} %>_capacity"
										value = "<% ($room->{"capacity"}) ? $room->{"capacity"} : "" %>"
										size  = "3"
									>
								</td>

								<td class="centeralign">
									<span class="hidden"> <% $room->{"notes"} %> </span>
									<input
										type  = "text"
										name  = "<% $room->{id} %>_notes"
										value = "<% $room->{"notes"} %>"
									>
								</td>

								<td class="centeralign">
									<span class="hidden"> <% $room->{"url"} ? $room->{"url"} : 0 %> </span>
									<input
										type      = "url"
										name      = "<% $room->{id} %>_url"
										value     = "<% $room->{"url"} %>"
										maxlength = "255"
									>
								</td>

								<td class="centeralign">
									<span class="hidden"><% $room->{"ada"} %></span>
									<label class="switch smaller">
										<input
											type          = "checkbox"
											value         = "1"
											id            = "<% $room->{id} %>_ada"
											property_name = "ada"
											target_type   = "room"
											target_id     = "<% $room->{id} %>"
											onChange      = "postSwitch( this, 'room_switch.mhtml');"

											<% $room->{"ada"} ? 'checked="checked"' : "" %>
										>
										<div class="slider"></div>
									</label>
								</td>
%							}

							<td class="centeralign">
								<span class="hidden"><% $room->{"inactive"} %></span>

								<label class="switch smaller">
									<input
										type          = "checkbox"
										value         = "1"
										id            = "<% $room->{id} %>_inactive"
										property_name = "inactive"
										target_type   = "room"
										target_id     = "<% $room->{id} %>"
										onChange      = "postSwitch( this, 'room_switch.mhtml');"

										<% $room->{"inactive"} ? "" : 'checked="checked"' %>
									>
									<div class="slider"></div>
								</label>
							</td>
						</tr>
%					}

				</tbody>
			</table>

			<div class="libl rightalign">
				<span class="centeralign third">
					<input
						type="submit"
						value="Save Room Changes"
					>
				</span>
			</div>

			</form>

%		} else {

%			if ($site->online) {

				<h5>Auto-create online rooms</h5>

				<form
					action = "site_online_autocreate.mhtml"
					method = "post"
				>

				<input
					type  = "hidden"
					name  = "site_id"
					value = "<% $site->id %>"
				>

				<div class="row marbottom">

					<span class="ninetenths nospace">

						<span class="sixth">
							Letter prefix
						</span>

						<span class="tenth">
							<input
								type      = "text"
								name      = "prefix"
								size      = "4"
								maxlength = "4"
							>
						</span>

						<span class="tenth">
							Starting #
						</span>

						<span class="tenth">
							<input
								type      = "text"
								size      = "6"
								maxlength = "6"
								name      = "start"
								value     = "101"
							>
						</span>

						<span class="eighth rightalign">
							Room Count
						</span>

						<span class="tenth">
							<input
								type      = "text"
								size      = "6"
								maxlength = "6"
								name      = "roomcount"
							>
						</span>

						<label for="append">
							<span class="quarter true centeralign hover">
								Append Room # To URLs
								<span class="tenth nospace marbottomless padbottomless">
									<input
										type  = "checkbox"
										name  = "append"
										id    = "append"
										value = 1
									>
								</span>
							</span>
						</label>

						<span class="sixth">
							Entry URL
						</span>
						<span class="third">
							<input
								type        = "url"
								name        = "entry_url"
								size        = "32"
								value       = ""
								placeholder = "If all URLs are the same"
							>
						</span>

						<span class="sixth">
							Entry Passcode
						</span>
						<span class="third">
							<input
								type        = "text"
								name        = "entry_password"
								size        = "32"
								value       = ""
								placeholder = "If all passcodes are the same"
							>
						</span>

						<span class="sixth">
							Judge URL
						</span>
						<span class="third" title="If blank, will use entry URL">
							<input
								type        = "url"
								name        = "judge_url"
								size        = "32"
								value       = ""
								placeholder = "If blank, will use entry URL"
							>
						</span>

						<span class="sixth">
							Judge Passcode
						</span>
						<span class="third" title= "If blank, will use entry code">
							<input
								type        = "text"
								name        = "judge_password"
								size        = "32"
								placeholder = "If blank, will use entry code"
							>
						</span>

					</span>

					<span class="tenth rightalign">
						<input
							type  = "submit"
							class = "thin"
							value = "Create"
						>
					</span>

					</form>
				</div>

				<h5>Manually create rooms</h5>
%			}

			<form
				action = "site_rooms_add.mhtml"
				method = "post"
			>

			<input
				type  = "hidden"
				name  = "site_id"
				value = "<% $site->id %>"
			>

			<table id="roomlist">

				<thead>

					<tr class="yellowrow">

						<th class="smaller">
							Name
						</th>

%						if ($site->online) {

							<th class="smaller">
								Entry URL
							</th>

							<th class="smaller">
								Entry Passcode
							</th>

							<th class="smaller">
								Judge URL
							</th>

							<th class="smaller">
								Judge Passcode
							</th>

%						} else {

							<th class="tiny">
								Quality
							</th>

							<th class="tiny">
								Capacity
							</th>

							<th class="smaller">
								Notes
							</th>

							<th class="smaller">
								Map URL
							</th>

							<th class="smaller">
								Accessible
							</th>
%						}
					</tr>

				</thead>

				<tbody>

%				foreach my $room (1 .. 10) {

					<tr>

%						if ($site->online) {

							<td class="centeralign">
								<input
									type = "text"
									name = "new_<% $room %>_name"
									size = "8"
								>
							</td>

							<td class="centeralign">
								<input
									type      = "url"
									name      = "new_<% $room %>_url"
									size      = "16"
									maxlength = "255"
									class     = "smaller"
								>
							</td>

							<td class="centeralign">
								<input
									type      = "text"
									name      = "new_<% $room %>_passcode"
									size      = "16"
									maxlength = "255"
									class     = "smaller"
								>
							</td>

							<td class="centeralign">
								<input
									type      = "url"
									name      = "new_<% $room %>_judge_url"
									size      = "16"
									maxlength = "255"
									class     = "smaller"
								>
							</td>

							<td class="centeralign">
								<input
									type      = "text"
									name      = "new_<% $room %>_judge_passcode"
									size      = "16"
									maxlength = "255"
									class     = "smaller"
								>
							</td>

%						} else {

							<td class="centeralign">
								<input
									type = "text"
									name = "new_<% $room %>_name"
									size = "20"
								>
							</td>

							<td class="centeralign">
								<input
									type="text"
									name="new_<% $room %>_quality"
									size="5"
								>
							</td>

							<td class="centeralign">
								<input
									type = "text"
									name = "new_<% $room %>_capacity"
									size = "5"
								>
							</td>

							<td class="centeralign">
								<input
									type = "text"
									name = "new_<% $room %>_notes"
									size = "24"
								>
							</td>

							<td class="centeralign">
								<input
									type      = "url"
									name      = "new_<% $room %>_url"
									size      = "32"
									maxlength = "255"
								>
							</td>

							<td class="centeralign nospace">
								<label for="new_<% $room %>_ada">
									<span class="padvertless full hover">
										<input
											type  = "checkbox"
											name  = "new_<% $room %>_ada"
											id    = "new_<% $room %>_ada"
											value = 1
										>
									</span>
								</label>
							</td>
%						}

					</tr>
%				}

				</tbody>

				<tr class="liblrow">
					<td colspan="6" class="rightalign">
						<input type="submit" value="Save New Rooms">
					</td>
				</tr>

			</table>
			</form>

%		}

%	} else {

		<h2>Rooms for <% $tourn->name %></h2>
%	}

	</div>

<%args>
	$tourn
	$site_id => undef
	$from_id => undef
	$err     => undef
	$add     => undef
</%args>
<%init>

	my $site = Tab::Site->retrieve($site_id);

	my @rooms = $site->rooms(deleted => 0) if $site;

	@rooms =
		map  { $_->[0] } sort { $a->[1] <=> $b->[1] }
		map  { [$_, $_->name=~/(\d+)/] }
		@rooms;

	@rooms =
		map  { $_->[0] } sort { uc($a->[1]) cmp uc($b->[1]) }
		map  { [$_, $_->name =~ /(\D+)/] }
		@rooms;

</%init>

	<& menu.mas, tourn => $tourn, mysite => $site &>

	<div class="main">

%	if ($site_id && $site) {

		<h2>Room Blocks at <% $site->name %></h2>

		<& "tabbar.mas",
			site_id => $site_id,
			add     => $add,
			blocks  => 1
		&>

		<& "/funclib/tablesorter.mas", table => "sortme" &>

%		if (@rooms) {

			<table id="sortme">

				<thead>

				<tr class="yellowrow">

					<th class="smaller">
						Name
					</th>

					<th class="smaller">
						Already Blocked (click to remove)
					</th>

					<th class="smaller nosort">
					</th>

				</tr>

				</thead>
				<tbody>

%	 			foreach my $room (@rooms) {

					<tr>
						<td>
							<input
								type  = "text"
								name  = "<% $room->id %>_name"
								value = "<% $room->name %>"
								size  = "20"
							>
						</td>

						<td>
%   				        foreach my $block (sort {$a->type cmp $b->type} $room->blocks(tourn => $tourn->id)) {
								<a
									class = "buttonwhite bluetext leftalign"
									title = "<% $block->name %>"
									href="block_rm.mhtml?block_id=<% $block->id %>&from=add"
								>
									<% $block->name %>
								</a>
%           				}
						</td>

						<td class="centeralign">
							<a
								class="buttonwhite bluetext hover"
								href="block_add.mhtml?room_id=<% $room->id %>">
								Add Block
							</a>
						</td>

					</tr>

%				}

				</tbody>
			</table>

%		} else {
			<p>No rooms available to constrain.  Add some and try again.</p>
%		}

%	}

	</div>

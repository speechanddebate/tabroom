<%args>
	$site_id
	$tourn
	$person
</%args>
<%init>

	my $site = Tab::Site->retrieve($site_id);

	unless ($site) {
		$m->comp("/funclib/abort.mas",
			message => "No site with id $site_id found"
		);
	}

</%init>

	<& "menu.mas",
		tourn => $tourn,
		whoami => "site_edit"
	&>

%	my $switch;

	<& "/funclib/editor.mas" &>

	<div class="main">

		<h2><% $site->name %></h2>

		<& "tabbar.mas",
			site_id => $site_id,
			whoami  => "site"
		&>

		<h5>General Site Settings</h5>

		<form
			action = "site_save.mhtml"
			method = "post"
		>

		<input
			type  = "hidden"
			name  = "site_id"
			value = "<% $site->id %>"
		>

			<div class="row">
				<span class="semibold bluetext third">
					Site Name
				</span>

				<span class="twothirds">
					<input
						type  = "text"
						name  = "name"
						size  = "48"
						value = "<% $site->name %>"
					>
				</span>
			</div>

			<label for="online">
				<div class="row yellowhover">
					<span class="semibold bluetext third">
						Online Site?
					</span>

					<span class="twothirds">
						<input
							type  = "checkbox"
							name  = "online"
							id    = "online"
							size  = "48"
							value = "1"
							<% $site->online ? "checked" : "" %>
						>
					</span>
				</div>
			</label>

			<div class="row">
				<span class="semibold bluetext third">
					Ballot Dropoff Location
				</span>

				<span class="twothirds">
					<input
						type  = "text"
						name  = "dropoff"
						size  = "48"
						value = "<% $site->dropoff %>"
					>
				</span>
			</div>

			<div class="row">
				<span class="semibold bluetext third">
					Site Host
				</span>

				<span class="twothirds">
					<input
						type  = "email"
						name  = "host"
						size  = "48"
						value = "<% $site->host ? $site->host->email : "None" %>"
					>
				</span>
			</div>

			<h5>
				Directions/GPS Link
			</h5>

			<div class="row">
				<textarea
					name        = "directions"
					rows        = "8"
					placeholder = "Directions & Location"
					cols        = "50"
				><% $site->directions %></textarea>
			</div>

			<div class="liblrow rightalign">
				<span class="third centeralign">
					<input
						type  = "submit"
						value = "Save Site Details"
					>
				</span>
			</div>
		</form>
	</div>


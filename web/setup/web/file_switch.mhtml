<%args>
	$person
	$perms
	$target_id      => undef
	$property_name  => undef
	$setting_name   => undef
	$property_value => 0
</%args>
<%init>

	$m->clear_buffer();
	$r->content_type('application/json');

	unless ($target_id) { 
		$m->print('{ "error": true, "message": "No file ID sent"}');
		$m->abort();
	}

	unless ($property_name || $setting_name) { 
		$m->print('{ "error": true, "message": "No property to change sent"}');
		$m->abort();
	}

	my $file = Tab::File->retrieve($target_id);

	unless ($file) { 
		$m->print('{ "error": true, "message": "No file found for ID '.$target_id.'"}');
		$m->abort();
	}

	my $message;
	
	if ($setting_name) { 
		$file->setting($setting_name, $property_value);
		$message = $setting_name." is now ".$property_value;
	} else { 
		$file->$property_name($property_value);
		$file->update();
		$message = $property_name." is now ".$property_value;
	}

	my $msg = $file->label.' marked as '.$message;

    my %response = (
		error   => 0,
		message => $msg
    );

    $m->print(JSON::encode_json(\%response));

	$m->abort();

</%init>

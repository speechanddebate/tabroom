<%args>
	$tourn
	$person
</%args>

    <div class="menu"> 
		<& menu.mas, tourn => $tourn, whoami => "double" &> 
	</div> 
	
	<div class="main">
		
		<h2>Add Double Entry Grouping</h2>

			<form action="pattern_save.mhtml" method="post">

%			

			<table cellpadding="5" cellspacing="1" width="100%">
			
				<tr class="row">		

					<th class="smaller">
						Name
					</th>

					<td>
						<input type="text" name="name" size="40">
					</th>

				</tr>
				
				<tr class="row">		

					<th class="smaller">
						Double Entry Policy	
					</th>

					<td class="smaller nospace">

						<label for="2">
							<span class="fifth hover">
								None <input type="radio" id="2" name="type" value="2" "selected">
							</span>
						</label>

						<label for="0">
							<span class="fifth hover">
								Unlimited <input type="radio" id="0" name="type" value="0">
							</span>
						</label>

						<label for="1">
							<span class="hover quarter">
								None within group <input type="radio" id="1" name="type" value="1">
							</span>
						</label>

						<label for="3">
						<span class="third hover">
							Max 
							<input type="number" name="max" size="3" min="0" max="999" class="smaller">
							events
							<input type="radio" id="3" name="type" value="3">
						</span>
						</label>

					</td>

				</tr>	

				<tr class="liblrow">
					<td colspan="3" align="right">
						<input type="submit" value="Create Group" >
						</form>
					</td>
				</tr>

			</table>

	</div>

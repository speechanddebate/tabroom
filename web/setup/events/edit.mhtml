<%args>
	$tourn
	$tourn_settings
	$person
	$person_settings
	$perms
	$event_id => undef
	$add      => undef
</%args>
<%init>

	use Tab::NSDA::EventCategory;

	my @speech_categories =
		sort {$a->name cmp $b->name}
		Tab::NSDA::EventCategory->search( type => 's');

	my @debate_categories =
		sort {$a->id cmp $b->id}
		Tab::NSDA::EventCategory->search( type => 'd');

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

 	my @categories = sort{$a->name cmp $b->name} $tourn->categories;

	my $event = Tab::Event->retrieve($event_id) if $event_id;

	my @tourn_events = $tourn->events();

	@tourn_events = $m->comp(
		"/funclib/event_perms.mas",
		perms  => $perms,
		type   => "admin",
		events => \@tourn_events
	);

	unless ($add || $event) {
		$event = shift @tourn_events;
	}

	my $high_school;

	foreach my $circuit ($tourn->circuits) {
		$high_school++
			if $circuit->id != 43
			&& $circuit->id != 2
			&& $circuit->id != 15;
	}

	my %event_settings = ();

	if ($event) {
		%event_settings = $event->all_settings();
		$event_settings{'category_id'} = $event->category->id if $event->category;
		$event_settings{'category_name'} = $event->category->name if $event->category;
		$event_settings{'type'} = $event->type;
	}

	my $districts = $tourn_settings->{"nsda_district"};

	my $readonly = 'readonly="true"' if $districts;
	undef $readonly if $person->site_admin;
	undef $readonly if $person_settings->{"nsda_admin"};

</%init>

	<& "/funclib/editor.mas" &>

	<div class="main">

%		if ($event)	{

			<h2><% $event->name %></h2>

			<&
				tabbar.mas,
				person          => $person,
				person_settings => $person_settings,
				event           => $event,
				districts       => $districts,
				whoami          => "edit"
			&>

			<h4>Main Settings</h4>

%		} elsif ($add) {

			<h2>Add a new event/division</h2>
%		}

%		unless (@categories) {

			<p>
				Events, or divisions, are organized into judge categories.
				Events in the same category will share judges, same judge
				obligations, and judge rating systems.
			</p>

			<p>
				You must create judge categories under
				<a href="/setup/judges/edit.mhtml">Setup &rarr; Judge Categories</a>
				before creating events here.
			</p>

%		}

		<form action="edit_save.mhtml" method="post">

		<span class="pagehalf">

%		if ($event || $add) {

			<input
				type="hidden"
				name="event_id"
				value="<% ($event) ? $event->id : "" %>"
			>

			<div class="row">

				<span class="third">
					Full Name
				</span>

				<span class="twothird rightalign">
					<input
						type     = "text"
						name     = "name"
						value    = "<% ($event) ? $event->name : "" %>"
						size     = "25"
						tabindex = "1"
						<% $readonly %>
					>
				</span>
			</div>

			<div class="row">

				<span class="threequarter">
					Short Abbreviation (limit 5 characters)
				</span>

				<span class="quarter rightalign">
					<input
						type      = "text"
						name      = "abbr"
						value     = "<% ($event) ? $event->abbr : "" %>"
						size      = "6"
						maxlength = "6"
						<% $readonly %>
					>
				</span>

			</div>

			<div class="row">

				<span class="threequarter ">
					Per-Entry Fee
				</span>

				<span class="quarter rightalign">
					<input
						type  = "text"
						name  = "fee"
						size  = "5"
						value = "<% ($event) ? $event->fee : "" %>"
					>
				</span>

			</div>

			<div class="row">

				<span class="threequarter ">
					Minimum competitors per entry
				</span>

				<span class="quarter rightalign">
					<input
						type  = "text"
						name  = "min_entry"
						size  = "5"
						value = "<% $event_settings{"min_entry"} ? $event_settings{"min_entry"} : "1" %>"
						<% $readonly  %>
					>
				</span>

			</div>

			<div class="row">

				<span class="threequarter ">
					Maximum competitors per entry
				</span>

				<span class="quarter rightalign">
					<input
						type  = "text"
						name  = "max_entry"
						size  = "5"
						value = "<% $event_settings{"max_entry"} ? $event_settings{"max_entry"}  : "1" %>"
						<% $readonly  %>
					>
				</span>

			</div>

%			unless ($districts) {

				<div class="row">

					<span class="third smallish">
						Clone settings of:
					</span>

					<span class="twothird rightalign">

						<select
							name  = "clone_event"
							class = "fixedmed"
						>

							<option value=""></option>

%							foreach my $oevent (@tourn_events) {
%								next if $event && $oevent->id == $event->id;
								<option value="<% $oevent->id %>"><% $oevent->name %></option>
%							}

						</select>
					</span>

				</div>

%			} else {

				<div class="row">
				</div>

%			}
%			if ($tourn_settings->{"nsda_nats"}) {
%				if ($event_settings{"type"} eq "wsdc") {

					<label for="usa_wsdc">
						<div class="row hover">
							<span class="fourfifths smallish">
								USA Worlds Schools Invitational
							</span>

							<span class="fifth rightalign">
								<input
									type  = "checkbox"
									id    = "usa_wsdc"
									name  = "usa_wsdc"
									value = "1"
									<% $event_settings{"usa_wsdc"} ? 'checked=true' : '' %>
								>
							</span>
						</div>
					</label>

%				}

				<label for="not_nats">
					<div class="row hover">
						<span class="fourfifths smallish">
							Use normal rules, not NSDA Nats ones
						</span>

						<span class="fifth rightalign">
							<input
								type  = "checkbox"
								id    = "not_nats"
								name  = "not_nats"
								value = "1"
								<% $event_settings{"not_nats"} ? 'checked=true' : '' %>
							>
						</span>
					</div>
				</label>
%			}

		</span>

		<span class="pagehalf">
			<div class="row">
				<span class="third">
					Judge Category
				</span>

				<span class="twothird rightalign">

					<select
						name  = "category_id"
						class = "fixedmed"
					>

%						foreach my $category (sort {$a->name cmp $b->name} $tourn->categories) {

							<option
								value="<% $category->id %>"
								<% ($event_settings{"category_id"} == $category->id) ? "selected" : "" %>
							><% $category->name %></option>
%						}
					</select>

				</span>
			</div>

			<div
				class = "row"
				title = "This setting determines how entries are listed on ballots, pairings, and blasts"
			>

				<span class="third">
					Entry codes:
				</span>

				<span class="twothird rightalign">

					<select
						name  = "code_style"
						class = "fixedmed"
					>

%						if ($tourn_settings->{"nsda_nats"}) {
							<option
								value="nsda_nats"
								<% ($event_settings{"code_style"} eq "nsda_nats") ? "selected" : "" %>
							>
								NSDA Nats Style
							</option>
%						}

						<option
							value="numbers"
							<% ($event_settings{"code_style"} eq "numbers") ? "selected" : "" %>
						>
							Numeric codes
						</option>

						<option
							value="school_number"
							<% ($event_settings{"code_style"} eq "school_number") ? "selected" : "" %>
						>
							School code &amp; numeric code
						</option>

						<option
							value="schoolname_code"
							<% ($event_settings{"code_style"} eq "schoolname_code") ? "selected" : "" %>
						>
							School name &amp; numeric code
						</option>

						<option
							value="initials"
							<% ($event_settings{"code_style"} eq "initials") ? "selected" : "" %>
						>
							School code &amp; entry initials
						</option>

						<option
							value="code_name"
							<% ($event_settings{"code_style"} eq "code_name") ? "selected" : "" %>
						>
							School code &amp; entry name
						</option>

						<option
							value="full_initials"
							<% ($event_settings{"code_style"} eq "full_initials") ? "selected" : "" %>
						>
							School name &amp; entry initials
						</option>

						<option
							value="school_names"
							<% ($event_settings{"code_style"} eq "school_names") ? "selected" : "" %>
						>
							School name &amp; Full names
						</option>

						<option
							value="school_last_names"
							<% ($event_settings{"code_style"} eq "school_last_names") ? "selected" : "" %>
						>
							School name &amp; Last names
						</option>

						<option
							value="school_first_names"
							<% ($event_settings{"code_style"} eq "school_first_names") ? "selected" : "" %>
						>
							School name &amp; First names
						</option>

						<option
							value="school_name_only"
							<% ($event_settings{"code_style"} eq "school_name_only") ? "selected" : "" %>
						>
							School name Only
						</option>

						<option
							value="names"
							<% ($event_settings{"code_style"} eq "names") ? "selected" : "" %>
						>
							Full names Only
						</option>

						<option
							value="names_lastfirst"
							<% ($event_settings{"code_style"} eq "names_lastfirst") ? "selected" : "" %>
						>
							Full names (Last First)
						</option>

						<option
							value="last_names"
							<% ($event_settings{"code_style"} eq "last_names") ? "selected" : "" %>
						>
							Last names
						</option>

						<option
							value="register"
							<% ($event_settings{"code_style"} eq "register") ? "selected" : "" %>
						>
							Ask registrants to supply code
						</option>

%						if ($person->site_admin) {
						<option
							value="prepend_school"
							<% ($event_settings{"code_style"} eq "prepend_school") ? "selected" : "" %>
						>
							Prepend school to existing code
						</option>
%						}

					</select>
				</span>
			</div>

%			if ($event_settings{"code_style"} eq "nsda_nats") {

				<div class="row">
					<span class="twothird">
						NSDA Nats Code Letter
					</span>

					<span class="third rightalign">
						<input
							type  = "text"
							name  = "nsda_event_code"
							size  = "5"
							value = "<%
								$event_settings{"nsda_event_code"}
								? $event_settings{"nsda_event_code"}
								: ""
						%>"
						>
					</span>
				</div>

%			} else {

				<div class="row">

					<span class="twothird">
						Start entry codes with:
					</span>

					<span class="third rightalign">
						<input
							type  = "text"
							name  = "code_start"
							size  = "5"
							value = "<%
								$event_settings{"code_start"}
								? $event_settings{"code_start"}
								: "100"
						%>"
						>
					</span>
				</div>
%			}

			<div class="row">

				<span class="third">
					Event Type
				</span>

				<span class="twothird rightalign">

%					if ($readonly) {

						<input
							type  = "text"
							value = "<% ucfirst($event_settings{"type"}) %>"
							size  = "16"
							<% $readonly %>
						>

						<input
							type  = "hidden"
							name  = "type"
							value = "<% $event_settings{"type"} %>"
						>

%					} else {

						<select
							name     = "type"
							class    = "fixedmed"
							onchange = "showNSDA(this)"
						>
							<option value=""></option>

							<option
								value="speech"
								<% ($event_settings{"type"} eq "speech") ? "selected" : "" %>
							>Speech
							</option>

							<option
								value="congress"
								<% ($event_settings{"type"} eq "congress") ? "selected" : "" %>
							>Congress
							</option>

							<option
								value="debate"
								<% ($event_settings{"type"} eq "debate") ? "selected" : "" %>
							>Debate
							</option>

							<option
								value="wsdc"
								<% ($event_settings{"type"} eq "wsdc") ? "selected" : "" %>
							>Worlds Schools (WSDC)
							</option>

							<option
								value="wudc"
								<% ($event_settings{"type"} eq "wudc") ? "selected" : "" %>
							>Worlds Universities (WUDC/BP)
							</option>
						</select>
%					}

				</span>

			</div>

%			unless ($districts) {

				<div class="row">

					<span class="third ">
						Event Level
					</span>

					<span class="twothird rightalign">

						<select
							name  = "level"
							class = "fixedmed"
						>

							<option value=""></option>

							<option
								value="open"
								<% ($event_settings{"level"} eq "open") ? "selected" : "" %>
							>
								Open/Varsity
							</option>

							<option
								value="jv"
								<% ($event_settings{"level"} eq "jv") ? "selected" : "" %>
							>
								JV
							</option>

							<option
								value="novice"
								<% ($event_settings{"level"} eq "novice") ? "selected" : "" %>
							>
								Novice
							</option>

							<option
								value="champ"
								<% ($event_settings{"level"} eq "champ") ? "selected" : "" %>
							>
								Championship
							</option>

							<option
								value="spanish-varsity"
								<% ($event_settings{"level"} eq "spanish-varsity") ? "selected" : "" %>
							>
								Spanish Varsity
							</option>

							<option
								value="spanish-novice"
								<% ($event_settings{"level"} eq "spanish-novice") ? "selected" : "" %>
							>
								Spanish Novice
							</option>

						</select>

					</span>

				</div>

%			} else {

				<input
					type  = "hidden"
					name  = "level"
					value = "open"
				>
%			}

%			if ($high_school) {

				<script type="text/javascript">

					$(document).ready(function () {
						$('.speech').hide();
						$('.debate').hide();
						$('.showmeplz').show();
					});

					function showNSDA(select) {

						switch (select.selectedIndex) {
							case 0:
								break;
							case 1:
								$('.speech').show();
								$('.debate').hide();
								break;
							case 2:
								$('.speech').hide();
								$('.debate').hide();
								break;
							default:
								$('.speech').hide();
								$('.debate').show();
								break;
						}
					};

				</script>

<%perl>

				my $event_category = $event_settings{'nsda_event_category'}
					if $event;

				my $hidden = "hidden";
				undef $hidden
					if $event
					&& $event->type eq "speech";

</%perl>

				<div class="row <% $event ? "" : "hidden" %>">

					<span class="third">
						NSDA Points
					</span>

					<span class="twothird rightalign <% $hidden ? "" : "showmeplz" %> speech">

						<select
							name  = "nsda_speech_category"
							class = "fixedmed"
							<% $readonly  %>
						>

							<option value=""></option>

%							foreach my $category (@speech_categories) {
								<option value="<% $category->id %>"
									<% $category->id == $event_category
										? 'selected="selected"'
										: ""
									%>
								><% $category->name %></option>
%							}
						</select>
					</span>


%					$hidden = "hidden";
%					undef $hidden if $event && $event->type eq "congress";

					<span class="twothirds rightalign <% $hidden  %> congress">

						<input
							type     = "text"
							size     = "16"
							name     = "nsda_congress"
							value    = "Congress"
							readonly = "true"
							class    = "blend"
						>
					</span>

<%perl>

					$hidden = "hidden";

					undef $hidden
						if $event && (
							$event->type ne "speech"
							&& $event->type ne "congress"
						);

</%perl>
					<span
						class="twothird rightalign <% $hidden ? "" : "showmeplz" %> debate"
					>

						<select
							name  = "nsda_debate_category"
							class = "fixedmed"
						>

							<option value=""></option>

%							foreach my $category (@debate_categories) {
								<option
									value="<% $category->id %>"
									<% $category->id == $event_category ? 'selected="selected"' : "" %>
								><% $category->name %></option>
%							}
						</select>

					</span>

				</div>
<%perl>

			}

			if ($districts) {

				my $weekend_id = $event_settings{'weekend'};
				my $weekend = Tab::Weekend->retrieve($weekend_id);

</%perl>
				<div class="row">

					<span class="third">
						Weekend Held
					</span>

					<span class="twothird rightalign">
						<a
							class  = "plain full marless hover"
							target = "_blank"
							href   = "/setup/tourn/district_dates.mhtml"
						><% $weekend ? $weekend->name : "" %></a>
					</span>

				</div>

%			}

		</span>

%		if ($tourn_settings->{"nsda_nats"}) {

			<div class="pagefull odd marno">
				<span class="quarter semibold">
					Results Description
				</span>

				<span class="threequarters">
					<input
						type  = "text"
						name  = "result_description"
						size  = 72
						value = "<% $event_settings{"result_description"} %>"
					>
				</span>
			</div>

			<div class="pagefull odd marno">
				<span class="quarter semibold">
					Final Bowl Description
				</span>

				<span class="threequarters">
					<input
						type  = "text"
						name  = "bowl_description"
						size  = 72
						value = "<% $event_settings{"bowl_description"} %>"
					>
				</span>
			</div>

%		}

		<div class="liblrow pagefull marno rightalign">
			<input
				type="submit"
				value="Save"
			>
		</div>

%			unless ($districts) {

				<h4>Event Rules &amp; Description for website</h4>

					<div class="centeralign full marno odd">
						<textarea
							class = "full"
							name  = "description"
							s     = 10
							cols  = "59"
							wrap  = "virtual"
							><% $event_settings{"description"} %></textarea>
					</div>

				<div class="liblrow marno rightalign">
					<input
						type  = "submit"
						value = "Save"
					>
				</div>
%			}

%		}

		</form>

	</div>

	<div class="menu">

		<&
			"menu.mas",
			person         => $person,
			add            => $add,
			tourn          => $tourn,
			perms          => $perms,
			tourn_settings => $tourn_settings,
			whoami         => "edit",
			districts      => $districts,
			event_id       => ($event) ? $event->id : ""
		&>

	</div>

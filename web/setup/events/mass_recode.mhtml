<%args>
	$tourn
	$tourn_settings
	$person
</%args>
<%init>

	my $districts = $tourn_settings->{"nsda_district"};

</%init>

	<div class="menu">
		<& "menu.mas",
			person    => $person,
			tourn     => $tourn,
			districts => $districts,
			whoami    => "recode"
		&>
	</div>

	<div class="main">
	
		<h2>
			Change Starting Speaker Codes
		</h2>

		<p class="explain">
			Please note that changing these changes the default speaker codes.
			It does not affect existing speaker codes.  To change those, go to
			Entries -&gt; Data -&gt; Entry Codes and renumber your entries.
		</p>
	
		<div class="strong ltyellow">

			<span class="twothird">
				Event Full Name
			</span>

			<span class="third">
				Starting Code
			</span>

		</div>

		<form action="mass_recode_save.mhtml" method="post">

<%perl>
	
		foreach my $event (
			sort {$a->name cmp $b->name} $tourn->events
		) { 
</%perl>
	
			<div class="row">
	
				<span class="twothird divider">
					<% $event->name %>
				</span>

				<span class="third centeralign">
					<input 
						size  = "5"
						type  = "text"
						name  = "<% $event->id %>"
						value = "<% $event->setting("code_start") %>"
					>
				</span>

			</div>
	
%		}

%		my $warn = "Saving this will only change the DEFAULT STARTING CODE.  It
%		does not re-code existing entries.  Check out Entries -> Data -> Entry
%		Codes to recode entries";

		
		<div class="liblrow rightalign">
			<input 
				type="submit" 
				value=" Save Changes " 
				<& "/funclib/confirm.mas", warn => $warn &> 
			>
			</form>
		</div>

	</div>
	

		undef $tourn_settings->{"bias_statement"};
	}

	unless (defined $tourn_settings->{"bias_statement"}) {

		my $bias_statement = Tab::TabroomSetting->search(
			tag   => "bias_statement"
		)->first;

		if ($bias_statement) {
			$tourn_settings->{"bias_statement"} = $bias_statement->value_text;
			$bias_default++;
		}
	}


<%args>
	$tourn
	$tourn_settings
	$person
	$person_settings
	$event_id => undef
</%args>
<%init>

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my $now = DateTime->now();

	my $event = Tab::Event->retrieve($event_id);
	$m->abort unless $event;
	my %event_settings = $event->all_settings();

	my @settings = (
		"panel_labels",
		"schem_orientation",
		"schem_designation",
		"autopublish_results",
		"judge_publish_results",
	);

	if ($tourn_settings->{"nsda_district"}) {

		push @settings, "nsda_min_prelims";

		if ($person->site_admin || $person_settings->{"nsda_admin"}) {
			push @settings, "no_side_constraints";
			push @settings, "no_side_constraints";
			push @settings, "powermatch";
			push @settings, "pullup_method";
			push @settings, "elim_method";
			push @settings, "seed_presets";
		}

		if ($tourn_settings->{"nsda_district"} && $event->type eq "debate") {

			push @settings, "pilot_method";
			push @settings, "pilot_advance";

			my $robin_set = Tab::TiebreakSet->search(
				tourn => $tourn->id,
				name  => "Round Robin"
			)->first;

			my $elim_tiebreak_set = Tab::TiebreakSet->search(
				tourn => $tourn->id,
				name  => "Debate Elim"
			)->first;

			my $double_elim_tiebreak_set = Tab::TiebreakSet->search(
				tourn => $tourn->id,
				name  => "Debate Double Elimination"
			)->first;

			if ($ARGS{"pilot_method"} eq "single") {

				$ARGS{"round_robin"} = 0;
				$ARGS{"double_elimination"} = 0;

				foreach my $elim ($event->rounds(type => "elim")) {
					$elim->tiebreak_set($elim_tiebreak_set);
					$elim->update();
				}

			} elsif ($ARGS{"pilot_method"} eq "double") {

				$ARGS{"round_robin"} = 0;
				$ARGS{"double_elimination"} = 1;

				unless ($double_elim_tiebreak_set) {

					$double_elim_tiebreak_set = Tab::TiebreakSet->create({
						tourn => $tourn->id,
						name  => "Debate Double Elimination"
					});

					Tab::Tiebreak->create({
						name          => "losses",
						tiebreak_set  => $double_elim_tiebreak_set->id,
						count         => "elim",
						multiplier    => 1,
						priority      => 1
					});
				}

				foreach my $elim ($event->rounds(type => "elim")) {
					$elim->tiebreak_set($double_elim_tiebreak_set);
					$elim->update();
				}

			} elsif ($ARGS{"pilot_method"} eq "robin") {

				$ARGS{"round_robin"} = 1;
				$ARGS{"double_elimination"} = 0;

				unless ($robin_set) {

					$robin_set = Tab::TiebreakSet->create({
						tourn => $tourn->id,
						name  => "Round Robin"
					});

					Tab::Tiebreak->create({
						name          => "winloss",
						tiebreak_set  => $robin_set->id,
						count         => "prelim",
						multiplier    => 1,
						priority      => 1
					});

					Tab::Tiebreak->create({
						name          => "headtohead",
						tiebreak_set  => $robin_set->id,
						highlow       => 1,
						highlow_count => 1,
						count         => "prelim",
						multiplier    => 1,
						priority      => 2
					});
				}

				foreach my $round ($event->rounds()) {
					$round->tiebreak_set($robin_set);
					$round->update();
				}
			}
		}

	} else {
		push @settings, "no_side_constraints";
		push @settings, "powermatch";
		push @settings, "pullup_method";
		push @settings, "elim_method";
		push @settings, "seed_presets";
	}

	foreach my $setting (@settings) {

		my $value = $ARGS{$setting};

		if ($setting eq "schem_orientation") {
			if ($event_settings{"code_length"} eq "short") {
				undef $value if ($value eq "horizontal");
			} else {
				undef $value if ($value eq "vertical");
			}
		}

		if ($value eq $event_settings{$setting}) {

		} else {

			$value = 0 unless $value;
			my $description = "Setting $setting changed to $value";

			eval {
				$event->setting($setting, $value);

				$m->comp("/funclib/log.mas",
					type        => 'tabbing',
					event       => $event->id,
					tourn       => $event->tourn->id,
					person      => $person->id,
					description => $description
				);
			};
		}
	}

	my $msg = "Pairing settings saved";
	$m->redirect("sectioning.mhtml?event_id=".$event->id."&msg=$msg");

</%init>

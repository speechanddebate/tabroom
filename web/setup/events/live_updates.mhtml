<%args>
	$tourn
	$account
	$session
</%args>
<%init>

	my $switch;

	my @events = $m->comp("/funclib/tourn_events.mas", tourn => $tourn);

	my @on_events = $m->comp("/funclib/tourn_events_liveupdates.mas");
	my %seen = ();

</%init>


	<div class="left huge">

		<table cellpadding="6" cellspacing="1" width="100%">

			<tr>
				<td colspan="3">
					<h2>Events using Live Updates</h2>
				</td>
			</tr>

%			foreach my $event (@on_events) { 

%				$seen{$event->id}++;

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

					<td>
						<% $event->name %>
					</td>

					<td>
						<% ucfirst($event->type) %>
					</td>

					<td class="center">
						<a class="whiteblock" href="live_flip.mhtml?event_id=<% $event->id %>">Disable Live Updates</a>
					</td>

				</tr>

%			}

			<tr>
				<td colspan="3">
					<h2>Events without Live Updates</h2>
				</td>
			</tr>

%			foreach my $event (sort {$a->name cmp $b->name} @events) { 

%				next if $seen{$event->id};

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\""%> >

					<td>
						<% $event->name %>
					</td>

					<td>
						<% ucfirst($event->type) %>
					</td>

					<td class="center">
						<a class="whiteblock" href="live_flip.mhtml?event_id=<% $event->id %>">Enable Live Updates</a>
					</td>

				</tr>

%			}


		</table>

	</div>

	<& web_menu.mas, tourn => $tourn, news_type => "fieldcontrol" &>

	<br style="clear: both;">


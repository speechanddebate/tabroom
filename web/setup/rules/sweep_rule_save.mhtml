<%args>
	$set_id
	$tourn
	$tag 
	$points => undef
	$place => 0
</%args>
<%init>

	if ($points || $tag eq "manual") { 

		Tab::SweepRule->create({
			tag => $tag,
			value => $points,
			sweep_set => $set_id,
			place => $place
		});

		my $msg = "Sweepstakes rule created for $tag";
		$m->redirect("sweeps.mhtml?set_id=$set_id&msg=$msg")

	} else {

		my $msg = "You cannot create a sweepstakes rule without points";
		$m->redirect("sweeps.mhtml?set_id=$set_id&msg=$msg")

	}

</%init>

<%args>
	$dbh
	$tourn
	$property_name => undef
</%args>
<%init>

	my $set = Tab::SweepSet->retrieve($ARGS{'sweep_set_id'});

	$m->clear_buffer();
	$r->content_type('application/json');

	unless ($set) {
		$m->print('{ "error": true, "message": "No sweep set found for ID '.$ARGS{'sweep_set_id'}.'"}');
		$m->abort();
	}

	if ($set && $set->tourn ne $tourn) {
		$m->print('{ "error": true, "message": "Sweep set does not belong to your current tournament'.$set->tourn->id.' '.$tourn->id.'"}');
		$m->abort();
	}

	my $msg;
	my $destroy;

	if ($property_name eq "child") {

		my $child = Tab::SweepSet->retrieve($ARGS{"child_set_id"});

		unless ($child) {
			$m->print('{ "error": true, "message": "No sweep set found for child ID '.$ARGS{child_set_id}.'"}');
			$m->abort();
		}

		my $sth = $dbh->prepare("
			delete from sweep_include
			where sweep_include.child = ?
			and sweep_include.parent = ?
		");

		$sth->execute($child->id, $set->id);
		$msg = $child->name." rule set removed from ".$set->name;

		$destroy = "child_".$child->id;
		$sth->finish();

	} elsif ($property_name eq "round") {

		my $round = Tab::Round->retrieve($ARGS{round_id});

		unless ($round) {
			$m->print('{ "error": true, "message": "No round found for round ID '.$ARGS{round_id}.'"}');
			$m->abort();
		}

		my $sth = $dbh->prepare("
			delete from sweep_rule
			where sweep_rule.tag = 'ignore_round'
			and sweep_rule.value = ?
			and sweep_rule.sweep_set = ?
		");

		$sth->execute($round->id, $set->id);
		$msg = $round->realname." exclusion removed from ".$set->name;
		$sth->finish();
		$destroy = "round_".$round->id;

	} elsif ($property_name eq "event") {

		my $event = Tab::Event->retrieve($ARGS{event_id});

		unless ($event) {
			$m->print('{ "error": true, "message": "No event found for event ID '.$ARGS{event_id}.'"}');
			$m->abort();
		}

		my $sth = $dbh->prepare("
			delete from sweep_event
			where sweep_event.event = ?
			and sweep_event.sweep_set = ?
		");

		$sth->execute($event->id, $set->id);
		$msg = $event->abbr." removed from ".$set->name;
		$sth->finish();
		$destroy = "event_".$event->id;

	} elsif ($property_name eq "catchall") {

		my $sweep_event = Tab::SweepEvent->retrieve($ARGS{sweep_event_id});

		unless ($sweep_event) {
			$m->print('{ "error": true, "message": "No sweep event target found for event ID '.$ARGS{sweep_event_id}.'"}');
			$m->abort();
		}

		$destroy = "catchall_".$sweep_event->id;
		$sweep_event->delete();
		$msg = "Sweep target emoved from ".$set->name;
	}

	;

	$m->print('{
		"error": false,
		"message": "'.$msg.'",
		"destroy": "'.$destroy.'"
	}');
	$m->abort();

</%init>

<%args>
	$tourn
	$set_id => undef
	$name => undef
</%args>
<%init>

	my $set = Tab::SweepSet->retrieve($set_id);

</%init>

	<div class="left huge">

		<div class="left half">

			<form action="sweet_set_save.mhtml" method="post">
			<input type="hidden" name="set_id" value="<% $set ? $set->id : "" %>">

				<span class="evenrow block">
					<input type="text" name="name" value="<% $set ? $set->name : "" %>" size="20" >
				</span>

				<span class="oddrow block rightalign">
					<input type="submit" value=" Save Name ">
				</span>
			</form>
		</div>

%	if ($set) { 

		<div class="right half">
			<form action="sweet_set_rm.mhtml" method="post">
				<input type="hidden" name="set_id" value="<% $set->id %>">
				<span class="lirdrow block rightalign">
					<input type="submit" name=" Delete Sweep Set ">
				</span>
			</form>
		</div>

%	}

	</div>


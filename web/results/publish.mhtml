<%args>
	$tourn
	$circuit
	$event_id => undef	
	$err => undef
</%args>


	<div id="rightsmall">

		<a class="blueblock" href="publish_confirm.mhtml?<% ($tourn->results) ? "unpublish=true" : ""  %>">
			<% ($tourn->results) ? "Unpublish Results" : "Publish Results"  %>
		</a>

	</div>

	<div id="leftbignb">

		<h2>Publish public results on tabroom.com</h2>

		<table cellpadding="5" cellspacing="1" width="100%">

% 		if ($tourn->results) { 

			<tr>
				<form action="publish_confirm.mhtml" method="post">
				<input type="hidden" name="some" value="ohyes">
				<th colspan="2">Re-publish selected events:</th>
			</tr>

%			my $switch;

% 			foreach my $event (sort {$a->name cmp $b->name} $tourn->events) { 

%				next if $event->type ne "speech";

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

					<td>
						<% $event->name %>
					</td>

					<td align="center" colspan="2">
						<input type="checkbox" class="large" value="1" name="<% $event->id %>">
					</td>

				</tr>
%			}

			<tr class="liblrow">

				<td>
				</td>

				<td align="right" colspan="2">
					<input type="submit" value="Re-publish these events">
					</form>
				</td>
			</tr>

			<tr>
				<td style="padding-top: 15px;" colspan="3">
					<h4>Other results files:</h4>
				</td>
			</tr>

%			foreach my $resultfile ($tourn->resultfiles) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
					<td>
						<% $resultfile->name %>
					</td>
					
					<td>
						<a href="/public_site/results/<% $circuit->id %>/<% $tourn->id %>/files/<% $resultfile->id %>/<% $resultfile->filename %>">
							<% $resultfile->filename %>
						</a>
					</td> 
					
					<td align="center">
						<form action="publish_file_rm.mhtml" method="post">
						<input type="hidden" name="resultfile_id" value="<% $resultfile->id %>">
						<input type="submit" value="Delete" class="skinny">
						</form>
					</td>

				</tr>

%			} 

			<tr>
				<td>&nbsp;</td>
			</tr> 
			
			<tr>
				<td colspan="3">
				<h3>Upload other results files:</h3>
				</td>
			</tr> 
			
			<tr>
			
				<th>
					Upload File:
				</th>
				
				<td colspan="2">
					<form enctype="multipart/form-data" onsubmit="return uploadThis()" 
						name="results" action="publish_files.mhtml" method="post">
					<input type="hidden" name="tourn_id" value="<% $tourn->id %>">
					<input type="file" name="results" size="15">
				</td>

			</tr> 

			<tr class="evenrow">
			
				<th>
					Name of result:
				</th>
				
				<td colspan="2">
					<input type="text" size="30" name="name">
				</td>
				
			</tr> 
			
			<tr class="liblrow">
				<td colspan="3" align="right">
					<input type="submit" class="blue" value=" Upload Results ">
					</form>
				</td>
			</tr>

%		}  else { 

			<p>Note that hitting "publish results" at right will publish all
			current speech events as currently entered.</p>

			<p>If instead you want to publish mid-tournament announcements or
			breaking lists, go to Setup -> Website instead.</p>

%		}

		</table>

	</div>

	<br style="clear: both;">


	$tourn
	$circuit
	$err => undef
</%args> 

<p><% $err %></p>

<h3><% $tourn->name %></h3>

<form action="manual_result_save.mhtml" method="post">

<table width="100%" cellpadding="5">

<tr>
	<th>Code</th>
	<th>Results Bar</th>
	<th>Rank</th>
	<th>Bid?</th>
</tr>

<tr>
	<td>
	<input type="text" size="4" maxlength="4" 
	onKeyUp="return autoTab(this, 4, event);"
 	name="code" >
	</td>

%#	<td>

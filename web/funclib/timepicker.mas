<%args>
	$name          => "flurgle"
	$time          => undef
	$value         => undef
	$size          => "10"
	$id            => undef
	$placeholder   => undef
	$default       => undef
	$target_id     => undef
	$property_name => undef
	$setting_name  => undef
	$url           => "setting_switch.mhtml"
</%args>

%	$id = $name unless $id;

	<script type="text/javascript">
		 $(document).ready(function() {
			 $('#<% $name %>').timepicker({
				 showLeadingZero : false,
				 showPeriod      : true,
				 periodSeparator : ' '
			 });
		 });
	 </script>

	<input
		autocomplete = "off"
		class        = "notfirst time_picker"
		id           = "<% $name %>"
		size         = "<% $size %>"
		placeholder  = "<% (Tab::pickertime($placeholder)) || "Time..." %>"
		type         = "text"
		name         = "<% $name %>"
		value        = "<% $time ? Tab::pickertime($time) : $value ? $value : Tab::pickertime($default) %>"
%		if ($target_id) {
			target_id     = "<% $target_id %>"
			setting_name  = "<% $setting_name %>"
			property_name = "<% $property_name %>"
			onChange       = "postSwitch(this, '<% $url %>');"
%		}
	>


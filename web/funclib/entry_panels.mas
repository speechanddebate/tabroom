<%args>
	$entry        => undef
	$round        => undef
	$published    => undef
	$post_results => undef
</%args>
<%init>

	return unless $entry;

	if ($round) { 

		Tab::Panel->set_sql( by_entry_and_round => "
			select distinct panel.*, 
				ballot.side as side, 
				opp.id as opp, 
				ballot.speakerorder as speakerorder
			from panel, ballot, ballot oppballot, entry opp
			where ballot.entry = ?
				and ballot.panel = panel.id
				and panel.id = oppballot.panel
				and oppballot.id != ballot.id
				and opp.id = oppballot.entry
				and opp.id != ballot.entry
				and ballot.entry != 0
				and panel.round = ? ");

		Tab::Panel->set_sql( bye_by_round => "
			select distinct panel.*, 
				ballot.side as side, 'none' as opp, 
				ballot.speakerorder as speakerorder
			from panel, ballot
			where ballot.entry = ?
				and ballot.panel = panel.id
				and panel.bye = 1
				and ballot.entry != 0
				and panel.round = ? ");

		return Tab::Panel->search_by_entry_and_round( $entry->id, $round->id ), 
				Tab::Panel->search_bye_by_round( $entry->id, $round->id );

	} elsif ($published) { 

		Tab::Panel->set_sql( published_by_entry => "
			select panel.*, ballot.side as side, opp.id as opp, 
				ballot.bye as bye, ballot.speakerorder as speakerorder
				from panel, ballot, ballot oppballot, entry opp, round
				where ballot.entry = ?
					and ballot.panel = panel.id
					and round.id = panel.round
					and panel.id = oppballot.panel
					and oppballot.id != ballot.id
					and opp.id = oppballot.entry
					and opp.id != ballot.entry
					and round.published = 1
					and ballot.entry != 0
					and round.post_results < 1 
					and panel.publish < 1
				order by round.name ");

		return Tab::Panel->search_published_by_entry($entry->id);

	} elsif ($post_results) {  

		Tab::Panel->set_sql( posted_by_entry => "
			select distinct panel.*, ballot.side as side, opp.id as opp, 
				ballot.bye as bye, ballot.speakerorder as speakerorder
				from panel, ballot, ballot oppballot, entry opp, round
				where ballot.entry = ?
					and ballot.panel = panel.id
					and round.id = panel.round
					and panel.id = oppballot.panel
					and oppballot.id != ballot.id
					and opp.id = oppballot.entry
					and ballot.entry != 0
					and opp.id != ballot.entry
					and 
					(	round.post_results > 0
						or exists (
							select event_setting.id
							from event_setting, panel p2
							where event_setting.event = round.event
							and event_setting.tag = 'judge_publish_results'
							and p2.round = round.id
							and p2.id = panel.id
							and p2.publish > 0
						)
					)
				order by round.name
		");

		Tab::Panel->set_sql( posted_bye => "
			select distinct panel.*
			from panel, ballot, round
				where ballot.entry = ?
				and ballot.panel = panel.id
				and round.id = panel.round
				and panel.bye = 1
				and ballot.entry != 0
				and round.post_results > 0
				order by round.name ");

		return Tab::Panel->search_posted_by_entry($entry->id), 
			Tab::Panel->search_posted_bye($entry->id);

	} else { 

		Tab::Panel->set_sql( by_entry => "
			select distinct panel.*, ballot.side as side, 
				ballot.bye as bye, ballot.speakerorder as speakerorder
			from panel, ballot, round
				where ballot.entry = ?
				and ballot.panel = panel.id
				and panel.round = round.id
				and ballot.entry != 0
				order by round.name, ballot.judge ");

		return Tab::Panel->search_by_entry($entry->id);

	}
	
</%init>

<%args>
	$nsda_person
	$tourn
</%args>
<%init>

	Tab::Judge->set_sql( by_person_tourn => "
		select judge.*
		from judge, category, judge_setting nsda
		where category.tourn = ? 
		and category.id = judge.category
		and judge.id = nsda.judge
		and nsda.tag = 'nsda'
		and nsda.value = ? 
	");

	return Tab::Judge->search_by_person_tourn(
		$tourn->id,
		$nsda_person->user_id
	);

</%init>


<%args>
	$quiz
	$size => "small"
</%args>

%	return unless $quiz;

%	if ($quiz->badge_link) {
		<a
			href="<% $quiz->badge_link %>"
			class="nospace"
		>
%	}

%	if ($quiz->badge) {
		<img
			class = "badge<% $size %>"
			src   = "<% $Tab::s3_base %>/badges/<% $quiz->id %>/<% $quiz->badge %>"
			alt   = "<% $quiz->badge_description ? $quiz->badge_description : $quiz->label." badge " %>"
		>
%	} else {
		<span
			class="fa <% $size eq "small" ? "fa-4x" : "fa-6x" %> fa-certificate bluetext"
		></span>
%	}

%	if ($quiz->badge_link) {
		</a>
%	}

%	return;


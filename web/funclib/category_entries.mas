<%args>
	$category
	$drops     => undef
	$waitlist  => undef
	$school    => undef
	$preffable => undef
</%args>
<%perl>

	my $pref_limit;
	my $drop_limit;
	my $waitlist_limit;

	if ($drops) { 
		$drop_limit = "and entry.dropped = 1"
	} else {
		$drop_limit = "and entry.dropped != 1"
	}

	if ($waitlist) { 
		$waitlist_limit = "and entry.waitlist = 1"
	} else {
		$waitlist_limit = "and entry.waitlist != 1"
	}

	if ($preffable) { 
		$pref_limit = "
			and not exists ( 
				select event_setting.id
				from event_setting
				where event_setting.event = event.id
				and event_setting.tag = 'no_prefs'
				and event_setting.value = 1
			)
		";
	}

	if ($school) { 

		Tab::Entry->set_sql( by_category => "
	       	select distinct entry.* 
			from entry, event
			where entry.event = event.id
			and event.category = ? 
			and entry.school = ? 
			".$drop_limit."
			".$waitlist_limit."
			".$pref_limit."
			order by event.name, entry.code");
		
    	return Tab::Entry->search_by_category($category->id, $school->id);

	} else { 

		Tab::Entry->set_sql( by_category => "
	       	select distinct entry.* 
			from entry, event
			where entry.event = event.id
			and event.category = ? 
			".$drop_limit."
			".$waitlist_limit."
			".$pref_limit."
			order by event.name, entry.code");
		
    	return Tab::Entry->search_by_category($category->id);
	}

</%perl>


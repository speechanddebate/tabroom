<%args>
    $warn    => undef
	$warning => undef
	$message => undef
	$change  => undef
</%args>
<%init>

	$warn = $warning if $warning;
	$warn = $message if $message;

    return unless $warn;

    use HTML::Entities;

    my $html = encode_entities($warn) if $warn;

</%init>
%	if ($change) {
	    onChange="alertify.alert('Please confirm', '<% $html %>');"
%	} else {
	    onClick="alertify.alert('Please confirm', '<% $html %>');"
%	}
%   return;

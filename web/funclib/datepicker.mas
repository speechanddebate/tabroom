<%args>
	$from => undef
	$to   => undef
	$id   => undef
	$min  => undef
	$max  => undef
	$time => undef
</%args>
<%perl>

	my $min_date;
	my $max_date;

	eval {
		$min_date = Tab::pickerdate($min) if $min;
		$max_date = Tab::pickerdate($max) if $max;
	};

	$min_date = $min unless $min_date;
	$max_date = $max unless $max_date;

</%perl>

%	if ($from && $to) { 

		<script type="text/javascript">

			 $(function() {
			 	var dates = $('#<% $from %>, #<% $to %>').datepicker({
					defaultDate: "+1w",
					changeMonth: true,
					numberOfMonths: 1,
					onSelect: function(selectedDate) {

						var option = this.id == "<% $from %>" ? "minDate" : "";
						var instance = $(this).data("datepicker");

						var date = $.datepicker.parseDate(
							instance.settings.dateFormat 
							|| $.datepicker._defaults.dateFormat, selectedDate, instance.settings
						);
						dates.not(this).datepicker("option", option, date);
					}
				});
			});
		
		</script>


%	} elsif ($id) { 

		<script type="text/javascript">

			$(function() {
				$("#<% $id %>").datepicker({
					showOtherMonths: true, 
					selectOtherMonths: true,
					numberOfMonths: 1,
					defaultDate: "+1w"
					<% ($min_date) ? ", minDate: \'".$min_date."\'" : "" %>
					<% ($max_date) ? ", maxDate: \'".$max_date."\'" : "" %>
				});
			});

		</script>

%	}


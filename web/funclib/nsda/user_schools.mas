<%args>
	$nsda_id => undef
</%args>
<%init>

	return "No NSDA member ID number was sent" unless $nsda_id;

	my ($roles_ref, $raw) = $m->comp(
		"api_client.mas",
		path => "/members/".$nsda_id."/roles"
	);

	my @roles;

	if ($roles_ref) {
		foreach my $role (@{$roles_ref}) {
			next unless $role->{"role"} eq "Advisor";
			push @roles, $role;
		}
	}

	return \@roles;

</%init>

<%args>
	$tourn
	$event_id => undef
	$sort_by => "code"
</%args>
<%init> 

	my $event = Tab::Event->retrieve($event_id) if $event_id;

</%init>


	<div class="menu">
	
		<div class="sidenote">

			<h4>Choose Event:</h4>

%				foreach my $event ($tourn->events) { 
					<a class="<% $event->id == $event_id ? "dk" : "" %>blue block" href="sweeps.mhtml?event_id=<% $event->id %>&sort_by=<% $sort_by %>">
						<% $event->name %>
					</a>
%				}

			<hr>

			<a class="yellow block" href="upload_sweeps.mhtml">Upload Sweeps Points (CSV)</a>

		</div>

	</div>

	<div class="main">
	
		<h2>Externally tabbed sweepstakes points</h2>

% 		if ($event) { 

			<& /funclib/tablesorter.mas, table => "sortme" &>

% 			my @entries = $event->entries( dropped => 0, waitlist => 0, unconfirmed => 0 );
%			@entries = sort {$a->code <=> $b->code} @entries;

			<h4><% $event->name %>: <% scalar @entries %> entries</h4>

			<form action="sweeps_save.mhtml" method="post"> 
			<input type="hidden" name="tourn_id" value="<% $tourn->id %>">
			<input type="hidden" name="event_id" value="<% $event->id %>">
			<input type="hidden" name="sort_by" value="<% $sort_by %>">

			<table cellpadding="3" cellspacing="1" width="100%" id="sortme">

				<thead>

				<tr class="yellowrow">

					<th class="smallish centeralign">
						Code
					</th>
					
					<th class="smallish centeralign">
						Name
					</th>

					<th class="smallish centeralign">
						School
					</th>

%					if ($tourn->setting("ncfl")) { 
						<th class="smallish centeralign">
							Diocese
						</th>

						<th class="smallish centeralign">
							Code
						</th>

%					} else { 

						<th class="smallish centeralign">
							Code
						</th>

%					}

					<th class="smallish centeralign">
						Sweeps
					</th>

				</tr>

				</thead>
				<tbody>

%				my $switch;

% 				foreach my $entry (@entries) { 

					<tr>

						<td class="smallish centeralign">
							<a class="white" href="<% $Tab::url_prefix %>/register/entry/edit.mhtml?entry_id=<% $entry->id %>">
								<% $entry->code %>
							</a>
						</td>

						<td class="smallish">
							<a class="white" href="<% $Tab::url_prefix %>/register/entry/edit.mhtml?entry_id=<% $entry->id %>">
								<% $entry->name %> 
							</a>
						</td>

						<td class="smallish">
							<a class="white" href="/register/school/index.mhtml?school_id=<% $entry->school->id %>">
								<% $entry->school->short_name %>
							</a>
						</td>

%						if ($tourn->setting("ncfl")) { 

							<td class="smallish">
								<a class="white" href="/register/region/tourn.mhtml?region_id=<% $entry->school->region->id %>">
									<% substr($entry->school->region->name,0, 15)%>
								</a>
							</td>

							<td class="centeralign smallish">
								<% $entry->school->region->code %>
							</td>

%						} else { 

							<td class="centeralign smallish">
								<a class="white" href="/register/school/index.mhtml?school_id=<% $entry->school->id %>">
									<% $entry->school->code %>
								</a>
							</td>

%						}

						<td class="centeralign">
							<span style="display: none;"><% $entry->sweeps %></span>
							<input size="3" type="text" name="sweeps_<% $entry->id %>" value="<% ($entry->sweeps > 0 ) ? $entry->sweeps : "" %>">
						</td>

					</tr>

% 				}
				
				</tbody>
 		
				<tr class="liblrow">

					<td class="rightalign" colspan="7">
						<input  type="submit" value="  Save Sweepstakes Points   ">
						</form>
					</td>

				</tr>
		
			</table>

% 		}

	</div>

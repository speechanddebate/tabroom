<%args>
	$tourn
	$tourn_settings
	$session
	$timeslot_id
	$person
	$perms
	$person_settings
	$only_category => undef
</%args>
<%init>

	my $session_category = $session->category;
	my $session_event = $session->event 
		if $session->event 
		&& $session->event->id;

	my $name;
	my @events;
	my $limit;

	if ($session_event) { 
		$name = $session_event->name;
		push @events, $session_event;
		$limit = "and round.event = ".$session_event->id;
	} elsif ($session_category) { 
		$name = $session_category->name;
		push @events, $session_category->events;
		$limit = "and event.category = ".$session_category->id;
	}

	my $no_codes++ if $session_category 
		&& $session_category->setting("hide_codes");

	my $timeslot = Tab::Timeslot->retrieve($timeslot_id);

	my @ballots = $m->comp("/funclib/timeslot_ballots.mas", 
		timeslot => $timeslot,
		limit    => $limit
	);

	my %panel_ballots;

	foreach my $ballot (@ballots) { 
		push @{$panel_ballots{$ballot->panel->id."-".$ballot->judge->id}}, $ballot;
	}

</%init>

	<& 
		"menu.mas",
		tourn           => $tourn,
		tourn_settings  => $tourn_settings,
		person          => $person,
		person_settings => $person_settings,
		timeslot        => $timeslot,
		session         => $session,
		audit_sheet     => "1",
		audit_mode      => "1",
		only_category   => $only_category
	&>

	<div class="main smallish">

		<h2><% $session_category ? $session_category->name : "" %> Audit</h2>

			<p>
				Only one user at a time should use this screen.  One user's
				changes will overwrite others'
			</p>

			<form 
				action = "screen_audit_save.mhtml"
				method = "post"
			>

			<input 
				type  = "hidden"
				name  = "timeslot_id"
				value = "<% $timeslot->id %>"
			>

			<div class="audit_scroll">

<%perl>

			foreach my $event (@events) {  
	
				my $event_type = $event->type;
				$event_type = "debate" if ($event_type eq "policy" 
					|| $event_type eq "pf" 
					|| $event_type eq "ld" 
					|| $event_type eq "parli"
				);

				my $limit = "and round.event = ".$event->id."\n";

				my @judges = 
					sort {$a->last cmp $b->last} 
					$m->comp("/funclib/timeslot_judges.mas", 
						timeslot => $timeslot, 
						limit => $limit
					);
			
				my $tabular;

				my $aff_string = $event->setting("aff_label");
				my $neg_string = $event->setting("neg_label");
				$aff_string = "Aff" unless $aff_string;
				$neg_string = "Neg" unless $neg_string;

</%perl>
				
				<h4><% $event->name %></h4>

				<& "/funclib/tablesorter.mas", table => $event->id &>

				<table id="<% $event->id %>">

%					if ($event_type eq "debate") { 

						<thead>

							<tr class="yellowrow">

								<th class="smallish">
									Judge
								</th>

								<th class="smallish">
									<% $aff_string %>
								</th>

								<th class="smallish">
									<% $aff_string %> Pts/Rks
								</th>

								<th class="smallish">
									<% $neg_string %>
								</th>
								<th class="smallish">
									<% $neg_string %> Pts/Rks
								</th>

								<th class="smallish">
									Winner
								</th>

								<th class="smallish">
									OK?
								</th>

							</tr>

						</thead>

%					} elsif ($event_type eq "wudc") { 

						<thead>

							<tr class="yellowrow">

								<th>
									Judge
								</th>

								<th>
									1G
								</th>
								<th>
									Pts
								</th>
								<th>
									Spks
								</th>

								<th>
									1O
								</th>
								<th>
									Pts
								</th>
								<th>
									Spks
								</th>

								<th>
									2G
								</th>
								<th>
									Pts
								</th>
								<th>
									Spks
								</th>

								<th>
									2O
								</th>
								<th>
									Pts
								</th>
								<th>
									Spks
								</th>

								<th>
									OK
								</th>
							</tr>

						</thead>

%					} elsif ($event_type eq "speech") {

						<thead>

							<tr class="yellowrow">

								<th>
									Judge
								</th>

								<th>
									Entries & Rks/Pts
								</th>

								<th>
									OK
								</th>
							</tr>

						</thead>

%					}

					<tbody>

<%perl>
					foreach my $judge (@judges) {  

						my @panels = $m->comp(
							"/funclib/judge_panels.mas", 
							judge    => $judge,
							timeslot => $timeslot
						);

						foreach my $panel (@panels) { 
   		
							next if $panel->round->event->id != $event->id;

							my @scores = $m->comp(
								"/funclib/panel_scores.mas", 
								judge => $judge, 
								panel => $panel
							);


							my @ballots = 
								sort {$a->side <=> $b->side} 
								@{$panel_ballots{$panel->id."-".$judge->id}} 
								if $panel_ballots{$panel->id."-".$judge->id};

							next unless @ballots;

							if ($event_type eq "debate") { 

								if ($panel->bye) { 

</%perl>
									<tr>

										<td>
											BYE
										</td>

										<td>
%											my $first = shift @ballots if @ballots;
											<% $first->entry->code %>
										</td>

										<td>
%											my $second = shift @ballots if @ballots;
											<% $second->entry->code %>
										</td>

										<td>
										</td>

										<td>
										</td>

									</tr>

%								} else { 
<%perl>
									my $aff_bye;
									my $neg_bye;

									my $aff = shift @ballots if @ballots;
									my $neg = shift @ballots if @ballots;

									my $audit = 1;
									undef $audit unless $aff && $aff->audit;
									undef $audit unless $neg && $neg->audit;

									my $winner;

									$aff_bye = uc($aff_string)." FFT" if $aff->forfeit;
									$aff_bye = uc($aff_string)." BYE" if $aff->bye;

									$neg_bye = uc($neg_string)." FFT" if $neg && $neg->forfeit;
									$neg_bye = uc($neg_string)." BYE" if $neg && $neg->bye;
</%perl>
									<tr>

										<td class="nowrap">
											<% $no_codes 
												?  $judge->last.", ".$judge->first 
												: $judge->code." ".$judge->last
											%>
										</td>

										<td>
											<% $aff->entry->code %>
										</td>

										<td>
<%perl>
											foreach my $student ($aff->entry->students) { 
												my $rank;
												my $points;

												foreach my $score (@scores) { 
													$rank = $score->value 
														if $score->tag eq "rank" 
														&& $score->student->id == $student->id;

													$points = $score->value 
														if $score->tag eq "points" 
														&& $score->student->id == $student->id;

													next if $winner;

													next unless $score->tag eq "ballot" 
														&& $score->value == 1;

													$winner = $aff_bye." ".$neg_bye 
														if $aff_bye || $neg_bye;

													$winner = $aff_string." &ndash; " 
														if $score->ballot->side == 1;

													$winner = $neg_string." &ndash; " 
														if $score->ballot->side == 2;

													$winner .= Tab::texify($score->ballot->entry->code);
												}
</%perl>
												<div class="block padless nowrap">
													<span class="eighty nowrap rightalign">
														<% $student->last %>
													</span>
													<span class="smallerspan">
														<% $points %><% $rank ? "&ndash;".$rank : "" %>
													</span>
												</div>
%											}

										</td>

										<td>
											<% $neg ? $neg->entry->code : "" %>
										</td>

										<td>
<%perl>
											if ($neg) {
												foreach my $student ($neg->entry->students) { 
													my $rank;
													my $points;

													foreach my $score (@scores) { 
														$rank = $score->value 
															if $score->tag eq "rank" 
															&& $score->student->id == $student->id;

														$points = $score->value 
															if $score->tag eq "points" 
															&& $score->student->id == $student->id;

														next if $winner;
														next unless $score->tag eq "ballot" 
															&& $score->value == 1;

														$winner = $aff_bye." ".$neg_bye 
															if $aff_bye || $neg_bye;

														$winner = $aff_string." \\textendash " 
															if $score->ballot->side == 1;

														$winner = $neg_string." \\textendash " 
															if $score->ballot->side == 2;

														$winner .= Tab::texify($score->ballot->entry->code);
													}
</%perl>
													<div class="block padless nowrap">
														<span class="eighty nowrap rightalign">
															<% $student->last %>
														</span>
														<span class="smallerspan">
															<% $points %><% $rank ? "&ndash;".$rank : "" %>
														</span>
													</div>
%												}
%											}
										</td>


										<td>
											<% $winner %>
										</td>

										<td class="centeralign">
											<span style="display: none;"><% $audit %></span>
											<input 
												type="checkbox" 
												name="audit_<% $panel->id."-".$judge->id %>" 
												value="1" 
												<% $audit ? 'checked="checked"' : "" %>
											>
										</td>

									</tr>

%								}

%							} elsif ($event_type eq "wudc") { 

%								@ballots = sort {$a->speakerorder <=> $b->speakerorder} @ballots;
%								my @positions = ( "1G", "1O", "2G", "2O" );

								<tr>

									<td class="nowrap">
										<% $no_codes 
											?  $judge->last.", ".$judge->first 
											: $judge->code." ".$judge->last
										%>
									</td>

<%perl>
									my $audit = 1;

									foreach my $ballot (@ballots) { 

										my $order = shift @positions;
										undef $audit unless $ballot->audit;
</%perl>

										<td>
											<% $ballot->entry->code %>
										</td>

<%perl>
											my $rank;
											foreach my $score (@scores) { 
												$rank = $score->value 
													if $score->tag eq "rank" 
													&& $score->ballot->id == $ballot->id;
											}
</%perl>

										<td>
											<% 4 - $rank %>
										</td>

										<td>
<%perl>
											my $notfirst;
											foreach my $student ($ballot->entry->students) { 

												print TEXOUT "\\newline " if $notfirst++;

												my $points;
												foreach my $score (@scores) { 
													$points = $score->value 
														if $score->tag eq "points" 
														&& $score->student->id == $student->id;
												}

</%perl>
												<div class="block padless nowrap">
													<span class="eighty nowrap rightalign">
														<% $student->last %>
													</span>

													<span class="smallerspan">
														<% $points %>
													</span>
												</div>
%											}
										</td>
	
%									}

									<td class="centeralign">
										<span style="display: none;"><% $audit %></span>
										<input 
											type  = "checkbox"
											name  = "audit_<% $panel->id."-".$judge->id %>"
											value = "1"
											<% $audit ? 'checked="checked"' : "" %>
										>
									</td>

								</tr>

%							} elsif ($event_type eq "speech") { 

%								my $audit = 1;
%								@ballots = sort {$a->speakerorder <=> $b->speakerorder} @ballots;

								<tr>

									<td class="nowrap">
										<% $no_codes 
											?  $judge->last.", ".$judge->first 
											: $judge->code." ".$judge->last
										%>
									</td>

									<td>
										<label for="<%  $panel->id."-".$judge->id %>">
<%perl>
										my $balcount;
										foreach my $ballot (@ballots) { 

											undef $audit unless $ballot->audit;
											my $rank;
											my $points;

											foreach my $score (@scores) { 
												$rank = $score->value 
													if $score->tag eq "rank" 
													&& $score->ballot->id == $ballot->id;

												$points = $score->value 
													if $score->tag eq "points" 
													&& $score->ballot->id == $ballot->id;
											}
</%perl>

											<span class="hundo padno">
												<span class="smallspan rightalign" style="width: 64x;">
													<% $ballot->entry->code %>:
												</span>
												<span class="smallerspan leftalign" style="width: 30px;">
													<% $ballot->forfeit ? "No Show" : $rank."/".$points %>
													<% $ballot->tv ? "TV" : "" %>
												</span>
											</span>
%										}
										</label>
									</td>

									<td class="centeralign">
										<span style="display: none;"><% $audit %></span>
										<input 
											type  = "checkbox"
											id    = "<% $panel->id."-".$judge->id %>"
											name  = "audit_<% $panel->id."-".$judge->id %>"
											value = "1"
											<% $audit ? 'checked="checked"' : "" %>>
									</td>

								</tr>

%							}
%						}
%					}
					</tbody>
				</table>
%			}

		</div>

		<div class="block liblrow rightalign">
			<input 
				type  = "submit"
				class = "thin"
				value = "Save Audits"
			>
			</form>
		</div>

	</div>


<%args>
	$person
	$person_settings
	$tourn
	$perms
	$tourn_settings
	$panel_id
	$session
	$all           => undef
	$from          => undef
</%args>
<%init>

	my $panel = Tab::Panel->retrieve($panel_id);

	my @scores = $m->comp("/funclib/panel_scores.mas", panel => $panel);

	my $winner;

	foreach my $score (@scores) {
		$winner = $score->ballot->id
			if $score->value == 1
			&& $score->tag eq "winloss";
	}

</%init>

	<&
		"menu.mas",
		person          => $person,
		person_settings => $person_settings,
		tourn           => $tourn,
		perms           => $perms,
		tourn_settings  => $tourn_settings,
		timeslot        => $panel->round->timeslot,
		session         => $session,
		panel           => $panel,
		flight          => 1,
		all             => $all,
	&>

	<div class="main">

		<div class="flexrow">
			<span class="twothirds">
				<a
					class = "white"
					href  = "/panel/schemat/panel_view.mhtml?from=closeout&panel_id=<% $panel->id %>"
				>
					<h4>Walkover</h4>
				</a>
			</span>

			<span class="sixth rightalign">
				<a
					class = "buttonwhite bluetext invert"
					href  = "/panel/schemat/show.mhtml?from=closeout&round_id=<% $panel->round->id %>"
				>
					Round Pairing
				</a>
			</span>

			<span class="sixth rightalign">
				<a
					class = "buttonwhite bluetext invert"
					href  = "/panel/schemat/panel_view.mhtml?from=closeout&panel_id=<% $panel->id %>"
				>
					<% "Section ". $panel->letter %>
					<% $panel->room > 0 ? " in ".$panel->room->name : "" %>
				</a>
			</span>
		</div>

		<form action="closeout_save.mhtml" method="post">

		<input
			type  = "hidden"
			name  = "panel_id"
			value = "<% $panel->id %>"
		>

		<input
			type  = "hidden"
			name  = "all"
			value = "<% $all %>"
		>


		<input
			type  = "hidden"
			name  = "from"
			value = "<% $from %>"
		>

		<table>

			<tr class="yellowrow">

				<th class="centeralign">
					Seed
				</th>

				<th class="centeralign">
					Team
				</th>

				<th class="centeralign">
					Advances
				</th>

			</tr>

%			foreach my $ballot (sort {$a->side <=> $b->side} $panel->ballots) {

%				my $entry = $ballot->entry;

				<tr class="row">

					<td class="centeralign semibold">
						<%
							$m->comp("/funclib/entry_seed.mas", entry => $entry)
						%>
					</td>

					<td class="centeralign semibold">
						<% $entry->code %>
					</td>

					<td class="centeralign">
						<label for="<% $ballot->id %>">
							<span class="full padmore hover">
								<input
									type  = "radio"
									name  = "advances"
									value = "<% $ballot->id %>"
									id    = "<% $ballot->id %>"
									<% $winner == $ballot->id ? 'checked="checked"' : "" %>
								>
							</span>
						</label>
					</td>
				</tr>
%			}

		</table>

		<div class="liblrow rightalign">
			<span class="third centeralign">
				<input
					type     = "submit"
					value    = "Save Results"
				>
			</span>
		</div>
		</form>

	</div>

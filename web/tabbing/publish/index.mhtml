<%args>
	$tourn
	$only_category => undef
</%args>
<%init>

	my @types;
	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

</%init>

    <script>

        function switchset(resultsetid,state) {

            $("#rs_"+resultsetid).iphoneSwitch(
                state,
                function() { 
					$.post("rset_switch.mhtml",
						{ result_set_id: resultsetid, published: "1" }
					);
				},
                function() { 
					$.post("rset_switch.mhtml",
						{ result_set_id: resultsetid }); i
				}
            );
        };  

        function switchfile(fileid,state){

            $("#file_"+fileid).iphoneSwitch(
                state,
                function() { $.post("file_switch.mhtml",{ file_id: fileid, published: "1" }); },
                function() { $.post("file_switch.mhtml",{ file_id: fileid }); }
            );
        };  

		function tocToggle() { 
			var conceptName = $('#resultSelector').find(":selected").text();
			if (conceptName === "TOC Bids") { 
				$('#toc').removeClass("hidden");
			} else { 
				$('#toc').addClass("hidden");
			}
		};

		function breakoutToggle() { 

			var selected = $('#eventSelector').find(":selected").val();

			$(".breakouts").addClass("hidden");

			if (selected.indexOf("type_") !== -1) { 

				var result = selected.replace("type_", '');
				$('.'+result).removeClass("hidden");

			} else { 

				$('.'+selected).removeClass("hidden");
			}

		};

    </script>

	<div class="main">

		<h2>Web Publish Final Results</h2>

		<& "/funclib/tablesorter.mas", table => "sortable" &>

		<table id="sortable">

			<thead>

				<tr class="yellowrow">

					<th class="smallish">
						Del
					</th>

					<th class="smallish">
						Event
					</th>

					<th class="smallish">
						Result Set
					</th>

					<th class="smallish">
						Generated On
					</th>

					<th class="smallish">
						Time
					</th>

					<th class="smallish">
						Published
					</th>

				</tr>

			</thead>

			<tbody class="smallish">

<%perl>

				my @events ;

				if ($only_category) { 
					@events = sort {$a->name cmp $b->name} $only_category->events;
				} else { 
					@events = sort {$a->name cmp $b->name} $tourn->events;
				}

				@events = sort {$a->type cmp $b->type} @events;

				my $ndca;
				my $toc;
				my @breakouts;
</%perl>

%				foreach my $event (@events) { 

<%perl>

					$ndca++ if $event->setting("baker");
					$ndca++ if $event->setting("dukesandbailey");
					$toc++ if $event->setting("bid_round");

					foreach my $key (1 .. $event->setting("breakouts")) { 

						next if $event->setting("breakout_".$key."_delete");

						my %breakout = ();

						$breakout{"event"} = $event->id;
						$breakout{"type"} = $event->type;
						$breakout{"label"} = $event->setting("breakout_".$key."_label");
						$breakout{"key"} = $key;

						push @breakouts, \%breakout;

					}

					push @types, $event->type;

 					my $published = $event->setting("results_published");

</%perl>

%					foreach my $result_set ($event->result_sets) { 

						<tr>

							<td class="nospace centeralign">

%								my $warn = "This will delete the result set ".$event->abbr;
%								$warn .= $result_set->label." from all public postings.";
%								$warn .= "Continue?";

								<a class="dkred button" 
									<& "/funclib/confirm.mas", warn => $warn &> 
									href="set_delete.mhtml?result_set_id=<% $result_set->id %>">
									X
								</a>
							</td>

							<td>
								<% $event->abbr %>
							</td>

							<td class="nospace">
								<a 	href="display.mhtml?result_set_id=<% $result_set->id %>" 
									class="white button leftalign">
									<% $result_set->label %>
								</a>
							</td>

							<td>
%								my $generated = $result_set->generated;
%								$generated->set_time_zone($tz) if $generated;
								<% $generated ? Tab::pickerdate($generated) : "" %>
							</td>

							<td>
								<% $generated ? Tab::pickertime($generated->set_time_zone($tz)) : "" %>
							</td>

							<td>
								<span class="hidden">
									<% $result_set->published ? "1" : "2" %>
								</span>

								<script type="text/javascript"> 
									$(function() { 
										switchset(
											<% $result_set->id %>,
											"<% ($result_set->published) ? "on" : "off" %>"
										); 
									});
								</script>

								<div class="phoneswitch" id="rs_<% $result_set->id %>"></div>

							</td>

						</tr>

%					}

%					foreach my $file ($event->files( type => "result")) 	{ 

						<tr>

							<td class="nospace centeralign">

%								my $warn = "This will delete the file from ";
%								$warn .= $event->abbr." ".$file->label." from public postings.";
%								$warn .= "Continue?";

								<a class="dkred button" 
									href="file_delete.mhtml?file_id=<% $file->id %>"
									<& "/funclib/confirm.mas", warn => $warn &>  >
									X
								</a>
							</td>

							<td>
								<% $event->abbr %>
							</td>

							<td class="nospace">
								<a href="<% $Tab::s3_url %>/<% $tourn->id %>/results/<% $file->id %>/<% $file->filename %>" class="white button leftalign">
									File: <% $file->label %>
								</a>
							</td>

							<td>
%								my $uploaded = $file->uploaded;
%								$uploaded->set_time_zone($tz);
								<% Tab::pickerdate($uploaded) %>
							</td>

							<td>
								<% Tab::pickertime($uploaded) %>
							</td>

							<td>
								<span class="hidden">
									<% $file->published ? "1" : "2" %>
								</span>

								<script type="text/javascript"> 
									$(function() { switchfile(<% $file->id %>,"<% ($file->published) ? "on" : "off" %>"); });
								</script>

								<div class="phoneswitch" id="file_<% $file->id %>"></div>
							</td>

						</tr>

%					}

%				}

%				foreach my $result_set ($tourn->result_sets) { 

%					next if $result_set->event > 0;
%					next if $only_category;

					<tr class="liblrow">

						<td class="nospace centeralign">

%							my $warn = "This will delete the result set ".$result_set->label;
%							$warn .= " from all public postings.  Continue?";

							<a class="dkred button" 
								<& "/funclib/confirm.mas", warn => $warn &>  
								href="set_delete.mhtml?result_set_id=<% $result_set->id %>">
								X
							</a>
						</td>

						<td>
							Tourn Wide
						</td>

						<td class="nospace">
							<a href="display.mhtml?result_set_id=<% $result_set->id %>" 
							   class="white button leftalign">
								<% $result_set->label %>
							</a>
						</td>

						<td>
%							my $generated = $result_set->generated;
%							$generated->set_time_zone($tz) if $generated;
							<% $generated ? Tab::pickerdate($generated) : "" %>
						</td>

						<td>
							<% $generated ? Tab::pickertime($generated) : "" %>
						</td>

						<td>
							<span class="hidden">
								<% $result_set->published ? "1" : "2" %>
							</span>

							<script type="text/javascript"> 
								$(function() { 
									switchset(<% $result_set->id %>,
										"<% ($result_set->published) ? "on" : "off" %>"
									); 
								});
							</script>

							<div class="phoneswitch" id="rs_<% $result_set->id %>"></div>
						</td>

					</tr>

%				}

%				foreach my $file ($tourn->files( type => "result")) { 

%					next if $file->event > 0;

					<tr>

						<td class="centeralign nospace">

%							my $warn = "This will delete the file ".$file->label;
%							$warn .= " from public postings.  Continue?";

							<a class="dkred button" 
								<& "/funclib/confirm.mas", warn => $warn &>  
								href="file_delete.mhtml?file_id=<% $file->id %>">
								X
							</a>
						</td>

						<td>
							Tourn Wide
						</td>

						<td class="nospace">

							<a href="<% $Tab::s3_url %>/<% $tourn->id %>/results/<% $file->id %>/<% $file->filename %>" 
								class="white button leftalign">

								File: <% $file->label %>
							</a>
						</td>

						<td>
%							my $uploaded = $file->uploaded;
%							$uploaded->set_time_zone($tz);
							<% Tab::pickerdate($uploaded) %>
						</td>

						<td>
							<% Tab::pickertime($uploaded) %>
						</td>

						<td>
							<span class="hidden">
								<% $file->published ? "1" : "2" %>
							</span>

							<script type="text/javascript"> 
								$(function() { 
									switchfile(
										<% $file->id %>,
										"<% ($file->published) ? "on" : "off" %>"
									); 
								});
							</script>

							<div class="phoneswitch" id="file_<% $file->id %>"></div>

						</td>

					</tr>

%				}

			</tbody>

		</table>

	</div>

	<div class="menu">

		<div class="sidenote">

			<h4>Calculate results</h4>

			<form action="generate_results.mhtml" method="post">

			<div class="row">

				<span class="quarter padleft">
					Event
				</span>

				<span class="threequarter rightalign">

					<select 
						name="event_id" 
						class="fixedsmall"
						id="eventSelector" 
						onchange='breakoutToggle()'
					>

%						unless ($only_category) { 
							<option value="all"> All events </option>

%							my %used;
%							foreach my $type (@types) { 
%								next if $used{$type}++;
								<option value="type_<% $type %>"> All <% ucfirst($type) %> events </option>
%							}
%						}

%						foreach my $event (@events) { 
							<option value="<% $event->id %>"> <% $event->abbr %> </option>
%						}

					</select>
				</span>
		
			</div>

			<div class="row">

				<span class="quarter padleft">
					Type
				</span>

				<span class="threequarter rightalign">

					<select 
						name     = "result_type"
						id       = "resultSelector"
						class    = "fixedsmall"
						onchange = 'tocToggle()'
					>

						<option value="final">Final Places</option>
						<option value="prelim_seed">Prelim Seeds</option>
						<option value="speakers">Speakers</option>
						<option value="bracket">Bracket</option>

%						if ($ndca) { 
							<option value="ndca">NDCA Points</option>
%						}

%						if ($toc) { 
							<option value="toc">TOC Bids</option>
%						}

						<option value="cumesheet">Cume Sheet</option>

					</select>
				</span>
		
			</div>

			<div class="row">

				<span class="fifth martop padleft">
					Publish
				</span>

				<span class="fourfifths centeralign nospace">
					<label for="oc">
						<span class="half hover">
							<input type="radio" name="publish" value="1" class="padno" id="oc"> Yep
						</span>
					</label>

					<label for="no">
						<span class="half hover">
							<input type="radio" name="publish" value="0" class="padno" id="no"> Nope
						</span>
					</label>
				</span>
		
			</div>

%			if (@breakouts) { 

%				foreach my $breakout (@breakouts) { 

					<div class="hidden <% ${$breakout}{"type"}." ".${$breakout}{"event"} %> breakouts">

						<label for="<% ${$breakout}{"event"}."-".${$breakout}{"key"} %>">
							<div class="hover row">

								<span class="threequarters">
									Only <% ${$breakout}{"label"} %>
								</span>

								<span class="quarter">

									<input 
										type  = "checkbox"
										name  = "breakout_<% ${$breakout}{"event"}."-".${$breakout}{"key"} %>"
										id    = "<% ${$breakout}{"event"}."-".${$breakout}{"key"} %>"
										value = "1"
									>
								</span>

							</div>
						</label>
						
					</div>

%				}

%			}

%			if ($toc) { 
				<label for="mailbids">
					<div class="hover row hidden" id="toc">

						<span class="fourfifth martop padleft">
							Send Bid Report to UK:
						</span>

						<span class="sixth centeralign">

							<input type="checkbox" 
								name="mailbids" 
								value="1" 
								class="padno" 
								id="mailbids">

						</span>
					</div>
				</label>
%			} 
		
			<div class="row">

				<span class="twothirds">
					Limit to the top
				</span>

				<span class="third">
					<input type="number" size="4" class="smaller thin" min=0 max=999 name="limit">
				</span>
		
			</div>

			<div class="libl rightalign padtop">
				<input type="submit" value="Calculate" class="thin">
				</form>
			</div>

		</div>

		<div class="sidenote">

			<h4>Upload Result Files</h4>

			<div class="row">
			
				<form enctype="multipart/form-data" 
					action="upload_results.mhtml" 
					method="post" 
					onsubmit="return uploadThis()">

				<span class="quarter padleft">
					Event
				</span>

				<span class="threequarter rightalign">

					<select name="event_id" class="fixedsmall">

						<option value="type">
							General
						</option>

%						foreach my $event (@events) { 
							<option value="<% $event->id %>"> <% $event->abbr %> </option>
%						}

					</select>
				</span>
			</div>

			<div class="row">
			
				<span class="quarter padleft">
					Label
				</span>

				<span class="threequarter rightalign martop-half">
					<input type="text" name="label" size="24">
				</span>

			</div>

			<div class="row">
			
				<span class="sixth padleft">
					File
				</span>

				<span class="fivesixth rightalign nospace">
					<input type="file" name="posting" value="Go" size="16" class="narrow">
				</span>

			</div>

			<div class="row">

				<span class="quarter padleft">
					Publish
				</span>
				
				<span class="threequarter rightalign nospace">
					<label for="one">
						<span class="twofifth centeralign hover padtop padbottom">
							<input type="radio" name="publish" value="1" class="padno" id="one"> Yep
						</span>
					</label>

					<label for="non">
						<span class="twofifth centeralign hover padtop padbottom nowrap">
							<input type="radio" name="publish" value="0" class="padno" id="non"> Nope
						</span>
					</label>
				</span>
		
			</div>


			<div class="libl rightalign pagefull">
				<input type="submit" value="Upload" class="thin">
				</form>
			</div>

		</div>

	</div>



<%args>
	$tourn
	$circuit
	$school_id
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id);

	my @files = $school->files;

	my $switch;

</%init>

	<div id="leftbig">

		<h2>Uploaded files for <% $school->name %></h2>

		<table cellspacing="1" cellpadding="5" width="100%">

%			foreach my $file (@files) { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
					
					<td>
						<% $file->event->abbr %>
					</td>

					<td>
						<% &Tab::niceshortdt($file->uploaded->set_time_zone($circuit->timezone)) %>
					</td>

					<td>
						<a href="<% $Tab::url_prefix%>/files/<% $circuit->id %>/tournaments/<% $tourn->id."/ballots/".$school->id."/".$file->name %>">
							<% ($file->label) ? $file->label : $file->name %>
						</a>
					</td>

					<td class="center">
						<form action="upload_rm.mhtml" method="post">
						<input type="hidden" name="file" value="<% $file->id %>">
						<input type="submit" class="red" value=" Delete ">
						</form>
					</td>

				</tr>

%			}

		</table>

	</div>
	
	<div id="rightsmall">

		<h4>Choose event:</h4>

%		foreach my $menu_event ( sort {$a->name cmp $b->name} $tourn->events) { 

			<a class="blue block" href="upload_ballots.mhtml?event_id=<% $menu_event->id %>">
				<% $menu_event->name %>
			</a>

%		}

	</div>

	<br style="clear:both"/>


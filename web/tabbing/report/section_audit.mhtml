<%args>
	$person
	$tourn
	$perms
	$tourn_settings
	$session
	$event_id      => undef
	$round_id      => undef
	$nsda          => undef
	$composite_id  => undef
	$format        => undef
</%args>
<%init>

	use POSIX;

	my $event = Tab::Event->retrieve($event_id) if $event_id;
	my $round = Tab::Round->retrieve($round_id) if $round_id;

	$event = $round->event if $round;

	my ($eventref, $catref) = $m->comp(
		"/funclib/allowed_events.mas",
		tourn => $tourn,
		perms => $perms,
		type  => "admin"
	);

	my @events = @{$eventref};
	$event = $events[0] if scalar @events == 1 && (not defined $event);

	my @rounds = $m->comp(
		"/funclib/event_rounds.mas",
			event => $event,
	) if $event;

	$round = $m->comp(
		"/funclib/event_current_round.mas",
			event => $event,
			done => "done"
	) if $event && (not defined $round);

	$round = $rounds[0] if @rounds && (not defined $round);

	my @composites;

	if ($round) {

		if ($round->protocol) {
			foreach my $tiebreak ($round->protocol->tiebreaks) {
				push @composites, $tiebreak->child if $tiebreak->child > 0;
			}
		}
	}

	my %seen;
	@composites = grep { ! $seen{$_->id} ++ } @composites;

	my $composite_set = Tab::Protocol->retrieve($composite_id)
		if $composite_id;

	if ($format eq "pdf") {

		my $name = $event->name."-".$round->realname;
		$name =~ s/[\W_]//g;

		my $filename = "SectionResults-$name-".$session->id;
    	my $filepath = $Tab::file_root."tmp/".$filename;

	    $m->comp("/funclib/printout.mas",
			tourn     => $tourn,
			filename  => $filename,
			head      => 1,
			landscape => 1,
			wide      => 1
		);

		$m->comp("audit_print.mas",
			round        => $round,
			nsda         => $nsda,
			nsda_nats    => $tourn_settings->{"nsda_nats"},
			filename     => $filename,
			protocol => $composite_set,
			section_rank => $composite_set
		);

	    $m->comp("/funclib/printout.mas",
			tourn     => $tourn,
			filename  => $filename,
			tail      => 1
		);

	} elsif ($format eq "csv") {

		my $name = $event->name."-".$round->realname;
		$name =~ s/[\W_]//g;

		my $filename = "SectionResults-$name.csv";

        $m->clear_buffer;
        $r->content_type('application/csv');
        $r->headers_out->{'Content-Disposition'} = "attachment; filename=$filename";

		$m->comp("audit_csv.mas",
			round        => $round,
			nsda         => $nsda,
			filename     => $filename,
			protocol => $composite_set,
			section_rank => $composite_set,
			nsda_nats    => $tourn_settings->{"nsda_nats"}
		);

		$m->abort();

	} else {

</%init>

	<div class="blankfull">

		<& "/funclib/tablesorter.mas", table => "sortme" &>

		<form
			action = "section_audit.mhtml"
			method = "post"
		>

		<input
			type  = "hidden"
			name  = "nsda"
			value = "<% $nsda %>"
		>

		<div class="full flexrow">
			<span class="twosevenths grow">
				<h4 class="padno marless">
					<% $nsda ? "NSDA Point Order" : "Section Results" %>
				</h4>
			</span>

			<span class="twosevenths padright padleft">
				<select
					name             = "event_id"
					onchange         = 'this.form.submit();'
					data-placeholder = "Select an Event"
				>
					<option value=""></option>

%					foreach my $oevent (sort {$a->type cmp $b->type} @events) {
						<option
							value="<% $oevent->id %>"
							<% $oevent == $event ? 'selected="selected"' : "" %>
						> <% $oevent->name %> </option>
%					}
				</select>
			</span>

			<span class="twosevenths padleft padright">
%				if (@rounds) {

					<input
						type  = "hidden"
						name  = "composite_id"
						value = "<% $composite_id %>"
					>

					<select
						name     = "round_id"
						onchange = 'this.form.submit();'
					>

%						foreach my $oround (sort {$b->name <=> $a->name} @rounds) {
							<option
								value="<% $oround->id %>"
								<% $round && $oround->id == $round->id ? "selected" : "" %>
							> <% $oround->realname %> </option>
%						}
					</select>
%				}
			</span>

			<span class="seventh rightalign">
%				if ($round) {
					<a
						class="buttonwhite greentext fa fa-lg fa-file-excel-o"
						href="/tabbing/report/section_audit.mhtml?format=csv&round_id=<% $round->id %>" >
					</a>

					<a
						class="buttonwhite redtext fa fa-lg fa-file-pdf-o"
						href="/tabbing/report/section_audit.mhtml?format=pdf&round_id=<% $round->id %>" >
					</a>
%				}
			</span>
		</div>
		</form>

		<& "audit_table.mas",
			round        => $round,
			nsda         => $nsda,
			protocol => $composite_set,
			section_rank => $composite_set
		&>

	</div>


%	}

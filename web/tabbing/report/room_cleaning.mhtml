<%args>
	$tourn
	$tourn_settings
	$person
	$perms
</%args>
<%init>

	my $dbh = Tab::DBI->db_Main();
	my $now = DateTime->now();

	my @events = $m->comp(
		"/funclib/perms/events.mas",
			tourn => $tourn,
			perms => $perms
		);

	my $ids = join(',', @events);

	$now->set_time_zone($tourn->tz);
	$now->set(hour => 6);
	$now->set(minute => 0);

	my $sth = $dbh->prepare("
		select
			room.id, room.name,
			site.id site_id, site.name site_name,
			levent.abbr levent,
			max(lround.name) lround,
			max(timeslot.end) ended

		from (room, tourn_site, site, panel lpanel, round lround, event levent, timeslot lslot)

			left join timeslot on lround.timeslot = timeslot.id

		where tourn_site.tourn = ?
			and tourn_site.site = room.site
			and tourn_site.site = site.id

			and NOT EXISTS (
				select ballot.id
					from timeslot, round, panel, ballot
				where timeslot.tourn = tourn_site.tourn
					and timeslot.id = round.timeslot
					and round.id = panel.round
					and panel.room = room.id
					and panel.id = ballot.panel
					and ballot.audit != 1
					and ballot.bye != 1
					and ballot.forfeit != 1
					and panel.bye != 1
			)

			and lpanel.room = room.id
			and lpanel.round = lround.id
			and lround.timeslot = lslot.id
			and lround.event = levent.id
			and levent.id IN ($ids)
			and lslot.end < NOW()

		group by room.id
		order by site.name, room.name
	");

	$sth->execute($tourn->id);

	my $result_ref = $sth->fetchall_hash();

</%init>

	<& menu.mas,
		perms          => $perms,
		tourn          => $tourn,
		tourn_settings => $tourn_settings,
		whoami         => "room_cleaning"
	&>

	<div class="main">

		<& "/funclib/tablesorter.mas", table => "room_clean" &>

		<span class="twothirds nospace">
			<h5>Rooms Clear to Clean</h5>
		</span>

		<span
			class="thirds rightalign nospace"
			id="room_clean_buttonarea"
		>
%			foreach my $event (@events) {
				<% $event->abbr %>
%			}
		</span>

		<table id ="room_clean">

			<thead>
				<tr class="yellowrow smallish">
					<th>
						Room
					</th>

					<th>
						Site
					</th>
					<th>
						Last Event
					</th>

					<th>
						Last Round
					</th>
					<th>
						Last Round End
					</th>
				</tr>
			</thead>

			<tbody>

%				my %cache;
%				foreach my $res (@{$result_ref}) {

<%perl>
					unless ($cache{$res->{ended}}) {
						$cache{$res->{ended}} = $m->comp("/funclib/dtme.mas",
								string => $res->{"ended"},
								tz     => $tourn->tz,
								return => 1
						);
					}
</%perl>
					<tr>
						<td>
							<% $res->{"name"} %>
						</td>

						<td>
							<% $res->{"site_name"} %>
						</td>

						<td class="centeralign">
							<% $res->{"levent"} %>
						</td>

						<td class="rightalign">
							<% $res->{"lround"} %>
						</td>

						<td
							class     = "rightalign"
							data-text = "<% $cache{$res->{ended}}{epoch} %>"
						>
							<% $cache{$res->{ended}}{day} %>
							<% $cache{$res->{ended}}{murica} %>
						</td>
					</tr>
%				}
			</tbody>
		</table>
	</div>

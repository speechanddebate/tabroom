<%args>
	$session
	$round_id => undef
</%args>
<%init>

	my $round = Tab::Round->retrieve($round_id);

	my $ndt_type = "elim" 
		if $round->type eq "elim" 
		&& $round->type eq "final" 
		&& $round->name != 9;

	my %judge_rating = $m->comp(
		"/funclib/event_judgeprefs.mas", 
		event    => $round->event,
		ndt_type => $ndt_type
	);

	my @entries = $m->comp(
		"/funclib/round_entries.mas", 
		round => $round);

	my @judges = $m->comp(
		"/funclib/judge_avail_by_rd.mas", 
		round => $round); 

	my $roundname = $round->realname;
	$roundname =~ s/[\W_]//g;

    my $filename = "JudgePrefs-".$roundname.".csv";
    $m->clear_buffer;
    $r->content_type('application/csv');
    $r->headers_out->{'Content-Disposition'} = "attachment; filename=$filename";

	$m->print('"Judge",');

	foreach my $entry (@entries) { 
		$m->print('"'.$entry->code.'",');
	}

	$m->print('"Total 1",');
	$m->print('"Total S"'."\n");

	my @tiers = $round->event->category->rating_tiers;
	my %tier_strike = map {$_->name => $_->strike} @tiers;

	foreach my $judge (@judges) { 

		$m->print('"'.$judge->last." ".substr($judge->first,0,1).'",');

		my $judge_id = $judge->id;
		my $total_ones;
		my $total_strikes;

		foreach my $entry (@entries) { 

			my $rating_name = $judge_rating{$entry->id."-".$judge_id}; 
			$rating_name = "S" if $tier_strike{$rating_name};

			$m->print('"'.$rating_name.'",');
			$total_ones++ if $rating_name == 1;
			$total_strikes++ if $rating_name eq "S";
		}

		$m->print('"'.$total_ones.'",');
		$m->print('"'.$total_strikes.'"'."\n");

	}

	$m->flush_buffer;
	$m->abort;

</%init>


<%args>
	$tourn
</%args>
<%init>

</%init>

	<& menu.mas &>

	<div class="left huge">

		<h2>
			Results Reports
		</h2>

		<h4>
			By Event
		</h4>

		<div class="greynohover block">

			<form action="event_results.mhtml" method="post">

			<span class="medspan">
				Print Result Sheets
			</span>

			<span class="medbigspan">
				<select name="event_id" class="fixedmed">
					<option value="all">All Events</option>
%					foreach my $event (sort {$a->name cmp $b->name} $tourn->events) { 
						<option value="<% $event->id %>">
							<% $event->name %>
						</option>
%					}
				</select>
			</span>

			<span class="medbigspan">
				<select name="report" class="fixedmed">
					<option value="all">All Rounds</option>
					<option value="final">Final Round</option>
					<option value="elims">All Break Rounds</option>
					<option value="prelims">Prelims</option>
					<option value="prelim_ballots">Prelim Ballots Only</option>
					<option value="speakers">Speaker Awards</option>
				</select>
			</span>

			<span class="smallspan centeralign">
				<input type="submit" class="thin" value=" Go ">
				</form>
			</span>

		</div>

		<div class="whitenohover block padmore">

			<form action="awards_ceremony.mhtml" method="post">

			<span class="medspan">
				Print Awards
			</span>

			<span class="medbigspan">
				<select name="event_id" class="fixedmed">
					<option value="all">All Events</option>
%					foreach my $event (sort {$a->name cmp $b->name} $tourn->events) { 
						<option value="<% $event->id %>">
							<% $event->name %>
						</option>
%					}
				</select>
			</span>

			<span class="medbigspan">
			</span>

			<span class="smallspan centeralign">
				<input type="submit" class="thin" value=" Go ">
				</form>
			</span>

		</div>

		<br style="clear: both;">

		<h4>
			By School
		</h4>

		<div class="greynohover block padmore">

			<form action="school.mhtml" method="post">

			<span class="medspan">
				School Reports
			</span>

			<span class="medbigspan">
				<select name="school_id" class="fixedmed">
					<option value="all">All Schools</option>
%					foreach my $school (sort {$a->name cmp $b->name} $tourn->schools) { 
						<option value="<% $school->id %>">
							<% $school->name %>
						</option>
%					}
				</select>
			</span>

			<span class="medbigspan">
			</span>

			<span class="smallspan centeralign">
				<input type="submit" class="thin" value=" Go ">
			</span>

			</form>

		</div>

		<div class="block padmore">

			<form action="sweep_schools.mhtml" method="post">

			<span class="medspan">
				Sweepstakes
			</span>

			<span class="medbigspan">
				<select name="sweep_set_id" class="fixedmed">
%					foreach my $set (sort {$a->name cmp $b->name} $tourn->sweep_sets) { 
						<option value="<% $set->id %>">
							<% $set->name %>
						</option>
%					}
				</select>
			</span>

			<span class="medbigspan rightalign">
				<input type="submit" class="thin" name="what" value="View">
			</span>

			<span class="smallishspan centeralign">
				<input type="submit" class="thin" name="what" value="Print">
			</span>

			</form>

		</div>

		<br style="clear: both;">

		<h4>
			By Entry
		</h4>

		<div class="greynohover block padmore">

			<form action="school.mhtml" method="post">

			<span class="medspan">
				School Reports
			</span>

			<span class="medbigspan">
				<select name="school_id" class="fixedmed">
					<option value="all">All Schools</option>
%					foreach my $event (sort {$a->name cmp $b->name} $tourn->events) { 
						<option value="<% $event->id %>">

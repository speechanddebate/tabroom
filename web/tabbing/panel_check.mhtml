<%args>
	$league
	$panel_id
</%args>
<%init> 
	my $panel = Tab::Panel->retrieve($panel_id);
	my $event = $panel->event;
	my @judges = $panel->judges;
	my $round = $panel->round;
	my $timeslot = $panel->round->timeslot;
</%init>

<h3> Audit check for Round <% $round->name %> <% $event->abbr %> <% $panel->letter %></h3>
<table width="50%" cellpadding="3">
<form action="panel_markcheck.mas" method="post">
<input type="hidden" value="<% $panel_id %>" name="panel_id">
<tr>
<td>Next judge code:</td>
<td>
<input type="text" name="next_judge_number" size="4" align="right">
</td><td>
<input class="blue" type="submit" value="Confirm" align="right">
</td></tr>
</form>

<table width="100%">
<tr>

% foreach my $judge (@judges) { 
% my @ballots = Tab::Ballot->search( panel => $panel_id, judge => $judge->id, {order_by => "speakerorder,comp"} );
%	@ballots = sort {$a->comp->code cmp $b->comp->code} @ballots;
<td align="center">
<h4>Judge J<% $judge->code." ".$judge->last %></h4>
<table cellpadding="5" cellspacing="0">
<form action="enter_ranks.mhtml" method="post">
<input type="hidden" name="check" value="yup">
<input type="hidden" name="judge_id" value="<% $judge->id %>">
<input type="hidden" name="timeslot_id" value="<% $timeslot->id %>">
% foreach my $ballot (@ballots) { 
% next if $ballot->comp->dropped == 1;
<tr>
<th><% $ballot->comp->code %></td>
<td><% $ballot->comp->school->code %></td>
<td><% ($ballot->real_rank) ? $ballot->real_rank : '' %></td>
<td><% ($ballot->real_points) ? " ".$ballot->real_points : "" %></td>
<td><% ($ballot->tv) ? "TV" : '' %></td>
<td><% ($ballot->noshow) ? "NOSHOW" : '' %></td>
%#<td><% $ballot->comp->code %></td>
</tr>
<tr><td colspan="10"><h4></h4></td></tr>

% }
<tr>
<td colspan="5" align="center">
<input class="blue" type="submit" value="Edit">
</td>
</form>
</tr>
</table>
</td>
% }

</tr>
</table>



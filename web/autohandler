	my $test;
	my $disallow;
	my $disallow_tourn;

	if (
		$person_settings{"force_password_change"}
		&! ($session && $session->su > 0)
	) {
		unless (
			$r->uri =~ /user\/login\/profile.mhtml/ || $r->uri =~ /user\/login\/passwd.mhtml/

<%args>
	$tourn
	$tourn_settings
	$person
	$person_settings
	$school_id  => undef
	$from_entry => undef
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id) if $school_id;
	my $chapter = $school->chapter;

	my $tz = $person->tz if $person;
	$tz = "UTC" unless $tz;

	my $now = DateTime->now(time_zone => $tz);
	$now->subtract( days => 1 );

    my $demo;
    foreach my $circuit ($tourn->circuits) { 
        next if $demo;
        $demo++ if $circuit->setting("demographics");
    }   

	my $nats = $tourn->setting("nsda_nats");
	undef $demo if $nats;

</%init>

	<div class="main">

		<h2>Add a student:</h2>

		<table>

			<tr class="row">
				
				<th class="rightalign">

					<form 
						action = "student_save.mhtml"
						method = "post"
					>

					<input 
						type  = "hidden"
						name  = "school_id"
						value = "<% $school->id %>"
					>

					<input 
						type  = "hidden"
						name  = "from_entry"
						value = "<% $from_entry %>"
					>

					First Name
				</td>
				
				<td>
					<input 
						type  = "text"
						name  = "first"
						size  = "32"
						value = ""
					>
				</td>

			</tr> 
			
			<tr class="row">
			
				<th class="rightalign">
					Middle
				</td>
				
				<td>
					<input 
						type  = "text"
						name  = "middle"
						size  = "32"
						value = ""
					>
				</td>

			</tr>
			
			<tr class="row">
			
				<th class="rightalign">
					Last Name
				</td>
				
				<td>
					<input 
						type  = "text"
						name  = "last"
						size  = "32"
						value = ""
					>
				</td>

			</tr> 
	
%			if ($nats) { 
			
				<tr class="row">
				
					<th class="rightalign">
						Real School:
					</td>
					
					<td>
						<input 
							type  = "text"
							name  = "school_sid"
							size  = "32"
							value = ""
						>
					</td>

				</tr> 

				<tr class="row">
				
					<th class="rightalign">
						NSDA ID
					</td>
					
					<td>
						<input 
							type  = "number"
							name  = "nsda"
							size  = "32"
							value = ""
						>
					</td>

				</tr> 

%			}
			
			<tr class="row">
			
				<th class="rightalign">
					Novice
				</td>
				
				<td class="padless">
					<label for="novice">
						<span class="full nospace hover padleftmore">
							<input 
								type  = "checkbox"
								id    = "novice"
								name  = "novice"
								value = "1"
							>
						</span>
					</label>
				</td> 

			</tr> 
			
            <tr class="row">
			
				<th class="rightalign">
					Phonetic
				</th>
				
				<td>
					<input 
						type = "text"
						size = "32"
						name = "phonetic"
					>
				</td>
				
			</tr> 
			
            <tr class="row">

				<th class="rightalign">
					Graduation Year
				</th> 
				
				<td>
					<input 
						type = "number"
						name = "grad_year"
					>
				</td> 
				
			</tr> 
			
            <tr class="row">
			
				<th class="rightalign">
					Gender
				</th>
				
				<th class="nospace padleft">

					<label for="F">
						<span class="quarter hover padtop padbottom">
							<input 
								type  = "radio"
								name  = "gender"
								id    = "F"
								value = "F"
							> Female
						</span>
					</label>

					<label for="M">
						<span class="quarter hover padtop padbottom">
							<input 
								type  = "radio"
								name  = "gender"
								id    = "M"
								value = "M"
							> Male
						</span>
					</label>

					<label for="O">
						<span class="quarter hover padtop padbottom">
							<input 
								type  = "radio"
								name  = "gender"
								id    = "O"
								value = "O"
							> Other
						</span>
					</label>
				</td>
			</tr> 

%			if ($demo) { 

				<tr class="row">

					<th class="rightalign">
						Student ID
					</td>

					<td>
						<input 
							type = "text"
							name = "school_sid"
							size = "30"
						>
					</td>
				</tr>

				<tr class="row">

					<th class="rightalign">
						Date of Birth
					</td>

					<& /funclib/datepicker.mas, id => "birthdate" &>

					<td>
						<input 
							type = "text"
							name = "birthdate"
							id   = "birthdate"
							size = "10"
						>
					</td>
				</tr>

				<tr class="row">

					<th class="rightalign">
						Ethnic Background
					</td>

					<td>
						<select name="race" class="fixedmed">

							<option value="">
								Choose one
							</option>

							<option value="white">
								White, non-Hispanic/Latino
							</option>

							<option value="black">
								Black, non-Hispanic/Latino
							</option>

							<option value="latino">
								Hispanic/Latino
							</option>

							<option value="amerindian">
								American Indian/Native Alaskan
							</option>

							<option value="asian">
								Asian
							</option>

							<option value="pacific">
								Native Hawaiian/Pacific Islander
							</option>

							<option value="dual">
								More than one race
							</option>

							<option value="other">
								Other
							</option>

						</select>
					</td>
				</tr>
%			}

            <tr class="row">

                <th class="rightalign">
                    Diet Notes
                </td>

                <td>
                    <input 
						type = "text"
						name = "diet"
						size = "30"
					>
                </td>
            </tr>
			
			<tr class="liblrow">

				<td align="right" colspan="2">
					<input  type="submit" value="Save Student">
					</form>
				</td>

			</tr>

		</table>

	</div>

	<& 
		"menu.mas", 
		tourn          => $tourn,
		tourn_settings => $tourn_settings,
		person          => $person,
		person_settings => $person_settings,
		school         => $school 
	&>



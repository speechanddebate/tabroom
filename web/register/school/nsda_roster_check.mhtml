<%args>
	$person
	$school_id
	$event_id
	$tourn
	$tourn_settings
	$person_settings
</%args>
<%init>

	use POSIX;

	my $school = Tab::School->retrieve($school_id) if $school_id;
	$m->abort() unless $school;

	my %tourn_settings = $tourn->all_settings;

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

    my $now = DateTime->now(time_zone => $tz);

	my %school_settings = $school->all_settings;

</%init>

		<& "/register/menubar.mas",
			school          => $school,
			whoami          => "students",
			tourn           => $tourn,
			tourn_settings  => $tourn_settings,
			person          => $person,
			person_settings => $person_settings
		&>

		<span class="fivesixths">

			<h4>
				Districts Competitor Eligibility
			</h4>

			<p class="semibold italic linemore">
				Competitors must be a paid member, with 25 or more points &amp; an
				email address on file
			</p>

		</span>

		<span 
			class = "sixth rightalign"
			id    = "status_sortable_buttonarea"
		>

			<a 
				class      = "buttonwhite bluetext fa fa-refresh fa-sm marno"
				target_id  = "<% $school->chapter->id %>"
				on_success = "refresh"
				title      = "Re-sync with the NSDA membership database"
				onClick    = "postSwitch(this, '/funclib/chapter_nsda_sync.mas');"
			>
			</a>

		</span>

		<& 
			"/funclib/nsda_roster.mas", 
			chapter => $school->chapter
		&> 

	</div>

	<& "menu.mas", 
		tourn           => $tourn,
		tourn_settings  => $tourn_settings,
		person          => $person,
		person_settings => $person_settings,
		school          => $school,
		event_id        => $event_id,
		whoami          => "nsda_roster"
	&>


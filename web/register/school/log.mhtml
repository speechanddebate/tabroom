<%args>
	$school_id
	$tourn
	$tourn_settings
	$person
	$person_settings
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id)
		if $school_id;

	unless ($school) {
		$m->redirect("/register/index.mhtml");
	}

	my $chapter = $school->chapter;

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my @changes =  Tab::ChangeLog->search(
		school => $school->id
	);

</%init>

	<&
		"/register/menubar.mas",
		school         => $school,
		whoami         => "log",
		tourn          => $tourn,
		tourn_settings => $tourn_settings
	&>

	<div class="full">
		<span class="fourfifths nospace">
			<h4 class="nospace">School Changelog</h4>
		</span>

		<span
			class="fifth rightalign nospace bigger semibold"
			id    = "hijinks_buttonarea"
		> </span>
	</div>

	<& /funclib/tablesorter.mas, table => "hijinks" &>

	<table id="hijinks">

		<thead>

		<tr class="yellowrow">

			<th class="smaller">
				Who
			</th>

			<th class="smaller">
				Tag
			</th>
			<th class="smaller">
				What
			</th>

			<th class="smaller">
				When
			</th>

			<th class="smaller">
				Detail
			</th>

		</tr>
		</thead>

		<tbody>

<%perl>

 		foreach my $change (@changes) {

			my $happened = $change->created_at->set_time_zone($tz);
			my $description = $change->description;

			$description =~ s/,/, /g;
</%perl>

			<tr id="<% $change->id %>">

				<td class="smallish" title="<% $change->person->email %>">
					<% $change->person->first." ".$change->person->last %> <br />
				</td>

				<td class="smallish centeralign">
					<% $change->tag %>
				</th>

				<td class="smallish centeralign">
					<% $change->event ? $change->event->abbr : "Tourn-wide" %>
				</th>

				<td class="smallish centeralign nowrap">
					<% &Tab::xmldt($happened) %>
				</td>

				<td class="smallish">
					<% $description %>
				</td>

			</tr>

%		}

		</tbody>

	</table>



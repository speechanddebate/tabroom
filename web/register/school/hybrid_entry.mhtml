<%args>
	$tourn
	$tourn_settings
	$school_id
	$event_id
	$chapter_search => undef
	$other_school_id => undef
	$other_chapter_id => undef
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id);
	my $event = Tab::Event->retrieve($event_id);

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my $now = DateTime->now(time_zone => $tz);

	my @candidates;
	my $other_chapter;
	my $other_school;
	my @other_students;

	if ($chapter_search) { 

		Tab::Chapter->set_sql( by_name => "
			select distinct chapter.*
			from chapter
			where chapter.name like ?
			and not exists ( 	
				select id from school 
				where school.chapter = chapter.id
				and school.tourn = ?
			)
		");

		@candidates = Tab::Chapter->search_by_name("%".$chapter_search."%", $tourn->id);
		$other_chapter = shift @candidates if scalar @candidates == 1;
	}

	if ($other_school_id) { 
		$other_school = Tab::School->retrieve($other_school_id);
		@other_students = $m->comp("/funclib/students_evententer.mas", 
			event  => $event,
			school => $other_school
		);
	}

	if ($other_chapter_id) { 
		$other_chapter = Tab::Chapter->retrieve($other_chapter_id);
	}

	if ($other_chapter) { 
		@other_students = $m->comp("/funclib/students_evententer.mas", 
			event   => $event,
			chapter => $other_chapter
		);
	}

	my @students = $m->comp("/funclib/students_evententer.mas", 
		event  => $event,
		school => $school
	);

</%init>

	<& /register/menubar.mas, 
		school         => $school,
		whoami         => "students",
		tourn          => $tourn,
		tourn_settings => $tourn_settings
	&>

		<h4>Hybrid Entry in <% $event->name %> with <% $school->short_name %></h4>

		<% $chapter_search ?  "<p>No chapter was found with the name ".$chapter_search.".  Please search again.</p>" : "" %>

		<table>

			<tr class="row">

				<td>
					Schools registered:

					<form 
						action = "hybrid_entry.mhtml"
						method = "post">

					<input 
						type  = "hidden"
						name  = "school_id"
						value = "<% $school->id %>"
					>
					<input 
						type  = "hidden"
						name  = "event_id"
						value = "<% $event_id %>"
					>

				</td>

				<td>

					<select 
						name  = "other_school_id"
						class = "fixed chosen"
					>

						<option value="">Select school</option>
%						foreach my $other_school (sort {$a->name cmp $b->name} $tourn->schools) { 
%							next if $other_school->id == $school->id;
							<option value="<% $other_school->id %>"> <% $other_school->name %> </option>
%						}
					</select>
				</td>

			</tr>

			<tr class="row">

				<td>
					Search for unregistered school:
				</td>

				<td>
					<input 
						type        = "text"
						name        = "chapter_search"
						placeholder = "Search by school name"
						size        = "32"
					>
				</td>

			</tr>

			<tr>
				<td colspan="2" class="rightalign">
					<input type="submit" value="Pick School">
					</form>
				</td>
			</tr>

		</table>

%		if (@candidates) { 

			<p>Your search yielded multiple possible matches.  Please select the school you want:</p>

			<table>

				<tr class="yellowrow">
					<th>
						Name
					</th>

					<th>
						Loc
					</th>

					<th>
						Students
					</th>

					<th>
						Contacts
					</th>

					<th>
						Circuits
					</th>

					<th>
					</th>

				</tr>

%				foreach my $cand (@candidates) { 
					
					<tr class="row">

						<td>
							<% $cand->short_name %>
						</td>

						<td>
							<% $cand->location %>
						</td>

						<td>
							<% scalar $cand->students(retired => 0) %>
						</td>

						<td class="smallish nowrap">
%							foreach my $contact ($cand->admins) { 
								<a class="white padless" 
									href="mailto:<% $contact->email %>"><% $contact->first." ".$contact->last %></a>
%							}
						</td>

						<td class="smallish">
%							foreach my $circuit ($cand->circuits) { 
								<% $circuit->abbr %>
%							}
						</td>

						<td class="centeralign">
							<a 
								class="bluetext buttonwhite"
								href="hybrid_entry.mhtml?school_id=<% $school->id %>&event_id=<% $event_id %>&other_chapter_id=<% $cand->id %>">
								PICK ME
							</a>
						</td>

					</tr>

%				}

			</table>

%		} 

%		if (@other_students) { 

			<h4>Enter hybrid with <% $other_school ? $other_school->name : $other_chapter->name %></h4>

%			if ($event->setting("max_entry") ) { 

				<table>

					<tr class="row">

						<td>
							<form action="hybrid_save.mhtml" method="post">

							<input 
								type  = "hidden"
								name  = "event_id"
								value = "<% $event_id %>"
							>
							<input 
								type  = "hidden"
								name  = "school_id"
								value = "<% $school->id %>"
							>
							<input 
								type  = "hidden"
								name  = "hybrid"
								value = "Yessir"
							>

							<% $school->name %>:
						</td>

						<td>
							<select name="student_id" class="fixed chosen">
								<option value=""></option>
%								foreach my $student (@students) { 
									<option 
										value="<% $student->id %>"
									> <% $student->first." ".$student->last %> </option>
%								}
							</select>
						</td>

					</tr>

					<tr class="row">

						<td>
							<% $other_school ? $other_school->name : $other_chapter->name %>:
						</td>

						<td>
							<select name="partner_id" class="fixed chosen">
								<option value=""></option>
%								foreach my $other (@other_students) { 
									<option value="<% $other->id %>"> <% $other->first." ".$other->last %> </option>
%								}
							</select>
						</td>

					</tr>

					<tr class="liblrow">

						<td colspan="2" class="rightalign">
							<input type="submit" value=" Save Hybrid Entry ">
							</form>
						</td>
					</tr>

				</table>
%			}

%		}

	</div>

	<div class="menu">
	
%		if ($event) {

%	        my $deadline = $event->setting("deadline");
%		    my $cap = $event->setting("cap");
%		    my $school_cap = $event->setting("school_cap");
%		    my $tourn_cap = $tourn->setting("overall_cap");

			
			<div class="sidenote">

			<h4>Stats & Deadlines</h4> 

<%perl>
				my $caphit = "At school cap of ".$school_cap.". " if (
					 ((scalar Tab::Entry->search( 
					 	school      => $school->id,
						event       => $event->id,
						waitlist    => 0,
						unconfirmed => 0
					)) 
				 		>= ($school_cap)) && ($school_cap > 0) 
				);

			    $caphit = "Event is full." if (
					(
						(scalar Tab::Entry->search(
								event => $event->id, 
								active => 1
							)
						) >= ($cap)
					) 
					&& ($cap > 0)
				) ;

				$caphit = "Tournament overall is full." if ( 
					(
						(scalar $m->comp('/funclib/tourn_entries.mas', tourn => $tourn)) 
						  >= ($tourn_cap)
						)
					&& ($tourn_cap > 0)
				) ;

				$caphit.= " You may add to the waitlist." 
					if $caphit 
					&& $event->setting("waitlist");

				$caphit .= "All entries are waitlisted pending admission by director" 
					if $event->setting("waitlist_all");

</%perl>

%			if ($event->setting("deadline") && $now > $event->setting("deadline")) { 

				<a class="blue full">
					Add deadline <% Tab::niceshortdt($event->setting("deadline")->set_time_zone($tz)) %>
				</a>

%			} else { 
				
				<a class="blue full">
					Add Deadline:  <% Tab::niceshortdt($tourn->reg_end->set_time_zone($tz)) %>
				</a>

%			}

%			if ($school_cap) {
				<a class="blue half full"> 
					School cap:  <% $school_cap %>
				</a>
%			}

%			if ($cap) {
				<a class="blue half full">
					Event cap: <% $cap %>
				</a>
%			}

%			if ($tourn_cap) {
				<a class="blue half full">
					Tourn cap: <% $tourn_cap %>
				</a>
%			}
			

%			if ($caphit) { 
				<a class="dkred full"><% $caphit %></a>
%			}

		</div>

<%perl>
		unless (($now > $tourn->reg_end) 
			|| (  $event->setting("deadline") && $now > $event->setting("deadline")  ) 
			|| (  $caphit && $event->setting("waitlist") < 1) 
		) { 

			my @clean_students = $m->comp(
				"/funclib/students_evententer.mas", 
				event  => $event,
				school => $school
			);
</%perl>

				<div class="sidenote">

					<h4><% $event->abbr %></h4>

					<a class="blue full" 
						href="students.mhtml?school_id=<% $school->id %>&event_id=<% $event->id %>">
						Return to <% $event->abbr %> entry
					</a>

%					if ($event->setting("hybrids")) { 
						<a class="dkblue full" 
							href="hybrid_entry.mhtml?event_id=<% $event->id %>&school_id=<% $school->id %>&">
							Enter Hybrid Team
						</a>
%					}

					<a class="yellow full" 
						href="/user/chapter/students.mhtml?chapter_id=<% $school->chapter->id %>">
						Add Students to Roster
					</a>

				</div>

%			} 

			

%		}

		<div class="sidenote">

		<h4>Events:</h4>

%		foreach my $event ($tourn->events) { 

			<a class="<% ($event->id == $event_id) ? "dk" : "" %>blue full"
				href="students.mhtml?school_id=<% $school->id %>&event_id=<% $event->id %>">
				<% scalar($school->entries( unconfirmed => 0, event => $event->id)) %> - <% $event->name %>
			</a>

%		}

		</div>

	</div>




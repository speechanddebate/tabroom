<%args>
	$tourn
	$person
	$fine_id
	$show_deleted => undef
	$undo         => undef
</%args>
<%init>

	my $fine = Tab::Fine->retrieve($fine_id) if $fine_id;

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;
	my $now = DateTime->now->set_time_zone($tz);

	unless ($fine) {
		$m->comp('/funclib/abort.mas',
			message => "That fine does not exist.  Did you delete it already?  Hit back and try again"
		);
	}

	my $school = $fine->school;
	my $msg;

	if ($undo) {
		$fine->deleted(0);
		$fine->deleted_by($person->id);
		$fine->deleted_at($now);
		$msg = "Fine or payment restored to invoice";
	} else {
		$fine->deleted(1);
		$fine->deleted_by($person->id);
		$fine->deleted_at($now);
		$msg = "Fine or payment marked as deleted";
	}

	$fine->update();

	$m->redirect("/register/school/invoice.mhtml?school_id=".$school->id."&show_deleted=$show_deleted&msg=$msg");

</%init>

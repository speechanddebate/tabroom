<%args>
    $person
    $school        => undef
    $school_id     => undef
    $admin         => undef
	$property_name => undef
</%args>
<%init>

	$school_id = $ARGS{"target_id"} if ($ARGS{"target_id"} && (not defined $school_id));
    $school = Tab::School->retrieve($school_id) unless $school;

	unless ($admin) {
		$admin = 0;
	}

	my $debug;
	if ($r->hostname ne "www.tabroom.com") {
		$debug++;
	}

    $m->comp( "/funclib/nsda/create_invoice.mas",
        person        => $person,
        school        => $school,
		property_name => $property_name,
		debug         => $debug
    );

</%init>

<%args>
	$tourn
	$tourn_settings
	$person
	$person_settings
	$school_id
	$category_id
</%args>
<%init>

	my $category = Tab::Category->retrieve($category_id);
	my $school = Tab::School->retrieve($school_id);

	my @judges = $m->comp("/funclib/exchange_judges.mas", category => $category);

	my @hires = $school->hires;

</%init>

	<& "/register/menubar.mas",
		school          => $school,
		whoami          => "judges",
		tourn           => $tourn,
		tourn_settings  => $tourn_settings,
		person          => $person,
		person_settings => $person_settings
	&>

	<& /funclib/tablesorter.mas, table => "exchange" &>

%		if (@hires) {

			<h4>Your Hires</h4>

%			foreach my $hire (@hires) {

%				next unless $hire->judge;

				<div class="row full padno">

					<span class="half padleft">
						<% $hire->judge ? $hire->judge->first." ".$hire->judge->last : $hire->id %>
					</span>

					<span class="quarter semibold bluetext">
						<% $hire->rounds_requested %> Rnds
					</span>

					<span class="quarter centeralign">
						<a
							class="redtext fa fa-trash buttonwhite"
							href="hire_cancel.mhtml?school_id=<% $school->id %>&hire_id=<% $hire->id %>">
						</a>
					</span>
				</div>

%			}
%		}

		<span class="fourfifths nospace">
			<h4>Hired Judge Exchange: <% $category->abbr %></h4>
		</span>
		<span
			class = "fifth rightalign nospace"
			id    = "exchange_rightalign"
		>
		</span>

		<table id="exchange">

			<thead>

				<tr class="yellowrow smallish">

					<th>
						First
					</th>

					<th>
						Last
					</th>

					<th>
						School
					</th>

					<th>
						Rnds Avail
					</th>

					<th>
						Contact
					</th>

					<th colspan="2">
						Hire Rounds
					</th>

				</tr>

			</thead>
			<tbody>

%			foreach my $judge (@judges) {

				<tr class="smallish">

					<td>
						<% $judge->first %>
					</td>

					<td>
						<% $judge->last %>
					</td>

					<td>
						<% $judge->school ? $judge->school->short_name : "Hired " %>
					</td>

					<td class="centeralign">
						<% $judge->setting('hire_offer') - $judge->hired %>
					</td>

					<td>
						<a class="white" href="mailto:<% $judge->person->email %>">
							<% $judge->person->email %>
						</a>
					</td>

					<td>

						<form action="hire_confirm.mhtml" method="post">

						<input
							type  = "hidden"
							name  = "judge_id"
							value = "<% $judge->id %>"
						>

						<input
							type  = "hidden"
							name  = "school_id"
							value = "<% $school->id %>"
						>

						<input
							type = "number"
							name = "rounds"
							size = "5"
							min  = "0"
							max="<% $judge->setting('hire_offer') - $judge->hired %>"
						>
					</td>

					<td class="centeralign nospace">
						<input type="submit" value="Hire">
						</form>
					</td>

				</tr>
%			}

			</tbody>
		</table>
	</div>

	<& "judge_menu.mas",
		tourn           => $tourn,
		tourn_settings  => $tourn_settings,
		person          => $person,
		person_settings => $person_settings,
		school          => $school,
		whoami          => "judges",
		category        => $category
	&>


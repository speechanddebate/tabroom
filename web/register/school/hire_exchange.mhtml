<%args>
	$tourn
	$school_id
	$category_id
</%args>
<%init>

	my $category = Tab::Category->retrieve($category_id);
	my $school = Tab::School->retrieve($school_id);

	my @judges = $m->comp("/funclib/exchange_judges.mas", category => $category);

	my @hires = $school->hires;

</%init>

	<& /register/menubar.mas, school => $school, whoami => "judges", tourn => $tourn &>

	<& /funclib/tablesorter.mas, table => "exchange" &>

%		if (@hires) { 

			<h4>Your Hires</h4>

%			foreach my $hire (@hires) { 

%				next unless $hire->judge;

				<div class="even full padno">
					
					<span class="half padleft">
						<% $hire->judge ? $hire->judge->first." ".$hire->judge->last : $hire->id %>
					</span>

					<span class="quarter">
						<% $hire->rounds_requested %> Rnds
					</span>

					<span class="quarter">
						<a 
							class="dkred block centeralign" 
							href="hire_cancel.mhtml?school_id=<% $school->id %>&hire_id=<% $hire->id %>">

							CANCEL
						</a>
					</span>
				</div>

%			}

%		}

		<h4>Hired Judge Exchange: <% $category->abbr %></h4>

		<table cellpadding="4" cellspacing="1" id="exchange">

			<thead>
				
				<tr class="yellowrow">

					<th class="smaller">
						First
					</th>

					<th class="smaller">
						Last
					</th>

					<th class="smaller">
						School
					</th>

					<th class="smaller">
						Rnds Avail
					</th>

					<th class="smaller">
						Contact
					</th>

					<th class="smaller" colspan="2">
						Hire Rounds
					</th>

				</tr>

			</thead>

			<tbody>

%			foreach my $judge (@judges) { 

				<tr>

					<td class="smaller">
						<% $judge->first %>
					</td>

					<td class="smaller">
						<% $judge->last %>
					</td>

					<td class="smaller">
						<% $judge->school ? $judge->school->short_name : "Hired " %>
					</td>

					<td class="smaller centeralign">
						<% $judge->setting('hire_offer') - $judge->hired %>
					</td>

					<td class="smaller">
						<a class="white" href="mailto:<% $judge->person->email %>">
							<% $judge->person->email %>
						</a>
					</td>

					<td class="smaller">
						<form action="hire_confirm.mhtml" method="post">
						<input type="hidden" name="judge_id" value="<% $judge->id %>">
						<input type="hidden" name="school_id" value="<% $school->id %>">
						<input type="number" name="rounds" size="5" min="0" max="<% $judge->setting('hire_offer') - $judge->hired %>">
					</td>

					<td>
						<input type="submit" value="Hire" class="thin">
						</form>
					</td>

				</tr>

%			}

			</tbody>

		</table>

	</div>

	<& judge_menu.mas, tourn => $tourn, school => $school, whoami => "judges", category => $category &>


<%args>
	$category_id
	$tourn
	$only_category => undef
</%args>
<%init>

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my $category = Tab::Category->retrieve($category_id);
	$category = $only_category if $only_category;

	my $rounds_per = $category->setting("rounds_per");

	my @category_timeslots = $m->comp("/funclib/category_timeslots.mas", category => $category);

</%init>

	<& menu.mas, 
		only_category => $only_category,
		tourn         => $tourn,
		whoami        => "conflicts",
		category      => $category 
	&>

	<div class="main">

		<h2><% $category->abbr %> Conflicts</h2>
	
%		foreach my $judge ($m->comp("/funclib/category_struck_judges.mas", category => $category)) { 

			<div class="row">

				<span class="quarter">
					<a class="button white" href="/register/judge/edit.mhtml?judge_id=<% $judge->id %>">
						<% $judge->last.", ".$judge->first %> <br /><br />
						<% ($judge->obligation + $judge->hired )." rounds" %>
					</a>
				</span>

				<span class="threequarters">

%					foreach my $strike (sort {$a->type cmp $b->type} $judge->strikes) {

						<div class="smallish">

%   					if (($strike->type eq "entry" ) ||  ($strike->type eq "conflict" )) {

							<span class="quarter">
								<% $strike->type eq "conflict" ? "Conflict" : "Strike" %>
							</span>

							<span class="threequarter nospace">
								<span class="half nowrap">
									<% ($strike->entry) ? $strike->entry->name : "" %>
									<% ($strike->school) ? "All ".$strike->school->name : "" %>
								</span>

								<span class="half nowrap">
									<% $strike->entry ? $strike->entry->school->short_name : "" %>
								</span>
							</span>

%   					} elsif ($strike->type eq "time") { 

							<span class="quarter">
								Time Strike:
							</span>
	
							<span class="threequarter nospace">

%								foreach my $timeslot (@category_timeslots) { 
%									if ($strike->start < $timeslot->end && $strike->end > $timeslot->start) { 
										<span class="quarter nowrap">
											No <% $timeslot->name %>
										</span>
%									}
%								}

							</span>

%						} elsif ($strike->type eq "school") { 

							<span class="quarter">
								School Strike:
							</span>

							<span class="threequarter nospace">
								<% $strike->school->name %>
							</span>

%						} elsif ($strike->type eq "event") { 

							<span class="quarter">
								Event Strike:
							</span>

							<span class="threequarter nospace">
								<% $strike->event->name %>
							</span>

%						}

						</div>

%					} #end of foreach strike

				</span>

			</div>

%		} #end of foreach judge

	</div>


<%args>
	$category_id
	$tourn
	$only_category => undef
</%args>
<%init>

	my $category = Tab::Category->retrieve($category_id);

	$category = $only_category if $only_category;


	Tab::JudgeSetting->set_sql( by_tag_and_category => "
		select distinct judge_setting.*
		from judge_setting, judge
		where judge_setting.tag = ? 
		and judge_setting.judge = judge.id
		and judge.category = ?
		order by judge_setting.judge
	");

	my %first_choice = map {$_->judge->id => $_->value} Tab::JudgeSetting->search_by_tag_and_category("cfl_tab_first", $category->id);
	my %second_choice = map {$_->judge->id => $_->value} Tab::JudgeSetting->search_by_tag_and_category("cfl_tab_second", $category->id);
	my %third_choice = map {$_->judge->id => $_->value} Tab::JudgeSetting->search_by_tag_and_category("cfl_tab_third", $category->id);


</%init>

	<& menu.mas, only_category => $only_category,  tourn => $tourn, whoami => "tab_room", category => $category &>

	<div class="main">

		<h2>Tab Choices</h2>

		<& "/funclib/tablesorter.mas", table => "mahtable" &>

		<table cellpadding="4" cellspacing="1" id="mahtable">
		
			<form action="tab_room_save.mhtml" method="post">
			<input type="hidden" name="category_id" value="<% $category->id %>">

			<thead>

				<tr class="yellowrow">

					<th class="smallish">
						Code
					</th>

					<th class="smallish">
						Name
					</th>

					<th class="smallish">
						1st
					</th>

					<th class="smallish">
						2nd
					</th>

					<th class="smallish">
						3rd
					</th>

					<th class="smallish">
						Assignment
					</th>

				</tr>

			</thead>

			<tbody>

%				foreach my $judge ($category->judges) { 

					<tr>

						<td class="smaller centeralign padno">
							<a class="white" href="/register/judge/edit.mhtml?judge_id=<% $judge->id %>">
								<% $judge->code %><br />
								<% $judge->school->region->code %>
							</a>
						</td>

						<td class="smallish">
							<% $judge->last %>, <% $judge->first %>
						</td>

						<td class="smaller">
							<% $first_choice{$judge->id} %>
						</td>

						<td class="smaller">
							<% $second_choice{$judge->id} %>
						</td>

						<td class="smaller">
							<% $third_choice{$judge->id} %>
						</td>

						<td class="smallish">
							<span class="hidden"><% $judge->setting('special_job') %></span>
							<input type="text" name="<% $judge->id %>" size="20" value="<% $judge->setting('special_job') %>">
						</td>

					</tr>


%				}

			</tbody>

			<tr class="liblrow">

				<td colspan="6" class="rightalign">
					<input type="submit" value="Save Assignments">
					</form>
				</td>

			</tr>



		</table>

	</div>


<%args>
	$judge_id
	$tourn
</%args>
<%init> 

	my $judge = Tab::Judge->retrieve($judge_id);
	my $category = $judge->category;

    my $start = $tourn->start;
    my $end = $tourn->end;

	$start->set_time_zone($tourn->tz);
	$end->set_time_zone($tourn->tz);

	my $morning = DateTime->new(
		hour      => 8,
		minute    => 00,
		second    => 00,
		year      => $start->year,
		month     => $start->month,
		day       => $start->day,
		time_zone => $tourn->tz
	);

	my $night = DateTime->new(
		hour      => 20,
		minute    => 00,
		second    => 00,
		year      => $end->year,
		month     => $end->month,
		day       => $end->day,
		time_zone => $tourn->tz
	);

</%init>

%  	unless ($judge->hired) {
		<& 
			"/register/menubar.mas", 
			school => $judge->school,
			whoami => "judges",
			tourn  => $tourn 
		&>
%	} else { 
		<div class="main"> 
%	}
	
		<h4>
			Conflicts &amp; Strikes for <% $judge->first." ".$judge->last %>
		</h4>

		<h5>Time based</h5>

%		my @days = $m->comp("/funclib/tourn_days.mas", tourn => $tourn);
	
		<form 
			action = "strike_save.mhtml"
			method = "post"
		>

		<input 
			type  = "hidden"
			value = "time"
			name  = "type"
		>

		<input 
			type  = "hidden"
			value = "<% $judge->id %>"
			name  = "judge_id"
		>

		<div class="row">

			<span class="sixth">
				No rounds between
			</span>

			<span class="threefifths">
%	  			if (scalar @days > 1) { 

%					my $first;
%					foreach my $day (@days)  { 

						<label for="start_<% $day->ymd %>">

							<span class="fifth hover marno">

								<input 
									type  = "radio"
									name  = "start_date"
									value = "<% $day->mdy('/') %>"
									id    = "start_<% $day->ymd %>"
									<% ($first++ < 1) ? "checked" : "" %>
								>
								<% $day->day_abbr %>
							</span>
						</label>
%	   				}
%			   	} else { 
						<input type="hidden" name="start_date" value="<% $start->mdy('/') %>" >
						<input type="hidden" name="end_date" value="<% $start->mdy('/') %>" >
%	   			}
			</span>

			<span class="eighth">
				<& /funclib/timepicker.mas, name => "start_time", size => 8, time => $morning &>
			</span> 

		</div>
		
		<div class="row">

			<span class="sixth">
				And
			</span>

			<span class="threefifths">
%   			if (scalar @days > 1) { 
%					my $first;
%					foreach my $day (@days) { 
						<label for="end_<% $day->ymd %>">
							<span class="fifth marno hover">
								<input 
									type  = "radio"
									name  = "end_date"
									value = "<% $day->mdy('/') %>"
									id    = "end_<% $day->ymd %>"
									<% ($first++ < 1) ? "checked" : "" %>
								>
									<% $day->day_abbr %>
							</span>
						</label>
%	  				}
%	 			}
			</span>

			<span class="eighth">
				<& /funclib/timepicker.mas, name => "end_time", size => 8, time => $night &>
			</span>

			<span class="eighth padno marno rightalign">
				<input  type="submit" class="thin" value="Strike">
				</form>
			</span>

		</div>

%		if ($judge->category->strike_timeslots) { 

			<h5>Fine-bearing time blocks:</h5>
			
			<form action="strike_save.mhtml" method="post">
			<input type="hidden" value="strike_timeslot" name="type"> 
			<input type="hidden" value="<% $judge->id %>" name="judge_id">

%   		foreach my $strike_timeslot ( sort {$a->start->epoch <=> $b->start->epoch} $judge->category->strike_timeslots) {

				<div class="row">

					<span class="quarter">
						<% $strike_timeslot->name %>
					</span>
					
					<span class="half">
						$<% $strike_timeslot->fine %>
					</span>

					<label for="st_<% $strike_timeslot->id %>">
						<span class="quarter">
							<input type="checkbox" name="strike_timeslot_<% $strike_timeslot->id %>" value="1" <% ($judge) ? ($strike_timeslot->strike($judge) ) ? "checked" : "" : "" %>>
						</span>
					</label>

				</div>
%			}

			<div class="liblrow rightalign">
				<input type="submit" class="thin" value=" Strike ">
				</form>
			</div>

%   	}

		<br />
	
		<h5>Event/division</h5>

		<form action="strike_save.mhtml" method="post">
		<input type="hidden" value="event" name="type"> 
		<input type="hidden" value="<%$judge->id%>" name="judge_id">

		<div class="row">

			<span class="quarter ">
				No rounds in
			</span>

			<span class="half">
				<select name="event" class="fixedbig">
%					foreach my $event ($judge->category->events) { 
						<option value="<% $event->id %>">
							<% $event->name %>
						</option>
%					}
				</select>
			</span> 
			
			<span class="quarter">
				<input  type="submit" class="thin" value="Strike">
				</form>
			</span>

		</div>

		<form action="strike_save.mhtml" method="post">
		<input type="hidden" value="elim" name="type"> 
		<input type="hidden" value="<%$judge->id%>" name="judge_id">

		<div class="row">

			<span class="quarter ">
				Elims rounds only in
			</span>

			<span class="half">

				<select name="event" class="fixedbig">
%					foreach my $event ($judge->category->events) { 
						<option value="<% $event->id %>">
							<% $event->name %>
						</option>
%					}
				</select>
			</span> 
			
			<span class="quarter">
				<input  type="submit" class="thin" value="Strike">
				</form>
			</span>

		</div>

		<h5>Competitor conflict</h5>

			<form action="strike_save.mhtml" method="post">
			<input type="hidden" value="student" name="type">
			<input type="hidden" value="<%$judge->id%>" name="judge_id">

			<div class="row">
	
				<span class="quarter ">
					Search by last name:
				</span> 
				
				<span class="half">
					<input type="text" name="name" size="40" placeholder="Search by last name">
				</span>

				<span class="quarter">
					<input  type="submit" class="thin" value="Strike">
					</form>
				</span>
				
			</div> 

			<form action="strike_save.mhtml" method="post">
			<input type="hidden" value="entry" name="type">
			<input type="hidden" value="<%$judge->id%>" name="judge_id">

			<div class="row">
	
				<span class="quarter">
					Search by entry code:
				</span> 
				
				<span class="half">
					<input type="text" name="code" size="40" placeholder="Search by code">
				</span>

				<span class="quarter">
					<input  type="submit" class="thin" value="Strike">
					</form>
				</span>
				
			</div> 


		<br />

		<h5>School conflict</h5>

			<form action="strike_save.mhtml" method="post">
			<input type="hidden" value="school" name="type">
			<input type="hidden" value="<%$judge->id%>" name="judge_id">

			<div class="row">

				<span class="quarter">
					Judge no one from
				</span>

				<span class="half">

					<select name="school" class="fixedbig">
%						foreach my $school (sort {$a->short_name cmp $b->short_name} $tourn->schools) { 
%							next unless $school->chapter;
							<option value="<% $school->id %>"> <% $school->short_name %> <% ($school->region) ? "(".$school->region->name.")" : "" %>
							</option>
%						}
					</select>
				</span>

				<span class="quarter">
					<input  type="submit" class="thin" value="Strike">
					</form>
				</span>
				
			</div>

% 			if ($tourn->setting("regions")) {

				<h5>Region Conflict</h5>

				<form action="strike_save.mhtml" method="post">
				<input type="hidden" value="region" name="type">
				<input type="hidden" value="<%$judge->id%>" name="judge_id">

				<div class="row">

					<span class="quarter">
						Judge no one from
					</span>

					<span class="half">
						<select name="region" class="fixedbig">
%							foreach my $region (sort {$a->name cmp $b->name} $tourn->regions) { 
								<option value="<% $region->id %>"> <% $region->name %> </option>
%							}
						</select>
					</span>

					<span class="quarter">
						<input  type="submit" class="thin" value="Strike">
						</form>
					</span>
				
				</div>
			

%			}


%			if ($tourn->setting("ncfl")) {

				<h5>Diocese Conflict</h5>


				<div class="row">

					<span class="quarter">
						Judge no one from
					</span>

					<span class="half">
						<form action="strike_save.mhtml" method="post">
						<input type="hidden" value="region" name="type">
						<input type="hidden" value="<%$judge->id%>" name="judge_id">
				
						<select name="region" class="fixedbig">
%						foreach my $region (sort {$a->name cmp $b->name} $m->comp("/funclib/tourn_regions.mas", tourn => $tourn)) { 
							<option value="<% $region->id %>">
								<% $region->name %>
								<% sprintf("%2s", $region->code) %>
							</option>
%						}
						</select>
					</span>

					<span class="quarter">
						<input  type="submit" class="thin" value="Strike">
						</form>
					</span>
				
				</div>
		
%			}

	</div>

	<div class="menu">

		<div class="sidenote">

			<h5>Information</h5>

%			unless ($judge->school) { 

				<a class="blue full" href="/register/judge/roster.mhtml?category_id=<% $category->id %>&hires=1">
					Hired Judges
				</a>

%			} elsif ($judge->school && $category) { 

				<a class="blue full" href="/register/school/judges.mhtml?school_id=<% $judge->school->id %>&category=<% $category->id %>">
					<% $judge->school->short_name %> Judges
				</a>

%			}

%			if ($category) { 
				<a class="blue full" href="/register/judge/roster.mhtml?category_id=<% $category->id %>">
					<% $category->name %> judges roster
				</a>
%			}

			<a href="edit.mhtml?judge_id=<% $judge->id %>" class="blue full martop">
				Return to <% $judge->first %> edit
			</a> 
			
			<a href="print_sheet.mhtml?judge_id=<% $judge->id %>" class="blue full martop">
				Print <% $judge->first %>'s info sheet
			</a> 
		
%			if ($tourn->setting("ncfl")) { 
				<a href="/funclib/ncfl/print_judge_card.mhtml?judge_id=<% $judge->id %>" class="blue full">
					Print Judge's Info Card 
				</a>
%			}

		</div>

		<div class="sidenote">

			<h4>
				Existing strikes
			</h4>

			<p>
				Click a strike to delete
			</p>

% 			foreach my $strike (sort {$a->type cmp $b->type} $judge->strikes) { 

				<a class="yellow full" href="strike_rm.mhtml?strike_id=<% $strike->id %>">
					<% $strike->name %>
				</a>

%			}

		</div>

	</div>


	<br style="clear: both;">



<%args>
	$category_id
	$tourn
	$perms
	$tourn_settings
</%args>
<%init>

	my $category = Tab::Category->retrieve($category_id);

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

</%init>

	<& menu.mas,
		tourn          => $tourn,
		tourn_settings => $tourn_settings,
		whoami         => "strikes",
		category       => $category
	&>

	<div class="main">

		<h2><% $category->abbr %> Strikes</h2>

<%perl>
		foreach my $judge (
			sort {$a->code <=> $b->code}
			$m->comp("/funclib/category_struck_judges.mas", category => $category)
		) {

</%perl>
			<div class="row">

				<span class="quarter">
					<a
						class="white"
						href="/register/judge/edit.mhtml?judge_id=<% $judge->id %>"
					>
						<% $judge->last.", ".$judge->first %>
					</a>
				</span>

				<span class="threequarters">

%				foreach my $strike ($judge->strikes) {

					<div class="full nospace">

%   				if ($strike->type eq "event" ) {

    					<span class="fifth">
							Event:
						</span>

    					<span class="fourfifth">
							<% $strike->event->name %>
						</span>

%					}

%  	 				if ($strike->type eq "elim" ) {

    					<span class="fifth">
							No Prelims:
						</span>

    					<span class="fourfifth">
							<% $strike->event->name %>
						</span>

%   				}

%   				if ($strike->type eq "school" ) {

    					<span class="fifth">
							School <% ($strike->registrant) ? "Strike" : "Conflict" %>
						</span>

    					<span class="fourfifth">
							<% $strike->school->name %>
						</span>

%   				}


%   				if ($strike->type eq "region" ) {

    					<span class="fifth">
							Region
						</span>

    					<span class="fourfifth">
							<% $strike->region->name %>
						</span>

%					}

%   				if ($strike->type eq "diocese" ) {

    					<span class="fifth">
							Diocese
						</span>

    					<span class="fourfifth">
							<% $strike->diocese->name %>
						</span>

%					}

%   				if (($strike->type eq "entry" ) ||  ($strike->type eq "conflict" )) {
    					<span class="fifth">
							<% $strike->type eq "conflict" ? "Conflict" : "Strike" %>
						</span>

    					<span class="twofifth">
							<% ($strike->entry) ? $strike->entry->name : "" %>
							<% ($strike->school) ? $strike->school->name : "" %>
						</span>

    					<span class="twofifth nowrap">
							<% ($strike->entry && $strike->entry->school)
								? $strike->entry->school->short_name
								: ""
							%>
						</span>
%   				}

%   				if ($strike->type eq "departure") {
    					<span class="fifth">
							Departs at
						</span>

    					<span class="fourfifths">
							<% Tab::niceshortdt($strike->start->set_time_zone($tz)) %>
						</span>
%   				}

%   				if ($strike->type eq "time" &! $strike->shift) {
    					<span class="fifth">
							Not between
						</span>

    					<span class="twofifth">
							<% Tab::niceshortdt($strike->start->set_time_zone($tz)) %>
						</span>

    					<span class="twofifth">
							<% Tab::niceshortdt($strike->end->set_time_zone($tz)) %>
						</span>
%   				}

%					if ($strike->shift) {
    					<span class="fifth">
							No rounds
						</span>

    					<span class="fourfifth">
							<% $strike->shift->name %>
						</span>
%					}

					</div>

%				} #end of foreach strike

				</span>
			</div>

%		} #end of foreach judge

	</div>

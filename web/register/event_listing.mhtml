<%args>
	$tourn
	$event_id
	$show_schools => 1
	$show_titles => undef
	$show_qualifier => undef
	$circuit
	$sort_by => "code"
	$err => undef
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id); 

	Tab::Entry->columns(TEMP => qw/first last stu part schname schcode/);

	my @entries = sort {$a->code <=> $b->code} Tab::Entry->search( event => $event->id );

	@entries = sort {$a->school->name cmp $b->school->name} @entries if $sort_by eq "school";
	@entries = sort {$a->school->region->name <=> $b->school->region->name} @entries if $sort_by eq "region";
	@entries = sort {$a->team_name cmp $b->team_name} @entries if $sort_by eq "name";
	@entries = sort {$a->student->last cmp $b->student->last} @entries if $sort_by eq "last";
	@entries = sort {$b->ada <=> $b->ada} @entries if $sort_by eq "ada";
	@entries = sort {$a->registered_at->epoch <=> $b->registered_at->epoch} @entries if $sort_by eq "when";

</%init>

	<table width="100%">

		<tr>	
			<td width="100%">
				<h2>Entry in <% $event->name %> (<% scalar @entries %>)</h2>
			</td>

% 			if ($tourn->method->ask_qualifying_tournament) { 

				<td> 
					<form action="event_listing.mhtml" method="post">
					<input type="hidden" name="event_id" value="<% $event_id%>">
					<input type="hidden" name="show_qualifier" value="<% ($show_qualifier) ? "" : "yes" %>">
					<input type="hidden" name="show_schools" value="<% $show_schools %>">
					<input type="hidden" name="show_titles" value="<% $show_titles %>">
					<input  type="submit" value="<% ($show_qualifier) ? "Hide Qualifiers" : "Show Qualifiers" %>">
					</form>
				</td>
% 			}

% 			if ($event->ask_for_titles) { 

				<td>
					<form action="event_listing.mhtml" method="post">
					<input type="hidden" name="event_id" value="<% $event_id%>">
					<input type="hidden" name="show_titles" value="<% ($show_titles) ? "" : "yes" %>">
					<input type="hidden" name="show_schools" value="<% $show_schools %>">
					<input type="hidden" name="show_qualifier" value="<% $show_qualifier %>">
					<input  type="submit" value="<% ($show_titles) ? "Hide Piece Titles" : "Show Piece Titles" %>">
					</form>
				</td>
% 			}

			<td>
				<form action="csv_entries.mhtml" method="post">
				<input type="hidden" name="event_id" value="<% $event_id%>">
				<input  type="submit" value="Spreadsheet">
				</form> 
			</td>

			<td>
				<form action="print_entries.mhtml" method="post">
				<input type="hidden" name="event_id" value="<% $event_id%>">
				<input  type="submit" value="Print Entry">
				</form> 
			</td>

			<td>
				<form action="events.mhtml" method="post">
				<input  type="submit" value="Return">
				</form> 
			</td>
			
		</tr>

	</table>

% 	if ($event->supp)  {
	
		<table width="100%" cellpadding="6" cellspacing="1">

			<tr class="lirdrow">

				<td>
					<form action="supp_enter.mhtml" method="post">
					<input type="hidden" name="event_id" value="<% $event->id %>">
					Register an entry to this supplemental event:
				</td>

				<td align="right">
					Speaker's current code:
				</td>

				<td align="center">
					<input type="text" name="code" size="5">
				</td>

				<td align="center">
					<input type="submit" class="red" value="   Enter in <% $event->name %>   ">
					</form>
				</td>
			</tr>

		</table>

%	}

%	my $switch;

	<table cellpadding="3" cellspacing="1" width="100%">

		<tr class="lirdrow">

			<th>
				<a href="event_listing.mhtml?event_id=<% $event->id %>&sort_by=code" class="whiteblock">
				Code
				</a>
			</th>

			<th>
				<a href="event_listing.mhtml?event_id=<% $event->id %>&sort_by=ada" class="whiteblock">
				ADA
				</a>
			</th>

%			if ($event->waitlist) { 

				<th>
					<a href="event_listing.mhtml?event_id=<% $event->id %>&sort_by=when" class="whiteblock">
					Registered
					</a>
				</th>
%			}

			<th>
				<a href="event_listing.mhtml?event_id=<% $event->id %>&sort_by=name" class="whiteblock">
				Name
				</a>
			</th>

			<th colspan="2">
				<a href="event_listing.mhtml?event_id=<% $event->id %>&sort_by=school" class="whiteblock">
				School
				</a>
			</th>

%			if ($show_titles) { 

				<th>
					<a href="event_listing.mhtml?event_id=<% $event->id %>&sort_by=title" class="whiteblock">
					Title
					</a>
				</th>

%			}	

		</tr>

% 		foreach my $entry (@entries) { 

%	 		if ($entry->dropped) { 

				<tr <% ($switch++ % 2) ? "class=\"liblrow\"" : "class=\"bluerow\"" %>>

%			} else { 

				<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

%			}

				<td align="center" style="text-weight: bold;">

					<a href="entry/edit.mhtml?entry_id=<% $entry->id%>" class="whiteblock">
					<% ($entry->dropped) ? "DROP" : $entry->code %>
					</a>

				</td>

				<td align="center">
					<% ($entry->ada) ? "ADA" : ""  %>
				</td>

%				if ($event->waitlist) { 
    				<td class="smaller">
						<% ($entry && $entry->registered_at) ? Tab::niceshortdt($entry->registered_at->set_time_zone($tourn->tz)): "" %>
						<% ($entry->waitlist) ? "(Waitlist)" : "" %> 
					</td>
%				}
				
				<td>
					<% $entry->team_name %>
		 			<% ($entry->dq == 1) ? "(DQed)" : "" %> 
				</td>


				<td>
					<a href="/register/registration.mhtml?school_id=<% $entry->school->id %>" class="whiteblock">
					<% $entry->school->name %>
					</a>
				</td> 

%				if ( ($circuit->diocese_based || $circuit->region_based) && $entry->school->region) {

					<td>
						<% $entry->school->region->code %>
					</td>

% 				} else { 

					<td>
						<% $entry->school->chapter->state %>
					</td>

%				}

% 				if ($show_titles) { 
					<td class="smaller">
						<% $entry->title %>
					</td> 
% 				}

% 				if ($show_qualifier) { 
					<td class="smaller">
						<% substr($entry->qualifier,0,20) %>
					</td>
% 				}

% 				if ($show_schools && $circuit->diocese_based) { 
					<td align="center">
						<% $entry->schcode %>
					</td> 
% 				}
	
			</tr>

% 		}

	</table>


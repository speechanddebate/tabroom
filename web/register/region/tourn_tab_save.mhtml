<%args>
	$group_id
	$tourn
	$region
	$judge_id => undef
	$school_id => undef
	$first => undef
	$last => undef
	$cell => undef
	$gender => undef
	$notes => undef
	$save => undef
	$cfl_tab_first => undef
	$cfl_tab_second => undef
	$cfl_tab_third => undef
</%args>
<%init>

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my $now = DateTime->now->set_time_zone($tz);

	my $msg;
	my $missing;

	my $group = Tab::JudgeGroup->retrieve($group_id);

	my $judge;

	$missing .= "cell," unless $cell;
	$missing .= "last," unless $last;
	$missing .= "first," unless $first;
	$missing .= "school," unless $school_id;
	$missing .= "cfl_tab_first," unless $cfl_tab_first;
	$missing .= "cfl_tab_second," unless $cfl_tab_second;
	$missing .= "cfl_tab_third," unless $cfl_tab_third;

	if ($judge_id) { 

		$judge = Tab::Judge->retrieve($judge_id);

		$judge->school($school_id);
		$judge->first($first);
		$judge->last($last);
		$judge->notes($notes);
		$judge->update;

		my $cj = $judge->chapter_judge;

		$cj->first($first);
		$cj->last($last);
		$cj->cell($cell);
		$cj->update;

		$msg = "Changes to tabber $first $last saved ";

	} else { 

		if ($school_id) { 

			my $school = Tab::School->retrieve($school_id);

			my $cj = Tab::ChapterJudge->create({
				first => $first,
				last => $last,
				cell => $cell,
				chapter => $school->chapter->id,
				created => $now
			});

			$judge = Tab::Judge->create({
				judge_group   => $group_id,
				school        => $school->id,
				first         => $first,
				last          => $last,
				chapter_judge => $cj->id,
				notes         => $notes,
				active        => 1,
				obligation    => 6,
				hired         => 0
			});

			$msg = "Tabber $first $last added to the tournament";

		} else { 

			my $err = "You did not fill in  a school.  Please try again";
			$m->redirect("tourn_tab_edit.mhtml?region_id=". $region->id ."&tourn_id=". $tourn->id ."&group_id=". $group->id ."&missing=$missing&err=$err");
		}

	}

	$judge->setting("cfl_tab_first", $cfl_tab_first);
	$judge->setting("cfl_tab_second", $cfl_tab_second);
	$judge->setting("cfl_tab_third", $cfl_tab_third);

	if ($missing) { 

		my $err = "Please fill in all missing fields";
		$m->redirect("tourn_tab_edit.mhtml?judge_id=".$judge->id."&region_id=". $region->id ."&tourn_id=". $tourn->id ."&group_id=". $group->id ."&missing=$missing&err=$err");

	} else { 

		$m->redirect("tourn_judges.mhtml?region_id=". $region->id ."&tourn_id=". $tourn->id ."&group_id=". $group->id ."&msg=$msg");
	}

</%init> 


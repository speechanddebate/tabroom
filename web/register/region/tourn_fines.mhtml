<%args>
	$account
	$tourn
	$region
</%args>
<%init>

	my $tz = $account->tz;
	$tz = "UTC" unless $tz;

	my $switch; 

</%init>

	<& menubar.mas, tourn => $tourn, region => $region, whoami => "fines" &>

	<div class="main">


		<& "/funclib/tablesorter.mas", table => "sortmebaby" &>

		<table cellpadding="4" cellspacing="1" id="sortmebaby">

			<thead>

				<tr class="yellowrow">

					<th class="smallish">
						Levied
					</th>

					<th class="smallish">
						By
					</th>

					<th class="smallish">
						Reason
					</th>

					<th class="smallish">
						Amount
					</th>

					<th>

					</th>

				</tr>

			</thead>

			<tbody>

%				my $total;

%				foreach my $fine ($region->fines) { 

%					$total += $fine->amount;

					<tr>

						<td class="smallish">
							<% Tab::niceshortdt($fine->levied_on) %>
						</td>

						<td class="smallish">
							<% $fine->levied_by->first." ".$fine->levied_by->last %>
						</td>

						<td class="smallish">
							<% $fine->reason %>
						</td>

						<td class="smallish leftalign">
							$<% $fine->amount %>
						</td>
						
						<td class="smallish centeralign">
							<a class="dkred block" href="fine_forgive.mhtml?fine_id=<% $fine->id %>&region_id=<% $region->id %>">
								FORGIVE
							</a>
						</td>
						

					</tr>

%				}

			</tbody>

			<tr class="liblrow">
				
				<th colspan="3" class="rightalign">
					TOTAL:
				</th>

				<th colspan="2" class="leftalign">
					$<% $total %>
				</th>

			</tr>

		</table>

	</div>

	<div class="menu"> 

		<div class="sidenote">

			<h4>Money printouts</h4>

			<a href="fine_invoice.mhtml?region_id=<% $region->id %>" class="green block">
				Print Fine Invoice
			</a>

		</div>

		<div class="sidenote">
	
			<h4>Add charges</h4>

			<table cellpadding="4" cellspacing="1" width="100%">
			
				<tr>
					<td colspan="2" class="smaller">
						(Use negative values for credits)
					</td>
				</tr>

				<tr class="evenrow">
					<th class="smaller">
						Reason
					</th> 
					
					<td align="right">
						<form action="fine_add.mhtml" method="post">
						<input type="hidden" name="region_id" value="<% $region->id %>">
						<input type="text" name="reason" size="15">
					</td>
				</tr>

				<tr class="oddrow">

					<th class="smaller">
						Amount
					</th>
					
					<td align="right">
						$<input type="text" name="amount" size="10">
					</td>

				</tr> 
				
				<tr class="liblrow">

					<td align="right" colspan="2">
						<input  type="submit" class="thin" value="Add Fine">
						</form>
					</td>
				</tr>
				
			</table>

		</div>

	</div>

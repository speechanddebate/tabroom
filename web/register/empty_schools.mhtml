<%args>
	$tourn
	$err => undef
	$league
</%args>
<%init>

	my @schools = sort {$a->name cmp $b->name} $tourn->schools;
	
	my @empty_schools;
	
	foreach my $school (@schools) { 
		
		next if $school->comps(dropped => 0);
		push (@empty_schools, $school);

	}

</%init>

<center>

<p><font color="red"><% $err %></font></p>
<table width="95%" cellpadding="3">
<tr>
<td colspan="3">
<h3><% scalar @empty_schools %> empty schools in <% $tourn->name %></h3>
</td>
</tr>
</table>

<table cellpadding="5" cellspacing="0" width="100%">

%	my $switch;

%	foreach my $school (@empty_schools) { 

%	my ($fee, $feline_ref) = $m->comp("/funclib/school_fees.mas", school_id => $school->id);

<tr <% ($switch % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
%	$switch++;

<th>
<a href="<% $Tab::url_prefix %>/register/school_view.mhtml?school_id=<% $school->id %>">
<% $school->chapter->name %>
</a></th>

<td><% scalar $school->comps(dropped => 0) %> Kids</td>
<td><% scalar $school->comps(dropped => 1) %> Drops</td>
<td><% scalar $school->judges(active => 1) %> Judges</td>

<td><% $fee %> in fees</td>

<form action="drop_school.mas" method="post">
<input type="hidden" name="school_id" value="<% $school->id %>">
<input type="hidden" name="certain" value="I am certain">
<input type="hidden" name="from" value="gimme">
<td><input class="blue" type="submit" value="Drop"></td>
</form>

</tr>

%	}

</table>

<%args>
	$tourn
	$session
	$fees => undef
	$concessions => undef
</%args>
<%init>

    my $name = $tourn->name;
    $name =~ s/[\W_]//g;

    my $filename = "AllHousing-".$name."-".$session->id;
    my $filepath = $Tab::file_root."tmp/".$filename;

    $m->comp("/funclib/printout.mas",
		tourn    => $tourn,
		filename => $filename,
		head     => 1
	);

    my $now = DateTime->now;
    $now->set_time_zone($tourn->tz);

	my @schools = sort { $a->name cmp $b->name } $tourn->schools;

	foreach my $school (@schools) {

	    my $return = $m->comp("/register/school/print/housing.mas",
			school_id => $school->id,
			filename  => $filepath
		);

		if ($return) {
			open (TEXOUT, ">>$filepath.tex");
			print TEXOUT "\\newpage\n";
			close TEXOUT;
		}
	}

    $m->comp("/funclib/printout.mas",
		tourn    => $tourn,
		filename => $filename,
		tail     => 1
	);

</%init>


<%args>
	$tourn
	$tourn_settings
</%args>
<%init>

	Tab::Entry->set_sql( ada => "
		select entry.*
		from entry, event
		where event.tourn = ?
		and event.id = entry.event
		and entry.active = 1
		and entry.ada = 1
	");

	my @entries = Tab::Entry->search_ada($tourn->id);

	Tab::Judge->set_sql( ada_judges => "
		select distinct judge.*
		from chapter_judge, judge, category
		where category.tourn = ?
		and judge.category = category.id
		and judge.chapter_judge = chapter_judge.id
		and judge.ada = 1
		order by judge.last
	");

	my @judges = Tab::Judge->search_ada_judges($tourn->id);

</%init>

	<& "menu.mas",
		 tourn          => $tourn,
		 tourn_settings => $tourn_settings,
		 whoami         => "ada"
	&>

	<& "/funclib/tablesorter.mas", table => "ada" &>

	<div class="main">

		<span class="fourfifths nospace">
			<h2>ADA Report for <% $tourn->name %></h2>
		</span>

		<span
			id="ada_buttonarea"
			class="fifth rightalign">
		</span>

		<table id="ada">

			<thead>

			<tr class="yellowrow">

				<th class="smallish">
					Entrant
				</th>

				<th class="smallish">
					School
				</th>

				<th class="smallish">
					Division
				</th>

				<th class="smallish">
					Role
				</th>

			</tr>

			</thead>

			<tbody>

%			foreach my $entry (@entries) {

				<tr>
					<td>
						<% $entry->name %>
					</td>

					<td>
						<% $entry->school->name %>
					</td>

					<td>
						<% $entry->event->abbr %>
					</td>

					<td>
						Entrant
					</td>

				</tr>
%			}

%			foreach my $judge (@judges) {

				<tr>
					<td>
						<% $judge->first %>, <% $judge->last %>
					</td>

					<td>
						<% $judge->school->name %>
					</td>

					<td>
						<% $judge->category->abbr %>
					</td>

					<td>
						Judge
					</td>

				</tr>

%			}

			</tbody>

		</table>

	</div>


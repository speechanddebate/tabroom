<%args>
	$tourn
	$tourn_settings
	$sort_by => "name"
</%args>
<%init>

	my %school_settings = $m->comp("/funclib/school_settings.mas", tourn => $tourn);

	Tab::School->columns(TEMP => "nsda");

	Tab::School->set_sql(tourn => "
		select school.*, 
			chapter.nsda as nsda,
			school.state as state
		from school, chapter
			where school.tourn = ? 
			and school.chapter = chapter.id
		order by school.name
	");

	my @schools = Tab::School->search_tourn($tourn->id);

</%init>

	<& "menu.mas",
		tourn          => $tourn,
		tourn_settings => $tourn_settings,
		whoami         => "school_list" 
	&>

	<div class="main">

		<span class="half nospace">
			<h4>Refund Preferences</h4> 
		</span>
		<span 
			class = "half nospace rightalign"
			id    = "bonds_buttonarea"
		></span>

		<& "/funclib/tablesorter.mas", table => "bonds" &> 

		<table id="bonds">

			<thead>
				<tr class="yellowrow">
					
					<th class="smaller">
						School	
					</th>

					<th class="smaller">
						ID
					</th>

					<th class="smaller">
						State
					</th>

					<th class="smaller">
						Method
					</th>

					<th class="smaller">
						Payable To
					</th>

					<th class="smaller">
						Address
					</th>

				</tr>

			</thead>

			<tbody>

<%perl>
			foreach my $school (@schools) { 

				my $address = $school_settings{$school->id}{"refund_address"};

				$address =~ s/\t//g;
				$address =~ s/\r\n/\r/g;
				$address =~ s/\n/\r/g;
				$address =~ s/\r\r/\r/g;
				$address =~ s/^\s+//;
				$address =~ s/\s+$//;

</%perl>

				<tr>
			
					<td>
						<a class="white" 
							href="/register/school/invoice.mhtml?school_id=<% $school->id %>"
						>
							<% $school->name %>
						</a>
					</td> 

					<td>
						<% $school->nsda %>
					</td>
					
					<td>
						<% $school->state %>
					</td>

					<td class="centeralign">
						<% $school_settings{$school->id}{"refund_method"} %>
					</td>

					<td>
						<% $school_settings{$school->id}{"refund_payable"} %>
					</td>

					<td><pre><% $address %></pre></td>

				</tr>

%			}

			</tbody>

		</table>

	</div>


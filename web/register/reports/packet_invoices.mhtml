<%args>
	$tourn
	$tourn_settings
	$session
	$fees        => undef
	$concessions => undef
</%args>
<%init>

    my $name = $tourn->name;
    $name =~ s/[\W_]//g;

	$name .= "EntryFees-" if $fees;
	$name .= "Concessions-" if $concessions;

    my $filename = "Invoices-".$name.$session->id;
    my $filepath = $Tab::file_root."tmp/".$filename;
    `rm -f $filepath.*`;

    $m->comp("/funclib/printout.mas",
		tourn    => $tourn,
		filename => $filename,
		head     => 1 );

    my $now = DateTime->now;    
    $now->set_time_zone($tourn->tz);

	my @schools = sort { $a->name cmp $b->name } $tourn->schools;

	my $skip_entry++ unless $fees;
	my $skip_concessions++ unless $concessions;

	foreach my $school (@schools) { 

		$m->comp("/register/school/print/invoice.mas",
			school           => $school,
			tourn            => $tourn,
			tourn_settings   => $tourn_settings,
			filename         => $filename,
			weekend          => $session->weekend,
			skip_concessions => $skip_concessions,
			skip_entry       => $skip_entry
		);

		open (TEXOUT, ">>$filepath.tex");
		print TEXOUT "\\newpage\n"; 
		close TEXOUT;
	}

    $m->comp("/funclib/printout.mas",
		tourn    => $tourn,
		filename => $filename,
		tail     => 1 
	);

</%init>


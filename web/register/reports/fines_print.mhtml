<%args>
	$tourn
	$session
</%args>
<%init>

    my $now = DateTime->now;    
    $now->set_time_zone($tourn->tz);

    my $name = $tourn->name;
    $name =~ s/[\W_]//g;

    my $filename = "Fines-$name-".$session->id;
    my $filepath = $Tab::file_root."tmp/".$filename;
    `rm -f $filepath.*`; 
    
    $m->comp("/funclib/printout.mas", filename => $filename, head => 1 );

    open (TEXOUT, ">>$filepath.tex");
	
	print TEXOUT "\\bigskip\n";
	print TEXOUT "{\\huge ". Tab::texify($tourn->name) ." Fines Report } \\\\ \n";
	print TEXOUT "\\newline\n";

	my $tabular = "\\begin{tabular}{p{3in}p{3in}p{.5in}}\n";

	foreach my $school (sort {$a->name cmp $b->name} $tourn->schools) { 
	
		my @fines = Tab::SchoolFine->search( school => $school->id );
		next unless @fines;

		print TEXOUT $tabular;
		print TEXOUT "\\rowcolor[rgb]{1,.95,.66}\[5.5pt\]\[5.5pt\]\n";
		print TEXOUT &Tab::texify($school->name);
		my $notfirst;
		
		my $switch;

		foreach my $fine (@fines) { 
		
			print TEXOUT $tabular if $notfirst;
			print TEXOUT "\\rowcolor[rgb]{.84,.89,.94}\[5.5pt\]\[5.5pt\]\n" if ($switch++ % 2);
			print TEXOUT " & ";
			print TEXOUT &Tab::texify($fine->reason);
			print TEXOUT " & ";
			print TEXOUT &Tab::texify("\$".$fine->amount); 
			print TEXOUT " \\\\ \n";
			print TEXOUT "\\end{tabular}\n";
			print TEXOUT "\\newline\n";
			$notfirst++;

       }

		print TEXOUT "\\medskip\n";
		print TEXOUT "\\newline\n";
	}

	close TEXOUT;

    $m->comp("/funclib/printout.mas", filename => $filename, tail => 1 );

</%init>

	<div id="content">

	<p><% $filename %></p>

	</div>



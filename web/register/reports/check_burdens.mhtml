<%args>
	$tourn
</%args>
<%init>

	my @groups = sort {$a->name cmp $b->name} $tourn->groups;

</%init>

	<& "menu.mas", tourn => $tourn, whoami => "burdens" &>

	<div class="main">

		<div class="nospace">
			<span class="third nospace">
				<h2>Judge Burdens</h2>
			</span>

			<span class="twothird right rightalign martop">
				<p class="explain nospace">Numbers indicate entries uncovered by judging</p>
			</span>

		</div>

		<& "/funclib/tablesorter.mas", table => "burdens" &>

		<table id="burdens" class="smallish">

			<thead>

				<tr class="yellowrow">
					<th>
						School
					</th>

					<th>
						State
					</th>

%					foreach my $group (@groups) {
						<th>
							<% $group->abbr %>
						</th>
%					}

				</tr>
			<thead>

			<tbody>

%			foreach my $school (sort {$a->name cmp $b->name} $tourn->schools) { 

				<tr>

					<th>
						<a class="plain" href="/register/index.mhtml?school_id=<% $school->id %>">
						<% $school->name %>
						</a>
					</th>

					<td class="centeralign">
						<% $school->chapter->state %>
					</td>

%					foreach my $group (@groups) { 

%						my $uncovered = $m->comp("/funclib/judgemath/uncovered_burden_by_group.mas",
%			  		   		group => $group,
%							school => $school);

						<td class="<% ($uncovered) ? "red rightalign" : "" %> halflimit">
							<% $uncovered ? $uncovered : "" %>
						</td>
%					}

				</tr>

%			}

			</tbody>

		</table>

	</div>

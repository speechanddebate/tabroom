<%args>
	$dbh
	$tourn
	$tourn_settings
</%args>
<%init>

	my @categories = sort {$a->name cmp $b->name} $tourn->categories;

	my %settings;

	foreach my $category (@categories) {
		$settings{$category->id} = {$category->all_settings()};
	}

	my $school_sth = $dbh->prepare("
		select
			school.id, school.name, region.code, chapter.state
		from (school, chapter)
			left join region on region.id = school.region
		where 1=1
			and school.tourn = ?
			and school.chapter = chapter.id
		order by school.name
	");

	$school_sth->execute($tourn->id);
	my $schools = $school_sth->fetchall_hash();

</%init>

	<& "menu.mas",
		tourn          => $tourn,
		tourn_settings => $tourn_settings,
		whoami         => "burdens"
	&>

	<div class="main">

		<div class="nospace flexrow">
			<span class="third nospace">
				<h2>Judge Burdens</h2>
			</span>

			<span class="half centeralign semibold">
				Numbers indicate rounds/entries uncovered by judging
			</span>

			<span
				class = "sixth rightalign padright"
				id    = "burdens_buttonarea"
			>
			</span>
		</div>

		<& "/funclib/tablesorter.mas",
			table => "burdens"
		&>

		<table id="burdens" class="smallish">

			<thead>
				<tr class="yellowrow">
					<th>
						School
					</th>

					<th>
						State
					</th>

%					foreach my $category (@categories) {
						<th>
							<% $category->abbr %>
						</th>
%					}
				</tr>

			<thead>

			<tbody>

%			my %styles;

%			foreach my $school (@{$schools}) {

				<tr>
					<td>
						<a
							class = "semibold plain"
							href  = "/register/school/edit.mhtml?school_id = <% $school->{id} %>"
						>
							<% $school->{name} %>
						</a>
					</td>

					<td class="centeralign">
						<% $school->{code} || $school->{state} %>
					</td>
<%perl>
					foreach my $category (@categories) {

						unless ($styles{$category}) {

							if ($category->setting("rounds_per")) {
								$styles{$category} = "round";
							} else {
								$styles{$category} = "entries";
							}
						}

						my ($uncovered, $overage, $data) =
							$m->comp(
								"/funclib/judgemath/uncovered_burden_by_category.mas",
								category          => $category,
								category_settings => $settings{$category->id},
								tourn             => $tourn,
								tourn_settings    => $tourn_settings,
								school            => Tab::School->retrieve($school->{id})
							);
</%perl>

						<td class="centeralign">
							<span class="hidden">
								<% $uncovered * -1 %>
								<% $overage %>
								<% $overage || $uncovered ? "" : "99999" %>
							</span>

%							if ($overage > 0) {
								<span class="semibold greentext">
									&plus;<% $overage %>
								</span>
%							} elsif ($uncovered == 0) {

%							} elsif ($uncovered > 0) {
								<span class="semibold redtext">
									&minus;<% $uncovered %>
								</span>
%							}
						</td>
%					}

				</tr>

%			}

			</tbody>

		</table>

	</div>

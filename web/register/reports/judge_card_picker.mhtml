<%args> 
	$tourn 
	$tourn_settings 
	$session
</%args>
<%init>

</%init>

	<& "menu.mas",
		tourn => $tourn,
		tourn_settings => $tourn_settings
	&>

	<div class="main"> 

		<h2>Judge Cards by Category</h2>

		<form 
			action = "tourn_judge_cards.mhtml"
			method = "post"
		>
		
			<div class="full row">

				<span class="third">

					<select 
						name  = "category_id"
						class = "fixedmed"
					>
%						foreach my $category ($tourn->categories) { 
							<option 
								value="<% $category->id %>"
							><% $category->name %></option>

%						}
					</select>

				</span>

				<span class="sixth rightalign">
					Sort by
				</span>

				<span class="third">
					<select 
						name  = "sort_by"
						class = "fixedmed"
					>
						<option value="lastname">Judge Name</option>
						<option value="code">Judge Code</option>
						<option value="school">School</option>
					</select>

				</span>

				<span class="sixth rightalign">
					<input 
						type  = "submit"
						value = "Print Cards"
					>
					</form>
				</span>

			</div>

	</div>

<%args>
	$tourn
</%args>
<%init>

	my @drops = Tab::Entry->search( tourn => $tourn->id, waitlist => 0, dropped => '1', {order_by => "drop_time DESC,code"});

	my $num_drops = @drops;
	use POSIX;
	my $frac = $num_drops / 5;
	$frac = ceil($frac);

</%init>

	<div>
		<span class="half">
			<h2>Dropped Entries:</h2>
		</span>

		<span class="half rightalign">	
		</span>
	</div>
				
	<table cellpadding="5" cellspacing="1" width="100%">

		<tr class="yellowrow">

			<th colspan="2">
				Dropped On
			</th>

			<th>
				Event
			</th>

			<th>
				Code
			</th>

			<th>
				Name
			</th>

%			if ($tourn->setting("ncfl")) {
				<th>Dio</th>
%			}
	
			<th colspan="2">
				School
			</th>

		</tr>

% 		my $switch =1;

% 		foreach my $drop (@drops) {

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

%				my $drop_time = $drop->drop_time;

%				if ($drop_time) {

%					$drop_time->set_time_zone($tourn->tz);

					<td class="smaller">
						<% &Tab::niceshortdate($drop_time) %>
					</td>
						
					<td class="smaller">
						<% &Tab::nicetime($drop_time) %>
					</td>

%				}

				<td class="smaller">
					<% $drop->event->abbr %>
				</td> 
				
				<td class="smaller">
					<a class="white" href="<%$Tab::url_prefix%>/register/entry/edit.mhtml?entry_id=<% $drop->id %>">
						<% $drop->code %>
					</a>
				</th>
				
				<td class="smaller">
					<a class="white" href="<%$Tab::url_prefix%>/register/entry/edit.mhtml?entry_id=<% $drop->id %>">
					<% $drop->name %>
					</a>
				</td> 
				
				<td align="center" class="smaller">
					<% ($tourn->setting("ncfl")) ?  $drop->school->region->code : $drop->school->code %>
				</td>
				
				<td class="smaller">
					<a class="white" href="/register/school/entries.mhtml?school_id=<% $drop->school->id %>&event_id=<% $drop->event->id %>">
						<% $drop->school->short_name %>
					</a>
				</td>

			</tr>

%		}

	</table>


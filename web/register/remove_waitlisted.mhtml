<%args>
	$account
	$tourn
	$err => undef
	$certain => undef
</%args>
<%init>

	if ($certain eq "I am certain") { 

		my @comps = Tab::Comp->search(  tournament => $tourn->id, 
										waitlist => 1 );

		foreach my $comp (@comps) { 
			$comp->delete();
		}

		my $err = "Waitlisted competitors removed";
		$m->redirect("$Tab::url_prefix/register/reports.mhtml?err=$err");

	}

</%init>
<p><font color="red"><% $err %></font></p>

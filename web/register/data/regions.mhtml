<%args>
	$tourn
	$session
</%args>
<%init>

	my $switch;


</%init>

	<& menu.mas, tourn => $tourn, whoami => "regions" &>

	<div class="left huge">

		<h2>Edit Tournament Regions</h2>

		<form action="regions_save.mhtml">

		<table cellpadding="6" cellspacing="1" width="100%"> 
		
			<tr class="yellowrow">
			
				<th class="smaly2lish"> 
					Region name
				</th>

				<th class="smallish"> 
					Region code
				</th>
				
			</tr>

%			foreach my $region (sort {$a->code cmp $b->code} $tourn->regions) { 

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td>
						<input type="text" name="name_<% $region->id %>" size="40" value="<% $region->name %>">
					</td>

					<td>
						<input type="text" name="code_<% $region->id %>" size="10" value="<% $region->code %>">
					</td>

				</tr>
%			}

			<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

				<td>
					<input type="text" name="name_new" size="40" placeholder="New region name">
				</td>

				<td>
					<input type="text" name="code_new" size="10" placeholder="New code">
				</td>

			</tr>

			<tr class="liblrow">

				<td colspan="2" class="rightalign">
					<input type="submit" value="Save regions">
					</form> 
				</td>
			</tr>

		</table>

	</div>


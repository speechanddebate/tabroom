<%args>
	$tourn
	$tourn_settings
	$person
	$person_settings
	$category_id => undef
	$shift_id => undef
</%args>
<%init>

	my $dbh = Tab::DBI->db_Main();

	my $left_join;
	my $left_join_field;

	if ($shift_id) {
		$left_join_field = "strike.id strike,";
		$left_join = "left join strike on strike.judge = judge.id and strike.shift = ".int($shift_id);
	}

	my $sth = $dbh->prepare("
		select
			$left_join_field
			judge.id, judge.first, judge.last, school.name, judge.obligation
		from (judge, category)
			left join school on judge.school = school.id
			$left_join
		where judge.category = category.id
		and category.id = ?

		AND EXISTS (
			select entry.id
			from entry, event_setting es
			where entry.active = 1
			and entry.school   = judge.school
			and entry.event    = es.event
			and es.tag         = 'supp'
		)

		AND NOT EXISTS (
			select e3.id
			from entry e3
			where e3.active = 1
			and e3.school   = judge.school
			AND NOT EXISTS (
				select e2.id
					from event_setting e2
				where e2.event = e3.event
					and e2.tag = 'supp'
			)
		)

		order by judge.id
	");

	my $results_ref;

	if ($category_id) {
		$sth->execute($category_id);
		$results_ref = $sth->fetchall_hash();
	}

	if ($category_id && $shift_id && $ARGS{"mode"} eq "Block") {

		my $shift = Tab::JudgeShift->retrieve($shift_id);

		my $start = $shift->start;
		my $end = $shift->end;

		$start->set_time_zone("UTC");
		$end->set_time_zone("UTC");

		my $now = DateTime->now();

		foreach my $result (@{$results_ref}) {

			unless (Tab::Strike->search( judge => $result->{"id"}, shift => $shift->id)) {
				Tab::Strike->create({
					judge      => $result->{"id"},
					type       => "time",
					start      => $shift->start,
					shift      => $shift->id,
					end        => $shift->end,
					created_at => $now,
					entered_by => $person->id
				});

				$result->{"strike"} = 1;
			}
		}
	}

</%init>

	<div class="blankfull">

	<span class="fifth nospace">
		<h5>Block for Supps</h5>
	</span>

	<span class="threequarters rightalign">
		<form action="supp_blocks.mhtml">

			<div class="full padvertless odd marbottom">
				<span class="twofifths centeralign">
					<select
						name = "category_id"
					>
						<option value=""></option>
%						foreach my $category ($tourn->categories) {
							<option
								value="<% $category->id %>"
								<% $category->id == $category_id ? "selected" : "" %>
							><% $category->name %></option>
%						}
					</select>
				</span>

				<span class="twofifths centeralign">
%					if ($category_id) {
						<select
							name="shift_id"
						>
							<option value=""></option>
%							foreach my $shift (Tab::JudgeShift->search(category => $category_id)) {
								<option
									value="<% $shift->id %>"
									<% $shift->id == $shift_id ? "selected" : "" %>
								><% $shift->name %></option>
%							}
						</select>
%					}
				</span>

				<span class="tenth centeralign">
					<input
						type  = "submit"
						name  = "mode"
						value = "Show"
					>
				</span>

				<span class="tenth centeralign">
					<input
						type  = "submit"
						name  = "mode"
						value = "Block"
					>
				</span>
			</div>
		</form>
	</span>

	<span class="rightalign fifteenth" id ="block_buttonarea">
	</span>

	<& "/funclib/tablesorter.mas", table => "block" &>

	<table id="block" class="martop">
		<thead>
			<tr class="yellowrow padvert">
				<th>
					Judge First
				</th>

				<th>
					Judge Last
				</th>

				<th>
					Day Obligation
				</th>

				<th>
					School
				</th>

%				if ($shift_id) {
					<th>
						Struck?
					</th>
%				}
			</tr>
		</thead>

		<tbody>
%			foreach my $result (@{$results_ref}) {
				<tr>
					<td>
						<% $result->{"first"} %>
					</td>

					<td>
						<% $result->{"last"} %>
					</td>

					<td class="centeralign">
						<% $result->{"obligation"} %>
					</td>

					<td>
						<% $result->{"name"} %>
					</td>
%					if ($shift_id) {
						<td class="centeralign">
							<% $result->{"strike"} ? "Y" : "" %>
						</td>
%					}
				</tr>
%			}
		</tbody>
	</table>

	</div>

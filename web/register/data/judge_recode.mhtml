<%args>
	$tourn
</%args>
<%init>

</%init>

	<& "data_menu.mas", whoami => "judge_recode" &>

	<div class="left huge">

		<h3>Recode judges</h3>

		<table cellpadding="6" width="100%" cellspacing="1">

%			my $switch; 

			<tr class="yellowrow">

				<th class="smaller">
					Judge Group
				</th>

				<th class="smaller">
					Lowest
				</th>

				<th class="smaller">
					Highest
				</th>

				<th class="smaller">
					Start with:
				</th>

				<th colspan="2" class="smaller">
					Recode grouping by: 
				</th>

			</tr>

%			foreach my $group ( sort {$a->name cmp $b->name} $tourn->groups) { 

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow"%>" > 
				
					<td>
						<form action="judge_recode_save.mhtml" method="post">
						<input type="hidden" name="group_id" value="<% $group->id %>"> 
						
						<a class="white block" href="<% $Tab::url_prefix %>/register/judges/roster.mhtml?group_id=<% $group->id %>">
							<% $group->name %>
						</a>
					</td>

					<td class="centeralign">
						<% $m->comp("/funclib/group_code.mas", group => $group, min => 1) %>
					</td>

					<td class="centeralign">
						<% $m->comp("/funclib/group_code.mas", group => $group, max => 1) %>
					</td>

					<td class="centeralign">
						<input type="text" name="codestart" placeholder="<% $group->setting("code_start") %>" size="5">
					</td>

					<td class="centeralign">
						<select name="sort_by">
							<option name="sort_by" value="name">Judge Name</option>
							<option name="sort_by" value="school">Alphabetically by School</option>
%							if ($tourn->setting("ncfl") | $tourn->setting("regions")) { 
								<option name="sort_by" value="region">Alphabetically by <% $tourn->setting("ncfl") ? "Diocese" : "Region" %></option>
%							}
							<option name="sort_by" value="random">Totally Random</option>
						</select>
					</td>

					<td class="centeralign">
						<input type="submit" value="Recode">
						</form>
					</td> 
					
				</tr>

%			}

		</table>

	</div>


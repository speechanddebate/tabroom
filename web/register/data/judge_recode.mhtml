<%args>
	$tourn
	$person
</%args>
<%init>

</%init>

	<& "menu.mas", tourn => $tourn, person => $person, whoami => "judge_recode" &>

	<div class="main">

		<h3>Recode judges</h3>

		<table cellpadding="6" width="100%" cellspacing="1">

%			my $switch; 

			<tr class="yellowrow">

				<th class="smaller">
					Judge Category
				</th>

				<th class="smaller">
					Lowest
				</th>

				<th class="smaller">
					Highest
				</th>

				<th class="smaller">
					Start with:
				</th>

				<th class="smaller">
					Only
				</th>

				<th colspan="2" class="smaller">
					Recode grouping by: 
				</th>


			</tr>

%			foreach my $category ( sort {$a->name cmp $b->name} $tourn->categories) { 

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow"%>" > 
				
					<td>
						<form action="judge_recode_save.mhtml" method="post">
						<input type="hidden" name="category_id" value="<% $category->id %>"> 
						
						<a class="white" href="<% $Tab::url_prefix %>/register/judges/roster.mhtml?category_id=<% $category->id %>">
							<% $category->name %>
						</a>
					</td>

					<td class="centeralign">
						<% $m->comp("/funclib/category_code.mas", category => $category, min => 1) %>
					</td>

					<td class="centeralign">
						<% $m->comp("/funclib/category_code.mas", category => $category, max => 1) %>
					</td>

					<td class="centeralign">
						<input type="number" max="999999" min="0" name="codestart" value="<%$category->setting("code_start") %>" size="5">
					</td>

					<td>
%						my @jpools = $m->comp("/funclib/category_jpools.mas", category => $category, limit => "event_based");

%						if (@jpools) { 
							<select name="jpool_id" class="fixedtiny">
								<option value="">All Pools</option>
%								foreach my $jpool (@jpools) { 
									<option value="<% $jpool->id %>"><% $jpool->name %></option>
	
%								}
							</select>
%						}
					</td>

					<td class="centeralign">
						<select name="sort_by" class="fixedsmall">
							<option name="sort_by" value="name">Judge Name</option>
							<option name="sort_by" value="school">By School</option>
%							if ($tourn->setting("ncfl")) { 
								<option name="sort_by" value="diocese">By Diocese</option>
%							} elsif ($tourn->setting("regions")) { 
								<option name="sort_by" value="region">By Region</option>
%							}
							<option name="sort_by" value="random">Totally Random</option>
						</select>
					</td>

					<td class="centeralign">
						<input type="submit" class="thin" value="Recode">
						</form>
					</td> 
					
				</tr>

%			}

		</table>

	</div>


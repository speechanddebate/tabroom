<%args>
	$person
	$tourn
	$school_id
	$dbh
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id);

	unless ($school) {
		my $err = "School was already dropped";
		$m->redirect("/register/data/empty_schools.mhtml?err=$err");
	}

	my $err;
	my $msg;

	foreach my $tag ('entry', 'school_setting', 'judge', 'fine', 'invoice') {

		my $sth = $dbh->prepare("
			delete $tag.*
				from $tag, school
			where 1=1
				and $tag.school = school.id
				and school.id = ?
				and school.tourn = ?
		");
		$sth->execute($school_id, $tourn->id);
	}

	if ($school) {

		$msg = "School completely dropped";

    	my $change  = $m->comp("/funclib/log.mas",
    	    tourn       => $tourn->id,
    	    school      => $school_id,
    	    type        => "registration",
    	    description => $err,
			person      => $person->id
    	);

		$school->delete();

	} else {

		$err = "That school was not empty; it has active entries.  Drop them before deleting the school";
	}

	$m->redirect("/register/data/empty_schools.mhtml?msg=$msg&err=$err");

</%init>


<%args>
	$tourn
	$session
	$category_id
	$dome => undef
</%args>
<%init>

	my $count;

	my $category = Tab::Category->retrieve($category_id);

	my @judges = sort {$a->id <=> $b->id} $category->judges( active => 1);

	my @ratings = $m->comp("/funclib/category_ratings.mas", category => $category); 

	my %ratings_by_entry_judge = ();

	foreach my $rating (@ratings) {
		next unless $rating->entry;
		next unless $rating->judge;
		$ratings_by_entry_judge{$rating->entry->id."-".$rating->judge->id} = $rating->rating_tier->name if $rating->entry || $rating->judge;
	}

	my @strikes = $m->comp("/funclib/category_strikes.mas", category => $category); 

	my %conflicts_by_entry = ();
	my %conflicts_by_school = ();

	foreach my $strike (@strikes) { 
		$conflicts_by_entry{$strike->entry->id."-".$strike->judge->id}++ if $strike->type eq "entry";
		$conflicts_by_school{$strike->school->id."-".$strike->judge->id}++ if $strike->type eq "school";
		$conflicts_by_entry{$strike->entry->id."-".$strike->judge->id}++ if $strike->entry && $strike->type eq "conflict";
		$conflicts_by_school{$strike->school->id."-".$strike->judge->id}++ if $strike->school && $strike->type eq "conflict";
	}

	my @entries;
	my $tourn_id = $tourn->id;
	my $session_id = $session->id;

	open (EXPORT, ">$Tab::file_root/tmp/TRPC-MJP-".$category->id.".txt");

	my @schools;

	foreach my $event ($category->events) { 

		foreach my $entry (sort {$a->id <=> $b->id} $event->entries(dropped => 0, waitlist => 0)) { 

			next if $entry->school->setting("noprefs");

			my $tag = $entry->id;

			while ($tag > 8000) { 
				$tag -= 8000;
			}   

			print EXPORT "-------------------------------------\r";

			print EXPORT "\$".$category->abbr." \*".$tag."    ".$entry->school->name."   ".$entry->name."\r\r";

			foreach my $judge (@judges) { 

				my $jtag = $judge->id;

				while ($jtag > 8000) { 
					$jtag -= 8000;
				}   

				print EXPORT "\% ".$jtag."\ \ \ ";
				print EXPORT "[";

				if ($conflicts_by_entry{$entry->id."-".$judge->id} || $conflicts_by_school{$entry->school->id."-".$judge->id} ) { 
					print EXPORT "6";
				} elsif ($ratings_by_entry_judge{$entry->id."-".$judge->id}) { 
					print EXPORT sprintf('%-1s',$ratings_by_entry_judge{$entry->id."-".$judge->id});
				} else {
					print EXPORT "1";
				}

				print EXPORT "]";
				print EXPORT " ".sprintf('%-30s',$judge->last.", ".$judge->first);
				print EXPORT $judge->school->name if $judge->school;
				print EXPORT "Tournament Hire" unless $judge->school;
				print EXPORT "\r";

			}

		}

	}

	close EXPORT;

	$m->redirect("$Tab::url_prefix/tmp/TRPC-MJP-".$category->id.".txt");

</%init>

<%args>
	$tourn
	$person
</%args>
<%init>

	my $switch;

	my @schools = $tourn->schools;

	@schools = sort {$a->code cmp $b->code} @schools;
	@schools = sort {length($a->code) cmp length($b->code)} @schools;

</%init>

	<& menu.mas, tourn => $tourn, person => $person, whoami => "schools" &>

	<& /funclib/tablesorter.mas, table => "yo" &>

	<div class="main">

		<h2>Edit Team Managers</h2>

		<form action="team_managers_save.mhtml">

		<& "/funclib/tablesorter.mas", table => 'manager' &>

		<table id="manager">

			<thead>
		
			<tr class="yellow">
			
				<th class="smallish"> 
					Country
				</th>

				<th class="smallish"> 
					Team Manager name
				</th>

				<th class="smallish"> 
					Team Manager email
				</th>
				
				
			</tr>

			</thead>

			<tbody>

%			foreach my $school (@schools) { 

				<tr class="row">

					<td>
						<% $school->name %>
					</td>

					<td>
						<input type="text" name="manager_name_<% $school->id %>" size="30" value="<% $school->setting("manager_name") %>">
					</td>

					<td>
						<input type="text" name="manager_email_<% $school->id %>" size="30" value="<% $school->setting("manager_email") %>">
					</td>

				</tr>

%			}

			</tbody>


			<tr class="libl">

				<td colspan="3" class="rightalign">
					<input type="submit" value="Save team managers">
					</form> 
				</td>
			</tr>

		</table>

	</div>



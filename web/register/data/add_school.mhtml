<%args>
	$dbh
	$tourn
	$tourn_settings
	$person
	$person_settings
</%args>
<%init>

	my $tourn_schools_sth = $dbh->prepare("
		select
			chapter.id
		from school, chapter
		where school.tourn = ?
			and school.chapter = chapter.id
	");

	$tourn_schools_sth->execute($tourn->id);

	my $chapters;

	if ($tourn_settings->{"nsda_district"}) {

		my $circuit_chapters_sth = $dbh->prepare("
			select
				chapter.id, chapter.name, chapter.state, chapter.nsda
			from chapter, chapter_circuit cc, tourn_circuit tc

			where 1=1
				and tc.tourn = ?
				and tc.approved = 1
				and tc.circuit = cc.circuit
				and cc.chapter = chapter.id
				and chapter.district = ?
			order by chapter.name, chapter.state
		");

		$circuit_chapters_sth->execute($tourn->id, $tourn_settings->{nsda_district});

		$chapters = $circuit_chapters_sth->fetchall_hash();

	} else {

		my $circuit_chapters_sth = $dbh->prepare("
			select
				chapter.id, chapter.name, chapter.state, chapter.nsda
			from chapter, chapter_circuit cc, tourn_circuit tc

			where 1=1
				and tc.tourn = ?
				and tc.approved = 1
				and tc.circuit = cc.circuit
				and cc.chapter = chapter.id
			order by chapter.name, chapter.state
		");

		$circuit_chapters_sth->execute($tourn->id);
		$chapters = $circuit_chapters_sth->fetchall_hash();

	}

</%init>

	<& "menu.mas",
		tourn          => $tourn,
		tourn_settings => $tourn_settings,
		person         => $person,
		whoami         => "add_school"
	&>

	<div class="main">

		<h2>Add school to tournament</h2>

%		if ($tourn_settings->{"nsda_nats"}) {

			<form
				action="add_school_save.mhtml"
				method="post"
			>

			<div class="row">

				<span class="third">
					Add district team:
				</span>

				<span class="half">
					<select
						name  = "district_id"
						class = "fixedbig"
					>
						<& "/funclib/district_select.mas" &>
					</select>
				</span>

				<span class="sixth rightalign">
					<input
						type  = "submit"
						class = "thin"
						value = "Add"
					>
				</span>

			</div>

			</form>

%		}

		<form
			action="add_school_save.mhtml"
			method="post"
		>

		<div class="row">
			<span class="third strong">
%				if ($tourn_settings->{"nsda_district"}) {
					Add school from district
%				} else {
					Add School from Circuit
%				}
			</span>

			<span class="half">
				<select
					name  = "chapter_id"
					class = "fixedbig"
				>
%					foreach my $chapter (@{$chapters}) {
						<option
							value = "<% $chapter->{id} %>"
						>
							<% $chapter->{name} %>
							<% $chapter->{state} %>
							NSDA <% $chapter->{nsda} %>
						</option>
%	 				}
				</select>
			</span>

			<span class="sixth rightalign">
				<input
					type  = "submit"
					class = "thin"
					value = "Add"
				>
			</span>
		</div>
		</form>

		<h4 class="martop">Or, add a brand new school</h4>

		<form
			action = "add_school_create.mhtml"
			method = "post"
		>

		<table>
			<tr class="row">
				<td>
					School/Institution Name
				</td>
				<td>
					<input
						type = "text"
						name = "name"
						size = "32"
					>
				</td>
			</tr>

			<tr class="row">
				<td>
					Coach Email
				</td>
				<td>
					<input
						type = "text"
						name = "email"
						size = "32"
					>
				</td>
			</tr>

%			if ($tourn_settings->{"nsda_nats"}) {
				<tr class="row">
					<td>
						District
					</td>

					<td>
						<select
							name  = "district_id"
							class = "fixedbig"
						>
							<& "/funclib/district_select.mas" &>
						</select>
					</td>
				</tr>
%			}

			<tr class="row">

				<td>
					Country
				</td>

				<td>
					<select
						name  = "country"
						class = "fixedbig"
					>
						<& "/funclib/country_select.mas", country => $tourn->country &>
					</select>
				</td>

			</tr>

			<tr class="row">

				<td>
					State
				</td>

				<td>
					<select
						name  = "state"
						class = "fixedbig"
					>
						<& "/funclib/state_select.mas", state => $tourn->state &>
					</select>
				</td>

			</tr>

			<tr class="liblrow">
				<td colspan="2" class="rightalign">
					<input
						type  = "submit"
						class = "thin"
						value = "Add"
					>
					</form>
				</td>
			</tr>
		</table>


%		if ($person_settings->{"nsda_admin"} || $person->site_admin) {

			<h5>Super duper secret method</h5>

			<form
				action = "add_school_id.mhtml"
				method = "post"
			>

				<div class="row">
					<span class="half semibold redtext">
						Add any school by Tabroom Chapter ID
					</span>

					<span class="quarter">
						<input
							type = "number"
							name = "chapter_id"
							size = "32"
						>
					</span>

					<span class="quarter rightalign">
						<input
							type="submit"
							value="Add"
						>
					</span>
				</div>
			</form>

			<form
				action = "add_school_id.mhtml"
				method = "post"
			>

				<div class="row">
					<span class="half semibold redtext">
						Add any school by NSDA School ID
					</span>

					<span class="quarter">
						<input
							type = "number"
							name = "nsda_school_id"
							size = "32"
						>
					</span>

					<span class="quarter rightalign">
						<input
							type="submit"
							value="Add"
						>
					</span>
				</div>
			</form>
%		}

	</div>


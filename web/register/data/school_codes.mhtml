<%args>
	$tourn
	$person
</%args>
<%init>

	my @schools = $tourn->schools;

	@schools = sort {$a->code cmp $b->code} @schools;
	@schools = sort {length($a->code) cmp length($b->code)} @schools;

</%init>

	<& menu.mas, tourn => $tourn, person => $person, whoami => "schools" &>

	<& /funclib/tablesorter.mas, table => "yo" &>

	<div class="main">

		<h2>Edit Tournament School Codes</h2>

		<form action="schools_save.mhtml">

		<table id="yo">

			<thead>
		
			<tr class="yellow">
			
				<th class="smallish"> 
					School name
				</th>

				<th class="smallish"> 
					School code
				</th>
				
			</tr>

			</thead>

			<tbody>

%			foreach my $school (@schools) { 

				<tr class="row">

					<td>
						<span class="hidden"><% $school->name %></span>
						<input 
							type  = "text"
							name  = "name_<% $school->id %>"
							size  = "32"
							value = "<% $school->name %>">
					</td>

					<td>
						<span class="hidden"><% $school->code %></span>
						<input 
							type  = "text"
							name  = "code_<% $school->id %>"
							size  = "10"
							value = "<% $school->code %>">
					</td>

				</tr>
%			}

			</tbody>


			<tr class="libl">

				<td colspan="2" class="rightalign">
					<input type="submit" value="Save school names & codes">
					</form> 
				</td>
			</tr>

		</table>

	</div>


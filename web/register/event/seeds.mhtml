<%args>
	$event_id
	$tourn
	$tourn_settings
	$only_category => undef
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id);
	my $seed_presets = $event->setting("seed_presets");

	$m->abort if $only_category && $only_category->id != $event->category->id;

	my @entries = Tab::Entry->search( 
		event  => $event->id,
		active => 1
	);

	Tab::EntrySetting->set_sql( seeds => "
		select distinct entry_setting.*
		from entry_setting, entry
		where entry.event = ?
		and entry.dropped != 1
		and entry.waitlist != 1
		and entry.id = entry_setting.entry
		and entry_setting.tag = 'pairing_seed'
	");

	my @seeds = Tab::EntrySetting->search_seeds($event->id);
	my %seed_by_entry = map {$_->entry->id => $_->value} @seeds;

	my %seed_counter = ();
	my $seed_total;

	foreach my $entry (keys %seed_by_entry) { 

		$seed_counter{$seed_by_entry{$entry}}++ 
			if $seed_presets eq "inverse" 
			|| $seed_presets eq "protect" 
			|| $seed_presets eq "all";

		$seed_total += $seed_by_entry{$entry};
	}
	
	$seed_counter{"Avg"} = ($seed_total / (scalar @seeds)) if @seeds;

	my $no_codes++ if $event->setting("code_style") eq "names";
	my $apda++ if $event->setting("apda");

	@entries = sort {$a->name <=> $b->name} @entries;
	@entries = sort {$a->code <=> $b->code} @entries unless $no_codes;
	@entries = sort {$seed_by_entry{$a} <=> $seed_by_entry{$b} } @entries;

	my %entry_student;

	foreach my $entry (@entries) {
		my $x = 1;
		foreach my $student ($entry->students) {
			$entry_student{$entry->id}{$x++} = $student->id;
		}
	}

</%init>

	<& "menu.mas",
		tourn          => $tourn,
		tourn_settings => $tourn_settings,
		only_category  => $only_category,
		event          => $event,
		seeds          => $seed_presets,
		seed_counter   => \%seed_counter
	&>

	<div class="main">

		<& 
			"/funclib/tablesorter.mas", 
			table => "seeds" 
		&>


		<div class="full nospace">

			<span class="twothirds nospace">
				<h4>Seedings used for presets in <% $event->abbr %></h4>
			</span>

			<span 
				class = "third nospace rightalign"
				id    = "seeds_buttonarea"
			>
				<a 
					class  = "bluetext buttonwhite fa printbutton fa-file-o"
					href   = "/index/results/debate_stats2.mhtml?event_id=<% $event_id %>"
					target = "_blank"
					title  = "All Records for entries"
				>
				</a>
			</span>

		</div>

		<form 
			action = "seeds_save.mhtml"
			method = "post"
		>

		<input 
			type  = "hidden"
			name  = "event_id"
			value = "<% $event->id %>"
		>

%		if ($apda) { 

			<p class="strong redtext">
				APDA:  1 should be a Full seed, 2 a Half seed, 3 a Free seed,
				and 4 no seed
			</p>
%		} 

%		if ($seed_presets eq "all") { 

			<p>
				To the extent possible, the system will attempt to assign each
				entry to debate opponents with every seed in presets.  Use the
				same number of seed categories as you have preset rounds.
			</p>

%		} elsif ($seed_presets eq "inverse") { 

			<p>
				Use only with 2 preset rounds and 4 seeds (1-4).  <br />The 1
				and 4 seeds will debate 2s and 3s; 2s and 3s will debate 1s and
				2s in presets.
			</p>

%		} elsif ($seed_presets eq "balance") { 

			<p>
				Rank teams ordinally.  The system will pair the edges with the
				middle, such that every team's average opponent seed comes out
				as equally as possible.
			</p>

%		} elsif ($seed_presets eq "protect") { 

			<p>
				The paneler will power protect preset round(s); the best
				debaters will debate the worst debaters.
			</p>

%		} 

		<table id="seeds">

			<thead>

				<tr class="yellowrow">

					<th class="smaller">
					</th>

					<th class="smaller">
						Results
					</th>

%					unless ($no_codes) { 
						<th class="smaller">
							Code
						</th>
%					}

					<th class="smaller">
						Entry Name
					</th>


					<th class="smaller">
						Points
					</th>

%					if ($apda) { 
						<th class="smaller">
							APDA
						</th>
%					}

					<th class="smaller">
						Seed
					</th>

				</tr>

			</thead>

			<tbody>

%				my $count = 1;

%				foreach my $entry (@entries) { 

					<tr>

						<td class="centeralign smallish">
							<% $count++ %>
						</td>

						<td class="centeralign nospace">
							<a 
								class    = "bluetext buttonwhite padless"
								tabindex = -1
								target   = "_blank"
								href     = "/index/results/team_lifetime_record.mhtml?id1=<% $entry_student{$entry->id}{1} %>&id2=<% $entry_student{$entry->id}{2} %>" 
							>
								Record
							</a>
						</td>


%						unless ($no_codes) { 

							<td class="smallish nospace">
								<a 
									class    = "white padtop padleft padbottom"
									href     = "/register/entry/edit.mhtml?entry_id=<% $entry->id %>"
									tabindex = -1
								>
									<% $entry->code %>
								</a>
							</td>
%						}

						<td class="smallish nospace">
							<a 
								class    = "white padtop padleft padbottom"
								href     = "/register/entry/edit.mhtml?entry_id=<% $entry->id %>"
								tabindex = -1 
							>
								<% $entry->name %>
							</a>
						</td>

						<td class="smallish">
							<% sprintf("%.2f", $entry->setting("pairing_points")) %>
						</td>

					</td>

%					if ($apda) {
						<td class="smallish centeralign">
							<% ucfirst($entry->setting("registered_seed")) %>
						</td>
%					}

					<td class="smallish">

						<span class="hidden"> 
							<% $seed_by_entry{$entry->id} %>
						</span>

						<input 
							type  = "number"
							name  = "<% $entry->id %>"
							value = "<% $seed_by_entry{$entry->id} %>"
							size  = "5"
							min   = 0
							max   = 9999
						>
					</td>

				</tr>
%			}

			</tbody>

		</table>

		<div class="full rightalign libl">

			<span class="half">
				Break Ties/Fill Gaps
				<input type="checkbox" name="fill_in" value="1">
			</span>

			<span class="half">
				<input 
					type  = "submit"
					value = "Save Seeds"
				>
			</span>

		</div>
		</form>


		<h4>Auto-generate seedings</h4>

		<p>
			Create ratings for preset seedings based on other tournaments in
			your circuit have attended.
		</p>


		<form 
			action = "auto_team_seeds.mas"
			method = "post"
		>

		<input 
			type  = "hidden"
			name  = "event_id"
			value = "<% $event->id %>"
		>

		<div class="row">

			<span class="twofifths">

				<span class="third">
					Circuit:
				</span>

				<span class="twothird">

					<select name="circuit_id" class="fixedsmall">

%						foreach my $circuit ($tourn->circuits) { 
							<option value="<% $circuit->id %>">
								<% $circuit->name %>
							</option>
%						}

					</select>

				</span>

			</span>

			<span class="twofifths">

				<span class="third">
					Basis:
				</span>

				<span class="twothird">

					<select name="basis" class="fixedsmall">
						<option value="average">RPI Average</option>
						<option value="total">RPI Total</option>
					</select>

				</span>

			</span>

			<span class="fifth rightalign">
				<input type="submit" value="Auto Fill">
				</form>
			</span>

		</div>

	</div>


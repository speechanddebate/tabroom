<%args>
	$tourn
	$tourn_settings
	$person
	$person_settings
	$event_id      => undef
	$only_category => undef
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id);

	my $num_chambers = $event->setting("house_chambers");

	my @house_blocs = $m->comp(
		"/funclib/event_entry_settings.mas",
		event => $event,
		tag   => "nsda_house_bloc"
	);

	my %house_settings =
		map {$_->entry->id => $_->value}
		@house_blocs;

</%init>

	<& "menu.mas",
		only_category  => $only_category,
		tourn          => $tourn,
		tourn_settings => $tourn_settings,
		event          => $event,
		whoami         => "house_delegations"
	&>

	<div class="main">

		<div class="nospace">

			<span class='threequarters nospace'>
				<h4>House School Delegation Blocs</h4>
			</span>

			<span class='quarter nospace rightalign'>
				<h6><% $num_chambers %> Chambers</h6>
			</span>

		</div>

		<form 
			action = "nsda_house_save.mhtml"
			method = "post"
		>

		<input
			type  = "hidden"
			name  = "event_id"
			value = "<% $event->id %>"
		>

		<& "/funclib/tablesorter.mas", table => "blocs" &>

		<table id="blocs">

			<thead>

				<tr class="yellowrow smallish">
					
					<th>
						Code
					</th>

					<th>
						Name
					</th>

					<th>
						School
					</th>

					<th>
						School Bloc
					</th>

				</tr>

			</thead>

			<tbody>

%				foreach my $entry (sort {$a->school->name cmp $b->school->name} $event->entries( active => 1)) { 

					<tr>

						<td>
							<% $entry->code %>
						</td>

						<td>
							<% $entry->name %>
						</td>

						<td>
							<% $entry->school->short_name %>
						</td>

						<td class="centeralign padless">
							<input
								type  = "number"
								name  = "<% $entry->id %>"
								min   = "1"
								max   = "<% $num_chambers %>"
								value = "<% $house_settings{$entry->id} %>"
							>
						</td>

					</tr>
%				}

			</tbody>

		</table>

		<div class="libl rightalign">

			<input 
				type="submit"
				name="Save"
			>

		</div>

		</form>

	</div>



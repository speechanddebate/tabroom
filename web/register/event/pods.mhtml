<%args>
	$event_id
	$tourn
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id);

	unless ($event->setting("round_robin")) { 
		$m->print("Pods only make sense for round robins.");
		$m->abort;
	}

	my @entries = Tab::Entry->search( event => $event->id, unconfirmed => 0, dropped => 0, waitlist => 0 );

	my $no_codes++ if $event->setting("code_style") eq "names";

	@entries = sort {$a->name <=> $b->name} @entries;
	@entries = sort {$a->code <=> $b->code} @entries unless $no_codes;
	@entries = sort {$a->pair_seed <=> $b->pair_seed} @entries;

</%init>

	<& sidebar.mas, tourn => $tourn, event => $event, pods => "yup" &>

	<div class="left huge">
	
		<& /funclib/tablesorter.mas, table => "sortme" &>

		<form action="pods_save.mhtml" method="post">
		<input type="hidden" name="event_id" value="<% $event->id %>">

		<h4>Round robin pods</h4>

		<p>Please use numbers (1,2,3) to designate pods.  Set labels for pods below once numbered.</p>

		<table cellpadding="1" cellspacing="1" width="100%" id="sortme">

			<thead>

				<tr class="yellowrow">

%					unless ($no_codes) { 
						<th class="smaller">
							Code
						</th>
%					}

					<th class="smaller">
						Entry Name
					</th>

					<th class="smaller">
						School
					</th>

					<th class="smaller">
						Pod
					</th>

				</tr>
			</thead>

			<tbody>

%				my $count;
%				my %pods;

%				foreach my $entry (@entries) { 

%					$pods{$entry->pair_seed}++ if $entry->pair_seed;

					<tr>

%						unless ($no_codes) { 
							<td class="smallish">
								<a class="plain block" href="/register/entry/edit.mhtml?entry_id=<% $entry->id %>" tabindex=-1>
									<% $entry->code %>
								</a>
							</td>
%						}

						<td class="smallish">
							<a class="plain block" href="/register/entry/edit.mhtml?entry_id=<% $entry->id %>" tabindex=-1 >
								<% $entry->name %>
							</a>
						</td>

						<td class="smallish">
							<a class="plain block" href="/register/school/entries.mhtml?event_id=<% $entry->event->id %>&school_id=<% $entry->school->id %>" tabindex=-1>
								<% $entry->school->short_name %> 
							</a>
						</td>
					</td>

					<td class="smallish">
						<span class="hidden"> <% $entry->pair_seed %> </span>
						<input type="number" min="0" max="99" size="5" name="<% $entry->id %>" value="<% $entry->pair_seed %>">
					</td>

				</tr>
%			}

			</tbody>

			<tr class="liblrow">

				<td colspan="5" class="rightalign">
					<input type="submit" value="Save Pod Assignments" class="thin">
					</form>
				</td>

			</tr>

		</table>

		<h4>Pod labels</h4>

		<form action="pods_names.mhtml" method="post">
		<input type="hidden" name="event_id" value="<% $event->id %>">

		<table cellpadding="1" cellspacing="1" width="100%" id="sortme">

%			my $switch;

%			foreach my $pod (sort keys %pods) { 

				<tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

					<td>
						<% $pod %>
					</td>

					<td>
						<input type="text" name="<% $pod %>" size="30" value="<% $event->setting("pod_".$pod) %>">
					</td>

				</tr>

%			}

			<tr class="liblrow">

				<td colspan="5" class="rightalign">
					<input type="submit" class="thin" value="Save Pod Labels">
					</form>
				</td>

			</tr>

		</table>

	</div>


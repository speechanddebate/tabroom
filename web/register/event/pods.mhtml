<%args>
	$event_id
	$tourn
	$tourn_settings
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id);

	unless ($event->setting("round_robin")) {
		$m->print("Pods only make sense for round robins.");
		$m->abort;
	}

	my @entries = Tab::Entry->search(
		event  => $event->id,
		active => 1
	);

	my $no_codes++ if $event->setting("code_style") eq "names";

	@entries = sort {$a->name <=> $b->name} @entries;

	@entries = sort {$a->code <=> $b->code} @entries unless $no_codes;

</%init>

	<& menu.mas,
		tourn          => $tourn,
		tourn_settings => $tourn_settings,
		event          => $event,
		pods           => "yup"
	&>

	<div class="main">


		<span class="seveneighths nospace">
			<h4>Round robin pods</h4>

			<p class='semibold redtext'>
				Use numbers (1,2,3) to designate pod members.
				Then, (optionally) set labels for pods below.
			</p>
		</span>

		<span
			id    = "pods_buttonarea"
			class = "eighth rightalign">
		</span>

		<& "/funclib/tablesorter.mas", table => "pods" &>

		<form
			action = "pods_save.mhtml"
			method = "post"
		>

		<input
			type  = "hidden"
			name  = "event_id"
			value = "<% $event->id %>"
		>

		<table id="pods">

			<thead>

				<tr class="yellowrow">

%					unless ($no_codes) {
						<th class="smaller">
							Code
						</th>
%					}

					<th class="smaller">
						Entry Name
					</th>

					<th class="smaller">
						School
					</th>

					<th class="smaller">
						Pod
					</th>

				</tr>
			</thead>

			<tbody>
<%perl>
				my $count;
				my %pods;

				foreach my $entry (@entries) {

					$pods{$entry->setting("pod")}++ if $entry->setting("pod");
</%perl>
					<tr>

%						unless ($no_codes) {
							<td class="smallish">
								<a
									class="white"
									href="/register/entry/edit.mhtml?entry_id=<% $entry->id %>"
									tabindex=-1
								>
									<% $entry->code %>
								</a>
							</td>
%						}

						<td class="smallish">
							<a class     = "white"
								href     = "/register/entry/edit.mhtml?entry_id=<% $entry->id %>"
								tabindex = -1
							>
								<% $entry->name %>
							</a>
						</td>

						<td class="smallish">
							<a
								class    = "white"
								href     = "/register/school/entries.mhtml?event_id=<% $entry->event %>&school_id=<% $entry->school %>"
								tabindex = -1
							>
								<% $entry && $entry->school ? $entry->school->short_name : "" %>
							</a>
						</td>
					</td>

					<td
						class     = "smallish"
						data-text = "<% $entry->setting("pod") %>"
					>
						<input
							type  = "number"
							min   = "0"
							max   = "99"
							name  = "<% $entry->id %>"
							value = "<% $entry->setting("pod") %>"
						>
					</td>
				</tr>
%			}

			</tbody>
		</table>

		<div class="libl pagefull rightalign">
			<span class="centeralign third">
				<input
					type  = "submit"
					value = "Save Pod Assignments"
				>
			</span>
		</div>

		</form>

		<h4>Pod labels</h4>

		<form
			action = "pods_names.mhtml"
			method = "post"
		>

		<input
			type  = "hidden"
			name  = "event_id"
			value = "<% $event->id %>"
		>

		<table>
%			foreach my $pod (sort keys %pods) {
				<tr class="row">
					<td>
						<% $pod %>
					</td>

					<td>
						<input
							type  = "text"
							name  = "<% $pod %>"
							value = "<% $event->setting("pod_".$pod) %>"
						>
					</td>
				</tr>
%			}
		</table>

		<div class="liblrow rightalign">
			<span class="third centeralign">
				<input
					type  = "submit"
					value = "Save Pod Labels"
				>
			</span>
		</div>

		</form>

	</div>


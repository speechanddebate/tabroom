	unless ($account->site_admin || @is_admin) { 
		$m->print("
			<h4>Error:</h4><p><b>Only site admins or league 
				officials may edit the website. </b></p>");
		$m->abort;
	}

	chomp $title;

	my $err;

if ($news)  { 

	$news->title($title);
	$news->active($active);
	$news->text($text);
	$news->main_site($main_site);
	$news->edited_by($account->id);
	$news->edited_on($now);
	$news->update;

	$err = "Changes to ". $news->title ."saved";


} else {  

	$news = Tab::News->create({ 
		title => $title,
		author => $account->id,
		posted => $now,
		text => $text,
		active => $active,
		league => $league->id,
		main_site => $main_site,
		link => $link
	});


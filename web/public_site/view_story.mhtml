<%args>	
	$circuit
	$news_id
</%args>
<%init>


</%init>

<table cellpadding="3" width="100%">


%	my $story = Tab::News->retrieve($news_id);
%   next unless $story;

	<tr><td class="story"><h4><% $story->title %></h4></td></tr>
	<tr>
	<td class="story">
	<% $story->text %>
	</td>
	</tr>
	


% if ($story->file) { 
<tr>
	<td align="right">Download Attached File:
	(<a href="<% $Tab::url_prefix %>/files/<% $circuit->id %>/articles/<% $story->id %>/<% $story->file %>"><% $story->file%></a>)</td>
</tr>

% }


	<tr>
	<td align="right"><i>--<% $story->posted->mdy('/') %> </i></td>
	</tr>

</table>

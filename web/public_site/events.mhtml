<%args> 
	$circuit
</%args>

%	my $switch;

	<table cellpadding="5" cellspacing="1" width="90%">

% 	foreach my $method ($circuit->methods(is_standard => 1) ) { 

		<tr>
			<td colspan="5">
				<h4>Events: <% $method->name %></h4>
			</td>
		</tr>

% 		foreach my $event (sort {$a->name cmp $b->name} $method->events) {

		 	<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td>
					( <a href="std_event.mhtml?event_id=<%$event->id%>"><% $event->name %></a> )
				</td>
				
				<td>
					<% $event->abbr %>
				</td>
				
				<td>
					<% ucfirst($event->type) %>
				</td> 
				
			</tr>

% 		}	# end of foreach event


% 	}  # end of foreach method.

	</table>




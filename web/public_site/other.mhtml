<%args> 
	$circuit
	$schedule_id => undef
</%args>
<%init> 
	my $schedule = Tab::Schedule->retrieve($schedule_id) if $schedule_id;

	my $start = $schedule->start;
	$start->set_time_zone($tourn->tz);
	my $end = $schedule->end;
	$end->set_time_zone($tourn->tz);
	
</%init> 

<form action="schedule.mhtml" method="post">
<table width="100%" cellpadding="1">
<tr>
<td width="100%">
<h3><% $schedule->name %></h3>
</td>
<td><input  type="submit" value="Return to Schedule">
</td>
</tr>
</table>
</form>

<center>

<table cellpadding="3" width="65%"> 

	<tr>
	<th>Name:</th>
	<td><% $schedule->name %></td>
	</tr>

	<tr>
	<th>Location:</th>
	<td><% $schedule->location %></td>
	</tr>

	<tr>
	<th>Dates:</th>
	<td>
		<% $start->mdy('/') %>
		<% ($start->mdy ne $end->mdy) ? "-".$end->mdy('/') : "" %> 
	</td>
	</tr>

% if ($schedule->file) { 

	<tr><th valign="top"></th>
	<td>

	(<a href="<%$Tab::url_prefix%>/files/<% $circuit->id %>/schedule/<% $schedule->id %>/<%$schedule->file%>">
	<%$schedule->file%></a>)<br>

	</td></tr>

% 	}


	<tr>
	<td colspan="2"><h4>Description:</h4></td>
	</tr>
	
	<tr>
	<td colspan="2">
	<% $schedule->description %> 
	</td>
	</tr>

</table>


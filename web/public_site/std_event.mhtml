<%args> 
	$league
	$event_id
</%args>
<%init> 
	my $event = Tab::Event->retrieve($event_id);

</%init> 

<h3><% $event->name %> </h3>

<center>

<table cellpadding="3" width="100%"> 

<tr>
<td width="70%" valign="top">
<table cellpadding="3" width="100%">

<tr>
<th>Abbreviation:</th>
<td><% $event->abbr %></td>
</tr>

<tr>
<th>Type:</th>
<td><% ucfirst $event->type %></td>
</tr>


% if ($event->cap) { 
<tr>
<th>Entry Limit:</th>
<td><% $event->cap %></td>
</tr>
% }

% if ($event->school_cap) { 
<tr>
<th>Entry Limit Per School:</th>
<td><% $event->school_cap %></td>
</tr>
% }

<tr>
<th>Entry:</th>
<td><% ($event->team == 1) ? "Individuals" : "" %>
	<% ($event->team == 2) ? "Pairs" : "" %>
	<% ($event->team == 3) ? "Teams" : "" %></td>
</tr>

% if ($event->ballot) {
<tr>
<th>Sample Ballot:</th>
<td>(<a href="<% $Tab::url_prefix%>/files/methods/<% $event->method->id %>/events/<% $event->id."/".$event->ballot %>">Download</a>)</td>
</tr>
%  }

<tr>
<td colspan="2"><h4>Event Description:</h4></td></tr>

<tr><td colspan="2"><% $event->blurb %></td></tr>

</table>
</table>


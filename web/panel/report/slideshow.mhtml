<%args>
	$tourn
	$event_id
	$timeslot_id
	$startme => undef
</%args>
<%init>

	use POSIX;

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;
	
	my $tourn_id = $tourn->id;

	my @events;

	if ($event_id eq "all") { 
		@events = $m->comp("/funclib/tourn_events.mas", tourn => $tourn);
	} else {
		push (@events, Tab::Event->retrieve($event_id));
	}

 	my $timeslot = Tab::Timeslot->retrieve($timeslot_id);
		
</%init>

	<script type="text/javascript">

		$(document).ready(function() {

			$('body').css('background-image', 'none');
			$('body').css('background-color', '#dadada');

			$('#slideshow').cycle({
				fx      : 'scrollLeft',
				sync    : false,
				timeout : 10000,
				pause   : 1
			});

			$('#navbar').hide();
			$('#topbar').hide();
			$('#header').hide();
			$('#footer').hide();
			$('#content-spacer').hide();

			$("#slideshow_begin").click(function() {
				$("#slideshow_begin").hide();
				$('#pause').show();
				$('.slideshow_tournlogo').hide();
				$('#show_motion').show();
				$('#slideshow').css('display', 'block');
				$('#slideshow').css('width', '770px');
				$('#slideshow').css('height', '550px');
				$('#slideshow').css('margin', 'auto');
				$('#slideshow').cycle('resume');
			});

			$("#pause").click(function() {
				$('#pause').hide();
				$('#resume').show();
				$('#slideshow').cycle('pause');
			});

			$("#resume").click(function() {
				$('#pause').show();
				$('#resume').hide();
				$('#slideshow').cycle('resume');
				$('#motion').hide();
				$('#slideshow').show();
			});

			$("#show_motion").click(function() {
				$('#slideshow').cycle('pause');
				$('#slideshow').hide();
				$('#motion').show();
				$('#pause').hide();
				$('#resume').show();
			});


		});

	</script>



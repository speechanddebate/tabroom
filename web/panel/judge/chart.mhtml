%							if ($category->{rounds_per}) {
%								$m->print("/".$judges{$judge_id}{"obligation"});
%							}
						</td>

%						if ($category->{nats}) {
							<td class="smallish centeralign" title="Days of Obligation">
								<% $judges{$judge_id}{"obligation"} %>
							</td>
%						}
					</tr>
%				}

				</tbody>
			</table>
%		}
	</div>

<%args>
	$tourn
	$account
	$event_id => undef
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id);
	$m->abort unless $event->tourn->id == $tourn->id;

	foreach my $round (sort {$a->name <=> $b->name} $event->rounds) { 

		$round->judges($ARGS{"judges_".$round->id}) if $ARGS{"judges_".$round->id};
		$round->judges(1) unless $ARGS{"judges_".$round->id};
		$round->pool($ARGS{"pool_".$round->id}) if $ARGS{"pool_".$round->id};
		$round->update;

	}

	my $msg = $event->abbr." judge information saved";

	$m->redirect("event.mhtml?event_id=".$event->id."&msg=$msg");

</%init>


<%args>
	$tourn
	$account
</%args>
<%init>
	my @events = $tourn->events;
	my @groups = $tourn->groups;

 	@events = sort { $a->name cmp $b->name } @events;
 	@groups = sort { $a->name cmp $b->name } @groups;

</%init>

<h3>Event schematics for <% $tourn->name %></h3>

<table cellpadding="6" cellspacing="1" width="100%">

%	my $switch;

% foreach my $event (@events) { 

%	next if $event->type eq "debate";

% my @rounds = Tab::Round->search( event => $event->id, {order_by => "name"});

	<tr <% ($switch % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
%	$switch++;

	<td><% $event->name %></td>
	
	<form action="schemat_show.mhtml" method="post">
	<td>Round: <select name="round_id">
		<option value="">All</option>
%   foreach my $round (@rounds) { 
		<option value="<% $round->id %>"><% $round->name %></option>
% }
	</select>
	</td>

	<td>
	<input type="hidden" value="<% $event->id %>" name="event_id">
	<input class="blue" type="submit" name="submit" value="Display">
	</td>
	</form>


<!--
	<form action="schemat_publish.mhtml" method="post">
	<td>
	<input type="hidden" value="<% $event->id %>" name="event_id">
	<input class="blue" type="submit" name="submit" value="Public Schem">
	</td>
	</form>
-->

	<td>Kids: <% scalar $event->comps( dropped => 0, waitlist => 0 ) %></td>

%	foreach my $round (@rounds) { 

		<td><b><% $round->name %>:</b>
		<% scalar $round->panels %></td>
% }



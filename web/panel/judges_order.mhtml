<%args> 
	$league
	$tourn
	$account
	$group_id
</%args>
<%init>

	my $group = Tab::JudgeGroup->retrieve($group_id);
	
	my @judges = $group->judges;

	foreach my $judge (@judges) { 

		my @cannot_see = $m->comp("/funclib/judge_cannotsee.mas", judge_id => $judge->id, league => $league);
		my $num_cs = scalar @cannot_see;
		$judge->score($num_cs);
		$judge->update;

	}	


</%init>

<h3>Judges ordered</h3>
</h4>Now ordering panels:</h4>

% $m->redirect("$Tab::url_prefix/panel/panels_order.mhtml?group_id=$group_id");


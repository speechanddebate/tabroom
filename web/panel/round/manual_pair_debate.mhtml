			my $aff = 0; 
			my $neg = 0; 
			my $bye = ""; 
			my $warning = "";

			foreach my $ballot (@ballots) {

				if ($ballot->side == 1) { 
					$aff = $ballot->entry; 
				}

				if ($ballot->side == 2) { 
					$neg = $ballot->entry; 
				}

				if ($panel->bye or $ballot->bye) { 
					$aff = $ballot->entry; 
					$bye = "BYE"; 
				}

				if ($ballot->side != 1 and $ballot->side != 2 and $bye eq "" and $aff == 0) {

					$aff = $ballot->entry; 
					$warning = "SIDE ERROR";

				} elsif ($ballot->side != 1 and $ballot->side != 2 and $bye eq "" and $neg == 0) {
					
					$neg = $ballot->entry; 
					$warning = "SIDE ERROR";

				}

			}

</%perl> 


									<% $judge && $judge->parli ? "parli " : "" %>
								"
								id    = "<% $judge->id %>"
								title = "<% $judge->schoolname %> <% $judge_name %>"
							>

%								if ($rounds_per) {
									<span
										class="padleftless"
										title="<%
									${$use_ref}{$judge}{"left"}
								%>/<%
									${$use_ref}{$judge}{"judged_already"}

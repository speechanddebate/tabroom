										<%
											${$use_ref}{$judge}{"judged_already"}
										%>
									</span>
%								}

%								if ($online_ballots &! ($judge->person > 0)) {
									<span class="redtext semibold padright">
										L
									</span>
%								}

%								if (
%									($event->type eq "mock_trial" || $event->type eq "congress")

<%args>
	$event_id
	$tourn
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id);
	$m->abort unless $event->tourn->id == $tourn->id;

	foreach my $round ($event->rounds) { 
		$round->motion($ARGS{$round->id});
		$round->update;
	}

	my $switch;

	my $msg = "Motions save";
	$m->redirect("motions.mhtml?event_id=$event_id&msg=$msg");

</%init>


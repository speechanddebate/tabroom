								round  => $round
							);

							unless ($limit_to) {
								my $previous_round = $event->rounds( name => ($round->name - 1))->first;
								my $num_chambers = scalar($previous_round->panels);
								$limit_to = $ARGS{"advance"} * $num_chambers;
							}

							$m->comp("/panel/round/nsda/snake_congress.mas",

<%args>
	$account
	$circuit
	$tourn
	$session
</%args>
<%init>



</%init>

<h3>Schedules</h3>

<div style="float: left; width: 425px; margin-left: 15px; text-align: center; border: 1px solid black;">

<table cellpadding="5" cellspacing="1" width="100%">

<tr class="bluerow">
	<th>Event</th>
	<th>Entries</th>
	<th>Prelims</th>
	<th>Presets</th>
	<th></th>
</tr>

% my $switch;

% foreach my $event (sort {$a->name cmp $b->name} $tourn->events) { 

	<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

		<th><% $event->name %></th>
		<th style="text-align: center;"><% scalar ($event->comps(dropped => 0, waitlist => 0)) %></th>
		
		<td align="center"><% scalar ($event->rounds(type => "prelim")) %></td>

		<td align="center"><% scalar ($event->rounds( preset => 1) ) %></td>

		<td align="center">
			<form action="event_schedule.mhtml" method="post">
			<input type="hidden" name="event_id" value="<% $event->id %>">
			<input type="submit" value="Schedule">
			</form>
		</td>

	</tr>

% }

</table>

</div>

<div style="float: right; width: 295px; margin-right: 15px; text-align: center; border: 1px solid black;">

<table cellpadding="5" cellspacing="1" width="100%">

	<tr class="redrow">
		<th colspan="4">
			Tournament Schedule
		</td>
	</tr>

	<tr class="lirdrow">

		<th width="35%">
			Slot
		</th>

		<th>
			Start
		</th>

		<th>
			End
		</th>

		<th></th>

	</tr>

% 	foreach my $ts (sort {$a->start->epoch <=> $b->start->epoch} $tourn->timeslots) { 

%		my $start = $ts->start->set_time_zone($circuit->timezone);
%		my $end = $ts->end->set_time_zone($circuit->timezone);

		<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

			<th class="smaller">
				<% $ts->name %>
			</th>

			<td class="smaller">
				<% $start->hour_12.":".$start->strftime('%M')." ".$start->strftime('%p') %>
			</td>

			<td class="smaller">
				<% $end->hour_12.":".$end->strftime('%M')." ".$end->strftime('%p') %>
			</td>

			<td class="smaller">
				<form action="timeslot_rounds.mhtml">
				<input type="hidden" name="timeslot_id" value="<% $ts->id %>">
				<input type="submit"  value="Rounds">
				</form>
			</td>

		</tr>

%	}

<tr class="bluerow">
	<td colspan="4" align="center">
		<form action="<% $Tab::url_prefix %>/setup//schedule/print.mhtml" method="post">
			<input type="submit" value=" Print Schedule ">
		</form>
	</td>
</tr>


</table>

</div>

<br style="clear:both"/>




<%args>
	$round_id
	$entry_id
</%args>
<%init>

	my $round = Tab::Round->retrieve($round_id);
	my $entry = Tab::Entry->retrieve($entry_id);

	my $dbh = Tab::DBI->db_Main();

	my $score_sth = $dbh->prepare("
		delete score.*
			from score, ballot, panel
		where ballot.entry = ?
			and panel.round = ?
			and panel.id = ballot.panel
			and ballot.id = score.ballot
	");

	$score_sth->execute($entry, $round);

	my $ballot_sth = $dbh->prepare("
		delete ballot.*
			from ballot, panel
		where ballot.entry = ?
			and panel.round = ?
			and panel.id = ballot.panel
	");

	$ballot_sth->execute($entry, $round);

	my $max_letter_sth = $dbh->prepare("
		select max(letter) from panel where round = ?
	");

	$max_letter_sth->execute($round->id);
	my ($letter) = $max_letter_sth->fetch();

	if ($letter eq "Z") {
		$letter = "AA";
	} elsif ($letter eq "AZ") {
		$letter = "BA";
	} elsif ($letter eq "BZ") {
		$letter = "CA";
	} elsif ($letter eq "CZ") {
		$letter = "DA";
	} elsif ($letter eq "DZ") {
		$letter = "EA";
	} elsif ($letter eq "EZ") {
		$letter = "FA";
	} elsif (not defined $letter) {
		$letter = "A";
	} else {
		$letter++;
	}

	my $panel = Tab::Panel->create({
		round  => $round_id,
		letter => $letter,
		bye    => 1,
		flight => 1
	});

	Tab::Ballot->create({
		panel => $panel->id,
		entry => $entry_id,
		bye   => 1,
		side  => 1,
		audit => 1,
		judge => 0
	});

	my $msg = $entry->code." was given a bye.";

	my $delete_sth = $dbh->prepare("
		delete panel.*
			from panel
		where panel.round = ?
			and not exists (
				select ballot.id
				from ballot
				where ballot.panel = panel.id
			)
	");

	$delete_sth->execute($round);
	;

	$m->redirect("debate_round_edit.mhtml?round_id=$round_id&entry_id=$entry_id&msg=$msg");

</%init>

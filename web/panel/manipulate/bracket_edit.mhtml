<%args>
	$round_id => undef
</%args>
<%init>

	my $round = Tab::Round->retrieve($round_id) if $round_id;
	$m->abort unless $round;

	unless ($round->type eq "elim") { 
		my $err = "Bracket editing is only needed for elim debates";
		$m->redirect("debate_round_edit.mhtml?round_id=<% $round->id %>&err=<% $err %>");
	}

	my @panels = sort {$b->bracket <=> $a->bracket} $round->panels;

	my @entries = $m->comp("/funclib/round_entries.mas", round => $round);
	my %entry_panel;
	foreach my $entry (@entries) { 
		$entry_panel{$entry->panelid}{$entry->side} = $entry->code;
	}


</%init>

	<div class="small right">

		<div class="sidenote">

			<h4>Navigation</h4>

				<a class="blue block nowrap" href="/panel/schemat/show.mhtml?round_id=<% $round->id %>&show=yes">
					<% $round->realname %> <% $round->event->abbr %> Schemat
				</a>

				<a class="dkblue block nowrap" href="/panel/manipulate/bracket_edit.mhtml?round_id=<% $round->id %>&show=yes">
					<% $round->realname %> <% $round->event->abbr %> Bracket Edit
				</a>

				<a class="blue block nowrap" href="/panel/manipulate/debate_round_edit.mhtml?round_id=<% $round->id %>&show=yes">
					<% $round->realname %> <% $round->event->abbr %> Manipulate
				</a>

		</div>

	</div>

	<div class="left huge">

		<h4>Edit <% $round->realname %> Bracket Positions</h4>

		<p>
			Bracket positions should be numbered according to the higher seed
			in a debate.  These will determine opponents in the next elim
			round; the winner of the 1 debate will meet the winner of the 8
			debate in an octafinal, etc.
		</p>

		<& /funclib/tablesorter.mas, table => "sortme" &>

			<form action="bracket_save.mhtml" method="post">
			<input type="hidden" name="round_id" value="<% $round->id %>">

			<table cellpadding="4" cellspacing="1" id="sortme">

				<thead>

					<tr class="yellowrow">

						<th class="smallish">
							Room
						</th>

						<th class="smallish">
							AFF
						</th>

						<th class="smallish">
							NEG
						</th>

						<th class="smallish">
							Bracket	
						</th>

					</tr>

				</thead>

				<tbody>

%					foreach my $panel (@panels) { 

						<tr>

							<td class="smallish">
								<a class="white" href="/panel/schemat/panel_view.mhtml?panel_id=<% $panel->id %>">
									<% $panel->room && $panel->room->name ? $panel->room->name : " None" %>
								</a>
							</td>

							<td class="smallish">
								<% $entry_panel{$panel->id}{"1"} %>
							</td>

							<td class="smallish">
								<% $entry_panel{$panel->id}{"2"} %>
							</td>

							<td class="smallish centeralign">
								<input name="<% $panel->id %>" type="number" size="5" min="1" max="<% scalar @panels %>" value="<% $panel->bracket %>">
							</td>

						</tr>

%					}

				</tbody>

				<tr class="liblrow">
					<td colspan="4" class="rightalign">
						<input type="submit" value="Save Brackets" class="thin">
						</form>
					</td>
				</tr>

			</table>

	</div>

	

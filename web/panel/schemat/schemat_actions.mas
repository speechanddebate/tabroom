						length => "shortest"
					&>
				</span>

				<span class="fifth">
					<script type="text/javascript">
						 $(document).ready(function() {
							 $('#flip_at').timepicker({
								 showLeadingZero : false,
								 showPeriod      : true,
								 periodSeparator : ' ',
								 onClose         : function(time) {
									postSwitch(this, 'flips.mhtml');
								 }
							 });
						 });
					 </script>

					<input
						class         = "notfirst"
						id            = "flip_at"
						size          = "8"
						type          = "text"
						name          = "flip_at"
						property_name = "round"
						setting_name  = "deadline_only"
						target_id     = "<% $round->id %>"
						value         = "<& "/funclib/showtime.mas",
												string => $flip_round_deadline,
												tz     => $tz,
												format => 'picker'
										&>"
					>

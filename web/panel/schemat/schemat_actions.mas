						value         = "1"
						id            = "<% $round->id %>"
						property_name = "reset_flips"
						target_id     = "<% $round->id %>"
						onClick       = "postConfirm('<% $warn %>', this, 'flips.mhtml');"
					>Reset</a>
				</span>
			</div>

%			if ($round->flighted > 1) {
%				foreach my $flight (1 .. $round->flighted) {
					<div class="row flexrow fixedheight">
						<span class="seventenths rightalign padrightmore">
							Blast Notices for only Flight <% $flight %> Flips
						</span>

						<span class="quarter padrightmore rightalign">
							<a

<%args>
	$tourn
	$panel_id
</%args>
<%init>

	my $switch;

	my $panel = Tab::Panel->retrieve($panel_id);

	unless ($panel) { 
		$m->print("You did not select an existing panel.  Hit back and try again");
		$m->abort;
	}

	my @affs = Tab::Ballot->search( panel => $panel_id, side => 1);
	my @negs = Tab::Ballot->search( panel => $panel_id, side => 2);
	my @wtfs = Tab::Ballot->search( panel => $panel_id);

	my %done;

	if (scalar @affs > 1 && (scalar @negs < 1)) { 
		my $oops = pop @affs;
		push @negs, $oops;
	}
	if (scalar @negs > 1 && (scalar @affs < 1)) { 
		my $oops = pop @negs;
		push @affs, $oops;
	}

	foreach my $aff (@affs) { 
		$aff->side(2);
		$aff->update;
		$done{$aff}++;
	}

	foreach my $neg (@negs) { 
		$neg->side(1);
		$neg->update;
		$done{$neg}++;
	}

	my $err;

	foreach my $wtf (@wtfs) { 

		next unless $wtf > 0;
		next unless $wtf->id;
		next if $done{$wtf}++;

		Tab::debuglog("doing $wtf affs @affs");

		unless (@affs) {
			$wtf->side(1);
			$wtf->update;
			push @affs, $wtf;
			undef $wtf;
		}

		Tab::debuglog("doing $wtf negs @negs");

		if ($wtf) { 
			unless (@negs) {
				$wtf->side(2);
				$wtf->update;
				push @negs, $wtf;
				undef $wtf;
			}
		}

		my $err = "I have an encountered a baffling thing, some debaters have no sides.  Please fix?" if $wtf;

	}

	if ($err) { 
		$m->redirect("debate_sides.mhtml?panel_id=$panel_id&err=$err");
	}

	my $msg = "Sides have been swapped. <br /><br /> If results were entered, who the judge has voted for has not changed; the side they voted for has.";

	$m->redirect("panel_view.mhtml?panel_id=$panel_id&msg=$msg");

</%init>


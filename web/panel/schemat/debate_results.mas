		@keys = sort {$panels{$b}{"bracket"} <=> $panels{$a}{"bracket"}} @keys;
		@keys = sort {$panels{$b}{"bye"} <=> $panels{$a}{"bye"}} @keys;

		foreach my $key (@keys) {

			my %used;

			foreach my $judge_id (@{$panels{$key}{"judges"}}) {

				next if $used{$judge_id}++;

</%perl>
				<tr class="smallish">

					<td>
						<% $panels{$key}{"letter"} %>
					</td>

					<td class="centeralign">

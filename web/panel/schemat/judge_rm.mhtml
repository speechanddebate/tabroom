<%args>
	$tourn
	$person
	$tourn_settings
	$dbh
	$fine     => undef
	$judge_id => undef
	$panel_id => undef
	$pre      => undef
	$return   => undef
	$rm_chair => undef
</%args>
<%init>

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;
	my $now = DateTime->now(time_zone => $tz);

	my $panel = Tab::Panel->retrieve($panel_id);
	my $judge = Tab::Judge->retrieve($judge_id);

	my $round = $panel->round;
	my $event = $round->event;

	my @ballots = Tab::Ballot->search(
		panel => $panel->id,
		judge => $judge->id
	);

	if ($rm_chair) {

		$m->comp("chair_switch.mhtml",
			tourn          => $tourn,
			tourn_settings => $tourn_settings,
			person         => $person,
			judge_id       => $judge_id,
			panel_id       => $panel_id,
			chair          => "",
			return         => 'yasplz'
		);
	}

	$m->comp(
		"/funclib/judge_rm.mas",
		panel => $panel,
		judge => $judge
	);

    if ($event->type eq "congress") {

        if ($event->setting("po_contest")) {

            Tab::Panel->set_sql( po_section => "
                select panel.*
                    from panel, round
                where round.event = ?
                    and round.name = ?
                    and round.id = panel.round
                    and panel.letter = ?
            ");

            my $po_panel = Tab::Panel->search_po_section(
                $event->setting("po_contest"),
                $round->name,
                $panel->letter
            )->first;

            if ($po_panel) {
                $m->comp(
                    "/funclib/judge_rm.mas",
                    panel => $po_panel,
                    judge => $judge
                );
            }
        }
    }

	if ($fine) {

		my $reason = "JUDGE FINE: Judge ".$judge->first." ".$judge->last;
		$reason .= " did not appear for ".$round->realname." of ".$event->abbr;

		my $fine_amount;

		if ($round->type eq "elim" || $round->type eq "final" || $round->type eq "runoff") {
			$fine_amount = $tourn_settings->{"forfeit_judge_fine_elim"};
		} else {
			$fine_amount = $tourn_settings->{"forfeit_judge_fine"};
		}

		if ($tourn_settings->{"first_forfeit_multiplier"}) {

			if ($tourn_settings->{"nsda_nats"}
				|| $tourn_settings->{"nsda_ms_nats"}
			) {

				Tab::Fine->set_sql( revoke_bond => "
					update fine
					set deleted = 1
					where reason  = 'Judge Bond'
					and school = ?
				");

				Tab::Fine->set_sql( judge_fine => "
					select * from fine
						where reason like 'BOND REVOKED:%'
						and fine.deleted != 1
						and school = ?
				");

				my $fine_id = Tab::Fine->search_judge_fine($judge->school->id)
					if $judge->school;

				unless ($fine_id) {
					$fine_amount = $fine_amount * $tourn_settings->{"first_forfeit_multiplier"};
					$reason =~ s/^JUDGE FINE: //g;
					$reason = "BOND REVOKED: ".$reason;
		            Tab::Fine->sql_revoke_bond->execute($judge->school->id)
						if $judge->school;
				}

			} else {

				Tab::Fine->set_sql( judge_fine => "
					select * from fine
						where reason like 'JUDGE FINE:%'
						and school = ?
				");

				my $fine_id = Tab::Fine->search_judge_fine($judge->school->id)
					if $judge->school;

				unless ($fine_id) {
					$fine_amount = $fine_amount * $tourn_settings->{"first_forfeit_multiplier"};
				}
			}
		}

		my $jp = $judge->person;
		$jp = 0 unless $jp;

		if ($tourn_settings->{"ncfl"}) {

			$reason .= " (".$judge->school->short_name.")" if $judge->school;

		    $fine = Tab::Fine->create({
				tourn     => $tourn->id,
	        	region    => $judge->school->region->id,
				school    => $judge->school->id,
	        	amount    => $fine_amount,
	        	reason    => $reason,
				judge     => $judge,
				person    => $jp,
				levied_at => $now,
				levied_by => $person->id
	    	});

		} else {

		    $fine = Tab::Fine->create({
				tourn     => $tourn->id,
	        	school    => $judge->school,
	        	amount    => $fine_amount,
	        	reason    => $reason,
				judge     => $judge,
				person    => $jp,
				levied_at => $now,
				levied_by => $person->id,
				payment   => 0,
				deleted   => 0
	    	});
		}
	}

	if ($fine && $tourn_settings->{'forfeit_notify_coaches'}) {

		my $subject = "Fine levied for missing judge";

		my $reason = $judge->first." ".$judge->last;
		$reason .=  " failed to appear for ".$round->realname." of ".$event->name;

		my $message;

		if ($judge->school) {

			$message = "<p>".$tourn->name." has issued a fine to your school in the amount of \$".sprintf ("%.2f", $fine->amount)."</p>";
			$message .= "<p>This fine was triggered because:</p>";
			$message .= "<p>".$reason."</p>";

			if ($tourn_settings->{"tmoney_enable"}) {
				$message .= "<p>You can pay this fine at:";
				$message .= "<a href='https://tournament.money/pay/tabroom/".$tourn->id ."/".$judge->school->id."'>";
				$message .= "https://tournament.money/pay/tabroom/".$tourn->id ."/".$judge->school->id;
				$message .= "</a></p>";
			}

			my $contacts = $m->comp("/funclib/contacts.mas",
				school         => $judge->school->id,
				return         => 'yaskween',
				email_contacts => 1,
			);

			my %id = map {$_->{person_id} => $_} @{$contacts};

			if ($judge->person > 0) {
				$id{$judge->person}++;
			}

			my @ids = keys %id;

		} elsif ($judge->person) {

			$message = "<p>".$tourn->name." has issued a fine against your hire payment in the amount of \$".sprintf ("%.2f", $fine->amount)."</p>";
			$message .= "<p>This fine was triggered because:</p>";
			$message .= "<p>".$reason."</p>";

			if ($judge->person > 0) {
				push @ids, $judge->person;
			}
		}

		if ($tourn_settings->{"judge_fine_message"}) {
			$message .= $tourn_settings->{"judge_fine_message"};
		} else {
			$message .= "Please contact the tournament officials if you believe this to be in error.";
		}

		my $numberwang = substr($now->epoch, -6, 6);
		my $from_string = $tourn->name." <".$tourn->webname.'_'.$numberwang.'@www.tabroom.com>';

		Tab::debuglog("Sending here via the notify interface!");

		$m->comp("/funclib/send_notify.mas",
			from    => $from_string,
			tourn   => $tourn,
			ids     => \@ids,
			subject => $subject,
			html    => $message
		);
	}

	my $description = "Removed judge ".$judge->first." ".$judge->last." from section ".$panel->letter." ".$round->realname." of ".$event->abbr;
	$description .= "and fined them ".$fine->amount if $fine;

	$m->comp("/funclib/log.mas",
		tourn       => $tourn->id,
		type        => "judge",
		judge       => $judge_id,
		fine        => $fine,
		description => $description,
		panel       => $panel->id,
		event       => $event->id,
		category    => $event->category->id,
		person      => $person->id
	);

	return if $pre eq "shiiiiiny";

	my $msg = "Judge ".$judge->first." ".$judge->last." has been removed from this panel";
	$msg .= " and fined \$".$fine->amount if $fine;

	if ($return) {
		return $msg;
	}

	if ( $pre eq "push" ) {
		$m->redirect("judge_push.mhtml?panel_id=".$panel_id."&msg=$msg");
	}

	$m->redirect("show.mhtml?round_id=".$round->id."&msg=$msg") if $pre;
	$m->redirect("panel_view.mhtml?panel_id=$panel_id&msg=$msg");

</%init>

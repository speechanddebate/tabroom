<%args>
	$round
</%args>
<%init>

	my @panels = $round->panels;
	my $switch;

	my $event = $round->event;
	my $category = $event->category;

	my $ncfl++ if $event->tourn->setting("ncfl");
	my $regions++ if $event->tourn->setting("regions");
	my $no_judge_codes++ if $category->setting("no_codes");


	my @rooms = $m->comp(
		"/funclib/clean_rooms.mas", 
		panel => $panels[0]
	) 
	if @panels;

	my @judges = $m->comp(
		"/funclib/clean_judges.mas", 
		panel => $panels[0]
	) if @panels;

    my %rating_by_judge = ();

	my $coach_ratings++ if $category->setting('coach_ratings');

    if ($coach_ratings) { 

        my @ratings = $m->comp("/funclib/category_ratings.mas", event => $event);

        my @tiers = $category->rating_tiers;
        my %tier_names = ();

        foreach my $tier (@tiers) {
            $tier_names{$tier->id} = $tier->name;
        }

        foreach my $rating (@ratings) {
            $rating_by_judge{$rating->judge->id} = $tier_names{$rating->rating_tier->id} 
				if $rating 
				&& $rating->rating_tier;
        }

    }

	@judges = sort {$a->code cmp $b->code} @judges;
    @judges = sort {$b->score cmp $a->score} @judges;

    @judges = 
		sort {$rating_by_judge{$a->id} cmp $rating_by_judge{$b->id}} @judges 
		if $coach_ratings;

    @judges = 
		sort {length($rating_by_judge{$b->id}) <=> length($rating_by_judge{$a->id})} @judges 
		if $coach_ratings;

    @judges = sort {$a->standby cmp $b->standby} @judges;

</%init>

	<div class="full nospace martopmore">

		<span class="half nospace">
			<h4>Pre-set <% $round->realname %></h4>
		</span>

		<span class="half nospace rightalign">
			<a
				class = "buttonwhite bluetext smallish"
				title = "Upload Round Backup"
				href="upload_backup.mhtml?round_id=<% $round->id %>"
			>
				Restore from Backup
			</a>
		</span>

	</div>

	<table>

		<tr class="yellowrow">

			<th class="smallish">
			</th>

			<th class="smallish">
			</th>

			<th class="smallish">
				Room
			</th>

			<th class="smallish">
				Judges
			</th>

		</tr>

%		foreach my $panel (@panels) { 

			<tr class="row">

				<td class="centeralign">

%					my $warn = "You are about to delete this section. ";
%					$warn .= "Granted, it has no entries, but are you sure?";

					<a 
						class="buttonwhite redtext thin fa fa-lg fa-trash" 
						<& "/funclib/confirm.mas", warn => $warn &>  
						href="rm_panel.mhtml?panel_id=<% $panel->id %>"
					>
					</a>
				</td>

				<td>
					<% $panel->letter %>
				</td>

				<td>

					<form action="panel_room_save.mhtml">

					<input 
						type  = "hidden"
						name  = "panel_id"
						value = "<% $panel->id %>"
					>

					<input 
						type  = "hidden"
						name  = "pre"
						value = "1"
					>

					<select 
						name     = "room_id"
						onchange = 'this.form.submit()'
						class    = "fixedmed"
					>

%						if ($panel->room) { 
							<option value="<% $panel->room->id %>" 
								selected
							> <% $panel->room->name %> </option>
%						}

%						foreach my $room (@rooms) { 
							<option value="<% $room->id %>" 
								<% ($panel->room && $room->id == $panel->room->id) ? "selected" : "" %>
							> <% $room->name %> </option>
%						}

					</select>
					</form>
				</td>

				<td class="smallish">

%					foreach my $judge ($m->comp('/funclib/panel_judges.mas', panel => $panel)) { 

						<div class="full hover nospace">

							<span class="fifth nowrap padno">
								<% ($ncfl || $regions ) 
									&& $judge->school 
									&& $judge->school->region 
									? $judge->school->region->code 
										: ""
									%>
								<% $judge->code %> 
							</span>

%							if ($ncfl) { 

								<span class="threetenths nowrap padno">
									<% $ncfl || $regions ? $judge->school->region->name : "" %>
								</span>

								<span class="twofifths nowrap padno">
									<% $rating_by_judge{$judge->id} %> 
									<% $judge->first." ".$judge->last %> /
									<% $judge->school ? $judge->school->short_name : "Hired" %>
								</span>

%							} else { 
								<span class="threefifths nowrap padno">
									<% $rating_by_judge{$judge->id} %> 
									<% $judge->first." ".$judge->last %> / 
									<% $judge->school ? $judge->school->short_name : "Hired" %>
								</span>
%							}

							<span class="eighth padno marless rightalign">
								<a class="redtext buttonwhite centeralign fa fa-trash fa-sm" 
									href="judge_rm.mhtml?judge_id=<% $judge->id %>&panel_id=<% $panel->id %>&pre=yes">
								</a>
							</span>
						</div>
%					}

					<form action="panel_judges.mhtml">

					<input 
						type  = "hidden"
						name  = "panel_id"
						value = "<% $panel->id %>">

					<input type="hidden" name="pre" value="1">

					<div class="centeralign padno marno">

					<select 
						name     = "judge_id"
						onchange = 'this.form.submit();'
						class    = "fixedbig"
					>

						<option value="">Add another judge:</option>

						<optgroup 
							class = "key"
							label = "&nbsp;Rds  Own  <% ($coach_ratings) ? "Rtng" : "" %>
							<% ($ncfl) ? "Dio" : "" %> &nbsp;&nbsp;Judge"
						>
						</optgroup>
<%perl>

						foreach my $judge (@judges) { 

							my $school = $judge->school->code if $judge->school;
							$school = "HIRE" unless $school;
							foreach ( length($school) .. 4) { 
								$school .= "&nbsp;";
							}

							my $rating = $rating_by_judge{$judge->id};
							foreach ( length($rating) .. 4) { 
								$rating .= "&nbsp;";
							}

                            my $code;
                            unless ($no_judge_codes) {
                                $code = $judge->code;
                                foreach ( length($code) .. 5) {
                                    $code .= "&nbsp;";
                                }
                            }

                            my $regcode;
                            if ($ncfl || $regions) {
                                $regcode = $judge->regcode;
                                foreach ( length($regcode) .. 4) {
                                    $regcode .= "&nbsp;";
                                }
                            }
</%perl>



                            <option value="<%$judge->id %>">
 
                                <% $judge->score ? $judge->score : 0 %>
                                &nbsp;

                                <% $rating %>
                                <% $regcode %>
%                               my $school_name = substr(Tab::short_name($judge->schoolname), 0, 10);
%                               $school_name =~ s/\s+$//;

                                <% $school_name %>

%                               unless ($ncfl) { 
%                                   foreach (length($school_name) .. 11 ) { 
%                                       $m->print("&nbsp;");
%                                   }
%                               }

                                <% $code %>
                                <% $judge->first." ".$judge->last %>
							</option>
%						}
					</select>
					</form>
					</div>
				</td>


			</tr>
%		}

	</table>

	<form 
		action = "create_presets.mhtml"
		method = "post"
	>

	<input 
		type  = "hidden"
		name  = "round_id"
		value = "<% $round->id %>"
	>

	<div class="row martopmore">

		<span class="third">
			Create additional sections:
		</span>

		<span class="third">
			<input 
				type = "number"
				name = "panels"
				min  = "0"
				max  = "99"
				size = "8"
			>
		</span>

		<span class="third">
			<input 
				type  = "submit"
				class = "thin"
				value = "Create"
			>
		</span>

	</div>

	</form>

	<p class="explain centeralign biggish">
		Use this screen to pre-assign judges and rooms to elim rounds. You do not need
		to do anything here to section a round. 
	</p>

<%perl>

	my $last_round = $round->name - 1;

	my $previous_round = Tab::Round->search( 
		event => $event->id,
		name  => $last_round
	)->first;

	if ($previous_round) { 

		my @actives = $m->comp(
			"/funclib/round_schools.mas", 
			round => $previous_round
		) unless $ncfl;

		@actives = $m->comp(
			"/funclib/round_regions.mas",
			round => $previous_round
		) if $ncfl;

		next unless @actives;

</%perl>

		<br />
		<br />

		<h4>
			<% $ncfl ? "Dioceses" : "Institutions" %> 
			competing in <% $previous_round->realname %>
		</h4>

<%perl>

		my $codes++ 
			if $event->tourn->setting("school_codes") 
			&& $event->tourn->setting("school_codes") ne "shortname";

		foreach my $active (@actives) { 

</%perl>
			<span class="fifth top nowrap padno padbottom smallish" title="<% $active->name %>">

%				if ($codes) { 

					<span class="twothird nowrap">
						<% $active->name %>
					</span>
					
					<span class="third nowrap divided">
						<% $regions && $active && $active->region ? $active->region->code : $active->code %>
					</span>
%				} else { 
					<% $active->name %>
%				}

			</span>
%		}

%	}





<%args>
	$tourn
	$person
	$aq_id
</%args>
<%init>

	$m->clear_buffer();
	$r->content_type('application/json');

	unless ($aq_id) {
		$m->print('{ "error": true, "message": "No Autoqueue ID sent"}');
		$m->abort();
	}

	my $aq = Tab::Autoqueue->retrieve($aq_id);

	unless ($aq > 0) {
		$m->print('{ "error": \1, "message": "No autoqueue task found for ID '.$aq_id.'"}');
		$m->abort();
	}

	my $msg = "Scheduled ".$aq->tag." cancelled";

    my %response = (
		error   => \0,
		message => $msg
    );

	$m->comp("/funclib/log.mas",
		type        => 'tabbing',
		round       => $aq->round->id,
		tourn       => $tourn->id,
		person      => $person->id,
		description => $msg
	);

	if ($aq) {
		$aq->delete;
	}

    $m->print(JSON::encode_json(\%response));
	$m->abort();

</%init>

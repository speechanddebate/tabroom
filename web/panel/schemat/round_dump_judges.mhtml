<%args>
	$tourn
	$round_id => undef
	$certain => undef
	$account
</%args>
<%init>

	my $round = Tab::Round->retrieve($round_id);

	my $text = $account->first." ".$account->last." (".$account->email.") has dumped the judges out of round ".$round->realname." of ".$round->event->abbr;

	Tab::TournChange->create({ 
		type => 'tabbing',
		event => $round->event->id,
		tourn => $round->event->tourn->id,
		account => $account->id,
		text => $text
	}); 

	$m->comp("/funclib/round_clear_judges.mas", round => $round);

	my $msg = "Judges have been dumped";

	$m->redirect("/panel/schemat/show.mhtml?round_id=$round_id&msg=$msg");

</%init>

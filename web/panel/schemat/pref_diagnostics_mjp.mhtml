<%args>
	$event_id
</%args>
<%init>

	my $event = Tab::Event->retrieve( $event_id );
	my @rounds = Tab::Round->search( event => $event_id );

	#Load avg pref for each judge
	my %judge_pref;

	#Pull all judges in the category
	my @judges = Tab::Judge->search( category => $event->category);

	my @ecj = $m->comp("/funclib/event_strike_judges.mas", event => $event);
	my %event_conflict = map {$_->judge->id => 1} @ecj;

	my @unconflicted_judges;

	#pull ratings
	foreach my $judge (@judges) {
		next if $event_conflict{$judge->id};
		$judge_pref{$judge->id} = $m->comp(
			"/funclib/judge_avg_rating.mas",
			judge     => $judge,
			avg_field => "percentile"
		);
		push @unconflicted_judges, $judge;
	}

	@judges = @unconflicted_judges;

	my %pref_tot;
	my $pref_count;
	my %off_tot;
	my $off_count;

</%init>

<div class="blankfull">

	<div>

		<span class="twothird">
			<h2>Ordinal MJP Diagnostics for <% $event->name %></h2>
		</span>

		<span class="third right rightalign">
			<a class="dkblue centeralign full" href="/panel/schemat/show.mhtml?event_id=<% $event->id %>">
				Back to <% $event->name %>
			</a>
		</span>
	</div>

	<h5>How am I doing, and how many people are going to yell at me?</h5>

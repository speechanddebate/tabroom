<%args>
	$tourn
	$perms
	$tourn_settings
	$person
	$rpool_id => undef
	$site_id  => undef
</%args>
<%init>

	my $rpool = Tab::RPool->retrieve($rpool_id);

	unless ($rpool) { 
		my @rpools = $tourn->rpools;
		$rpool = shift @rpools if @rpools;
	}

	my $site = Tab::Site->retrieve($site_id);
	my @rpool_sites = $m->comp("/funclib/rpool_sites.mas", rpool => $rpool) if $rpool;;
	my @all_sites = $tourn->sites;

	$site = $rpool_sites[0] 
		unless $site 
		|| (scalar @rpool_sites < 1);

	$site = $all_sites[0] 
		unless $site 
		|| (scalar @all_sites < 1);

	$m->abort unless $site;

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my %rating = ();

	my %already = $m->comp(
		"/funclib/tourn_rpool_rooms.mas", 
		tourn => $tourn
	);

</%init>

	<& "menu.mas",
		tourn          => $tourn,
		tourn_settings => $tourn_settings,
		perms          => $perms,
		site           => $site,
		whoami         => "rpool",
		rpool          => $rpool,
	&>

	<div class="main">

%		unless ($site) { 

			<h2>Choose a site at right</h2>
	
%		} elsif (not defined $rpool)  { 

			<h2><% $site->name %></h2>
			
			<& tabbar.mas,
				site   => $site,
				whoami => "rpools"
			&>

			<h4>Choose a room pool at right</h4>

%		} else {

			<h2><% $site->name %></h2>
			
			<& tabbar.mas, 
				site   => $site,
				whoami => "rpools"
			&>

			<form action="rpool.mhtml" method="post">

			<input 
				type  = "hidden"
				name  = "rpool_id"
				value = "<% $rpool->id %>"
			>

			<input 
				type  = "hidden"
				name  = "category_id"
				value = "<% $site->id %>"
			>

			<div class="even full nospace padbottom">

				<span class="half nospace">
					<h4>Rooms in <% $rpool->name %></h4>
				</span>

%				unless (scalar (@all_sites) == 1) { 

					<span class="half rightalign nospace">

						<span class="half nospace">
							Pull from
						</span>

						<span class="half nospace">

							<select 
								name     = "site_id"
								onchange = 'this.form.submit()'
								class    = "fixedsmall chosen"
							>

%								foreach my $other_site (@all_sites) { 
									<option 
										value="<% $other_site->id %>" 
										<% $other_site->id == $site->id ? "selected" : "" %>
									> <% $other_site->name %> </option>
%								} 
							</select>

						</span>

					</span>
%				} 

				</form>

				<p class="centeralign marno semibold redtext">
					Click rooms to move into/out of pool
				</p>


			</div>


<%perl>

			my @rpool_rooms = $m->comp(
				"/funclib/rpool_rooms.mas", 
				rpool    => $rpool,
				inactive => 1
			);

			my %category_count = ();
			my %used = ();

</%perl>


			<span class = "pagehalf padtop" >

				<span class="threequarters nospace">
					<h4>
						<span 
							class="inline" 
							id="incount"
						>
							<% scalar @rpool_rooms %>
						</span>
						in pool
					</h4>
				</span>

				<span 
					id = "insort_buttonarea"
					class="quarter rightalign nospace"
				>
					<a 
						class = "fa-sm fa fa-file-pdf-o redtext buttonwhite notfirst printbutton"
						href  = "print_rpool.mhtml?rpool_id=<% $rpool->id %>"
					>
					</a>
				</span>


				<& "/funclib/tablesorter.mas", table => "insort", noprint => 1 &>

				<table id="insort" >

					<thead>

						<tr class="yellowrow smallish">

							<th>
								Room
							</th>

							<th>
								Qual
							</th>

							<th>
								Cap
							</th>
	
							<th>
								Notes
							</th>

							<th>
								Other Pools
							</th>

						</tr>

					</thead>

					<tbody id="in">
<%perl>
					foreach my $room (@rpool_rooms) { 

						my $hidden = "lirdrow" if $room->inactive;

						$used{$room->id}++;
</%perl>

						<tr
							class   = "room <% $hidden %> smallish hover"
							id      = "<% $room->id %>"
							onClick = "togglePool(this);"
						>

							<td>
								<span class="nospace limit">
									<% $room->name %>
								</span>
							</td>

							<td>
								<% $room->quality %>
							</td>
	
							<td>
								<% $room->capacity %>
							</td>

							<td>
								<% $room->notes %>
							</td>

							<td>
%								foreach my $rpool_id (@{$already{$room->id}{"pools"}}) { 
%									next if $rpool_id == $rpool->id;
									<div class="full nowrap padless marno smaller">
										<% $already{"name"}{$rpool_id} %>
									</div>
%								}
							</td>

						</tr>
%					}

					</tbody>

				</table>

			</span>

			<span class = "pagehalf padtop">

<%perl>
			if ($site) { 

				my @rooms = $site->rooms(deleted => 0);

</%perl>

				<span class="threequarters nospace">
					<h4>
						<span 
							class = "inline"
							id    = "outcount"
						> <% scalar @rooms %> </span>
						available:
					</h4>
				</span>

				<span 
					id = "outsort_buttonarea"
					class="quarter rightalign nospace"
				>
				</span>

				<& "/funclib/tablesorter.mas", table => "outsort" &>

				<table id="outsort">

					<thead>

						<tr class="yellowrow smallish">

							<th>
								Room
							</th>

							<th>
								Qual
							</th>

							<th>
								Cap
							</th>
	
							<th>
								Notes
							</th>

							<th>
								Other Pools
							</th>

						</tr>

					</thead>

					<tbody id="out">

<%perl>
					foreach my $room (@rooms) { 

						my $hidden = "lirdrow" if $room->inactive;

						next if $used{$room->id};

</%perl>

						<tr
							class   = "room <% $hidden %> smallish hover"
							id      = "<% $room->id %>"
							onClick = "togglePool(this);"
						>

							<td>
								<span class="nospace limit">
								<% $room->name %>
								</span>
							</td>

							<td>
								<% $room->quality %>
							</td>
	
							<td>
								<% $room->capacity %>
							</td>

							<td>
								<% $room->notes %>
							</td>

							<td>
%								foreach my $rpool_id (@{$already{$room->id}{"pools"}}) { 
%									next if $rpool_id == $rpool->id;
									<div class="full nowrap padless marno smaller">
										<% $already{"name"}{$rpool_id} %>
									</div>
%								}
							</td>

						</tr>

%					}

					</tbody>

				</table>
%			}

			</span>
%		}

	</div>


		<script type="text/javascript">

			$(document).ready( function(){
				countPools();
			});

			function countPools() { 

				var countIn = $("#in .room:visible").length;
				var countOut = $("#out .room:visible").length;

				$("#outcount").text(countOut);
				$("#incount").text(countIn);

				$("#insort").trigger("applyWidgets");
				$("#insort").trigger("update");
				$("#insort").trigger('resort');

				$("#outsort").trigger("applyWidgets");
				$("#outsort").trigger("update");
				$("#outsort").trigger('resort');

			}

			function togglePool(roomSpan) { 

				var parentID = $(roomSpan).closest("tbody").attr("id");

				var roomID = $(roomSpan).attr("id");

				var postValue, newParent;

				if (parentID === "in") { 

					postValue = 0;
					newParent = "out";

				} else { 

					postValue = 1;
					newParent = "in";

				}

				$.ajax({
					url: 'rpool_room_switch.mhtml',
					type: 'POST',
					data: { 
						room_id  : roomID,
						value    : postValue,
						rpool_id : "<% $rpool > 0  ? $rpool->id : "" %>"

					}, success: function(data) { 

						if (data.error) { 
							
							alertify.error(data.message);

						} else { 

							alertify.set('notifier','delay', 2);
							alertify.notify(data.message, "custom");
							alertify.set('notifier','delay', 5);

							$("#"+roomID).prependTo("#"+newParent)

						}

						countPools();
					}

				});
			}

		</script>

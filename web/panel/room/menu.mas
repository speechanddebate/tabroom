					action = "report.mhtml"
					method = "post"
				>

					<input
						type  = "hidden"
						name  = "timeslot_id"
						value = "<% $timeslot %>"
					>

					<div class="even centeralign">

						<select
							name     = "room_id"
							class    = "fixedmed "
							onchange = 'this.form.submit()'
						>
							<option value=""></option>
<%perl>


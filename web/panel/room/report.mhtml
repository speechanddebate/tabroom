<%args>
	$room_id     => undef
	$timeslot_id => undef
	$tourn
	$tourn_settings
	$perms
</%args>
<%init>

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my $room = Tab::Room->retrieve($room_id) if $room_id;

	my @panels;
	my @in_rpools;
	my @strikes;

	if ($room) { 

		@panels = $m->comp(
			"/funclib/room_panels.mas", 
			room  => $room,
			tourn => $tourn
		);

		@in_rpools = $m->comp(
			"/funclib/room_rpools.mas", 
			room  => $room,
			tourn => $tourn
		);

		@strikes = Tab::RoomStrike->search( 
			room  => $room->id,
			tourn => $tourn->id
		);

	}

	my $timeslot = Tab::Timeslot->retrieve($timeslot_id) if $timeslot_id;

	my @rpools = sort {$a->name cmp $b->name} $tourn->rpools;

	my %in_pool = map {$_->id => 1} @in_rpools;

</%init>


	<& 
		"menu.mas",
		tourn          => $tourn,
		tourn_settings => $tourn_settings,
		perms          => $perms,
		timeslot       => $timeslot,
		whoami         => "report",
		room_id        => $room_id
	&>

	<div class="main">

		<h2>Rooms</h2>

		<& tabbar.mas, 
			tourn    => $tourn,
			timeslot => $timeslot,
			whoami   => "report"
		&>

	


%		if ($room) { 


			<h4>Room <% $room->name %></h4>

			<div class="yellowrow">
				<span class="half">
					Site: <% $room->site->name %>
				</span>

				<span class="half nospace">

%					if ($room->inactive) { 

						Room Inactive

%					} else { 

						<span class="third marno">
							Quality: <% $room->quality %>
						</span>

						<span class="third marno">
							Capacity: <% $room->capacity %>
						</span>

						<span class="third marno">
							ADA: <% $room->ada ? "Yes" : "No" %>
						</span>

%					}

				</span>
			</div>

			<h4>Rounds</h4>

%			foreach my $panel (@panels) { 
			
				<div class="row">

					<span class="quarter">
						<a 
							class="white padleft" 
							href="/panel/schemat/show.mhtml?round_id=<% $panel->round->id %>"
						>
							<% $panel->round->realname %> 
							<% $panel->round->flighted > 1 ? "Flt ".$panel->flight : "" %>
						</a>
					</span>

					<span class="quarter">
						<a 
							class="white padleft" 
							href="/panel/schemat/panel_view.mhtml?panel_id=<% $panel->id %>"
						>
							<% $panel->round->event->abbr %> Sec <% $panel->letter %>
						</a>
					</span>

					<span class="half nospace">

						<span class="third">
							<% $panel->round->timeslot->name %>
						</span>

						<span class="twothirds">
							<% Tab::niceshortdayt($panel->round->timeslot->start) %> - 
							<% Tab::niceshortdayt($panel->round->timeslot->end) %>
						</span>

					</span>


				</div>

%			}

%			if (@rpools) { 

				<h4>Pools</h4>

%				foreach my $rpool (@rpools) { 

%					my @rounds = $rpool->rounds;
				
					<div class="row">

						<span class="sixth">

                            <label class="switch">
                                <input 
                                    type          = "checkbox"
                                    target_id     = "<% $rpool->id %>"
									setting_name  = "<% $room->id %>"
									property_name = "flip"
                                    onChange      = "postSwitch( this, 'rpool_room_switch.mhtml');"
                                    <% $in_pool{$rpool->id} 
                                        ? 'checked="checked"' 
                                        : ""
                                    %>
                                >
                                <div class="slider"></div>
                            </label>
						</span>

						<span class="sixth">
							<a 
								class="white padleft" 
								href="/panel/room/pool.mhtml?rpool_id=<% $rpool->id %>"
							>
								<% $rpool->name %> 
							</a>
						</span>

						<span class="half smallish">

%							foreach my $round (@rounds) { 
%								next unless $round && $round->timeslot;
%								my $start = $round->timeslot->start->set_time_zone($tz);
%								my $end = $round->timeslot->end->set_time_zone($tz);
		
								<span class="third">
										<% $round->event->abbr %> <% $round->realname %>
								</span>
								<span class="twothird">
									<% Tab::shorttime($round->timeslot->start) %> - 
									<% Tab::shorttime($round->timeslot->end) %>
								</span>
%							}
						</span>


					</div>

%				}

%			}

%			}

	</div>



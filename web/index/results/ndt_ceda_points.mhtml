			$entry{$entry_id}{"hybrid"}++;
			$entry{$entry_id}{"second_chapter"} = $chapter2_id;
			$school_data{$chapter2_id}{"name"} = $chapter2_name;
			$school_data{$chapter2_id}{"state"} = $chapter2_state;
		}

		$highest_id = $entry_id if $entry_id > $highest_id;
	}


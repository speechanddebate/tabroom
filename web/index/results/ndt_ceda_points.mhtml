        if ( $result->tag eq "ndt_tot" ) { $entry{$result->entry}{'ndt_tot'} = $result->value; }
	if ( $result->tag eq "ndt_tot" && $result->level eq "open") { $entry{$result->entry}{'ndt_varsity'} = $result->value; }

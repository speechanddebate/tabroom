<%args>
	$tourn_id   => undef
	$country    => undef
	$state      => undef
	$circuit_id => undef
	$year       => undef
	$search     => undef
</%args>
<%init>

	$country =~ s/[\W_]//g;
	$state =~ s/[\W_]//g;

	$country = substr($country, 0, 2);
	$state = substr($state, 0, 2);

	my $circuit = Tab::Circuit->retrieve($circuit_id) if $circuit_id;
	my $now = DateTime->now;

	my $fromstring;
	my $time_limit;

	unless ($year) {
		my $from = $now->clone();
		$from->set(day => 1);
		$from->subtract(months => 1);
		$fromstring = DateTime::Format::MySQL->format_datetime($from);
		$time_limit = ' and tourn.start < NOW() and tourn.start > "'.$fromstring.'"';
	} else {
		$fromstring = int($year)."-07-01 00:00:00";
		my $tostring = int($year+1)."-07-01 00:00:00";
		$time_limit = ' and tourn.start < "'.$tostring.'"';
		$time_limit .= ' and tourn.start > "'.$fromstring.'"';
	}

	my @published;
	my $limit;

	if ($state) {
		$state =~ s/[\W_]//g;
		$state = substr($state, 0, 2);

		if ($state && $state ne "US") {
			$limit .= " and tourn.state = '".$state."'";
		}
	}

	if ($country) {
		$country =~ s/[\W_]//g;
		$country = substr($country, 0, 2);

		if ($country) {
			$limit .= " and tourn.country = '".$country."'";
		}
	}

	my $search_limit;

	if ($search) {

		my $search_name = $search;

		if ($search_name) {
			$search_name =~ s/[^\w\s]//g;
		}

		$search_name = '%'.$search_name.'%';
		$search_limit = 'and tourn.name like \''.$search_name.'\'';
	}

	my $circuit_limit;

	if ($circuit_id) {
		$circuit_limit = "and exists ( select tc.id from tourn_circuit tc where tc.tourn = tourn.id and tc.circuit = ".int($circuit_id)." ) ";
	}

	my $dbh = Tab::DBI->db_Main();

	my $sth = $dbh->prepare("
		select
			tourn.*
		from tourn
			where tourn.start < NOW()
			and tourn.hidden != 1
			$search_limit
			$time_limit
			$limit
			$circuit_limit

			and (exists (
					select event.id
					from event, round
					where event.tourn = tourn.id
					and event.id = round.event
					and round.post_primary > 2
				) OR exists (
					select result_set.id
					from result_set
					where result_set.tourn = tourn.id
					and result_set.published = 1
				)
			)

		order by tourn.start DESC
		limit 256
	");

	$sth->execute();
	my $results = $sth->fetchall_hash();

</%init>

	<& menu.mas,
		circuit_id => $circuit_id,
		year       => $year,
		state      => $state,
		search     => $search,
		country    => $country
	&>

	<div class="main">

		<div class="flexrow full">
			<span class="fourfifths nospace">
				<h2>Tournament Results</h2>
			</span>

			<span
				class = "fifth rightalign"
				id    = "results_buttonarea"
			>
			</span>
		</div>

		<& "/funclib/tablesorter.mas", table => "results" &>

		<table id="results">

			<thead>
				<tr class="yellowrow">
					<th class="smaller">
						Dates
					</th>

					<th class="smaller">
						Tournament
					</th>

					<th class="smaller">
						City
					</th>

					<th class="smaller">
						Locale
					</th>

					<th class="smaller nosort">
						Results
					</th>
				</tr>
			</thead>

			<tbody>

%				foreach my $tourn (@{$results}) {

					<tr class="row">

						<td
							class     = "smallish"
							data-text = "<% $tourn->{start} %>"
						>
							<& "/funclib/showrange.mas",
								start_string => $tourn->{start},
								end_string   => $tourn->{end},
								tz           => $tourn->{tz},
							&>
						</td>

						<td class="smallish">
							<a
								class = "white full"
								href  = "/index/tourn/index.mhtml?tourn_id=<% $tourn->{id} %>"
							>
								<% $tourn->{name} %>
							</a>
						</td>

						<td class="smallish nospace padleft">
							<% $tourn->{city} ? $tourn->{city} : "" %>
						</td>

						<td class="smallish centeralign padleft">
							<a
								class="plain full marno"
								href="index.mhtml?state=<% $tourn->{state}
									? $tourn->{state}
									: ""
								%>&country=<% $tourn->{country} ? $tourn->{country} : "" %>"
							>
								<% $tourn->{state}
									? $tourn->{state}."/"
									: ""
								%><% $tourn->{country}
									? $tourn->{country}
									: ""
								%>
							</a>
						</td>

						<td class="centeralign padless marno">
							<a
								class="buttonwhite bluetext normal invert fa fa-file-text-o"
								href="/index/tourn/results/index.mhtml?tourn_id=<% $tourn->{id} %>"
							>
							</a>
						</td>
					</tr>
%				}
			</tbody>
		</table>
	</div>

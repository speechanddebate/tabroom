							<% ($entry_hash{$key}{'elim_wins'} + $entry_hash{$key}{'elim_losses'}) > 0 ?
								sprintf("%.1f\n",
								100 * $entry_hash{$key}{'elim_wins'} /
									($entry_hash{$key}{'elim_wins'} + $entry_hash{$key}{'elim_losses'})) : "0" %>%
						</td>


			<tbody>

<%perl>

 				foreach my $key (
					sort {$entry_hash{$b}->{'total_pts'} <=> $entry_hash{$a}->{'total_pts'}}
					keys(%entry_hash)
				) {

					next unless ( $entry_hash{$key}{'name'} ne ''
						and $entry_hash{$key}{'rounds'} > $min_rds );

					last if $ctr++ >= $show_top;
</%perl>


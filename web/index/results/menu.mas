<%args>
	$circuit_id => 6
	$state      => undef
	$country    => undef
	$whoami     => undef
	$year       => undef
	$search     => undef
	$level      => "open"
	$min_rds    => 5
	$send_to    => undef
</%args>
<%init>

	my $checked;
	if ($whoami eq "speaker_rank") { $send_to = "speaker_rankings_by_circuit"; }
	if ($whoami eq "team_success") { $send_to = "debate_stats2"; }
	if ($circuit_id == 103) { $send_to = "debate_stats_ada"; }

	my $this_school_year = Tab::school_year;
	my $this_year = $this_school_year->year;

	my $dbh = Tab::DBI->db_Main();

	my $sth = $dbh->prepare("
		select
			circuit.id, circuit.abbr, circuit.name,
			qualifiers.id qualifiers
		from circuit
			left join circuit_setting qualifiers
				on qualifiers.circuit = circuit.id
				and qualifiers.tag = 'qualifiers'
		where 1=1
			and circuit.active = 1
			order by circuit.abbr, circuit.name
	");

	$sth->execute();

	my $circuits = $sth->fetchall_hash();
	my $this_circuit;

	foreach my $circuit (@{$circuits}) {
		if ($circuit->{id} == $circuit_id) {
			$this_circuit = $circuit;
		}
	}

</%init>

	<div class="menu">

%		if ($whoami eq "speaker_rank" or $whoami eq "team_success") {

			<div class="sidenote">

				<h4>Event selector:</h4>

				<form action="<% $send_to %>" method="post">

				<input
					type    = "hidden"
					name    = "year"
					value   = <% $year %>
					visible = "false"
				>

				<input
					type  = "hidden"
					name  = "circuit_id"
					value = <% $circuit_id %>
				>

				<div class="full row">

					<label for="open">
						<span class="third hover nospace">
							<input
								type  = "radio"
								name  = "level"
								id    = "open"
								value = "Open"
								<% $level eq "Open" ? 'checked="checked"' : "" %>
							>Open
						</span>
					</label>

					<label for="jv">
						<span class="third hover nospace">
							<input
								type  = "radio"
								name  = "level"
								id    = "jv"
								value = "JV"
								<% $level eq "JV" ? 'checked="checked"' : "" %>
							>JV
						</span>
					</label>

					<label for="novice">
						<span class="third hover nospace">
							<input
								type="radio"
								name="level"
								id="novice"
								value="Novice"
								<% $level eq "Novice" ? 'checked="checked"' : "" %>
							>Novice
						</span>
					</label>

				</div>

				<div class="row">

					<span class="half">
						Min rds: <input
							type  = "number"
							class = "smaller"
							name  = "min_rds"
							min   = 0
							max   = 999
							value = "<% $min_rds %>"
						>
					</span>
					<span class="half">
						Show top: <input
							type  = "number"
							class = "smaller"
							name  = "show_top"
							min   = 0
							max   = 9999
							value = "50"
						>
					</span>
				</div>

				<div class="liblrow rightalign nospace">
					<span class='half centeralign'>
						<input
							type  = "submit"
							value = "Search"
							class = "thin nospace"
						>
					</span>
				</div>
				</form>

			</div>
%		}

		<div class="sidenote">
			<h4>Results search</h4>

			<form
				action = "<% $send_to ? $send_to.".mhtml" : "index.mhtml" %>"
				method = "post"
			>

			<div class="row centeralign padvertless marno padleft padright">
				<input
					type        = "text"
					name        = "search"
					value       = "<% $search %>"
					placeholder = "Name of Tourament"
				>
			</div>

			<div class="row  centeralign padvertless marno padleft padright">
				<select name="state">
					<option value="">All States</option>
					<& "/funclib/state_select.mas", state => $state &>
				</select>
			</div>

			<div class="row  centeralign padvertless  marno padleft padright">
				<select name="country">
					<option value="">All Countries</option>
					<& "/funclib/country_select.mas", country => $country &>
				</select>
			</div>

			<div class="row  centeralign padvertless  marno padleft padright">
				<select name="circuit_id" >
					<option value="">All Circuits</option>
%					foreach my $circuit (@{$circuits}) {
						<option
							value="<% $circuit->{id} %>"
							<% $circuit->{id} == $circuit_id ? "selected" : "" %>
						><% $circuit->{abbr} %> <% $circuit->{name} %></option>
%					}
				</select>
			</div>

			<div class="row  centeralign padvertless  marno padleft padright">
				<select name="year">
%					my @ticks = (2004 .. $this_year);
%					@ticks = sort {$b <=> $a} @ticks;
%					foreach my $tick (@ticks) {
						<option
							value="<% $tick %>"
							<% $tick == $year ? "selected" : "" %>
						> <% $tick." - ".($tick + 1) %> </option>
%					}
				</select>
			</div>

			<div class="liblrow rightalign nospace">
				<span class="half centeralign nospace padvertless">
					<input
						type  = "submit"
						value = "Search"
					>
				</span>
			</div>

			</form>
		</div>

		<div class="sidenote">

			<h4>Circuit Stats</h4>

%			if ($this_circuit && $this_circuit->{qualifiers}) {
				<a class="<% $whoami eq "qualifiers" ? "dk" : "" %>blue full"
					href="qualifiers.mhtml?circuit_id=<% $circuit_id %>"
				>
					<% $this_circuit->{abbr} %> Qualifiers
				</a>

%			}

			<a class="<% $whoami eq "stats" ? "dk" : "" %>yellow full"
				href="circuit_stats.mhtml?circuit_id=<% $circuit_id %>"
			>
				Circuit Totals
			</a>

			<a class="<% $whoami eq "chapter" ? "dk" : "" %>yellow full" href="circuit_chapter.mhtml?circuit_id=<% $circuit_id %>">
				Institution Results
			</a>

			<a class="<% $whoami eq "tourn" ? "dk" : "" %>yellow full"
				href="circuit_tourney_portal.mhtml?circuit_id=<% $circuit_id %>&year=<% $year %>"
			>
				Tournament Results
			</a>

			 <a class="<% $whoami eq "speaker_rank" ? "dk" : "" %>yellow full"
				href="speaker_rankings_by_circuit.mhtml?circuit_id=<% $circuit_id %>&year=<% $year %>">
				Individual Success
			</a>

			<a class="<% $whoami eq "team_success" ? "dk" : "" %>yellow full"
				href="debate_stats2.mhtml?circuit_id=<% $circuit_id %>&year=<% $year %>">
				Entry Success
			</a>

		</div>

		<div class="sidenote">

			<h4>National Rankings</h4>

			<a class="<% $whoami eq "ceda" ? "dk" : "" %>blue full"
				href="ndt_ceda_points.mhtml"
			>CEDA/ADA Points Results</a>

			<a class="<% $whoami eq "ndca" ? "dk" : ""%>blue full"
				href="ndca_standings.mhtml"
			>NDCA Baker/D&amp;B/Averill Points</a>

			<a class="<% $whoami eq "toc" ? "dk" : "" %>blue full"
				href="toc_bids.mhtml"
			>TOC Bid Scoreboard</a>

			<a class="<% $whoami eq "ada" ? "dk" : "" %>blue full"
				href="debate_stats_ada.mhtml?circuit_id=103&level=Open"
			>ADA Front Royal rankings</a>

		</div>

	</div>

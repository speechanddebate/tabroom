<%args>
	$tourn_id
	$event_id => undef
</%args>
<%init>

	my $tourn =  Tab::Tourn->retrieve($tourn_id);
	my $event =  Tab::Event->retrieve($event_id);

	my @events = $tourn->field_reports;

    my @newses = Tab::News->search( tournament => $tourn_id, special => "fields");

    my $news = shift @newses if @newses;

	my $switch;

</%init>

	<div id="lefthuge">

%		if ($event) { 

%			my @comps = sort {$a->school->name cmp $b->school->name} $event->comps(waitlist => 0, dropped => 0);

			<h2>Field in <% $event->name %> (<% scalar @comps %> entries) </h2>

			<table cellpadding="6" cellspacing="1" width="100%">

%				foreach my $comp (@comps) { 

					<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
						<td>
							<% substr($comp->school->name,0,35) %>
						</td>

						<td>
							<% $comp->school->chapter->state %>
						</td>

						<td>
							<% $comp->team_name %>
						</td>

					</tr>

%				}

			</table>

%		} elsif ($news) { 

	        <p>
				<% $news->text %>
			</p>

%		} else { 

			<p>Choose an event at right to see the reported field.  You may not see all events
			or divisions in the field report; the system only reports fields which the tournament
			officials have released.</p>

%		}

		</table>

	</div>

	<div id="righttiny">

%		foreach my $oevent (sort {$a->name cmp $b->name} $tourn->field_reports) { 

			<a class="<% ($oevent->id == $event_id ) ? "chosenblock" : "blue block" %>" 
				href="/index/tourn/fields.mhtml?tourn_id=<% $tourn_id %>&event_id=<% $oevent->id %>">
				<% $oevent->name %>
			</a>

%		}

	</div>


<%args>
	$tourn_id => undef
	$email_id => undef
	$person
</%args>
<%init>

	$tourn_id = int($tourn_id);
	$email_id = int($email_id);

	my $tourn = Tab::Tourn->retrieve($tourn_id) if $tourn_id;
	my $email = Tab::Email->retrieve($email_id) if $email_id;

	$m->abort unless $tourn;

	my $switch;

</%init>

	<div class="main">

		<h2>Tournament Email Archive</h2>

        <& tabbar.mas, 
			tourn  => $tourn,
			person => $person,
			whoami => "emails"
		&>

%		if ($email_id && $email && $email->id) { 

			<div class="evenrownohover block">
				<span class="quarter">
					Subject:
				</span>
				<span class="biggishspan">
					<% $email->subject %>
				</span>
			</div>

			<div class="whitenohover block">
				<span class="quarter">
					Sender
				</span>
				<span class="biggishspan">
					<% $email->sender->first." ".$email->sender->last %>
				</span>
			</div>
				
			<div class="evenrownohover block">
				<span class="quarter">
					Recipients
				</span>
				<span class="biggishspan">
					<% $email->sent_to %>
				</span>
			</div>
				
			<div class="whitenohover block">
				<span class="quarter">
					Date
				</span>
				<span class="biggishspan">
					<% Tab::nicedt($email->sent_at->set_time_zone($tourn->tz)) %>
				</span>
			</div>

			<h4>Text of message:</h4>

			<div class="padmore">
				<% $email->content %>
			</div>

%		} else { 

			<h3><% $tourn->name %> Email archive</h3>

			<p>
				Choose an email subject at left to see the backlog of
				announcements about this tournament.
			</p>

%		}
	
	</div>

	<div class="menu">

		<div class="sidenote">

			<h4>Email Archive</h4>

%			foreach my $archive (sort {$b->sent_at->epoch <=> $a->sent_at->epoch} Tab::Email->search( tourn => $tourn->id )) {

				<a href="emails.mhtml?tourn_id=<% $tourn->id %>&email_id=<% $archive->id %>" 
					class="<% ($archive->id == $email_id) ? "dkblue block" : "blue block" %>">
					<% $archive->subject %>
					(<% &Tab::niceshortdate($archive->sent_at) %>)
				</a>

%			}

		</div>

	</div>


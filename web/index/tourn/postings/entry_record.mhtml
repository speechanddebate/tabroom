										<div class="full nospace smallish">

%											if (scalar @students > 1) {
												<span class="threefifths nowrap marvertno">
%													if ($anonymous_public) {
														Debater <% $counter++ %>
%													} else {
														<% $student->last." ".$student->first %>
%													}
												</span>
%											}

%											foreach my $score (@{$scores_by_recipient{$student->id}}) {
												<span class="fifth marno">
													<% $score->value %>
												</span>
%											}
										</div>
%									}
%								}
								</span>
%							}
						</div>
%					}
				</span>
			</div>
%		}
	</div>


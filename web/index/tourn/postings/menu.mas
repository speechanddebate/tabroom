<%args>
	$tourn_id
	$round_id     => undef
	$event_id     => undef
	$category_id  => undef
	$jpool_id     => undef
	$cleared_id   => undef
	$judge_master => undef
	$results      => undef
	$outs         => undef
</%args>
<%init>

	my $tourn =  Tab::Tourn->retrieve($tourn_id);
	my $tz = $tourn->tz;

	my $round = Tab::Round->retrieve($round_id) 
		if $round_id;

	$event_id = $round->event->id 
		if $round &! $event_id;

	my $event = Tab::Event->retrieve($event_id) 
		if $event_id;

	my @rounds = $m->comp(
		'/funclib/published_rounds.mas',
		tourn => $tourn
	);

	my %published_rounds = map {$_->id => 1} @rounds;

	my @listed = $m->comp(
		'/funclib/listed_rounds.mas', 
		tourn => $tourn
	);

	my %listed_rounds = map {$_->id => 1} @listed;

	push @rounds, @listed;

    #uniq 
	my %seen = ();
    @rounds = grep { ! $seen{$_->id} ++ } @rounds;

	my %events_with_rounds = ();
	my %event_rounds;

	foreach my $round (@rounds) { 
		$events_with_rounds{$round->event->id}++;
		push @{$event_rounds{$round->event->id}}, $round;
	}
	
	my @events = sort {$a->name cmp $b->name} $tourn->events;

	$event = $events[0] unless $event;

</%init>

	<div class="menu">
	
		<div class="sidenote">

			<p class="bigger centeralign">
				Timezone: <% $tz %>
			</p>

			<h4>Pairings</h4>

			<form action="index.mhtml" method="post">

			<input 
				type  = "hidden"
				name  = "tourn_id"
				value = "<% $tourn_id %>"
			>

			<div class="even full centeralign">

				<select 
					name     = "event_id"
					class    = "fixedmed"
					onchange = 'this.form.submit()'
				>

				<option value=""></option>

%				my $notfirst;

%				foreach my $oevent (@events) { 

%					next unless $events_with_rounds{$oevent->id};

					<option value="<% $oevent->id %>" 
						<% $oevent->id == $event->id 
							? 'selected="selected"' 
							: ""
						%>
					><% $oevent->name %></option>
%				}

				</select>
			</div>

			</form>
	
<%perl>

			if ($event) { 

				my @brackets = Tab::ResultSet->search(
					bracket => 1,
					event   => $event->id,
					published => 1
				);

				foreach my $bracket (@brackets) { 
		
</%perl>
					<a 
						class = "blue full nowrap" 
						href  = "/index/tourn/results/bracket.mhtml?tourn_id=<% $tourn->id %>&result_id=<% $bracket->id %>">
						<% $bracket->label %>
					</a>
				

<%perl>

				}

				if ($event_rounds{$event->id}) { 

					my @rounds = 
						sort {$b->name <=> $a->name} 
						@{$event_rounds{$event->id}};

					@rounds = 
						sort {$a->name <=> $b->name} @rounds 
						if $event->type eq "speech" 
						|| $event->type eq "congress";

					foreach my $round (@rounds) { 

						if ($published_rounds{$round->id}) { 
</%perl>
							<a 
								class="<% 
									($round_id == $round->id && not defined $results) 
									? "dk" 
									: "" %>blue full nowrap" 
								href="/index/tourn/postings/round.mhtml?tourn_id=<% $tourn_id %>&round_id=<% $round->id %>">
								<% $event->abbr %>
								<% $round->realname %>
							</a>

%						} elsif ($listed_rounds{$round->id}) { 
						
							<a 
								class="<% ($round_id == $round->id) 
									? "dk" 
									: "" %>blue full" 
								href="/index/tourn/postings/cleared.mhtml?tourn_id=<% $tourn->id %>&round_id=<% $round->id %>">
								<% ($round->label) ? $round->label : "Round ".$round->name %>
								Advancing Entries
							</a>

%						}
%					}
%				}

				<hr />

<%perl>

				if ($tourn->setting("nsda_nats") || $tourn->setting("nsda_district")) { 

					my $out_yes;
					my $color;

					if ($outs) { 

						$out_yes++;
						$color = "dkblue";

					} else { 

						my %outs = $m->comp(
							"/funclib/event_entry_settings.mas",
							event => $event,
							value => 1,
							tag   => "down"
						);

						if (keys %outs) { 
							$out_yes++;
							$color = "blue";
						}
					}

					if ($out_yes) { 

						$m->print('
							<a href="downs.mhtml?event_id='.$event->id.'"
							   class="'.$color.' full"
							>Down &amp; Outs</a>');
					}

				}
			}

			my %used = ();
			undef $notfirst;

			foreach my $category (
				sort {$a->name cmp $b->name} 
				$m->comp('/funclib/tourn_published_categories.mas', tourn => $tourn)

			) {

				next if $used{$category->id}++;
   		
				unless ($notfirst++) {

</%perl>
					<h4>Judges</h4>
%				}

				<a 
					class="<% $category_id == $category->id ? "dk" : "" %>blue full" 
					href="judge_list.mhtml?category_id=<% $category->id %>&tourn_id=<% $tourn->id %>"
				>
					<% $category->abbr %> judges
				</a>

<%perl>
			}

			foreach my $jpool (
				sort {$a->name cmp $b->name} 
				$m->comp('/funclib/tourn_jpools.mas', tourn => $tourn)
			) {

				next unless $jpool->setting("publish");

</%perl>
				<a 
					class="<% ($jpool->id == $jpool_id) ? "dk" : "" %>blue full" 
					href="jpool.mhtml?tourn_id=<% $tourn->id %>&jpool_id=<% $jpool->id %>"
				>
					Judge Pool: <% $jpool->name %>
				</a>
<%perl>

			}

			my @postings = 
				sort {$b->id <=> $a->id} 
				$tourn->files(type => "posting");

			if (@postings) {

</%perl>
				<h4>Other Postings</h4>

%				foreach my $posting (@postings) { 

					<a 
						class="blue full" 
						href="<% $Tab::s3_url %>/<% $tourn->id %>/postings/<% $posting->id %>/<% $posting->filename %>">

						<span class="threequarters">
							<% ($posting->label) ? $posting->label : $posting->filename %>
						</span>

						<span class="quarter centeralign fa fa-download">
						</span>

					</a>
%				}
%			}

	
		</div>

	</div>


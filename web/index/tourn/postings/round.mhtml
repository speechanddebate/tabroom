<%args>
	$person   => undef
	$event_id => undef
	$round_id => undef
</%args>
<%init>

	my $key = $round_id."-".$event_id;
	return if $m->cache_self( key => $key, expires_in => '5m' );

	my $event = Tab::Event->retrieve($event_id) if $event_id;
	my $round = Tab::Round->retrieve($round_id) if $round_id;

	unless ($round) { 
		$m->print("Round $round_id not found");
		$m->abort;
	}

	$event = $round->event unless $event;
	my $tourn = $event->tourn;

	unless ($round->published && $round->published > 0) { 
		$m->print("<div class='blankfull centeralign'>");
		$m->print("<h5>That round is not yet published.  And you kind of know that, too.</h5>");
		$m->print("<p>So please stop messing around</p>");
		$m->print("</div>");
		$m->abort;
	}

	my $event_type = $event->type;
	$event_type = "debate" 
		if $event_type eq "policy" 
		|| $event_type eq "ld" 
		|| $event_type eq "pf" 
		|| $event_type eq "wsdc" 
		|| $event_type eq "parli";

</%init>

	<& menu.mas, 
		tourn_id => $tourn->id,
		event_id => $event->id,
		round_id => $round->id 
	&>

	<div class="main">
		
		<& /index/tourn/title.mas, tourn => $tourn &>

        <& /index/tourn/tabbar.mas, tourn => $tourn, person => $person &>


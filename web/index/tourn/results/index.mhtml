		<span class="threequarter">
			<h2>
				<% $tourn->name %> 
			</h2>
		</span>

		<span class="quarter" style="vertical-align: top;">
			<h4 style="text-align: right;">
				<% $tourn->location %>  
			</h4>
		</span>

		<br style="clear: both;">

        <& ../tourn_header.mas, tourn => $tourn, account => $account &>


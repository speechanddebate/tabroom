<%args>
	$tourn
	$event_id => undef
	$round_id => undef
</%args>
<%init>

	my $key = $round_id."_".$event_id;

	return if $m->cache_self( 
		key        => $key,
		expires_in => '5m' 
	);

	unless ($round_id eq int($round_id)) {  
		my $msg = "Malformed URL.  $round_id is not a round ID number.  Hit BACK and try again?";
		$m->comp("/funclib/abort.mas", err => $msg);
	}

	my $event = Tab::Event->retrieve($event_id) if $event_id;
	my $round = Tab::Round->retrieve($round_id) if $round_id;

	unless ($round) { 
		$m->print("Round does not exist");
		$m->abort;
	}

	$event = $round->event unless $event;

	my $by_panel++ if $event->setting("judge_publish_results");
	undef $by_panel if $round->post_results;

	$tourn = $event->tourn;

	unless ($round->post_results || $by_panel) { 
		$m->print("Results have not yet been posted");
		$m->abort;
	}

	my $event_type = $event->type;
	$event_type = "debate" 
		if $event_type eq "wsdc" 
		|| $event_type eq "policy" 
		|| $event_type eq "pf" 
		|| $event_type eq "ld" 
		|| $event_type eq "parli";

</%init>

	<& menu.mas, 
		tourn_id => $tourn->id, 
		event_id => $event->id, 
		round_id => $round->id 
	&> 

	<div class="main">

		<& /index/tourn/title.mas, tourn => $tourn &>

        <& /index/tourn/tabbar.mas, tourn => $tourn &>

%		if ($round) { 

% 			if ( $event_type eq "speech" ) { 
				<& 
					results_speech.mas, 
					round    => $round,
					by_panel => $by_panel
				&>
%			}

% 			if ( $event_type eq "wudc" ) { 
				<& results_wudc.mas, 
					round    => $round,
					by_panel => $by_panel
				&>
%			}

% 			if ( $event_type eq "congress" ) { 
				<& results_congress.mas, 
					round    => $round,
					by_panel => $by_panel
				&>
%			}
	
% 			if ( $event_type eq "debate") { 
				<& results_debate.mas, 
					round    => $round,
					by_panel => $by_panel
				&>
%			}

%		}

	</div>


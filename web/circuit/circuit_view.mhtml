<%args>
	$circuit
	$account
	$session
</%args>

%	my $switch;

	<h2>
		<% $circuit->name %>
	</h2> 

		<table cellpadding="5" width="100%" cellspacing="1">

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td>
					<form action="circuit_save.mhtml" method="post"> 
					<input type="hidden" name="circuit_id" value="<% $circuit->id %>">
					Full Name:
				</td>
				
				<td align="right" colspan="2">
					<input type="text" size="30" name="name" value="<% $circuit->name %>">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td>
					Website URL:
				</td>

				<td align="right" colspan="2">
					<input type="text" size="30" name="url" value="<%  $circuit->url %>">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>

				<td>
					Short Name:
				</td>
				
				<td align="right" colspan="2">
					<input type="text" size="10" name="short_name" value="<%  $circuit->short_name %>">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>	

				<td>
					State/Locale:
				</td>
				
				<td align="right" colspan="2">
					<input type="text" size="10" maxlength="2" name="state" value="<%  $circuit->state %>">
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>	

				<td>
					Active:
				</td>
				
				<td align="right" colspan="2">
					<input type="radio" name="active" value="1" <% ($circuit->active) ? "checked" : "" %>> Yes
					<input type="radio" name="active" value="0" <% ($circuit->active) ? "" : "checked" %>> No
				</td>

			</tr>

			<tr <% ($switch++ % 2) ? "class=\"oddrow\"" : "class=\"evenrow\"" %>>
			
				<td>
					Timezone:
				</td>

				<td align="right" colspan="2">

					<select name="timezone">

					<option value="">----Select One------</option>

					<option value="America/New_York"
						<% ($tourn->tz eq "America/New_York") ?   "selected" : ""%>>
						Eastern
					</option>

					<option value="America/Indianapolis"
						<%  ($tourn->tz eq "America/Indianapolis") ? "selected" : "" %>>
						Indiana
					</option>
					
					<option value="America/Chicago"
						<%  ($tourn->tz eq "America/Chicago") ?   "selected" : "" %>>
						Central
					</option>
					
					<option value="America/Denver"
						<%  ($tourn->tz eq "America/Denver") ?   "selected" : "" %>>
						Mountain
					</option>
					
					<option value="America/Phoenix"
						<%  ($tourn->tz eq "America/Phoenix") ?   "selected" : "" %>>
						Arizona
					</option>
					
					<option value="America/Los_Angeles"
						<%  ($tourn->tz eq "America/Los_Angeles") ?   "selected" : "" %>>
						Pacific
					</option>
					
				</select>
			</td>
		</tr>

		<tr class="liblrow">
			<td colspan="3" class="rightalign">
				<input type="submit" value="  Save Circuit Changes   ">
				</form>
			</td>
		</tr>

	</table>

%	if ($circuit->last_change) { 

		<p class="footnote">
			Last change by <% $circuit->last_change->first." ".$circuit->last_change->last %>
			on <% Tab::nicedt($circuit->timestamp) %>.
		</p>
%	}

% if ($circuit) { 

	<h4>Accounts with access to the <% $circuit->short_name %></h4>

		<table cellpadding="5" width="100%" cellspacing="1">

% 			foreach my $admin (sort {$a->last cmp $b->last} $circuit->admins) { 

				<tr <% ($switch++ % 2) ? "class=\"evenrow\"" : "class=\"oddrow\"" %>>

					<td>
						<% $admin->first." ".$admin->last %>
					</td>

					<td>
						<% $admin->email %>
					</td>

					<td class="centeralign">
						<a class="white block" href="admin_rm.mhtml?circuit_id=<% $circuit->id %>&admin_id=<% $admin->id %>">
						Delete
						</a>
					</td>

				</tr>

% 			} # end of foreach my admin

			<tr class="liblrow">

				<td>
					Add:
				</td>

				<td>
					<form action="admin_add.mhtml" method="post">
					<input type="hidden" name="circuit_id" value="<% $circuit->id %>">
					<input type="text" size="25" name="email" value="Email address" onfocus='value=""'>
				</td>

				<td class="rightalign">
					<input  type="submit" value="Add">
					</form>
				</td>
	
			</tr>

		</table>
% 	}


<%args>
	$account
	$circuit
	$name
	$short_name
	$state => undef
	$url => undef
	$active => 1
	$timezone 
</%args>
<%init>

	my $err;

	#Save new information if it is a circuit that exists

	$circuit->name($name);
	$circuit->short_name($short_name);
	$circuit->state($state);
	$circuit->url($url);
	$circuit->active($active);
	$circuit->timezone($timezone);

	$circuit->last_change($account->id);

	$circuit->update;

	$err = "Circuit information has been updated";

	$m->redirect("$Tab::url_prefix/circuit/circuit_view.mhtml?circuit_id=".$circuit->id."&err=$err");

</%init>


